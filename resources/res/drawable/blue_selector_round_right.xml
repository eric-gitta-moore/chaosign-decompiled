<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:topRightRadius="300dp" android:bottomRightRadius="300dp"/>
            <solid android:color="@color/bg_blue"/>
            <padding android:left="20dp" android:top="4dp" android:right="20dp" android:bottom="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:topRightRadius="300dp" android:bottomRightRadius="300dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/bg_blue"/>
            <padding android:left="8dp" android:top="4dp" android:right="8dp" android:bottom="4dp"/>
        </shape>
    </item>
</selector>
