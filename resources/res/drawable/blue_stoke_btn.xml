<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffffff" android:endColor="#2dd4ff" android:angle="0" android:type="radial" android:gradientRadius="50"/>
            <stroke android:width="1dp" android:color="#4286c8"/>
            <corners android:radius="5dp"/>
            <padding android:left="5dp" android:right="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#2dd4ff" android:endColor="#f5f5f5" android:angle="270" android:centerColor="#2dd4ff"/>
            <stroke android:width="1dp" android:color="#4286c8"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#2dd4ff" android:endColor="#2dd4ff" android:angle="270" android:type="linear" android:centerY="0.05"/>
            <stroke android:width="1dp" android:color="#4286c8"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>
