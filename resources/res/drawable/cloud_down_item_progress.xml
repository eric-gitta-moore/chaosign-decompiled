<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:width="0.5dp" android:color="@color/white"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <gradient android:startColor="@color/blue_0099ff" android:endColor="@color/blue_0099ff" android:angle="90" android:centerY="0.75" android:centerColor="@color/blue_0099ff"/>
            </shape>
        </clip>
    </item>
</layer-list>
