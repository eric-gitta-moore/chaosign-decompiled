            <solid android:color="@color/seekbar_thumbcolor"/>
            <size android:height="@dimen/slip_linme_thumb_height" android:width="@dimen/slip_linme_thumb_width"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/slip_linme_thumb_radius"/>
            <solid android:color="@color/seekbar_thumbcolor"/>
            <size android:height="@dimen/slip_linme_thumb_height" android:width="@dimen/slip_linme_thumb_width"/>
        </shape>
    </item>
</selector>
