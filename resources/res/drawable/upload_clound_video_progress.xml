<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/app_line_bg"/>
            <stroke android:width="0.5dp" android:color="@color/app_line_bg"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <gradient android:startColor="#0099ff" android:endColor="#62bffe" android:angle="90" android:centerY="0.75" android:centerColor="#2cabff"/>
                <corners android:radius="12dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
