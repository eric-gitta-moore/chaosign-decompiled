<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <com.chaoxing.mobile.search.widget.SearchBar android:id="@+id/search_bar" android:layout_width="match_parent" android:layout_height="@dimen/dp_50"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="@dimen/dp_41">
        <TextView android:textSize="@dimen/dp_15" android:textColor="@color/color_999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_add_friend_my_code"/>
        <TextView android:textSize="@dimen/dp_15" android:textColor="@color/blue_0099ff" android:id="@+id/tv_my_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_group_qrcode" android:drawablePadding="@dimen/dp_10"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_to_scan" android:paddingLeft="@dimen/dp_20" android:paddingRight="@dimen/dp_20" android:layout_width="match_parent" android:layout_height="@dimen/dp_65" android:layout_marginTop="@dimen/dp_15">
        <ImageView android:layout_width="@dimen/dp_24" android:layout_height="@dimen/dp_24" android:src="@drawable/ic_chat_add_friend_scan_code"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_18">
            <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/to_scan"/>
            <TextView android:textSize="@dimen/sp_13" android:textColor="@color/color_999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_2" android:text="@string/chat_add_friend_scan_code_hint"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_face_to_face" android:paddingLeft="@dimen/dp_20" android:paddingRight="@dimen/dp_20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dp_65">
        <ImageView android:layout_width="@dimen/dp_24" android:layout_height="@dimen/dp_24" android:src="@drawable/ic_chat_add_friend_face_to_face"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_18">
            <TextView android:textSize="@dimen/sp_16" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/face_to_face_create_group"/>
            <TextView android:textSize="@dimen/sp_13" android:textColor="@color/color_999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_2" android:text="@string/chat_add_friend_face_to_face_hint"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
