<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlContainer" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/viewToolbar" layout="@layout/common_title_bar"/>
        <RelativeLayout android:background="#fafafa" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/viewToolbar">
            <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvHint" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="对方需要您填写验证信息（最多只能输入25个字）"/>
            <View android:id="@+id/line" android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/tvHint"/>
            <EditText android:textSize="16sp" android:textColor="#333333" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/etMsg" android:background="@android:color/white" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="验证信息" android:lines="3" android:maxLength="25" android:layout_below="@+id/line"/>
            <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/etMsg"/>
            <include android:id="@+id/viewLoading2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent"/>
</RelativeLayout>
