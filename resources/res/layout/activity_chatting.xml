<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.input.ime.widget.RimeInputLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/input_layout" android:layout_width="match_parent" android:layout_height="match_parent" app:ril_input_view="@+id/soft_keyboard_status_layout">
    <RelativeLayout android:id="@+id/soft_keyboard_status_layout" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/rl_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <FrameLayout android:id="@+id/fl_footer" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/vMask" android:background="@color/transparent" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignBottom="@+id/fl_footer">
                <TextView android:textSize="17sp" android:textColor="#999999" android:id="@+id/tvSilent" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="56dp" android:text="全员禁言中"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/vgBatchEdit" android:background="#bcd8f4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="49dp">
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btnDelete" android:paddingTop="@dimen/dp_5" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/comment_delete" android:drawableTop="@drawable/ic_chat_message_delete" android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btnCopy" android:paddingTop="@dimen/dp_5" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/topiclist_code_Copy" android:drawableTop="@drawable/ic_chat_message_copy" android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btnForward" android:paddingTop="@dimen/dp_5" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/forward_shard" android:drawableTop="@drawable/ic_chat_message_forward" android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/vTitleBar" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include android:id="@+id/top" layout="@layout/chat_title_bar"/>
            <include android:id="@+id/vNotLogin" android:visibility="gone" layout="@layout/header_message_not_login"/>
            <include android:id="@+id/vLiveHeader" layout="@layout/item_chat_live_header"/>
            <include android:id="@+id/vRiskHeader" layout="@layout/item_chat_riskwarning_header"/>
        </LinearLayout>
        <com.chaoxing.mobile.chat.widget.ChatRecordListView android:id="@+id/lv_chat_his" android:background="#f0f1f2" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="#00000000" android:cacheColorHint="#00000000" android:divider="#00000000" android:dividerHeight="0dp" android:layout_above="@+id/rl_bottom" android:layout_below="@+id/vTitleBar"/>
        <TextView android:textSize="16sp" android:textColor="#cccccc" android:gravity="center" android:id="@+id/tv_no_message_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_message_tip" android:layout_above="@+id/rl_bottom" android:layout_below="@+id/vTitleBar" android:layout_centerInParent="true"/>
        <TextView android:textSize="16sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tvAtMe" android:background="@drawable/bg_im_at_me" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@我" android:drawableLeft="@drawable/icon_chat_top" android:drawablePadding="1dp" android:layout_below="@+id/vTitleBar" android:layout_alignParentRight="true"/>
        <TextView android:textSize="16sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tvPublic" android:background="@drawable/bg_im_at_me" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:drawableLeft="@drawable/icon_chat_top" android:drawablePadding="1dp" android:layout_below="@+id/vTitleBar" android:layout_alignParentRight="true"/>
        <TextView android:textSize="16sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tvNewMsgCount" android:background="@drawable/bg_im_at_me" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="" android:drawableLeft="@drawable/icon_chat_top" android:drawablePadding="1dp" android:layout_below="@+id/vTitleBar" android:layout_alignParentRight="true"/>
        <include android:id="@+id/viewLoading2" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/rl_bottom" android:layout_below="@+id/vTitleBar" layout="@layout/page_loading_circle_bg_white"/>
        <View android:id="@+id/view_voice_cover" android:background="#80999999" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignBottom="@+id/lv_chat_his" android:layout_alignParentTop="true"/>
        <include layout="@layout/voice_rcd_hint_window"/>
        <RelativeLayout android:id="@+id/rlMoocFlower" android:visibility="gone" android:layout_width="match_parent" android:layout_height="48dp">
            <com.chaoxing.fanya.flower.ViewMoocPetal android:id="@+id/moocFlower" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="40dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:canvasSize="25dp"/>
        </RelativeLayout>
        <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" layout="@layout/page_loading_circle"/>
        <com.chaoxing.study.screencast.view.ScreenCastController android:id="@+id/screen_control" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/vTitleBar"/>
        <ImageView android:id="@+id/iv_back_to_latest_news" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:src="@drawable/ic_back_to_latest_news" android:layout_above="@+id/rl_bottom" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</com.chaoxing.input.ime.widget.RimeInputLayout>
