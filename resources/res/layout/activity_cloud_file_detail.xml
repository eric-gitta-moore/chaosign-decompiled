<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/viewTitleBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="16sp" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="#ff333333" android:ellipsize="middle" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="75dp" android:layout_marginRight="75dp" android:singleLine="true" android:layout_centerInParent="true"/>
        <TextView android:id="@+id/btnRight" android:background="@drawable/group_shared" android:paddingTop="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlImage" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="90dp" android:layout_below="@+id/viewTitleBar">
        <ImageView android:id="@+id/ivFilePhoto" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/cloud_file" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlDetail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlImage">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true">
            <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center" android:id="@+id/tvFileName" android:paddingTop="12dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginRight="22dp" android:text="课程资料" android:maxLines="3" android:singleLine="false" android:lineSpacingExtra="12dp"/>
            <LinearLayout android:orientation="horizontal" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginRight="22dp">
                <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="right" android:id="@+id/size" android:layout_width="0dp" android:layout_height="wrap_content" android:text="大小: " android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="#333333" android:gravity="left" android:id="@+id/tvSize" android:layout_width="0dp" android:layout_height="wrap_content" android:text=" 56k" android:maxLines="1" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:padding="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginRight="22dp">
                <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="right" android:id="@+id/author" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="上传人: " android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="#333333" android:gravity="left" android:id="@+id/tvAuthor" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text=" 赵国光" android:maxLines="1" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:padding="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginRight="22dp">
                <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="right" android:id="@+id/data" android:layout_width="0dp" android:layout_height="wrap_content" android:text="上传日期: " android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="#333333" android:gravity="left" android:id="@+id/tvData" android:layout_width="0dp" android:layout_height="wrap_content" android:text=" 2016-04-26 12:34" android:maxLines="1" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:paddingBottom="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="100dp" android:layout_alignParentBottom="true">
        <ProgressBar android:id="@+id/progress_bar" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:max="100" android:progressDrawable="@drawable/clound_progress" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvProgress" android:background="@null" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="0%"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btnDone" android:background="@drawable/cloud_file_btn_down" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="立即下载" android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <TextView android:textSize="16sp" android:textColor="#ff0000" android:gravity="center" android:id="@+id/btnDelete" android:background="@layout/cloud_file_pic_shape" android:visibility="visible" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="22dp" android:layout_marginTop="6dp" android:layout_marginRight="22dp" android:layout_marginBottom="60dp" android:text="删除文件" android:layout_alignParentBottom="true"/>
    <View android:background="#bababa" android:layout_width="match_parent" android:layout_height="1px" android:layout_above="@+id/llBtn"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/llBtn" android:background="@drawable/top_toolbar_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="18sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/btnShare" android:layout_width="0dp" android:layout_height="50dp" android:text="@string/forward_shard" android:layout_weight="1"/>
        <TextView android:layout_gravity="center_vertical" android:background="#bababa" android:layout_width="1dp" android:layout_height="40dp"/>
        <TextView android:textSize="18sp" android:textColor="#aaaaaa" android:gravity="center" android:id="@+id/btnSubscribe" android:layout_width="0dp" android:layout_height="50dp" android:text="已收藏" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
