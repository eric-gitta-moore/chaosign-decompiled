<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:id="@+id/fl_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/progress_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar">
        <ProgressBar android:id="@+id/progress_bar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="30dp" android:max="100" android:progressDrawable="@drawable/cloud_preview_progress" android:layout_centerVertical="true" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_pause" android:background="@null" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingRight="25dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="暂停"/>
        <TextView android:textSize="12dp" android:textColor="@color/white" android:id="@+id/tv_progress" android:background="@null" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_pause"/>
        <TextView android:textColor="@color/white" android:id="@+id/tv_delete" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/white_attachment_close" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
