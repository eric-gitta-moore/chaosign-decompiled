<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/soft_keyboard_status_layout" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:id="@+id/iv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:src="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/normal_title_color" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_title" android:paddingLeft="100dp" android:paddingRight="100dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="按日期筛选" android:singleLine="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_start" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="55dp">
        <TextView android:textSize="17sp" android:textColor="@color/normal_title_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_restart_begin_time"/>
        <TextView android:textSize="15sp" android:textColor="#999999" android:id="@+id/tv_startTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请选择" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="10dp" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_end" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="55dp">
        <TextView android:textSize="17sp" android:textColor="@color/normal_title_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_restart_end_time"/>
        <TextView android:textSize="15sp" android:textColor="#999999" android:id="@+id/tv_endTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请选择" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="10dp" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
    <TextView android:textSize="17sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_ok" android:background="@drawable/selector_commonlog_calander_btn_bg" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="15dp" android:layout_marginTop="60dp" android:layout_marginRight="15dp" android:text="确认"/>
</LinearLayout>
