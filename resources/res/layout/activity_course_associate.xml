<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.chaoxing.library.widget.CToolbar android:id="@+id/cToolBar" android:layout_width="match_parent" android:layout_height="44dp"/>
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
        <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rv_associate" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <View android:id="@+id/view_divider" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
        <RelativeLayout android:id="@+id/rl_confirm" android:background="@drawable/bg_btn_5dp_0099ff" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp">
            <TextView android:textSize="15sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/associate" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView android:textSize="15sp" android:textColor="@color/gray_b3b3b3" android:id="@+id/tv_associate" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    <include android:id="@+id/viewLoading" android:visibility="gone" layout="@layout/page_loading_circle"/>
</RelativeLayout>
