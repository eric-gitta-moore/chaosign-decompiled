<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cx="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include android:id="@+id/toolbar" layout="@layout/common_title_bar2"/>
    <TextView android:textSize="14sp" android:textColor="#999999" android:gravity="center" android:id="@+id/tv_operation_hint" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="36dp" android:text="@string/common_click_and_sort" android:layout_below="@+id/toolbar"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tv_operation_hint">
        <com.mobeta.android.dslv.DragSortListView android:scrollbarStyle="outsideOverlay" android:id="@+id/lv_course" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null" android:layout_above="@+id/edit_toolbar" android:headerDividersEnabled="false" android:footerDividersEnabled="false" cx:drag_handle_id="@+id/iv_sort"/>
        <View android:id="@+id/vDivider" android:background="#f9f9f9" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/edit_toolbar"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/edit_toolbar" android:background="#f9f9f9" android:paddingTop="1px" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <Button android:textSize="18sp" android:textColor="#666666" android:layout_gravity="center_vertical" android:id="@+id/btn_delete" android:background="@android:color/transparent" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/common_delete" android:layout_weight="1"/>
            <View android:background="#f9f9f9" android:visibility="gone" android:layout_width="1px" android:layout_height="match_parent"/>
            <Button android:textSize="18sp" android:textColor="#666666" android:layout_gravity="center_vertical" android:id="@+id/btn_move" android:background="@android:color/transparent" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/common_move" android:layout_weight="1"/>
        </LinearLayout>
        <include android:id="@+id/loading" android:visibility="gone" layout="@layout/wait_circle_bar_with_text_match_parent"/>
        <include android:id="@+id/reload" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/loading_failed_match_parent_img"/>
    </RelativeLayout>
</RelativeLayout>
