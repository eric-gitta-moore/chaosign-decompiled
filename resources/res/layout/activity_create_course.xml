<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/viewTitleBar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView android:background="@color/bg_color_f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/viewTitleBar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginTop="1px">
                <ImageView android:id="@+id/iv_delete" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="15dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <EditText android:textSize="16sp" android:textColorHint="#cccccc" android:id="@+id/et_course_name" android:background="@color/white" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/create_course_name" android:singleLine="true" android:layout_toLeftOf="@+id/iv_delete" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/ll_teacher" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginTop="8dp">
                <ImageView android:id="@+id/iv_delete_teacher" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="15dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <EditText android:textSize="16sp" android:textColorHint="#cccccc" android:id="@+id/et_teacher" android:background="@color/white" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/teacher" android:layout_toLeftOf="@+id/iv_delete_teacher" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/cover" android:background="@color/white" android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginTop="8dp">
                <com.fanzhou.widget.CircleImageView android:id="@+id/iv_cover" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="15dp" android:src="@drawable/ic_course_cover_select" android:scaleType="centerCrop" android:layout_centerVertical="true" ss:border_color="@color/avatar_border" ss:border_width="1px" ss:is_circle="true" ss:x_radius="4px" ss:y_radius="4px"/>
                <TextView android:textSize="15sp" android:textColor="@color/color_cccccc" android:textColorHint="#cccccc" android:id="@+id/tv_upload_pic" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/create_course_picture" android:layout_toRightOf="@+id/iv_cover" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:textColorHint="@color/color_cccccc" android:id="@+id/tv_unit" android:background="@color/white" android:paddingLeft="15dp" android:paddingTop="17dp" android:paddingRight="15dp" android:paddingBottom="17dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="@string/course_unit" android:drawableRight="@drawable/arrow_right"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:textColorHint="@color/color_cccccc" android:id="@+id/tv_semester" android:background="@color/white" android:paddingLeft="15dp" android:paddingTop="17dp" android:paddingRight="15dp" android:paddingBottom="17dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="@string/course_semester" android:drawableRight="@drawable/arrow_right"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/rl_description" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="100dp">
                <EditText android:textSize="16sp" android:textColor="@color/color_333333" android:textColorHint="@color/color_cccccc" android:gravity="center_vertical" android:id="@+id/tv_description" android:background="@null" android:padding="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/course_introduce" android:layout_toRightOf="@+id/lessonIv" android:layout_centerVertical="true" android:lineSpacingMultiplier="1.3"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/rl_resource_lib" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="60dp">
                <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="@color/chaoxing_blue" android:id="@+id/tv_res_lib" android:paddingLeft="15dp" android:paddingTop="13dp" android:paddingRight="15dp" android:paddingBottom="13dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_res_lib" android:drawableLeft="@drawable/icon_course_res_lib" android:drawablePadding="6dp" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <View android:background="@color/bg_color_f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/color_838383" android:layout_gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="说明：在优秀名家的课程资源基础上进行建课"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/common_loading_transparent"/>
</RelativeLayout>
