<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rlCreateFolderLayout" android:background="#ffefeff4" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/toolBar" layout="@layout/common_title_bar"/>
    <RelativeLayout android:id="@+id/rlInputForlder" android:background="@android:color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="55dp" android:layout_below="@+id/toolBar">
        <EditText android:textSize="16sp" android:textColor="@color/normal_black" android:gravity="center_vertical" android:id="@+id/et_name" android:background="@android:color/transparent" android:paddingRight="55dp" android:layout_width="match_parent" android:layout_height="55dp" android:hint="@string/persongroup_create_hint" android:singleLine="true"/>
        <ImageView android:id="@+id/iv_delete" android:padding="10dp" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/clear" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/createBottomLine" android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/rlInputForlder"/>
    <include android:id="@+id/viewLoading" android:visibility="gone" layout="@layout/wait_circle_bar_with_text_match_parent"/>
</RelativeLayout>
