<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.chaoxing.library.widget.CToolbar android:id="@+id/title_bar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rlAddMember" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" android:minHeight="62dp">
                <TextView android:id="@+id/tvAddMember" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_notes_group_new_member" android:drawablePadding="2dp" android:layout_toLeftOf="@+id/tvAddMemberIcon" android:layout_centerVertical="true" style="@style/group_title_text"/>
                <ImageView android:id="@+id/tvAddMemberIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:src="@drawable/ic_group_invite" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:layout_marginBottom="10dp">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvMembers" android:layout_width="wrap_content" android:layout_height="@dimen/dp_65" android:layout_marginLeft="@dimen/dp_15"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_invite" android:visibility="gone" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_65" android:layout_marginLeft="@dimen/dp_15">
                    <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ivAvatar" android:background="@drawable/radius_f5f6f8_3dp" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_40" android:src="@drawable/ic_group_manager_add_member" android:scaleType="centerInside" app:riv_corner_radius="3dp"/>
                    <TextView android:textSize="13sp" android:textColor="@color/color_333333" android:ellipsize="end" android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="邀请" android:singleLine="true" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/rl_group_groupchat" android:background="@android:color/white" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="68dp" android:layout_marginTop="8dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_groupchat_text" android:layout_centerVertical="true" style="@style/group_title_text"/>
                <TextView android:textSize="13sp" android:textColor="#a8a8b3" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="65dp" android:text="@string/pcenter_groupsetting_groupchat_texthint" android:layout_centerVertical="true" style="@style/group_title_text"/>
            </LinearLayout>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbCheckTopic_groupchat" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_group_cloudstorage" android:background="@android:color/white" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="68dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_cloudstorage_text" android:layout_centerVertical="true" style="@style/group_title_text"/>
                <TextView android:textSize="13sp" android:textColor="#a8a8b3" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="65dp" android:text="@string/pcenter_groupsetting_cloudstorage_texthint" android:layout_centerVertical="true" style="@style/group_title_text"/>
            </LinearLayout>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbCheckTopic_cloudstorage" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_public_group" android:background="@android:color/white" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="68dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_public_group" android:layout_centerVertical="true" style="@style/group_title_text"/>
                <TextView android:textSize="13sp" android:textColor="#a8a8b3" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="65dp" android:text="@string/pcenter_groupsetting_public_group_hint" android:layout_centerVertical="true" style="@style/group_title_text"/>
            </LinearLayout>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbpublic_group" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlValidate" android:background="@android:color/white" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabValidate" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_notes_groupsetting_validation" android:layout_centerVertical="true"/>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbValidateSwitch" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        </RelativeLayout>
    </LinearLayout>
    <include android:id="@+id/pbWait" android:visibility="gone" layout="@layout/page_loading_circle"/>
</RelativeLayout>
