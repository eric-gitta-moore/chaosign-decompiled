<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/color_f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rlEditName" android:background="@drawable/common_white_stroke_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolBar">
        <ImageView android:id="@+id/iv_clear" android:paddingLeft="10dp" android:paddingTop="12dp" android:paddingRight="10dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <EditText android:textSize="16sp" android:textColor="@color/normal_black" android:textColorHint="#cccccc" android:gravity="center_vertical" android:id="@+id/et_name" android:background="@android:color/transparent" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="66dp" android:layout_toLeftOf="@+id/iv_clear" android:layout_centerVertical="true" android:lineSpacingMultiplier="1.2"/>
    </RelativeLayout>
    <RadioGroup android:orientation="vertical" android:id="@+id/rg_public_state" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/rlEditName">
        <RelativeLayout android:id="@+id/private_state" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="66dp">
            <RadioButton android:id="@+id/rb_private" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="10dp" android:button="@drawable/group_type" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:id="@+id/tv_title_public" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bookCollections_Private" android:layout_toRightOf="@+id/rb_private"/>
            <TextView android:textSize="13sp" android:textColor="@color/color_999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/just_self_see" android:layout_toRightOf="@+id/rb_private" android:layout_below="@+id/tv_title_public"/>
        </RelativeLayout>
        <View android:background="@color/date_line" android:layout_width="wrap_content" android:layout_height="1px" android:layout_marginLeft="51dp"/>
        <RelativeLayout android:id="@+id/share_state" android:paddingTop="19dp" android:paddingBottom="19dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="66dp">
            <RadioButton android:id="@+id/rb_share" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="10dp" android:button="@drawable/group_type" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:id="@+id/tv_title_friends" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_to_teacher" android:layout_toRightOf="@+id/rb_share"/>
            <TextView android:textSize="13sp" android:textColor="#b2b2b2" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/folder_share_tips" android:layout_toRightOf="@+id/rb_share" android:layout_below="@+id/tv_title_friends"/>
        </RelativeLayout>
    </RadioGroup>
    <include layout="@layout/page_loading_circle"/>
</RelativeLayout>
