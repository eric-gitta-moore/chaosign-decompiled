<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/header_height">
        <com.chaoxing.fanya.aphone.view.BackButtonBlack android:id="@+id/btn_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="#7b9e31" android:gravity="center" android:id="@+id/publish" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/publish_discuss" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/title_text" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/discuss_new" android:layout_toLeftOf="@+id/publish" android:layout_toRightOf="@+id/btn_cancel" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px"/>
    <EditText android:textSize="14sp" android:textColor="#333333" android:textColorHint="#c7c7cd" android:id="@+id/subject" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="@dimen/base_item_height" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:hint="@string/title" android:singleLine="true"/>
    <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px"/>
    <EditText android:textSize="14sp" android:textColor="#333333" android:textColorHint="#c7c7cd" android:gravity="top" android:id="@+id/content" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="0dp" android:layout_margin="16dp" android:hint="@string/discuss_content" android:layout_weight="1"/>
    <View android:background="@color/base_divider_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/student_ask" android:background="@color/bg_gray" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="20dp"/>
        <RelativeLayout android:background="#ffffff" android:layout_width="match_parent" android:layout_height="@dimen/base_item_height">
            <TextView android:textSize="17sp" android:textColor="#000000" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/ask_teacher" android:layout_centerVertical="true"/>
            <CheckBox android:id="@+id/cb_ask" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:button="@null" android:drawableLeft="@drawable/checkbox_discuss" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/teacher_publish" android:background="@drawable/top_toolbar_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/header_height">
        <TextView android:textSize="16sp" android:textColor="#7b9e31" android:gravity="center" android:id="@+id/publish_teacher" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/publish_discuss" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
