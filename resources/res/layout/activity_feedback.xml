<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rlParent" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlTopBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentTop="true">
        <TextView android:ellipsize="end" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/suggestions" android:singleLine="true" android:layout_centerInParent="true" style="@style/Text_Title_Page"/>
        <ProgressBar android:id="@+id/pbLoading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_toRightOf="@+id/tvTitle" android:layout_centerVertical="true" style="@android:style/Widget.ProgressBar.Small.Inverse"/>
        <ImageButton android:id="@+id/ibtnGoBack" android:background="@drawable/navigation_img_done" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
        <Button android:textSize="16sp" android:textColor="@color/back_text_color" android:id="@+id/btnBack" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/navigation_img_back" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.chaoxing.mobile.widget.ExtListView android:id="@+id/elvFeedbackMsg" android:paddingLeft="10dp" android:paddingRight="10dp" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@color/transparent" android:cacheColorHint="@color/transparent" android:divider="@null" android:layout_above="@+id/rlEditPanle" android:layout_below="@+id/rlTopBar" android:headerDividersEnabled="false" android:footerDividersEnabled="false"/>
    <RelativeLayout android:id="@+id/rlEditPanle" android:background="@drawable/bottom_toolbar_bg" android:paddingLeft="6dp" android:paddingTop="7dp" android:paddingRight="6dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/rlBottomPanle" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/ivFromCamera" android:background="@drawable/signup_avatarcamera_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_centerVertical="true" android:contentDescription="@null"/>
            <ImageView android:id="@+id/ivFromGallery" android:background="@drawable/app_panel_pic_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_toRightOf="@+id/ivFromCamera" android:layout_centerVertical="true" android:contentDescription="@null"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlBottomPanle">
            <ImageButton android:id="@+id/ibtnAddImage" android:background="@drawable/ic_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
            <EditText android:textSize="16sp" android:textColorHint="@color/text_hint" android:id="@+id/etFeedbackMsg" android:background="@drawable/bg_input" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="34dp" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:hint="@string/input_your_suggestions" android:maxLines="3" android:maxLength="200" android:layout_toLeftOf="@+id/btnSendMsg" android:layout_toRightOf="@+id/ibtnAddImage" android:layout_centerVertical="true" android:inputType="textMultiLine"/>
            <Button android:textSize="16sp" android:textColor="@color/normal_gray" android:id="@+id/btnSendMsg" android:background="@drawable/button_black_stroke" android:paddingLeft="6dp" android:paddingTop="2dp" android:paddingRight="6dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/send" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
