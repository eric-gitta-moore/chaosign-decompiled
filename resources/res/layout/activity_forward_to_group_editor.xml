<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/viewToolbar" layout="@layout/common_title_bar"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/llBottom" android:layout_below="@+id/viewToolbar">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <EditText android:textSize="16sp" android:textColor="@android:color/black" android:id="@+id/etTitle" android:background="@android:color/transparent" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/something_xuexitong_title" android:maxLines="3"/>
            <View android:id="@+id/line" android:background="#ff0099ff" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_below="@+id/etTitle"/>
            <EditText android:textSize="16sp" android:textColor="#ff333333" android:textColorHint="#ffcccccc" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/etContent" android:background="@android:color/transparent" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/say_something_and_thought" android:minLines="5" android:layout_below="@+id/line"/>
            <RelativeLayout android:id="@+id/rlAttachment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/etContent">
                <View android:id="@+id/line2" android:background="#33000000" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="6dp"/>
                <FrameLayout android:id="@+id/flAttachment" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/line2">
                    <com.chaoxing.mobile.group.ViewAttachment android:id="@+id/viewAttachment" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </FrameLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlAttachment">
                <com.chaoxing.mobile.group.widget.TopicGridView android:id="@+id/imgGridView" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" app:albumColumnWidth="68dp" app:albumColumns="4" app:albumHorizontalSpacing="12dp" app:albumPaddingBottom="@dimen/common_margin" app:albumPaddingLeft="24dp" app:albumPaddingRight="24dp" app:albumPaddingTop="@dimen/common_margin" app:albumVerticalSpacing="12dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_attachment" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/llBottom" android:background="@color/color_ebeced" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:id="@+id/btnOperaPanel" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/topic_add" android:layout_alignParentBottom="true"/>
        <View android:background="#cccccc" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent_transprent"/>
</RelativeLayout>
