<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cx="http://schemas.android.com/apk/res-auto" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar">
        <com.mobeta.android.dslv.DragSortListView android:scrollbarStyle="outsideOverlay" android:id="@+id/lv_group" android:layout_width="match_parent" android:layout_height="match_parent" android:cacheColorHint="@android:color/transparent" android:divider="@color/DividerColor" android:dividerHeight="0dp" android:layout_above="@+id/option_bar" android:headerDividersEnabled="false" android:footerDividersEnabled="true" cx:drag_handle_id="@+id/iv_sort"/>
        <TextView android:textSize="20sp" android:id="@+id/tvEmptyTag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/topiclist_createfolder" android:layout_centerInParent="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/option_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="horizontal" android:id="@+id/edit_toolbar" android:background="#f5f6f8" android:paddingTop="1px" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
                <Button android:textSize="18sp" android:textColor="#b3b3b3" android:layout_gravity="center_vertical" android:id="@+id/btn_move" android:background="@android:color/transparent" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/move_resource" android:layout_weight="1"/>
                <Button android:textSize="18sp" android:textColor="#0099ff" android:layout_gravity="center_vertical" android:id="@+id/btn_delete" android:background="@android:color/transparent" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/delete_resource" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <include android:id="@+id/loading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent_transprent"/>
    </RelativeLayout>
</RelativeLayout>
