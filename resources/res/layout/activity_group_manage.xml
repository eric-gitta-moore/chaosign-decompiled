<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/rlName" android:background="@drawable/radius_ffffff_10dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ivAvatar" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginLeft="15dp" android:layout_centerVertical="true"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toLeftOf="@+id/tvNameArrow" android:layout_toRightOf="@+id/ivAvatar" android:layout_centerVertical="true">
                    <TextView android:id="@+id/tvName" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dynamic_my_topic" style="@style/group_title_text"/>
                    <TextView android:ellipsize="end" android:id="@+id/tvGroupIntroduct_admin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="小组简介" android:maxLines="1" android:layout_below="@+id/tvName" style="@style/group_sub_text"/>
                </RelativeLayout>
                <TextView android:id="@+id/tvNameArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="2dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/group_sub_text"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:background="@drawable/radius_ffffff_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_member_title" android:padding="@dimen/dp_15" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/sp_16" android:textStyle="bold" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="成员" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/dp_14" android:textColor="@color/color_999999" android:id="@+id/tv_member_count" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="@dimen/dp_8" android:layout_height="@dimen/dp_14" android:layout_marginLeft="@dimen/dp_5" android:src="@drawable/ic_right_arrow"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="@dimen/dp_65" android:layout_marginLeft="@dimen/dp_15" android:layout_marginRight="@dimen/dp_15" android:layout_marginBottom="@dimen/dp_15"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@drawable/radius_ffffff_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                <RelativeLayout android:id="@+id/rlQRCodeSlide" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
                    <TextView android:id="@+id/tvLabQRCodeSlide" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_notes_groupcode" android:layout_centerVertical="true" style="@style/group_title_text"/>
                    <TextView android:id="@+id/tvSlideQRCodeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tvQRCodeSlide" android:layout_centerVertical="true"/>
                    <TextView android:layout_gravity="center" android:id="@+id/tvQRCodeSlide" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:drawableLeft="@drawable/ic_group_qrcode" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rlGroupSetting_tj" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" android:minHeight="50dp">
                    <TextView android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_notes_group_topic_rank" android:layout_toLeftOf="@+id/tvGroupSetting_tj" android:layout_centerVertical="true" style="@style/group_title_text"/>
                    <TextView android:layout_gravity="center" android:id="@+id/tvGroupSetting_tj" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rlGroup_zr" android:background="@android:color/white" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="1dp">
                    <TextView android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_notes_group_topic_groupzr" android:layout_centerVertical="true" style="@style/group_title_text"/>
                    <TextView android:layout_gravity="center" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rlGroupChating_notify" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="1px" android:minHeight="50dp">
                    <TextView android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_contents_sendNotice" android:layout_centerVertical="true" style="@style/group_title_text"/>
                    <TextView android:layout_gravity="center" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@drawable/radius_ffffff_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                <RelativeLayout android:id="@+id/rlGroupSetting" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" android:minHeight="50dp">
                    <TextView android:textStyle="bold" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_notes_group_topic_groupsetting" android:layout_toLeftOf="@+id/tvGroupSetting" android:layout_centerVertical="true" style="@style/group_title_text"/>
                    <TextView android:layout_gravity="center" android:id="@+id/tvGroupSetting" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:drawableRight="@drawable/mission_group_open" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_group_setting_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:id="@+id/rlQRCodeSwitch" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="50dp" android:minHeight="50dp">
                        <TextView android:id="@+id/tvLabQRCode" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_notes_groupcode" android:layout_centerVertical="true" style="@style/group_title_text"/>
                        <TextView android:textSize="16sp" android:textColor="#999" android:id="@+id/tvSwitchQRCodeText" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:drawableRight="@drawable/ic_group_qrcode" android:drawablePadding="15dp" android:layout_toLeftOf="@+id/cbQRCodeSwitch" android:layout_centerVertical="true"/>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbQRCodeSwitch" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_group_cloudstorage" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="68dp" android:layout_marginTop="1dp">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_cloudstorage_text" android:layout_centerVertical="true" style="@style/group_title_text"/>
                            <TextView android:textSize="13sp" android:textColor="#a8a8b3" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="65dp" android:text="@string/pcenter_groupsetting_cloudstorage_texthint" android:layout_centerVertical="true" style="@style/group_title_text"/>
                        </LinearLayout>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbCheckTopic_cloudstorage" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_group_groupchat" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="68dp" android:layout_marginTop="1dp">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_groupchat_text" android:layout_centerVertical="true" style="@style/group_title_text"/>
                            <TextView android:textSize="13sp" android:textColor="#a8a8b3" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="65dp" android:text="@string/pcenter_groupsetting_groupchat_texthint" android:layout_centerVertical="true" style="@style/group_title_text"/>
                        </LinearLayout>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbCheckTopic_groupchat" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_public_group" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="68dp" android:layout_marginTop="1dp">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_public_group" android:layout_centerVertical="true" style="@style/group_title_text"/>
                            <TextView android:textSize="13sp" android:textColor="#a8a8b3" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="65dp" android:text="@string/pcenter_groupsetting_public_group_hint" android:layout_centerVertical="true" style="@style/group_title_text"/>
                        </LinearLayout>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbPublicSwitch" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@drawable/radius_ffffff_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_permission_setting" android:padding="@dimen/dp_15" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/sp_16" android:textStyle="bold" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/permission_manager" android:layout_weight="1"/>
                    <ImageView android:id="@+id/iv_permission_setting" android:layout_width="@dimen/dp_14" android:layout_height="@dimen/dp_8" android:layout_marginLeft="@dimen/dp_5" android:src="@drawable/mission_group_close" android:scaleType="centerCrop" android:rotationX="180"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_permission_setting_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:id="@+id/rlValidate" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="1dp">
                        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabValidate" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_notes_groupsetting_validation" android:layout_centerVertical="true"/>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbValidateSwitch" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rlCheckTopic" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="50dp">
                        <TextView android:id="@+id/tvCheckTopic" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_check_topic" android:layout_centerVertical="true" style="@style/group_title_text"/>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbCheckTopic" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rlCheckTopicReply" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="50dp">
                        <TextView android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_check_topic_reply" android:layout_centerVertical="true" style="@style/group_title_text"/>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbCheckTopicReply" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_needdelreasonsets" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="1dp">
                        <TextView android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_delete_cause" android:layout_centerVertical="true" style="@style/group_title_text"/>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbCheckTopic_delete_cause" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </RelativeLayout>
                    <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_permission_set" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:minHeight="50dp">
                        <TextView android:id="@+id/tv_permission_set" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_permission_set" style="@style/group_title_text"/>
                        <TextView android:textSize="13sp" android:textColor="#b3b3b3" android:layout_gravity="center" android:id="@+id/tv_permission_no" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="未设置" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <TextView android:id="@+id/tv_permission_content" android:paddingLeft="15dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_2" android:layout_toLeftOf="@+id/tv_permission_no" android:layout_below="@+id/tv_permission_set" style="@style/group_sub_text"/>
                    </RelativeLayout>
                    <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_speakers_set" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:minHeight="50dp">
                        <TextView android:id="@+id/tv_speakers_set" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_groupsetting_speakers_permission" style="@style/group_title_text"/>
                        <TextView android:textSize="13sp" android:textColor="#b3b3b3" android:layout_gravity="center" android:id="@+id/tv_speaker_no" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="未设置" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <TextView android:id="@+id/tv_speakers_content" android:paddingLeft="15dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_2" android:layout_toLeftOf="@+id/tv_speaker_no" android:layout_below="@+id/tv_speakers_set" style="@style/group_sub_text"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="@color/red" android:gravity="center" android:id="@+id/btnQuit" android:background="@drawable/radius_ffffff_10dp" android:layout_width="match_parent" android:layout_height="@dimen/dp_50" android:layout_marginTop="@dimen/dp_10" android:text="@string/something_xuexitong_quitgroups"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent"/>
</RelativeLayout>
