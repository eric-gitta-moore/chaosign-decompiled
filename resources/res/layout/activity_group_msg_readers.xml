<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/rg_head" android:visibility="visible" android:layout_width="220dp" android:layout_height="30dp" android:layout_centerInParent="true">
            <RadioButton android:textSize="14sp" android:textColor="@color/notify_tab_text_color" android:gravity="center" android:id="@+id/rb_tab_left" android:background="@drawable/notify_tab_left" android:layout_width="0dp" android:layout_height="match_parent" android:checked="true" android:button="@null" android:text="@string/pcenter_contents_Readed" android:layout_weight="1"/>
            <RadioButton android:textSize="14sp" android:textColor="@color/notify_tab_text_color" android:gravity="center" android:id="@+id/rb_tab_right" android:background="@drawable/notify_tab_right" android:layout_width="0dp" android:layout_height="match_parent" android:button="@null" android:text="@string/pcenter_contents_Unread" android:layout_weight="1"/>
        </RadioGroup>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager android:id="@+id/viewpager" android:persistentDrawingCache="animation" android:layout_width="match_parent" android:layout_height="0dp" android:flipInterval="30" android:layout_weight="1"/>
</LinearLayout>
