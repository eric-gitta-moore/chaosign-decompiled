<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolBar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rv_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolBar"/>
    <TextView android:textSize="17sp" android:textColor="@color/chaoxing_blue" android:gravity="center" android:id="@+id/tv_tips" android:layout_width="match_parent" android:layout_height="match_parent" android:text="+新建群组" android:layout_below="@+id/toolBar"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolBar">
        <include android:id="@+id/loading_view" android:visibility="gone" layout="@layout/page_loading_circle_bg_white"/>
    </RelativeLayout>
</RelativeLayout>
