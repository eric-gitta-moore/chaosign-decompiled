<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.camera.JCameraView android:id="@+id/jcameraview" android:layout_width="match_parent" android:layout_height="match_parent" app:study_jcamera_iconSize="30dp" app:study_jcamera_iconSrc="@drawable/jcamera_icon_camera_change" app:study_jcamera_topMargin="4dp"/>
    <RelativeLayout android:id="@+id/rl_loading" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:background="#303438" android:layout_width="100dp" android:layout_height="80dp" android:layout_centerInParent="true">
            <com.chaoxing.core.widget.CircleProgressBar android:id="@+id/pb_compress_loading" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="10dp" android:layout_centerHorizontal="true"/>
            <TextView android:textColor="@color/white" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="正在压缩.." android:maxLines="1" android:layout_below="@+id/pb_compress_loading"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
