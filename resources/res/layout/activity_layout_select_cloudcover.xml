<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/top_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
    <ImageView android:id="@+id/iv_imageItem" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="20dp" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:layout_above="@+id/rv_images" android:layout_below="@+id/top_bar"/>
    <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rv_images" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="10dp" android:layout_marginRight="13dp" android:layout_above="@+id/tv_textdesc"/>
    <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/tv_textdesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="50dp" android:text="点击选择封面" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <include android:id="@+id/il_load" android:visibility="gone" layout="@layout/page_loading_circle"/>
</RelativeLayout>
