<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/top" layout="@layout/contact_title_bar"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/itemContainer" android:background="#f7f7f7" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#999999" android:gravity="center" android:id="@+id/tv_label" android:layout_width="wrap_content" android:layout_height="34dp" android:layout_marginLeft="12dp" android:text="@string/pcenter_contents_Department"/>
            <View android:id="@+id/v_line" android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="1px"/>
        </LinearLayout>
        <ListView android:id="@+id/lv_listview" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null" android:layout_below="@+id/itemContainer"/>
        <include layout="@layout/wait_circle_bar_with_text"/>
    </RelativeLayout>
</LinearLayout>
