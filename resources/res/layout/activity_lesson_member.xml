<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fl_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/rl_top" android:background="@drawable/lesson_member_top_bg" android:layout_width="match_parent" android:layout_height="@dimen/adaptive_48dp">
        <ImageView android:id="@+id/iv_back" android:padding="@dimen/adaptive_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/rg_head" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerInParent="true">
            <RadioButton android:textSize="@dimen/adaptive_18sp" android:textColor="@color/normal_black" android:gravity="center" android:id="@+id/rb_members" android:layout_width="wrap_content" android:layout_height="match_parent" android:button="@null" android:text="成员" android:singleLine="true"/>
            <RadioButton android:textSize="@dimen/adaptive_17sp" android:textColor="@color/gray_999999" android:gravity="center" android:id="@+id/rb_chat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/adaptive_48dp" android:button="@null" android:text="聊天" android:singleLine="true"/>
        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>
