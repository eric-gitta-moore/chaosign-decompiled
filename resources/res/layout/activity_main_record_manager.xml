<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rv_record" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/view_batch_delete" android:layout_below="@+id/toolbar"/>
    <RelativeLayout android:id="@+id/view_empty" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/view_batch_delete" android:layout_below="@+id/toolbar">
        <TextView android:textSize="16sp" android:textColor="#b3b3b3" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="暂无数据" android:singleLine="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/view_batch_delete" android:layout_width="match_parent" android:layout_height="44dp" android:layout_alignParentBottom="true">
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0.5dp" android:src="@drawable/ic_record_manager_batch_delete"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="16sp" android:textColor="#ff3b30" android:ellipsize="end" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/move_out" android:singleLine="true" android:layout_marginStart="6dp"/>
        </LinearLayout>
        <View android:id="@+id/view_batch_delete_cover" android:background="#7affffff" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
    <com.chaoxing.mobile.study.home.mainpage.view.HomePageFloatButton android:id="@+id/iv_to_top" android:background="@color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="70dp" android:src="@drawable/img_to_top" android:scaleType="centerInside" android:layout_alignParentBottom="true" android:layout_marginEnd="17dp" android:layout_alignParentEnd="true"/>
    <RelativeLayout android:id="@+id/view_loading" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:id="@+id/pb_loading" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerInParent="true" style="@style/ProgressBar"/>
    </RelativeLayout>
</RelativeLayout>
