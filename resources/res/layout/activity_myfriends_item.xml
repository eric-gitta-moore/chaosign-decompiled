<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.study.contacts.widget.FriendItemView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="-121dp" android:layout_marginBottom="1px">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="#ffffff" android:layout_width="0dp" android:layout_height="66dp" android:layout_weight="1">
            <CheckBox android:id="@+id/cb_selected" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginLeft="8dp" android:button="@drawable/checkbox_group_member"/>
            <com.fanzhou.widget.CircleImageView android:id="@+id/iv_icon" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_marginTop="12dp" android:layout_marginRight="10dp" android:layout_marginBottom="12dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" android:layout_centerVertical="true" android:contentDescription="@null" ss:border_color="#999d9e" ss:is_circle="false" ss:x_radius="4dp" ss:y_radius="4dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_weight="1">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tv_name" android:paddingRight="50dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
                    <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-46dp"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp">
                    <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tv_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:singleLine="true"/>
                    <TextView android:textSize="13sp" android:textColor="#ff999999" android:id="@+id/tvTime" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/linearl_attention" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="66dp">
                <TextView android:textSize="12sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_attention" android:background="@drawable/blue_btn_border_5" android:layout_width="60dp" android:layout_height="28dp" android:layout_marginTop="2dp"/>
                <TextView android:textSize="10sp" android:textColor="#cccccc" android:id="@+id/tvAttentionMe" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/focused_tag"/>
                <TextView android:textSize="10sp" android:textColor="#cccccc" android:id="@+id/tvFrom" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="16dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="来源：" android:singleLine="true" android:layout_centerVertical="true"/>
            </LinearLayout>
            <TextView android:textSize="17sp" android:textColor="#cccccc" android:id="@+id/tvCount" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/tvGroupName" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/ivRightArrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/ic_group_info_right_arrow" android:layout_centerVertical="true" android:contentDescription="@null"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvMove" android:background="@color/color_commen_move" android:layout_width="60dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/common_move"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="60dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/common_delete"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvAttentionDelete" android:background="@color/color_commen_move" android:visibility="gone" android:layout_width="80dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/pcenter_contents_RemoveFocus"/>
    </LinearLayout>
    <View android:id="@+id/line_view" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="65dp" android:layout_marginBottom="1px"/>
    <View android:id="@+id/line_view_choice" android:background="#ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="100dp" android:layout_marginBottom="1px"/>
</com.chaoxing.study.contacts.widget.FriendItemView>
