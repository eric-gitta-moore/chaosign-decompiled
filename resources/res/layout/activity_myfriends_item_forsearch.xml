<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.study.contacts.widget.FriendItemView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="-121dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="#ffffff" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="66dp" android:layout_weight="1">
            <CheckBox android:id="@+id/cb_selected" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="15dp" android:layout_marginRight="-5dp" android:button="@drawable/checkbox_group_member"/>
            <com.fanzhou.widget.CircleImageView android:id="@+id/iv_icon" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_marginTop="6dp" android:layout_marginRight="12dp" android:layout_marginBottom="6dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" android:layout_centerVertical="true" android:contentDescription="@null" ss:border_color="#999d9e" ss:border_width="1px" ss:is_circle="false" ss:x_radius="5dp" ss:y_radius="5dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginRight="10dp" android:layout_marginBottom="12dp" android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_name" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:maxWidth="185dp" android:text="王绪" android:singleLine="true" android:layout_centerVertical="true" ss:layout_constraintBottom_toBottomOf="0" ss:layout_constraintHorizontal_bias="0" ss:layout_constraintHorizontal_chainStyle="2" ss:layout_constraintLeft_toLeftOf="0" ss:layout_constraintRight_toLeftOf="@+id/ll_tag" ss:layout_constraintTop_toTopOf="0" ss:layout_constraintWidth_default="1"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-30dp" android:layout_toRightOf="@+id/tvTitle" android:layout_centerVertical="true" ss:layout_constraintLeft_toRightOf="@+id/tv_name" ss:layout_constraintRight_toRightOf="0" ss:layout_constraintTop_toTopOf="0" ss:layout_constraintVertical_bias="0">
                        <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:textSize="12sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_attention" android:background="@drawable/blue_btn_attachment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="关注"/>
                    </LinearLayout>
                    <TextView android:textSize="14sp" android:textColor="#b3b3b3" android:gravity="right" android:id="@+id/tvFrom" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="来源：" android:singleLine="true" android:layout_centerVertical="true"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_unitlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp">
                    <TextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_unit" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1"/>
                    <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tvTime" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/linearl_attention" android:layout_width="wrap_content" android:layout_height="@dimen/friend_layoutheight">
                <TextView android:textSize="9sp" android:textColor="#999999" android:id="@+id/tvAttentionMe" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/focused_tag"/>
            </LinearLayout>
            <TextView android:textSize="17sp" android:textColor="#cccccc" android:id="@+id/tvCount" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/tvGroupName" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/ivRightArrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/ic_group_info_right_arrow" android:layout_centerVertical="true" android:contentDescription="@null"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvMove" android:background="@color/color_commen_move" android:layout_width="60dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/common_move"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="60dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/common_delete"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvAttentionDelete" android:background="@color/color_commen_del" android:visibility="gone" android:layout_width="80dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/pcenter_contents_RemoveFocus"/>
    </LinearLayout>
    <View android:id="@+id/line_view" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="69dp" android:layout_marginBottom="1px"/>
    <View android:id="@+id/line_view_choice" android:background="#ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="100dp" android:layout_marginBottom="1px"/>
</com.chaoxing.study.contacts.widget.FriendItemView>
