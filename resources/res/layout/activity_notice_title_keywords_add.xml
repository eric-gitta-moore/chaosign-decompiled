<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:textSize="15sp" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="15dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/cl_ic_toolbar_arrow_left_24dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/normal_black" android:ellipsize="middle" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="75dp" android:layout_marginRight="7dp" android:text="@string/set_title_keywords" android:singleLine="true" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/ivTips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:src="@drawable/ic_keywords_tips" android:layout_toRightOf="@+id/tvTitle"/>
        <Button android:textSize="15sp" android:id="@+id/btnRight" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginRight="@dimen/dp_3" android:text="@string/comment_done" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_keywords" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header">
        <com.yanzhenjie.recyclerview.SwipeRecyclerView android:scrollbarSize="3dp" android:scrollbarThumbVertical="@color/app_line_bg" android:scrollbarStyle="outsideOverlay" android:id="@+id/rv_keywords" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
