<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/top_bar" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp">
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:id="@+id/tv_select_all" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ocr_select_all" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_bar" android:layout_below="@+id/top_bar">
        <com.theartofdev.edmodo.cropper.CropImageView android:id="@+id/crop_image_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.chaoxing.mobile.ocr.WordsLocationOverlayView android:id="@+id/words_location_overlay_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/bottom_bar" android:paddingLeft="12dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:id="@+id/tv_cancel" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_ocr_cancel" android:layout_centerVertical="true"/>
        <ImageView android:textSize="16sp" android:id="@+id/iv_rotate" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_ocr_rotate" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:id="@+id/tv_ok" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_ocr_ok" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.chaoxing.core.widget.CircleProgressBar android:id="@+id/pb_loading" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerInParent="true"/>
</RelativeLayout>
