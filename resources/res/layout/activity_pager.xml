<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:background="@color/translucent" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/back_imageView" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/bg_back"/>
        <View android:id="@+id/center_view" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/rotate_left" android:padding="10dp" android:layout_width="50dp" android:layout_height="match_parent" android:src="@drawable/btn_rotate_left" android:scaleType="centerInside" android:layout_toLeftOf="@+id/center_view"/>
        <ImageView android:id="@+id/rotate_right" android:padding="10dp" android:layout_width="50dp" android:layout_height="match_parent" android:src="@drawable/btn_rotate_right" android:scaleType="centerInside" android:layout_toRightOf="@+id/center_view"/>
    </RelativeLayout>
</RelativeLayout>
