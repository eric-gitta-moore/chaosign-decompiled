<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/rlParent" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/topBar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/llContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:layout_marginRight="26dp" android:layout_below="@+id/topBar">
        <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/tvTip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="@string/change_chaoxinghao_phone_tip"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/llEmail_phone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="46dp">
            <TextView android:textSize="16sp" android:textColor="#808080" android:id="@+id/tv_national_code" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+86" android:drawableRight="@drawable/ic_gray_down" android:drawablePadding="10dp" android:layout_marginEnd="10dp"/>
            <EditText android:textSize="16sp" android:textColor="@color/account_gray" android:textColorHint="#cccccc" android:id="@+id/etEmail_phone" android:background="@android:color/transparent" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/iv_delete" android:layout_toRightOf="@+id/tv_national_code"/>
            <ImageView android:id="@+id/iv_delete" android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear" android:scaleType="center" android:layout_alignTop="@+id/etEmail_phone" android:layout_alignBottom="@+id/etEmail_phone" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@color/date_line" android:layout_width="match_parent" android:layout_height="1px"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/rlValidCode" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <EditText android:textSize="16sp" android:textColorHint="@color/divider_line" android:id="@+id/etValid_code" android:background="@android:color/transparent" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="验证码" android:layout_toLeftOf="@+id/getValidCode" android:inputType="textPassword"/>
            <Button android:textSize="13sp" android:textColor="#0099ff" android:id="@+id/getValidCode" android:background="@color/transparent" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="23dp" android:layout_marginLeft="5dp" android:text="获取验证码" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/date_line" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tv_request_code_by_voice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/llContent" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <Button android:id="@+id/btnOk" android:background="@drawable/btn_blue_bg" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_marginTop="80dp" android:layout_marginRight="15dp" android:text="完成" android:layout_below="@+id/llContent" style="@style/Text_White_16"/>
    <include android:visibility="gone" layout="@layout/wait_circle_bar_with_text"/>
</RelativeLayout>
