<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_actionbar"/>
    <include layout="@layout/layout_divider_line"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="56dp">
        <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:text="时间" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:id="@+id/detail_time_happen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="17dp" android:text="00_00 00:00" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <include layout="@layout/layout_divider_line"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="56dp">
        <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:text="重复" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:id="@+id/repeat_reminde" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="17dp" android:text="永不" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <include layout="@layout/layout_divider_line"/>
    <EditText android:textSize="16sp" android:gravity="start" android:id="@+id/detail_remind_content" android:background="@null" android:paddingLeft="17dp" android:paddingTop="14dp" android:paddingRight="17dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="这是提醒详情页的默认内容"/>
    <include layout="@layout/layout_divider_line"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="34dp">
        <Button android:textColor="#ffffff" android:id="@+id/join_reminder" android:background="@drawable/shape_bt_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_margin="16dp" android:text="加入我的提醒"/>
    </LinearLayout>
</LinearLayout>
