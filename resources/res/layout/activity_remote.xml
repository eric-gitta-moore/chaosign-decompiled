<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/root_view" android:background="#171719" android:layout_width="match_parent" android:layout_height="match_parent">
        <ViewFlipper android:id="@+id/view_flipper" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="6">
            <include android:id="@+id/layout_mouse_pad" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/layout_mouse_pad"/>
            <include android:id="@+id/touch_pad" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/layout_touch_pad"/>
            <include android:id="@+id/key_pad" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/layout_key_pad"/>
            <include android:id="@+id/all_app" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/layout_all_app"/>
        </ViewFlipper>
        <LinearLayout android:orientation="horizontal" android:background="#1f1f21" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_mouse_mode" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/remote_mouse" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_touch_mode" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/remote_touch" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_key_mode" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/remote_keyborad" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_get_apps" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/remote_application" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#000000" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="horizontal" android:background="#28282a" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_vol_down" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="VOL-" android:layout_weight="1"/>
            <ProgressBar android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/progressbar_vol" android:layout_width="0dp" android:layout_height="12dp" android:max="100" android:progressDrawable="@drawable/vol_progress_bar" android:layout_weight="3" style="?android:attr/progressBarStyleHorizontal"/>
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_vol_up" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="VOL+" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#000000" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="horizontal" android:background="#28282a" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.3">
            <ImageButton android:gravity="center" android:id="@+id/btn_key_home" android:background="#00000000" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/remote_icon_home" android:layout_weight="1"/>
            <View android:background="#000000" android:layout_width="1px" android:layout_height="match_parent"/>
            <ImageButton android:gravity="center" android:id="@+id/btn_key_back" android:background="#00000000" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/remote_icon_back" android:layout_weight="1"/>
            <View android:background="#000000" android:layout_width="1px" android:layout_height="match_parent"/>
            <ImageButton android:gravity="center" android:id="@+id/btn_keyboard" android:background="#00000000" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/remote_icon_keyboard" android:layout_weight="1"/>
            <View android:background="#000000" android:layout_width="1px" android:layout_height="match_parent"/>
            <ImageButton android:gravity="center" android:id="@+id/btn_sensitivity" android:background="#00000000" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/remote_icon_clear" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton android:gravity="center" android:id="@+id/btn_close" android:background="@drawable/btn_close_remote" android:layout_width="40dp" android:layout_height="40dp" android:layout_weight="1"/>
</RelativeLayout>
