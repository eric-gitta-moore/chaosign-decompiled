                <Button android:textSize="18sp" android:textColor="#0099ff" android:layout_gravity="center_vertical" android:id="@+id/btn_move" android:background="@android:color/transparent" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/move_resource" android:layout_weight="1"/>
            </LinearLayout>
            <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
            <View android:id="@+id/split_line" android:background="#d9d9d9" android:layout_width="1px" android:layout_height="wrap_content" android:layout_alignTop="@+id/options" android:layout_alignBottom="@+id/options" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="#999999" android:id="@+id/tv_empty_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/resource_collection_empty_tip" android:layout_centerInParent="true"/>
        <include layout="@layout/common_loading_transparent"/>
    </RelativeLayout>
</RelativeLayout>
