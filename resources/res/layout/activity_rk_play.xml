<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlo_doc" android:background="#cc000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <RelativeLayout android:id="@+id/doc_container" android:focusable="false" android:focusableInTouchMode="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
        <com.chaoxing.mobile.rklive.RkPlayOperationLayout android:id="@+id/operation_layout" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ProgressBar android:id="@+id/pb_loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@android:style/Widget.ProgressBar.Small"/>
        <com.chaoxing.mobile.rklive.RkToastLayout android:id="@+id/toast_layout" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/chat_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rlo_doc"/>
    <com.chaoxing.mobile.rklive.RkDragContainer android:id="@+id/video_container" android:background="@drawable/bg_cc_small_video" android:padding="2dp" android:visibility="gone" android:layout_width="116dp" android:layout_height="84dp"/>
    <TextView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/microphone" android:background="@drawable/cc_conn_micro_phone" android:paddingTop="32dp" android:visibility="visible" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginRight="15dp" android:layout_marginBottom="62dp" android:text="@string/ys_conn_micro_phone" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    <com.chaoxing.mobile.rklive.RkReloadLayout android:id="@+id/doc_reload_layout" android:background="@color/trans_40" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentTop="true"/>
    <com.chaoxing.mobile.rklive.RkReloadLayout android:id="@+id/chat_reload_layout" android:background="@color/color_e4e4e4" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true"/>
</RelativeLayout>
