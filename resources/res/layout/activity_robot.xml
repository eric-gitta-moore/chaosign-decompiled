<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/emoji" android:layout_width="250dp" android:layout_height="250dp" android:scaleType="centerCrop" android:layout_centerHorizontal="true" app:lottie_autoPlay="false" app:lottie_loop="false"/>
    <ImageView android:background="@drawable/robot_bg_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <ImageView android:background="@drawable/robot_bg_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    <TextView android:id="@+id/back" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="23dp" android:drawableLeft="@drawable/robot_back"/>
    <CheckBox android:id="@+id/robot_reading_voice" android:background="@drawable/robot_reading_voice" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="32dp" android:layout_marginRight="20dp" android:checked="true" android:button="@null" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    <ImageView android:id="@+id/help" android:background="@drawable/robot_help" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="32dp" android:layout_marginRight="20dp" android:layout_toLeftOf="@+id/robot_reading_voice" android:layout_alignParentTop="true"/>
    <com.chaoxing.mobile.robot.ui.RobotBottomLayout android:id="@+id/bottom_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
    <LinearLayout android:orientation="vertical" android:paddingLeft="25dp" android:paddingRight="25dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="225dp" android:layout_above="@+id/bottom_layout">
        <com.chaoxing.mobile.robot.ui.RobotHeaderView android:id="@+id/header_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="30dp"/>
        <RelativeLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>
