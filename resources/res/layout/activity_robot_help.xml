<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/tool_bar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/go_try" android:background="@drawable/shape_robot_evaluate" android:layout_width="230dp" android:layout_height="45dp" android:layout_marginBottom="35dp" android:text="@string/robot_try" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/recycler_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_above="@+id/go_try" android:layout_below="@+id/tool_bar"/>
    <com.chaoxing.mobile.robot.ui.RobotErrorView android:id="@+id/error_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tool_bar"/>
    <ProgressBar android:id="@+id/loading_view" android:visibility="gone" android:layout_width="36dp" android:layout_height="36dp" android:layout_centerInParent="true" style="@style/ProgressBar"/>
</RelativeLayout>
