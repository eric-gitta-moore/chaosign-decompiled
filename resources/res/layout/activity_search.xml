<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:id="@+id/btnBack" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/cl_ic_toolbar_arrow_left_24dp" android:layout_centerVertical="true"/>
        <Button android:textSize="16sp" android:textColor="@color/normal_black" android:gravity="center" android:id="@+id/btn_search" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="12dp" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/cancel" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/group_search_input_bg" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginRight="15dp" android:layout_toLeftOf="@+id/btn_search" android:layout_toRightOf="@+id/btnBack" android:layout_centerVertical="true">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="8dp" android:layout_marginRight="5dp" android:src="@drawable/icon_group_search"/>
            <EditText android:textSize="14sp" android:textColor="@color/normal_gray" android:id="@+id/edit_keyword" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="32dp" android:hint="@string/comment_serarch" android:layout_weight="1" android:layout_centerVertical="true" android:inputType="text" android:imeOptions="actionSearch"/>
            <ImageView android:id="@+id/iv_clear" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:src="@drawable/clear" android:layout_weight="0"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout android:id="@+id/fragment_search" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <FrameLayout android:id="@+id/fl_main_bottom" android:layout_width="match_parent" android:layout_height="58dp"/>
</LinearLayout>
