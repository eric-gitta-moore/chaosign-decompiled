<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/rlAuto_time" android:background="@drawable/common_white_stroke_bg" android:paddingLeft="27dp" android:paddingRight="22dp" android:layout_width="match_parent" android:layout_height="56dp">
            <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tvAuto_lab_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/time" android:layout_centerVertical="true"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvAuto_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/choose_tag" android:drawableRight="@drawable/ic_seat_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlAuto_address" android:background="@drawable/common_white_stroke_bg" android:paddingLeft="27dp" android:paddingRight="22dp" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="8dp" android:layout_below="@+id/rlAuto_time">
            <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tvAuto_lab_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/address" android:layout_centerVertical="true"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvAuto_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/choose_tag" android:drawableRight="@drawable/ic_seat_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:background="@drawable/common_white_stroke_bg" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp" android:layout_below="@+id/rlAuto_address">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvRoom" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
        <include android:id="@+id/pbLoading" layout="@layout/wait_circle_bar_with_text_match_parent_transprent"/>
    </RelativeLayout>
</LinearLayout>
