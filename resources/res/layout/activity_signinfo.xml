<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="44dp">
        <Button android:textSize="16sp" android:textColor="#333333" android:id="@+id/btnBack" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/navigation_img_back" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="#3c3c3c" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sign_result" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <include android:id="@+id/sign_success" layout="@layout/signinfo_success"/>
    <include android:id="@+id/sign_false" layout="@layout/signinfo_false"/>
    <include android:id="@+id/sign_loading" layout="@layout/signinfo_loading"/>
</LinearLayout>
