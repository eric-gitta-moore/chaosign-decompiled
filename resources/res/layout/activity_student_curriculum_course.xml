<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/parentView" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout android:id="@+id/refresh_layout" android:background="@color/color_f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar">
        <com.scwang.smart.refresh.header.CxClassicsHeader android:layout_width="match_parent" android:layout_height="wrap_content" app:srlDrawableArrow="@drawable/icon_refresh" app:srlDrawableArrowSize="18dp" app:srlDrawableMarginRight="8dp" app:srlDrawableProgressSize="18dp" app:srlEnableLastTime="false" app:srlFinishDuration="100" app:srlTextSizeTime="10dp" app:srlTextSizeTitle="13sp" app:srlTextTimeMarginTop="2dp"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/clbarLayout" android:layout_width="match_parent" android:layout_height="match_parent">
                <com.google.android.material.appbar.AppBarLayout android:orientation="vertical" android:id="@+id/appbar" android:background="@null" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content" app:elevation="0dp" app:layout_collapseMode="2" app:layout_scrollFlags="3">
                    <LinearLayout android:orientation="vertical" android:id="@+id/llBarLayout" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_collapseMode="2" app:layout_scrollFlags="3">
                        <com.chaoxing.mobile.widget.StiffSearchBar android:id="@+id/search_bar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        <TextView android:textSize="13sp" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/tv_review" android:background="#e676c5f9" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/review_class_chapter"/>
                        <com.chaoxing.mobile.course.ui.view.CourseCurriculumHeader android:id="@+id/course_curriculum_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                    <net.lucode.hackware.magicindicator.MagicIndicator android:layout_gravity="center_horizontal" android:id="@+id/tabs" android:background="@drawable/white_circle_border_bg_top_left_right" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
                    <View android:id="@+id/tablayout_below_divider" android:background="@color/gray_ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
                </com.google.android.material.appbar.AppBarLayout>
                <LinearLayout android:orientation="vertical" android:background="@drawable/white_circle_border_bg_bottom_left_right" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <com.chaoxing.mobile.widget.ScrollableViewPager android:id="@+id/vp_course" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="5dp"/>
                </LinearLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <include android:visibility="gone" layout="@layout/page_loading_circle"/>
            <include android:visibility="gone" layout="@layout/common_loading_transparent"/>
            <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center" android:id="@+id/open_course_time" android:background="#f2f2f2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="55dp" android:text="开课时间" android:singleLine="true" android:layout_alignParentBottom="true"/>
            <include android:visibility="gone" layout="@layout/reload"/>
        </RelativeLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    <TextView android:gravity="center" android:id="@+id/tv_delete_tip" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="该课程已删除" android:layout_below="@+id/toolbar"/>
</RelativeLayout>
