<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/edit_container" android:background="@color/color_f5f6f8" android:paddingTop="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="center" android:id="@+id/tvDelete" android:clickable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/delete_resource" android:drawableTop="@drawable/gray_course_resource_delete" android:drawablePadding="2dp" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="center" android:id="@+id/tvMove" android:clickable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/move_resource" android:drawableTop="@drawable/gray_course_resource_move" android:drawablePadding="2dp" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="center" android:id="@+id/tvTransfer" android:clickable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/forward_shard" android:drawableTop="@drawable/gray_course_resource_transfer" android:drawablePadding="2dp" android:layout_weight="1"/>
        <View android:id="@+id/viewDivider" android:background="#cccccc" android:layout_width="1dp" android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/tv_tips" android:background="@color/color_f5f6f8" android:layout_width="match_parent" android:layout_height="30dp" android:text="@string/common_click_and_sort" android:layout_below="@+id/toolBar"/>
    <ViewStub android:id="@+id/vsWait" android:layout="@layout/wait_circle_bar_with_text_match_parent" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.chaoxing.library.widget.CToolbar android:id="@+id/toolBar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/listView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/edit_container" android:layout_below="@+id/tv_tips"/>
</RelativeLayout>
