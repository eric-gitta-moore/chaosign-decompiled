<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/titleBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
    <TextView android:ellipsize="middle" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="65dp" android:layout_marginRight="65dp" android:singleLine="true" android:layout_centerInParent="true" style="@style/Text_Title_Page"/>
    <ImageView android:id="@+id/btnDone" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/navigation_img_done" android:scaleType="centerInside" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <Button android:id="@+id/btnLeft" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="完成" style="@style/btn_stroke_black_default"/>
    <Button android:textSize="16sp" android:textColor="@color/back_text_color" android:id="@+id/btnBack" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/navigation_img_back" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <Button android:id="@+id/btnCancel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="取消" android:layout_alignParentLeft="true" style="@style/btn_stroke_black_default"/>
    <Button android:textSize="16sp" android:textColor="@color/account_gray" android:id="@+id/changeCancel" android:background="@null" android:paddingLeft="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="取消" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <Button android:textSize="12sp" android:textColor="@color/user_change_btn" android:id="@+id/changeSubmit" android:background="@null" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="保存" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <Button android:textSize="12sp" android:textColor="@color/user_change_btn" android:id="@+id/btnChange" android:background="@null" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="编辑" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <Button android:id="@+id/btnRight2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="删除" android:layout_alignParentRight="true" style="@style/btn_stroke_red_default"/>
    <Button android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/btnRight" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="14dp" android:text="确定(0)" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <Button android:id="@+id/btnSubmit" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="提交" android:layout_alignParentRight="true" style="@style/btn_stroke_blue_default"/>
    <TextView android:id="@+id/btnAdd" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="收藏" android:layout_alignParentRight="true" style="@style/text_discuss_style"/>
</RelativeLayout>
