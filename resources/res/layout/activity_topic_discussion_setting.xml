<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/titleBar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/titleBar">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:minHeight="50dp">
            <TextView android:textSize="16sp" android:textColor="#333" android:id="@+id/tvSetTimeTag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_discuss_time_long" android:layout_centerVertical="true"/>
            <TextView android:textSize="15sp" android:textColor="#0099ff" android:id="@+id/tvSetTimeSign" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1天" android:drawableRight="@drawable/blue_ic_down" android:drawablePadding="3dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/color_f5f6f8" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp"/>
        <RelativeLayout android:id="@+id/rl_course_reply_switch" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="45dp" android:layout_below="@+id/titleBar">
            <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="45dp" android:layout_marginLeft="15dp" android:text="@string/course_no_allow_reply"/>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/reply_switch_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:checked="false" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        </RelativeLayout>
        <View android:background="@color/color_f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_alignParentBottom="true"/>
        <RelativeLayout android:id="@+id/rl_student_view_reply_switch" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="45dp" android:layout_below="@+id/titleBar">
            <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="15dp" android:text="@string/course_student_apply_reply" android:layout_toLeftOf="@+id/student_view_reply_switch_button"/>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/student_view_reply_switch_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:checked="false" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        </RelativeLayout>
        <View android:background="@color/color_f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_alignParentBottom="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_15" android:layout_marginRight="@dimen/dp_15">
            <RelativeLayout android:id="@+id/rl_reply_setting" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="45dp" android:layout_below="@+id/titleBar">
                <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="45dp" android:text="@string/topic_discuss_reply_setting"/>
                <com.kyleduo.switchbutton.SwitchButton android:id="@+id/reply_setting_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/setting_view" android:background="@drawable/bg_f5f6f8_circle_4" android:paddingLeft="15dp" android:paddingTop="15dp" android:paddingRight="15dp" android:paddingBottom="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/view_text_limit" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/adaptive_16sp" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/discuss_setting_txt_limit" android:layout_centerVertical="true"/>
                    <EditText android:textSize="@dimen/adaptive_16sp" android:textColor="@color/color_666666" android:id="@+id/et_txt_limit" android:background="@drawable/shape_rectangle_white_bg" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:minWidth="50dp" android:maxEms="10" android:layout_toLeftOf="@+id/tv1" android:inputType="number"/>
                    <TextView android:textSize="@dimen/adaptive_16sp" android:textColor="@color/color_666666" android:id="@+id/tv1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="字" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/view_times_limit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/adaptive_23dp">
                    <TextView android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/discuss_limit_reply" android:layout_centerVertical="true"/>
                    <EditText android:textSize="@dimen/adaptive_16sp" android:textColor="@color/color_666666" android:id="@+id/et_limit_reply" android:background="@drawable/shape_rectangle_white_bg" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:minWidth="50dp" android:maxEms="10" android:layout_toLeftOf="@+id/tv2" android:inputType="number"/>
                    <TextView android:textColor="@color/color_666666" android:id="@+id/tv2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="次" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/color_f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_alignParentBottom="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_15" android:layout_marginRight="@dimen/dp_15">
            <RelativeLayout android:id="@+id/rl_urge_setting" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="45dp" android:layout_below="@+id/titleBar">
                <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="45dp" android:text="@string/topic_discuss_urge_setting"/>
                <com.kyleduo.switchbutton.SwitchButton android:id="@+id/urge_setting_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
            </RelativeLayout>
            <View android:background="@color/color_f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/urge_setting_view" android:background="@drawable/bg_f5f6f8_circle_4" android:paddingLeft="15dp" android:paddingTop="15dp" android:paddingRight="15dp" android:paddingBottom="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/urge_times_limit" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/adaptive_16sp" android:textColor="@color/color_666666" android:id="@+id/urge_tv1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="活动结束前" android:layout_centerVertical="true"/>
                    <EditText android:textSize="@dimen/adaptive_16sp" android:textColor="@color/color_666666" android:id="@+id/et_limit_urge" android:background="@drawable/shape_rectangle_white_bg" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:maxEms="10" android:layout_toRightOf="@+id/urge_tv1" android:inputType="number"/>
                    <TextView android:textSize="@dimen/adaptive_16sp" android:textColor="@color/color_666666" android:id="@+id/urge_tv2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="分钟,发通知提醒未交学生" android:layout_toRightOf="@+id/et_limit_urge" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:background="@color/color_f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
