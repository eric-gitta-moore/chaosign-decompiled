<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_tab_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:ellipsize="end" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:drawableLeft="@drawable/cl_ic_toolbar_arrow_left_24dp" android:layout_centerVertical="true"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/rg_tab" android:background="@color/transparent" android:layout_width="205dp" android:layout_height="match_parent" android:layout_centerInParent="true">
            <RadioButton android:textSize="16sp" android:textColor="@color/topic_recycle_tab_text" android:id="@+id/rb_been_issued" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/topic_review_tab" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
            <RadioButton android:textSize="16sp" android:textColor="@color/topic_recycle_tab_text" android:id="@+id/rb_audit" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/comment_review_tab" android:maxLines="1" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
        </RadioGroup>
    </RelativeLayout>
    <View android:id="@+id/view_line" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="1dp"/>
    <FrameLayout android:id="@+id/fl_frame_context" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
