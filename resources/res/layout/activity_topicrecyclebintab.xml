<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:ellipsize="end" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:drawableLeft="@drawable/cl_ic_toolbar_arrow_left_24dp" android:layout_centerVertical="true"/>
        <Button android:textSize="15sp" android:id="@+id/btnLeft2" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:minWidth="0dp" android:minHeight="0dp" android:layout_toRightOf="@+id/btnLeft" android:layout_centerVertical="true"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/rg_tab" android:background="@color/transparent" android:layout_width="193dp" android:layout_height="match_parent" android:layout_centerInParent="true">
            <RadioButton android:textSize="18sp" android:textColor="@color/topic_recycle_tab_text" android:id="@+id/rb_myradio" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/topiclist_item_topic" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
            <RadioButton android:textSize="18sp" android:textColor="@color/topic_recycle_tab_text" android:id="@+id/rb_myradiome" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/tab_Comments" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
        </RadioGroup>
        <ImageView android:id="@+id/ivAddMenu" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/home_menu_left" android:scaleType="centerInside" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/fl_frame_context" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
