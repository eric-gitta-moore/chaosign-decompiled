<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/header_height">
        <TextView android:textSize="20sp" android:textColor="@color/title_text" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personal_center"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/bg_gray" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="20dp"/>
        <RelativeLayout android:id="@+id/vg_base_info" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="100dp">
            <com.chaoxing.fanya.aphone.view.CircleAsyncImageView android:id="@+id/icon_user" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="20dp" android:scaleType="fitXY" android:layout_centerVertical="true"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="88dp" android:layout_centerVertical="true">
                <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                    <TextView android:textSize="14sp" android:textColor="#333333" android:id="@+id/tv_account_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/account3"/>
                    <TextView android:textSize="14sp" android:textColor="#333333" android:id="@+id/tv_account" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:background="@drawable/arrow_right_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px"/>
        <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="20dp"/>
        <RelativeLayout android:id="@+id/vg_classmate" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/classmate" android:drawableLeft="@drawable/classmate" android:drawablePadding="10dp" android:layout_centerVertical="true"/>
            <TextView android:background="@drawable/arrow_right_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px"/>
        <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="30dp"/>
        <Button android:textSize="16sp" android:textColor="@color/login_color" android:id="@+id/logout" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="48dp" android:text="@string/logout"/>
        <View android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>
