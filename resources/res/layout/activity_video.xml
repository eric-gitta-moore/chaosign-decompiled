<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/bg_video" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/topbar"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:src="@drawable/icon_video_playing"/>
    <TextView android:textStyle="bold" android:textColor="@color/text_av_playing" android:id="@+id/video_state_textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/video_playing"/>
    <TextView android:textColor="@color/text_av_playing" android:ellipsize="end" android:id="@+id/video_name_textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="80dp" android:layout_marginTop="5dp" android:layout_marginRight="80dp" android:text="wx_camera_14988888888..." android:maxLines="1"/>
