<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/video_play_layout_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/title_layout" android:background="@color/title_bar_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_back" android:background="@drawable/ic_back_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
        <TextView android:textSize="20sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/media_title_video"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/video_vol_ctl_layout" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="20dp" android:layout_marginTop="24dp" android:layout_marginRight="20dp" android:layout_below="@+id/title_layout">
        <ImageView android:id="@+id/video_vol_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_video_volume_decrease_normal" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/video_vol_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_video_volume_increase_normal" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/video_artist_img" android:layout_width="240dp" android:layout_height="240dp" android:layout_marginTop="24dp" android:src="@drawable/feitu_ic_video" android:layout_below="@+id/video_vol_ctl_layout" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:id="@+id/video_progress_ctl_layout" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="12dp" android:layout_marginTop="24dp" android:layout_marginRight="12dp" android:layout_below="@+id/video_artist_img">
        <TextView android:textSize="10sp" android:textColor="#666666" android:id="@+id/video_cur_time_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00:00" android:layout_centerVertical="true"/>
        <SeekBar android:id="@+id/video_progress_seekbar" android:focusable="true" android:layout_width="266dp" android:layout_height="wrap_content" android:maxHeight="3dp" android:max="100" android:progressDrawable="@drawable/seekbar_bg_selector" android:minHeight="3dp" android:thumb="@drawable/progress_thumb_big" android:thumbOffset="10px" android:layout_centerInParent="true"/>
        <TextView android:textSize="10sp" android:textColor="#666666" android:id="@+id/video_duration_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="02:00" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="20sp" android:textColor="@color/music_name_color" android:id="@+id/video_play_name_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Deep in the hell" android:layout_below="@+id/video_progress_ctl_layout" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="14sp" android:textColor="@color/music_name_color" android:id="@+id/video_play_status_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/playing" android:layout_below="@+id/video_play_name_text" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:id="@+id/video_play_ctl_layout" android:layout_width="match_parent" android:layout_height="72dp" android:layout_marginTop="16dp" android:layout_below="@+id/video_play_status_text">
        <ImageView android:id="@+id/video_previous_img" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="48dp" android:src="@drawable/play_previous_normal" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/video_play_stop_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/music_bottom_play_selector" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/video_next_img" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="48dp" android:src="@drawable/music_bottom_next_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
