<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#111a2b" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_top" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:id="@+id/iv_back" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/cx_ic_navigation_arrow_back_24dp_white"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/warning_of_suspected_violation" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_50" android:layout_marginRight="@dimen/dp_50" android:layout_centerInParent="true">
        <TextView android:textSize="20sp" android:textColor="@color/white" android:id="@+id/tvdes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/screen_content_violation" android:drawablePadding="8dp" android:layout_centerHorizontal="true" android:drawableStart="@drawable/ic_violation_warn"/>
        <TextView android:textSize="16sp" android:textColor="#b3ffffff" android:id="@+id/tvTip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_30" android:text="@string/screen_content_violation_text" android:layout_below="@+id/tvdes" android:layout_centerHorizontal="true"/>
        <Button android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_violation_know" android:background="@drawable/bg_btn_blue_4" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="@dimen/dp_60" android:layout_below="@+id/tvTip"/>
        <TextView android:textSize="15sp" android:textColor="#0099ff" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_appeal" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/appeal_text" android:layout_below="@+id/btn_violation_know"/>
    </RelativeLayout>
</RelativeLayout>
