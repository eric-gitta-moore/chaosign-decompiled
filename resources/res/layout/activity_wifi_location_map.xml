<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_centerVertical="true" android:drawableStart="@drawable/navigation_img_back"/>
        <TextView android:textSize="18sp" android:textColor="#ff333333" android:ellipsize="middle" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:drawablePadding="2dp" android:layout_centerInParent="true" android:layout_toStartOf="@+id/btnRight" android:layout_toEndOf="@+id/btnLeft"/>
        <Button android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/btnRight" android:background="@android:color/transparent" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView android:id="@+id/locationLv" android:layout_width="match_parent" android:layout_height="306dp" android:divider="@android:color/transparent" android:dividerHeight="0dp" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="center" android:id="@+id/tvLoading" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/loading" android:layout_alignTop="@+id/locationLv" android:layout_alignBottom="@+id/locationLv"/>
        <com.baidu.mapapi.map.MapView android:id="@+id/mapView" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="0dp" android:layout_above="@+id/locationLv"/>
        <ImageView android:id="@+id/refreshLocationIv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:src="@drawable/icon_start_located" android:layout_alignBottom="@+id/mapView" android:layout_marginStart="15dp"/>
        <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/page_loading_circle"/>
        <TextView android:textSize="13sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/locationTipsTv" android:background="@color/chaoxing_blue" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:text="@string/open_wifi_button_tips" android:layout_alignParentTop="true" android:paddingStart="15dp"/>
    </RelativeLayout>
</LinearLayout>
