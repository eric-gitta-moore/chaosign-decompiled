<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.mobile.office.widget.PunchTopTitleLayout android:id="@+id/titleLayout" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentTop="true"/>
    <ImageView android:id="@+id/dividerTop" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/titleLayout" android:contentDescription="@string/mission_introduce"/>
    <com.chaoxing.mobile.office.widget.PunchTopUserInfoLayout android:id="@+id/userTopLayout" android:layout_width="match_parent" android:layout_height="80dp" android:layout_below="@+id/dividerTop"/>
    <ImageView android:id="@+id/divider" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/userTopLayout" android:contentDescription="@string/mission_introduce"/>
    <FrameLayout android:id="@+id/frame_content" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/divider"/>
    <com.chaoxing.mobile.office.widget.PunchLoadingView android:id="@+id/punchLoadingView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
