<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/topContentLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.chaoxing.mobile.office.widget.PunchTopTitleLayout android:id="@+id/titleLayout" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentTop="true"/>
        <ImageView android:id="@+id/topDividerLine" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/titleLayout" android:contentDescription="@string/mission_introduce"/>
        <com.chaoxing.mobile.office.widget.PunchTopUserInfoLayout android:id="@+id/userInfoLayout" android:layout_width="match_parent" android:layout_height="55dp" android:layout_below="@+id/topDividerLine"/>
        <com.chaoxing.mobile.office.calendarview.CalendarPunchView android:layout_gravity="center" android:id="@+id/calendarView" android:padding="5dp" android:layout_width="match_parent" android:layout_height="250dp" android:layout_below="@+id/dividerLine" app:cl_bg_select_color="@color/chaoxing_blue" app:cl_bg_today_color="@color/chaoxing_blue" app:cl_current_lunar_text_color="@color/black" app:cl_current_text_color="@color/black" app:cl_other_lunar_text_color="@color/color_666666" app:cl_other_text_color="@color/color_666666" app:cl_today_lunar_text_color="@color/color_666666" app:cl_today_text_color="@color/chaoxing_blue" app:cl_week_bg_color="#f5f6f8" app:cl_week_height="30dp" app:cl_week_text_color="@color/color_999999" app:cl_week_text_size="15sp" app:cl_weekday_labels="@array/week_title"/>
        <ImageView android:id="@+id/dividerLine" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/userInfoLayout" android:contentDescription="@string/mission_introduce"/>
        <ImageView android:id="@+id/divider" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/calendarView"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/bottomSheetLayout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/bottom_sheet_behavior">
        <ImageView android:id="@+id/dividerBottom" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/showDateTv" android:contentDescription="@string/mission_introduce"/>
        <com.chaoxing.mobile.office.widget.PunchLoadingView android:id="@+id/emptyView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
        <TextView android:textSize="16sp" android:textColor="#999999" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/showDateTv" android:background="#f5f6f8" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="30dp" android:text="@string/date_punch_record"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:layout_below="@+id/dividerBottom"/>
    </RelativeLayout>
    <com.chaoxing.mobile.office.widget.PunchLoadingView android:layout_gravity="center" android:id="@+id/loadingView" android:layout_width="match_parent" android:layout_height="match_parent"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
