<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/toolbar" layout="@layout/common_title_bar2_title_2line"/>
    <TextView android:textSize="13sp" android:textColor="#999999" android:gravity="center_vertical" android:id="@+id/nearbyTv" android:background="#e6e6e6" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="35dp" android:text="@string/near_wifi" android:layout_below="@+id/toolbar"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/swipeRefresh" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/saveTv" android:layout_below="@+id/nearbyTv">
        <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/wifiRecyclerView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <TextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/saveTv" android:background="#0099ff" android:layout_width="match_parent" android:layout_height="44dp" android:text="@string/comment_add" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="16sp" android:textColor="#666666" android:gravity="center" android:id="@+id/messageTv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="@string/try_get_near_wifi" android:layout_centerInParent="true" android:lineSpacingExtra="3dp"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/noWifiLayout" android:background="#f5f6f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar">
        <ImageView android:id="@+id/noWifiIv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/error_open_wifi_icon"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/loading_view" android:visibility="gone" android:layout_width="36dp" android:layout_height="36dp" android:layout_centerInParent="true" style="@style/ProgressBar"/>
</RelativeLayout>
