<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/wifi_punch_dialog_bg" android:layout_width="280dp" android:layout_height="wrap_content">
    <TextView android:textSize="13sp" android:textColor="#999999" android:gravity="center" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginTop="10dp" android:layout_marginBottom="15dp" android:text="@string/attendance_group_info" android:lineSpacingExtra="7dp"/>
    <ScrollView android:id="@+id/contentSV" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="left" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginBottom="15dp">
                <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/attendance_group_name" android:lineSpacingExtra="7dp"/>
                <TextView android:textSize="13sp" android:textColor="#666666" android:id="@+id/attNameTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:lineSpacingExtra="7dp"/>
            </LinearLayout>
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/workTimeLabel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/work_time_label" android:lineSpacingExtra="7dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/attGroupInfoLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </ScrollView>
    <ImageView android:background="#ffebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
    <TextView android:textSize="16sp" android:textColor="@color/chaoxingBlue" android:gravity="center" android:id="@+id/iKnowTv" android:layout_width="match_parent" android:layout_height="44dp" android:text="@string/wf_i_know"/>
</LinearLayout>
