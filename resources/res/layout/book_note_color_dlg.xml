<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@drawable/note_clr_bg" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/mNoteColorDlgToRed" android:background="@color/red" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <ImageButton android:id="@+id/mNoteColorDlgToYel" android:background="@color/yellow" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <ImageButton android:id="@+id/mNoteColorDlgToGrn" android:background="@color/green" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <ImageButton android:id="@+id/mNoteColorDlgToBlu" android:background="@color/blue" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <ImageButton android:id="@+id/mNoteColorDlgToBlk" android:background="@android:color/black" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
    </LinearLayout>
</RelativeLayout>
