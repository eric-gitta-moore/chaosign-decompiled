<?xml version="1.0" encoding="utf-8"?>
<com.fanzhou.bookstore.view.TitleHorizonScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/book_icon" android:layout_width="28dp" android:layout_height="28dp" android:scaleType="fitXY" android:layout_centerVertical="true" android:contentDescription="@string/book_detail_title"/>
            <TextView android:id="@+id/hot_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/book_icon" android:layout_centerVertical="true" style="@style/Text_Title_16"/>
            <Button android:id="@+id/btnMore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/getmore" android:drawableRight="@drawable/right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/Button_shuyuan_right"/>
        </RelativeLayout>
        <View android:id="@+id/lineDivider" android:layout_width="match_parent" android:layout_height="1px"/>
        <HorizontalScrollView android:id="@+id/mHScrollView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <LinearLayout android:orientation="horizontal" android:id="@+id/llcontainer" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </HorizontalScrollView>
        <View android:background="@color/gray_b2b2b2" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    </LinearLayout>
</com.fanzhou.bookstore.view.TitleHorizonScrollView>
