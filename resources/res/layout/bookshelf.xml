<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/tvSize">
        <include layout="@layout/bookshelf_top_bar"/>
        <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
        <com.chaoxing.bookshelf.view.BookShelfGradView android:scrollbarStyle="outsideOverlay" android:id="@+id/bookshelf" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="#00000000" android:stretchMode="columnWidth" android:columnWidth="@dimen/grid_item_width" android:numColumns="1"/>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="#999999" android:gravity="center" android:id="@+id/tvSize" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="35dp" android:text="12M" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="16sp" android:textColor="#b3b3b3" android:id="@+id/tvEmptyView" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="暂无内容" android:layout_centerInParent="true"/>
    <View android:orientation="horizontal" android:id="@+id/shelf_root" android:background="@color/black_half_apha" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true"/>
</RelativeLayout>
