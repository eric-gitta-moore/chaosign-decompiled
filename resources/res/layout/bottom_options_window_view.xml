<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rlpop" android:background="#80333333" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_title" android:background="@drawable/shape_common_bg_pw_bottom" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="13sp" android:textColor="@color/color_808080" android:gravity="center" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginTop="15dp" android:layout_marginRight="50dp" android:layout_marginBottom="6dp"/>
            <View android:background="@color/gray_ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/menu" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rv_options" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <View android:background="@color/bg_color_f5f6f8" android:layout_width="match_parent" android:layout_height="6dp"/>
            <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/tv_cancel" android:layout_width="match_parent" android:layout_height="56dp" android:text="@string/cancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
