<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fanzhou="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="#1ebddb" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="12dp" android:layout_marginTop="6dp" android:layout_marginRight="6dp" android:layout_marginBottom="6dp" fanzhou:is_circle="true" fanzhou:x_radius="24dp" fanzhou:y_radius="24dp"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tvName" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:lines="1" android:layout_weight="1"/>
