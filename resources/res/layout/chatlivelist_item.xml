            <ImageView android:id="@+id/ivPlay" android:background="@drawable/icon_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="#ffffff" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
