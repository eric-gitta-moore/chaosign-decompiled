<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/parentView" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="@dimen/dp_56">
        <com.scwang.smart.refresh.layout.SmartRefreshLayout android:id="@+id/refresh_layout" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.scwang.smart.refresh.header.CxClassicsHeader android:layout_width="match_parent" android:layout_height="wrap_content" app:srlDrawableArrow="@drawable/icon_refresh" app:srlDrawableArrowSize="18dp" app:srlDrawableMarginRight="8dp" app:srlDrawableProgressSize="18dp" app:srlEnableLastTime="false" app:srlFinishDuration="100" app:srlTextSizeTime="10dp" app:srlTextSizeTitle="13sp" app:srlTextTimeMarginTop="2dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_selectbox" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="13sp" android:textColor="@color/normal_gray" android:gravity="center_vertical" android:id="@+id/tv_select_task_type" android:background="@drawable/bg_border_btn_f5f6f8" android:paddingLeft="@dimen/dp_10" android:paddingTop="@dimen/dp_9" android:paddingRight="@dimen/dp_10" android:paddingBottom="@dimen/dp_9" android:layout_width="1dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="全部活动" android:drawableRight="@drawable/gray_ic_down" android:layout_weight="1"/>
                    <TextView android:textSize="13sp" android:textColor="@color/normal_gray" android:gravity="center_vertical" android:id="@+id/tv_select_create_teacher" android:background="@drawable/bg_border_btn_f5f6f8" android:paddingLeft="@dimen/dp_10" android:paddingTop="@dimen/dp_9" android:paddingRight="@dimen/dp_10" android:paddingBottom="@dimen/dp_9" android:layout_width="1dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="全部创建教师" android:drawableRight="@drawable/gray_ic_down" android:layout_weight="1"/>
                </LinearLayout>
                <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rv_task" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:divider="@null" android:layout_below="@+id/ll_selectbox" android:footerDividersEnabled="false"/>
            </RelativeLayout>
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
        <include android:id="@+id/view_reload" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/loading_failed_match_parent_img"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="16sp" android:textColor="#808080" android:layout_gravity="center_horizontal" android:id="@+id/show_empty" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="16sp" android:textColor="#808080" android:layout_gravity="center_horizontal" android:id="@+id/show_empty1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_centerInParent="true"/>
    </LinearLayout>
    <include android:id="@+id/view_loading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/page_loading_circle"/>
    <include android:id="@+id/loading_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/page_loading_circle"/>
</RelativeLayout>
