<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#66000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/cloud_upload_window_shape_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="50dp">
        <RelativeLayout android:id="@+id/rl_title" android:paddingTop="@dimen/ui_10_dip" android:paddingRight="22dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/phone_upload" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/close" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/note_panel_close" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@color/gray_ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_option1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginBottom="30dp" android:weightSum="3" android:layout_below="@+id/rl_title">
            <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/all" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/cloud_category_all" android:drawableTop="@drawable/cloud_upload_all" android:drawablePadding="10dp" android:layout_weight="1" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/picture" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/cloud_category_image" android:drawableTop="@drawable/cloud_upload_image" android:drawablePadding="10dp" android:layout_weight="1" android:layout_toRightOf="@+id/all" android:layout_alignParentRight="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/music" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/cloud_category_music" android:drawableTop="@drawable/cloud_upload_audio" android:drawablePadding="10dp" android:layout_weight="1" android:layout_below="@+id/all"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:weightSum="3" android:layout_below="@+id/ll_option1">
            <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/video" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/cloud_category_video" android:drawableTop="@drawable/cloud_upload_video" android:drawablePadding="10dp" android:layout_weight="1" android:layout_toRightOf="@+id/music" android:layout_below="@+id/all"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/document" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/cloud_category_document" android:drawableTop="@drawable/cloud_upload_document" android:drawablePadding="10dp" android:layout_weight="1" android:layout_toRightOf="@+id/music" android:layout_below="@+id/all"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
