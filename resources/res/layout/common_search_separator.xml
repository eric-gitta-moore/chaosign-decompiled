<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/divide_view" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="10dp"/>
    <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_separator" android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/btn_option" android:layout_below="@+id/divide_view"/>
    <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_count" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_separator" android:layout_below="@+id/divide_view"/>
    <View android:id="@+id/v_divider" android:background="@color/divider_line" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/tv_separator"/>
</RelativeLayout>
