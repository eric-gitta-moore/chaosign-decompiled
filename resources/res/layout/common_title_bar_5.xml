<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/viewTitleBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
    <Button android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
    <TextView android:textSize="18sp" android:textColor="#ff333333" android:ellipsize="middle" android:gravity="center" android:id="@+id/tvTitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="75dp" android:layout_marginRight="75dp" android:singleLine="true" android:layout_centerInParent="true"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/rgContainer" android:background="@drawable/stroke_corner_radiogroup" android:visibility="gone" android:layout_width="168dp" android:layout_height="34dp" android:layout_centerInParent="true">
        <RadioButton android:textColor="@color/white" android:gravity="center" android:id="@+id/rbtnLeft" android:background="@drawable/selector_radiobutton_left" android:layout_width="0dp" android:layout_height="match_parent" android:checked="true" android:button="@null" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
