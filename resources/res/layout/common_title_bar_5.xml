    </RadioGroup>
    <Button android:id="@+id/btnRight" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="14dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <Button android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/btnRight2" android:background="@android:color/transparent" android:paddingLeft="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/ic_topic_search" android:layout_toLeftOf="@+id/btnRight" android:layout_centerVertical="true"/>
</RelativeLayout>
