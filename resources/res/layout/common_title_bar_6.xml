    <LinearLayout android:gravity="center_vertical" android:id="@+id/llRight" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="11dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
