<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.study.contacts.widget.GropChatItemView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="center_vertical" android:id="@+id/tvTip" android:background="#f1f1f1" android:paddingLeft="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="34dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginRight="-99dp">
        <RelativeLayout android:id="@+id/viewFront" android:background="@drawable/selector_list_item" android:paddingLeft="10dp" android:descendantFocusability="blocksDescendants" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <CheckBox android:id="@+id/cb_selected" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
            <RelativeLayout android:id="@+id/fl_imageView" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/cb_selected" android:layout_centerVertical="true">
                <com.chaoxing.mobile.chat.widget.ConversationAvatar2 android:id="@+id/iv_icon" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <ImageView android:id="@+id/iv_icon2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/iv_course_tag" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_course_tag" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/fl_unread_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="-6dp" android:layout_marginBottom="-12dp" android:layout_above="@+id/fl_imageView" android:layout_alignRight="@+id/fl_imageView" android:layout_alignParentTop="true">
                <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/tv_unread_count" android:background="@drawable/bg_unread_count_tip" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="18dp" android:minWidth="18dp"/>
            </FrameLayout>
            <TextView android:gravity="center" android:id="@+id/tv_unread_tag" android:background="@drawable/bg_conversation_unread_tip" android:visibility="gone" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginTop="-3dp" android:layout_marginRight="-3dp" android:layout_alignTop="@+id/fl_imageView" android:layout_alignRight="@+id/fl_imageView"/>
            <ImageView android:id="@+id/iv_sort" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/ic_sort_36dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/iv_sort" android:layout_toRightOf="@+id/fl_imageView" android:layout_centerVertical="true">
                <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/vRight" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
                    <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="15dp" android:text="Small Text" android:singleLine="true"/>
                    <TextView android:textSize="14sp" android:textColor="#b3b3b3" android:id="@+id/tvFrom" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="16dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="来源：" android:singleLine="true" android:layout_centerVertical="true"/>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/linearl_attention" android:paddingRight="@dimen/friend_paddingheight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                        <TextView android:textSize="13sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/tvAddFriend" android:layout_width="72dp" android:layout_height="32dp" android:text="@string/add_friend_attention"/>
                        <TextView android:textSize="9sp" android:textColor="#999999" android:id="@+id/tvAttentionMe" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="@string/focused_tag"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:layout_toLeftOf="@+id/vRight" android:layout_centerVertical="true">
                    <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medium Text" android:singleLine="true"/>
                        <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-46dp"/>
                        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llTopTag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp">
                            <TextView android:textSize="12sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_attention" android:background="@drawable/blue_btn_attention" android:visibility="gone" android:layout_width="30dp" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="关注"/>
                            <TextView android:textSize="12sp" android:textColor="#a8a8a8" android:gravity="center" android:id="@+id/tvTopTag" android:background="@drawable/bg_circular_bead_ff999999" android:visibility="gone" android:layout_width="32dp" android:layout_height="18dp" android:layout_marginLeft="4dp" android:text="@string/note_top"/>
                            <ImageView android:id="@+id/ivSilence" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:src="@drawable/ic_hint_trends"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Small Text" android:singleLine="true"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="3">
                <TextView android:id="@+id/vCheckArea" android:background="#00000000" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvTop" android:background="@color/color_commen_edit" android:layout_width="70dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/grouplist_Top"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvSort" android:background="@color/color_commen_sort" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/note_sort"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvEdit" android:background="@color/color_commen_stick" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/note_Edit"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvMark" android:background="@color/color_commen_stick" android:layout_width="88dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/message_mark_unread"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/bookCollections_Delete"/>
    </LinearLayout>
    <View android:id="@+id/spinner" android:background="#e5e5e5" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1.5px" android:layout_marginLeft="65dp"/>
</com.chaoxing.study.contacts.widget.GropChatItemView>
