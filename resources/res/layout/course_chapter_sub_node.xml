<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp">
        <CheckBox android:id="@+id/cb_selector" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:button="@null" android:drawableLeft="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
        <FrameLayout android:id="@+id/sub_node_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/cb_selector">
            <View android:background="@color/color_ebebeb" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginLeft="11dp"/>
            <RelativeLayout android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="46dp">
                <RelativeLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/right" android:layout_centerVertical="true">
                    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_icon" android:background="@drawable/locknode" android:paddingBottom="1dp" android:visibility="visible" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:singleLine="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="14sp" android:textColor="@color/account_gray" android:id="@+id/tv_index" android:padding="0dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:maxWidth="80dp" android:text="1.2.3.6" android:singleLine="true" android:layout_toRightOf="@+id/tv_icon" android:layout_centerVertical="true"/>
                    <TextView android:textSize="15sp" android:textColor="@color/normal_title_color" android:ellipsize="end" android:id="@+id/tv_title" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:maxLines="2" android:layout_toRightOf="@+id/tv_index" android:layout_centerVertical="true" android:lineSpacingMultiplier="1.2"/>
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
    <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
</RelativeLayout>
