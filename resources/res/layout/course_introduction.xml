<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/view1" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="20dp"/>
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/normal_black" android:gravity="center_vertical" android:id="@+id/tv_introduction_no_empty" android:background="#f9f9f9" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="30dp" android:text="@string/course_introduction" android:drawableRight="@drawable/ic_right_arrow"/>
        <TextView android:textSize="14sp" android:textColor="@color/normal_gray" android:gravity="center_vertical" android:id="@+id/tv_introduction_empty" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="45dp" android:text="@string/course_introduction" android:drawableRight="@drawable/ic_right_arrow"/>
    </RelativeLayout>
    <TextView android:textSize="14sp" android:textColor="@color/normal_gray" android:id="@+id/tv_introduction_content" android:paddingLeft="15dp" android:paddingTop="14dp" android:paddingRight="15dp" android:paddingBottom="14dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.2"/>
    <View android:id="@+id/view2" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="20dp" android:layout_below="@+id/tv_introduction"/>
    <View android:background="@color/gray_bg" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
</LinearLayout>
