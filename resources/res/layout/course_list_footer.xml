<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:background="@drawable/selector_list_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="73dp">
            <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="12dp" android:src="@drawable/ic_course_end_class" android:layout_centerVertical="true" app:is_circle="true"/>
            <TextView android:textSize="15sp" android:textColor="#333333" android:id="@+id/tv_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="16dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="12dp" android:layout_toRightOf="@+id/iv_icon" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="70dp" android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>
