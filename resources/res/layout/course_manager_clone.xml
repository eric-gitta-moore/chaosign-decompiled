<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/divider_view1" android:background="#f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="20dp"/>
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="45dp">
        <LinearLayout android:orientation="vertical" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tvRightArrow" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="#333333" android:gravity="center_vertical" android:id="@+id/tvLabel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/course_clone_tip" android:layout_below="@+id/tvLabel"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textColor="@color/normal_gray" android:id="@+id/tvRightArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:drawableRight="@drawable/ic_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
