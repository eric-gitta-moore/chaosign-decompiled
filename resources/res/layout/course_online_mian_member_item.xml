<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_avatar" android:background="@drawable/bg_lesson_member_avater" android:layout_width="54dp" android:layout_height="54dp" android:layout_centerVertical="true">
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_avatar" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="centerCrop" android:layout_centerInParent="true" app:riv_oval="true"/>
        <RelativeLayout android:id="@+id/rl_call" android:background="@drawable/course_online_phone_call_bg" android:visibility="gone" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerInParent="true">
            <ImageView android:id="@+id/iv_call" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_course_online_phone_call" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="11sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/tvName" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
    <TextView android:textSize="9sp" android:textColor="#80ffffff" android:gravity="center_horizontal" android:id="@+id/tvRole" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" android:layout_marginBottom="1px"/>
</LinearLayout>
