<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="270dp" android:layout_height="wrap_content" app:cardCornerRadius="10dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/ivTop" android:background="@drawable/icon_note_comment_faverite_top_bg" android:layout_width="match_parent" android:layout_height="80dp"/>
        <ImageView android:layout_width="72dp" android:layout_height="72dp" android:layout_marginTop="28dp" android:src="@drawable/icon_note_comment_faverite" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#131b26" android:gravity="center" android:id="@+id/tvTip" android:layout_width="match_parent" android:layout_height="24dp" android:layout_marginTop="30dp" android:layout_marginBottom="10dp" android:text="@string/note_comment_tip" android:layout_below="@+id/ivTop"/>
        <TextView android:textSize="16sp" android:textColor="@color/chaoxing_blue" android:gravity="center" android:id="@+id/tvFavourite" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/note_comment_favorite_tip" android:layout_below="@+id/tvTip"/>
        <View android:id="@+id/line" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="0.5px" android:layout_below="@+id/tvFavourite"/>
        <TextView android:textSize="16sp" android:textColor="@color/normal_black" android:gravity="center" android:id="@+id/tvFeedBack" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/note_comment_feedback_tip" android:layout_below="@+id/line"/>
        <View android:id="@+id/line2" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="0.5px" android:layout_below="@+id/tvFeedBack"/>
        <TextView android:textSize="16sp" android:textColor="@color/normal_black" android:gravity="center" android:id="@+id/tvCancel" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/note_comment_cancel_tip" android:layout_below="@+id/line2"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
