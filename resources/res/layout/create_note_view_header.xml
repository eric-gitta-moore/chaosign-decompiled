<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/note_title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="#000000" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvNoteTitle" android:background="#00000000" android:paddingTop="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLength="200" android:lineSpacingMultiplier="1.2"/>
        <EditText android:textColorHint="#cccccc" android:gravity="center_vertical" android:id="@+id/etTitle" android:background="#00000000" android:paddingTop="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/something_xuexitong_title" android:lineSpacingMultiplier="1.2" style="@style/text_lightgray_18"/>
    </RelativeLayout>
    <View android:id="@+id/dividerLine" android:background="#99ccff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/note_title"/>
</RelativeLayout>
