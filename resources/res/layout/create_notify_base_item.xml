<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/rlMiddle" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@drawable/bg_dotted_line" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_centerInParent="true" android:layerType="software"/>
        <TextView android:textSize="18sp" android:textColor="#cccccc" android:id="@+id/tv_name" android:background="#ffffff" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="原信件" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView android:textSize="18sp" android:textColor="#ff000000" android:id="@+id/tvTitle" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:textIsSelectable="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/vg_sender" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/vg_sender_name" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_sender_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:maxLines="1" android:maxEms="4"/>
            <TextView android:textSize="15sp" android:textColor="#999999" android:id="@+id/tv_sender_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_read" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp">
                <TextView android:textSize="14sp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="阅读:"/>
                <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_sender" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/vg_send_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp">
            <TextView android:textSize="15sp" android:textColor="#333333" android:id="@+id/tv_send" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_message_Tosomeone_d"/>
            <TextView android:textSize="15sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_reader_names" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:maxLines="2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/vg_send_name_cs" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp">
            <TextView android:textSize="15sp" android:textColor="#333333" android:id="@+id/tv_send_cs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_message_Duplicate"/>
            <TextView android:textSize="15sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_reader_names_cs" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:maxLines="2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/vg_reader_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp">
            <TextView android:textSize="15sp" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_contents_Read"/>
            <TextView android:textSize="15sp" android:textColor="#999999" android:id="@+id/tv_reader_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/dividerLine" android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="15dp" android:layout_marginBottom="15dp"/>
    <TextView android:textSize="17sp" android:textColor="#000000" android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="6dp" android:textIsSelectable="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/llImage" android:paddingBottom="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp"/>
    <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/view_attachments" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="20dp"/>
</LinearLayout>
