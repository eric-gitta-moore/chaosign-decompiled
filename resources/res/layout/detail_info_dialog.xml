<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#c0c0c0" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp">
        <TextView android:textSize="20sp" android:textColor="#ffffff" android:id="@+id/dialog_detail_title" android:layout_width="300dp" android:layout_height="wrap_content"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/dialog_detail_subject" android:layout_width="300dp" android:layout_height="wrap_content"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/dialog_detail_score" android:layout_width="300dp" android:layout_height="wrap_content"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/dialog_detail_score_count" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/dialog_detail_speaker" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/dialog_detail_abstract" android:layout_width="300dp" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
