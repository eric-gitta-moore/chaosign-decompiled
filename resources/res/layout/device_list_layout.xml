<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/rl_root_item" android:background="@drawable/dev_list_item_selector" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="12dp">
    <ImageView android:id="@+id/iv_pin_code_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="20dp" android:src="@drawable/lock_on"/>
    <ImageView android:id="@+id/iv_connect" android:background="@drawable/connect_btn_selector" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginRight="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <TextView android:textSize="15sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/dev_name_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="18dp" android:layout_marginRight="2dp" android:text="会议机名称" android:maxLines="1" android:layout_toLeftOf="@+id/iv_connect" android:layout_toRightOf="@+id/iv_pin_code_status"/>
    <TextView android:textSize="12sp" android:textColor="#888888" android:id="@+id/ip_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="12dp" android:layout_marginBottom="18dp" android:text="" android:layout_toRightOf="@+id/iv_pin_code_status" android:layout_below="@+id/dev_name_text"/>
</RelativeLayout>
