<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:gravity="center" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Text_Title_16"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:id="@+id/opds_add_tip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/add_opdslib_tip" android:singleLine="true" style="@style/Text_Content_14"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/sublayout1" android:background="@drawable/login_input_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp">
            <TextView android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/label1" android:visibility="gone" android:layout_width="70dp" android:layout_height="wrap_content" android:text="@string/opds_login_username" style="@style/Text_Title"/>
            <EditText android:textColorHint="@color/text_hint" android:gravity="center_vertical" android:id="@+id/myedit1" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:hint="@string/opds_login_username_init" android:layout_weight="1" style="@style/Text_Title_14"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/sublayout2" android:background="@drawable/login_input_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp">
            <TextView android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/label2" android:visibility="gone" android:layout_width="70dp" android:layout_height="wrap_content" android:text="@string/opds_login_passwd" style="@style/Text_Title"/>
            <EditText android:textColorHint="@color/text_hint" android:gravity="center_vertical" android:id="@+id/myedit2" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:hint="@string/opds_login_passwd_init" android:layout_weight="1" android:inputType="textPassword" style="@style/Text_Title_14"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
