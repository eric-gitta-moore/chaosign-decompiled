<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/bg_dialog" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/text_size_17" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/dialog_title" android:background="@drawable/bg_dialog_top" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/important_hint"/>
    <TextView android:textSize="@dimen/text_size_15" android:textColor="@color/color_connecting_tips" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/tv_msg" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/doc_hint_msg" android:layout_below="@+id/dialog_title"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_hint" android:paddingLeft="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_msg">
        <ImageView android:id="@+id/check_box" android:background="@drawable/doc_checkbox" android:layout_width="30dp" android:layout_height="30dp"/>
        <TextView android:textSize="@dimen/text_size_12" android:textColor="@color/color_connecting_tips" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/tv_hint" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginLeft="@dimen/item_margin_left" android:text="@string/nomore_hint" android:maxLines="1" android:layout_toRightOf="@+id/check_box"/>
    </LinearLayout>
    <View android:id="@+id/line_2" android:background="@color/bg_window_out_of_range_line" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/layout_hint"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/line_2">
        <TextView android:textSize="17dp" android:textColor="@color/text_devices" android:gravity="center" android:id="@+id/dialog_cancel" android:background="@drawable/btn_dialog_selector_left" android:paddingTop="13dp" android:paddingBottom="13dp" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginRight="-1.2dp" android:text="@string/cancel" android:layout_weight="1"/>
        <View android:background="@color/bg_window_out_of_range_stroke" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
        <TextView android:textSize="17dp" android:textColor="@color/text_devices" android:gravity="center" android:id="@+id/dialog_ok" android:background="@drawable/btn_dialog_selector_right" android:paddingTop="13dp" android:paddingBottom="13dp" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginLeft="-1.2dp" android:text="@string/go_on" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
