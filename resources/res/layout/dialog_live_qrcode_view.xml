<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/bg_corner_group_qrcode" android:layout_width="320dp" android:layout_height="wrap_content">
    <ImageView android:id="@+id/ivForward" android:background="@drawable/group_shared" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="50dp">
        <LinearLayout android:gravity="center_vertical" android:id="@+id/rlInviteCode" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/normal_black" android:id="@+id/tvInvitCodeLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/something_xuexitong_invaitecode"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#0099ff" android:id="@+id/tvInvitCode" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnShare" android:background="@android:color/transparent" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:drawableLeft="@drawable/group_transfer"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="center_horizontal" android:id="@+id/tvUseHint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/user_xuexitong_meeting_rightconner"/>
        <RelativeLayout android:id="@+id/rlQRCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp">
            <ImageView android:id="@+id/ivQRCode" android:background="@drawable/best_lib_rank_img_stroke" android:layout_width="216dp" android:layout_height="216dp" android:scaleType="centerCrop" android:layout_centerHorizontal="true"/>
            <com.chaoxing.core.widget.CircleProgressBar android:id="@+id/pbLoading" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerInParent="true"/>
            <TextView android:textSize="16sp" android:textColor="#0099ff" android:id="@+id/tvReloadQRCode" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击重新加载" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_link" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_30">
            <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:id="@+id/tv_link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <ImageView android:id="@+id/iv_copy_link" android:padding="@dimen/dp_3" android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20" android:layout_marginLeft="@dimen/dp_10" android:src="@drawable/ic_copy_blue_28"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
