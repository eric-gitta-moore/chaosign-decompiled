<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#80333333" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="left" android:id="@+id/button_close" android:padding="16dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/study_jcamera_ic_close_white"/>
    <RelativeLayout android:id="@+id/window" android:layout_width="match_parent" android:layout_height="500dp" android:layout_alignParentBottom="true" app:layout_constraintBottom_toBottomOf="0">
        <ScrollView android:id="@+id/result_view" android:background="@drawable/ocr_result_dialog_bg" android:paddingTop="25dp" android:paddingBottom="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/ll_bottom">
            <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:id="@+id/result_text" android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingBottom="17dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </ScrollView>
        <TextView android:textSize="16sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/tv_tips" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/ocr_not_recognized_retake" android:layout_above="@+id/ll_bottom" android:layout_centerInParent="true"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/ll_bottom" android:background="@color/white" android:paddingBottom="25dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="16sp" android:textColor="@color/chaoxing_blue" android:id="@+id/reCapture" android:background="@drawable/bg_stroke_0099ff_circle_corner" android:paddingLeft="59dp" android:paddingTop="7dp" android:paddingRight="59dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:text="@string/ocr_retake"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/write_note" android:background="@drawable/bg_home_channel_0099ff" android:paddingLeft="59dp" android:paddingTop="7dp" android:paddingRight="59dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:text="@string/positive" android:layout_alignParentRight="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/write_note_next" android:background="@drawable/bg_home_channel_0099ff" android:paddingLeft="50dp" android:paddingTop="7dp" android:paddingRight="50dp" android:paddingBottom="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:text="@string/ocr_next_step" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/ll_bottom_reCapture" android:background="@color/white" android:paddingBottom="25dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/reCapture_ocr" android:background="@drawable/bg_home_channel_0099ff" android:paddingLeft="59dp" android:paddingTop="7dp" android:paddingRight="59dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:text="@string/ocr_retake"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
