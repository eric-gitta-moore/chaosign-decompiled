<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/bg_corner_group_qrcode" android:layout_width="316dp" android:layout_height="wrap_content">
    <ImageView android:id="@+id/ivForward" android:background="@drawable/group_shared" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="30dp">
        <TextView android:textSize="20sp" android:textColor="#333" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@+id/tvCourseName" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_marginBottom="15dp" android:maxLines="2"/>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/rlInviteCode" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/normal_black" android:id="@+id/tvInvitCodeLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/something_xuexitong_invaitecode"/>
            <TextView android:textSize="22sp" android:textColor="#0099ff" android:id="@+id/tvInvitCode" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:id="@+id/iv_copy" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/common_qr_copy" android:layout_alignParentRight="true"/>
            <Button android:id="@+id/btnShare" android:background="@android:color/transparent" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:drawableLeft="@drawable/group_transfer"/>
        </LinearLayout>
        <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvUseHint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/user_xuexitong_rightconner"/>
        <RelativeLayout android:id="@+id/rlQRCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/ivQRCode" android:background="@drawable/best_lib_rank_img_stroke" android:layout_width="216dp" android:layout_height="216dp" android:scaleType="centerCrop"/>
            <com.chaoxing.core.widget.CircleProgressBar android:id="@+id/pbLoading" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView android:textSize="13sp" android:textColor="@color/color_999999" android:ellipsize="end" android:id="@+id/tv_invalidate_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:maxLines="1"/>
        <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvScanHint" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/something_xuexitong_users"/>
        <TextView android:textSize="12sp" android:textColor="#0099ff" android:id="@+id/tvShowUserInfo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/account_info_title"/>
        <RelativeLayout android:id="@+id/rl_class_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="10dp" android:layout_marginRight="25dp">
            <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:id="@+id/tv_class" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_code_class" android:layout_centerVertical="true"/>
            <TextView android:textSize="17sp" android:textColor="@color/chaoxing_blue" android:ellipsize="end" android:id="@+id/tv_class_name" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:maxLines="1" android:drawablePadding="7dp" android:layout_toRightOf="@+id/tv_class"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
