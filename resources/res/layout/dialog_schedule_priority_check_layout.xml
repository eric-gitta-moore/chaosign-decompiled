<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/shape_border_approval_item_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/detail_priority_pop_zone" android:layout_width="280dp" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_priority_high" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView android:id="@+id/schedule_priority_high_icon" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/schedule_edit_priority_high" android:layout_centerVertical="true"/>
            <TextView android:textSize="18sp" android:textColor="#f6362d" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/schedule_priority_high" android:layout_toRightOf="@+id/schedule_priority_high_icon" android:layout_centerVertical="true"/>
            <CheckBox android:id="@+id/priority_high_cb" android:background="@drawable/selector_schedule_priority_check_cb" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:button="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
        <RelativeLayout android:id="@+id/rl_priority_mid" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView android:id="@+id/schedule_priority_mid_icon" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/schedule_edit_priority_mid" android:layout_centerVertical="true"/>
            <TextView android:textSize="18sp" android:textColor="#ff8d30" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/schedule_priority_mid" android:layout_toRightOf="@+id/schedule_priority_mid_icon" android:layout_centerVertical="true"/>
            <CheckBox android:id="@+id/priority_mid_cb" android:background="@drawable/selector_schedule_priority_check_cb" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:button="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_priority_no" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView android:id="@+id/schedule_priority_no_icon" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/schedule_edit_priority_no" android:layout_centerVertical="true"/>
            <TextView android:textSize="18sp" android:textColor="#0099ff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/schedule_priority_low" android:layout_toRightOf="@+id/schedule_priority_no_icon" android:layout_centerVertical="true"/>
            <CheckBox android:id="@+id/priority_no_cb" android:background="@drawable/selector_schedule_priority_check_cb" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:button="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="#ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <TextView android:textSize="18sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/set_priority_cancle" android:layout_width="0dp" android:layout_height="50dp" android:text="@string/schedule_cancle_text" android:layout_weight="1"/>
            <View android:background="#ebebeb" android:layout_width="1px" android:layout_height="match_parent"/>
            <TextView android:textSize="18sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/set_priority_done" android:layout_width="0dp" android:layout_height="50dp" android:text="@string/schedule_done_text" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
