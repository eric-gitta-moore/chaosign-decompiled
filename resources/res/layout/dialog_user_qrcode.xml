<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true" app:cardCornerRadius="8dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_share" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/ic_mine_share" android:scaleType="centerInside" android:layout_alignParentTop="true" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true"/>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="40dp">
                <TextView android:textSize="20sp" android:textColor="#333333" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mine_my_card" android:singleLine="true"/>
                <LinearLayout android:gravity="center_vertical" android:id="@+id/rlInviteCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tv_label_invitation_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/something_xuexitong_invaitecode"/>
                        <TextView android:textSize="22sp" android:textColor="#ff0099ff" android:id="@+id/tv_invitation_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/tv_label_invitation_code" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/tv_label_invitation_code"/>
                    </RelativeLayout>
                    <ImageView android:id="@+id/iv_copy" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_copy_16dp"/>
                </LinearLayout>
                <TextView android:textSize="13sp" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/user_xuexitong_rightconner"/>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                    <ImageView android:id="@+id/iv_qrcode" android:background="@drawable/best_lib_rank_img_stroke" android:layout_width="220dp" android:layout_height="220dp" android:scaleType="fitCenter"/>
                    <androidx.core.widget.ContentLoadingProgressBar android:id="@+id/loading_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="?android:attr/progressBarStyle"/>
                </RelativeLayout>
                <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tv_validity_period" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
