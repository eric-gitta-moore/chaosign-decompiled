<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/myclass_discuss_item" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <TextView android:textSize="18sp" android:textColor="@color/title_text" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="微距摄影"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="微距摄影"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/discuss_chapter" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="#ffffffff" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="关联章节："/>
        <LinearLayout android:orientation="vertical" android:id="@+id/discuss_chapter_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/creator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="林小瑜，教授" android:singleLine="true"/>
        <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="更新于：13-02-12" android:singleLine="true"/>
    </LinearLayout>
    <View android:background="#33ffffff" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
    <TextView android:textSize="14sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/reply_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="回复（14）" android:singleLine="true"/>
</LinearLayout>
