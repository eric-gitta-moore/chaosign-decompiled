<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="right" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:background="@drawable/myclass_discuss_item" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="微距摄影"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
        <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/creator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="林小瑜，教授" android:singleLine="true"/>
        <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="更新于：13-02-12" android:singleLine="true"/>
