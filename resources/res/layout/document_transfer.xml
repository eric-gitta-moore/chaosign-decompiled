<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:text="@string/no_content_wether_transmit" style="@style/Text_Title"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/vEmailGroup" android:background="@drawable/bg_input" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp">
        <TextView android:id="@+id/tvEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/transfer_email" style="@style/text_input_hint"/>
        <EditText android:id="@+id/etEmail" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="" android:singleLine="true" android:selectAllOnFocus="true" android:inputType="textEmailAddress" android:imeOptions="actionDone" style="@style/Text_Title"/>
    </LinearLayout>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/vVerifyCodeGroup" android:background="@drawable/corner_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击重新获取图片" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ivVerifyCode" android:background="@android:color/transparent" android:layout_width="120dp" android:layout_height="45dp" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <EditText android:textColorHint="@color/text_hint" android:id="@+id/etVerifyCode" android:background="@drawable/bg_input" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:hint="@string/verify_code" android:singleLine="true" android:selectAllOnFocus="true" android:layout_toLeftOf="@+id/ivVerifyCode" android:layout_centerVertical="true" android:inputType="text" android:imeOptions="actionDone" style="@style/Text_Title"/>
    </RelativeLayout>
</LinearLayout>
