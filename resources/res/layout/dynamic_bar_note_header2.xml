<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/createNoteBar" android:background="#80ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="45dp">
        <RelativeLayout android:id="@+id/rl_notebook" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="#666666" android:gravity="center_vertical" android:id="@+id/tv_notebook" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="笔记" android:drawableLeft="@drawable/ic_dynamic_header_note" android:drawablePadding="8dp" android:layout_centerInParent="true"/>
            <View android:background="#ebebeb" android:layout_width="1px" android:layout_height="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_group" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="#666666" android:gravity="center_vertical" android:id="@+id/tv_group" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="小组" android:drawableLeft="@drawable/ic_dynamic_header_group" android:drawablePadding="8dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="8dp"/>
</LinearLayout>
