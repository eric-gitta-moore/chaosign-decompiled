<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/top" layout="@layout/common_title_bar"/>
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rlEditName" android:background="@color/white" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="66dp" android:layout_below="@+id/top">
        <ImageView android:id="@+id/iv_delete" android:padding="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="60dp" android:src="@drawable/clear" android:scaleType="centerInside" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <EditText android:textSize="16sp" android:textColor="@color/normal_black" android:textColorHint="#cccccc" android:gravity="center_vertical" android:id="@+id/editGroupName" android:background="@android:color/white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/bookCollections_createfolder_hint" android:singleLine="true" android:layout_toLeftOf="@+id/iv_delete" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlNoDisturbing" android:background="@android:color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="8dp" android:layout_below="@+id/rlEditName">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabNoDisturbing" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_wechat_MuteNotifications" android:layout_centerVertical="true"/>
        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbNoDisturbing" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
    </RelativeLayout>
    <include layout="@layout/wait_circle_bar_with_text"/>
</RelativeLayout>
