<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:my="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="65dp">
        <CheckBox android:id="@+id/cb_check" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
        <RelativeLayout android:id="@+id/logo" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="8dp" android:layout_toRightOf="@+id/cb_check" android:layout_centerVertical="true">
            <com.fanzhou.widget.CircleImageView android:id="@+id/ivLogo" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_chaoxing_default" android:layout_centerInParent="true" my:is_circle="false" my:x_radius="4dp" my:y_radius="4dp"/>
            <TextView android:textSize="10sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_self" android:background="@drawable/bg_self_tag" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bookCollections_Own" android:layout_alignLeft="@+id/ivLogo" android:layout_alignRight="@+id/ivLogo" android:layout_alignBottom="@+id/ivLogo"/>
            <ImageView android:id="@+id/ivFolder" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_folder_private" android:scaleType="fitXY" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="15dp" android:layout_toLeftOf="@+id/iv_sort" android:layout_toRightOf="@+id/logo" android:layout_centerVertical="true">
            <RelativeLayout android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvTitle" android:paddingRight="34dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:drawableRight="@drawable/ic_play_tag" android:drawablePadding="5dp" android:layout_centerVertical="true"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/tags" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-30dp" android:layout_toRightOf="@+id/tvTitle" android:layout_centerVertical="true">
                    <TextView android:textSize="10sp" android:textColor="#999999" android:id="@+id/tv_top" android:background="@drawable/bg_circular_bead_ff999999" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/grouplist_Top"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView android:textSize="14sp" android:textColor="@color/gray_999999" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:layout_below="@+id/title"/>
        </RelativeLayout>
        <ImageView android:id="@+id/iv_sort" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/ic_sort_36dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
