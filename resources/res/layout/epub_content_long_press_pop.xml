<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/rootLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/arrowUpIv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/popup_window_arrow_up"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/read_progress_bg_layout" android:background="@drawable/popup_window_content_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="60dp">
        <TextView android:textSize="15sp" android:textColor="#cccccc" android:gravity="center" android:id="@+id/copyTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="复制" android:drawableTop="@drawable/epub_copy_white" android:drawablePadding="5dp"/>
        <TextView android:textSize="15sp" android:textColor="#cccccc" android:gravity="center" android:id="@+id/drawLineTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="划线" android:drawableTop="@drawable/epub_draw_line_white" android:drawablePadding="5dp"/>
        <TextView android:textSize="15sp" android:textColor="#cccccc" android:gravity="center" android:id="@+id/writeNoteTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="写笔记" android:drawableTop="@drawable/epub_write_note_white" android:drawablePadding="5dp"/>
        <TextView android:textSize="15sp" android:textColor="#cccccc" android:gravity="center" android:id="@+id/shareTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="10dp" android:text="转发" android:drawableTop="@drawable/epub_share_white" android:drawablePadding="5dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/arrowDownIv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/down_arrow_drawable"/>
</LinearLayout>
