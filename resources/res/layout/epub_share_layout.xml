<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/shareRoot" android:background="@drawable/epub_share_shape_bg" android:fitsSystemWindows="true" android:drawingCacheQuality="high" android:alwaysDrawnWithCache="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/shareTopLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
            <TextView android:textSize="16sp" android:textColor="#0099ff" android:id="@+id/shareAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/shareLabel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="分享了书籍" android:singleLine="true" android:layout_toLeftOf="@+id/shareTime" android:layout_toRightOf="@+id/shareAuthor" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/shareTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textColor="#313131" android:id="@+id/shareContentTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:layout_marginTop="28dp" android:layout_marginRight="20dp" android:lineSpacingExtra="10dp"/>
        <ImageView android:id="@+id/iv_divider" android:background="@color/divider_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="28dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/shareBottomLayout" android:paddingLeft="20dp" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="295dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
            <RelativeLayout android:id="@+id/shareBookIntroduce" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/shareBookCover" android:layout_width="50dp" android:layout_height="80dp" android:src="@drawable/default_epub_cover" android:scaleType="fitXY"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/shareBookCover">
                    <TextView android:textSize="18sp" android:textColor="#313131" android:id="@+id/shareBookName" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/shareBookAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
                <ImageView android:id="@+id/shareBookQrCodeIv" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/qrcode_app_chaoxing_com"/>
                <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/qrCodeTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="学习通-学习是一种信仰\10长按识别二维码" android:lineSpacingExtra="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
