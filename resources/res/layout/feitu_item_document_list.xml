<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/doc_type_imageView" android:background="@color/transparent" android:layout_width="55dp" android:layout_height="55dp" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/text_devices" android:ellipsize="end" android:id="@+id/doc_name_textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginRight="10dp" android:maxLines="2" android:layout_toLeftOf="@+id/start_play_textView" android:layout_toRightOf="@+id/doc_type_imageView" android:layout_alignTop="@+id/doc_type_imageView"/>
    <TextView android:textSize="11dp" android:textColor="@color/text_video_time" android:id="@+id/doc_size_textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_toRightOf="@+id/doc_type_imageView" android:layout_alignBottom="@+id/doc_type_imageView"/>
    <TextView android:textColor="@color/bg_top" android:gravity="center" android:id="@+id/start_play_textView" android:background="@drawable/bg_video_list_screen_projection" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="投屏" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <View android:background="@color/divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="5dp" android:layout_below="@+id/doc_type_imageView" android:layout_alignLeft="@+id/doc_name_textView"/>
</RelativeLayout>
