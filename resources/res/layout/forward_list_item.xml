<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/container" android:layout_width="match_parent" android:layout_height="60dp">
        <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true" android:layout_marginStart="57dp"/>
        <RelativeLayout android:id="@+id/item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:paddingStart="15dp" android:paddingEnd="15dp">
            <RelativeLayout android:id="@+id/llIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <ImageView android:id="@+id/btnIcon" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_forward_copy_link" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tvLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ui_10_dip" android:text="小组" android:layout_toRightOf="@+id/llIcon" android:layout_centerVertical="true"/>
            <TextView android:id="@+id/btnRight" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/home_menu_left" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
