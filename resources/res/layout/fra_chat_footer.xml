<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/rootView" android:background="@drawable/radius_f4f4f6_bl_20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/top_divider" android:background="#cccccc" android:layout_width="match_parent" android:layout_height="1px"/>
    <HorizontalScrollView android:id="@+id/g_member" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/tv_add_member">
        <LinearLayout android:orientation="horizontal" android:id="@+id/vg_course" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10"/>
    </HorizontalScrollView>
    <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:id="@+id/vg_input" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/vg_btn1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            <TextView android:id="@+id/btn_operation" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:drawableLeft="@drawable/type_select_btn"/>
            <TextView android:id="@+id/btn_smilies" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:drawableLeft="@drawable/chatting_biaoqing"/>
            <TextView android:id="@+id/btn_voice" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:drawableLeft="@drawable/chatting_setmode_voice_btn"/>
            <TextView android:textSize="15sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/chatting_send_btn" android:background="@drawable/chat_send_btn" android:visibility="visible" android:layout_width="40dp" android:layout_height="32dp" android:layout_marginBottom="2dp" android:text="@string/button_send"/>
            <TextView android:id="@+id/btn_keybord" android:background="@null" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:drawableLeft="@drawable/chatting_setmode_keyboard_btn"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_input" android:background="@drawable/bg_edittext_circular_bead_white" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="@dimen/sp_14" android:textColor="@color/color_808080" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_msg_reply" android:background="#f0f1f1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="22dp" android:layout_marginTop="4dp" android:layout_marginBottom="2dp" android:maxLines="1" android:paddingStart="5dp" android:paddingEnd="5dp" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
            <com.chaoxing.mobile.chat.widget.ChatFooterEditText android:textSize="16sp" android:textColorHint="#ffcccccc" android:gravity="center_vertical" android:id="@+id/et_message" android:background="@null" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="106dp" android:minHeight="35dp" android:imeOptions="flagNoExtractUi"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="#ff565656" android:gravity="center" android:id="@+id/btn_voice_record" android:background="@drawable/voice_rcd_btn_talk_nor" android:focusable="true" android:focusableInTouchMode="true" android:visibility="visible" android:layout_width="0dp" android:layout_height="35dp" android:text="@string/voice_input_hold_speaking" android:layout_weight="1" android:soundEffectsEnabled="true"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/vg_btn2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="5dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/vg_btn3" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:id="@+id/bottom_divider" android:background="#c5c5c5" android:layout_width="match_parent" android:layout_height="1px"/>
    <FrameLayout android:id="@+id/fl_footer_panel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
