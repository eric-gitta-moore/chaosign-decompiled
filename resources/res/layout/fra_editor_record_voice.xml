<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rl_recording" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="100dp">
    <ImageView android:id="@+id/iv_recognize" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="36dp" android:layout_marginRight="36dp" android:src="@drawable/icon_recognize_start" android:layout_centerInParent="true"/>
    <ImageView android:id="@+id/iv_recording_mark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_recording_mark" android:layout_toLeftOf="@+id/iv_recognize" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/iv_recording_end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_recording_end" android:layout_toRightOf="@+id/iv_recognize" android:layout_centerVertical="true"/>
</RelativeLayout>
