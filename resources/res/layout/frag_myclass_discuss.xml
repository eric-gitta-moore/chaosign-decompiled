<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView android:id="@+id/lv_discuss" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:cacheColorHint="@android:color/transparent" android:divider="@color/base_divider_color" android:dividerHeight="1px"/>
    <View android:id="@+id/v_line1" android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="2dp" android:layout_below="@+id/lv_discuss"/>
    <RelativeLayout android:id="@+id/rl_bottom" android:background="#f8f8f8" android:layout_width="match_parent" android:layout_height="46dp" android:layout_alignParentBottom="true">
        <CheckBox android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/cb_show_elite" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:button="@null" android:text="@string/show_elite" android:drawableLeft="@drawable/checkbox_delicate" android:drawablePadding="8dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <Button android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/btn_new_discuss" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:text="@string/new_discuss" android:drawableLeft="@drawable/new_discuss" android:drawablePadding="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
