<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/color_f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
        <include layout="@layout/common_title_bar"/>
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/common_white_stroke_bg" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="66dp">
            <EditText android:textSize="16sp" android:textColor="@color/normal_black" android:textColorHint="#cccccc" android:gravity="center_vertical" android:id="@+id/editName" android:background="@android:color/white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/pcenter_contents_enter_name" android:singleLine="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/iv_delete" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="60dp" android:src="@drawable/clear" android:scaleType="centerInside" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/page_loading_circle"/>
</RelativeLayout>
