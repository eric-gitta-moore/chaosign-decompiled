<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.mobile.common.TitleBarView android:id="@+id/viewTitleBar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/viewTitleBar">
        <RelativeLayout android:id="@+id/rlRead" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height">
            <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabRead" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/message_show_read_status" android:layout_centerVertical="true"/>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbRead" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        </RelativeLayout>
        <View android:id="@+id/viewRead" android:background="#e1e1e1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="8dp"/>
        <RelativeLayout android:id="@+id/rlSilent" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height">
            <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabSilent" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/something_xuexitong_MuteAllMembers" android:layout_centerVertical="true"/>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbSilent" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        </RelativeLayout>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="8dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/rlNeedVerify" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
            <RelativeLayout android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height">
                <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabNeedVerify" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_wechat_NeedVerify" android:layout_centerVertical="true"/>
                <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbNeedVerify" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
            </RelativeLayout>
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/vgClearNotInMyUnit" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
            <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvClearNotInMyUnit" android:background="#ffffff" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/pcenter_groupsetting_deletenotcompanymember"/>
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llAllowQuit" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
            <RelativeLayout android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height">
                <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvAllowQuit" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="允许成员退出" android:layout_centerVertical="true"/>
                <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbAllowQuit" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
            </RelativeLayout>
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/vgTransferGroup" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
            <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvTransferGroup" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/pcenter_wechat_TransferGroup" android:drawableRight="@drawable/ic_right_arrow"/>
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llCustomerService" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="@dimen/conversation_info_height" android:text="@string/pcenter_wechat_customer_service"/>
                <ImageView android:id="@+id/ivCustomerService" android:background="@drawable/ic_chat_customer_service_bg" android:padding="2dp" android:layout_width="@dimen/dp_21" android:layout_height="@dimen/dp_16" android:layout_marginLeft="@dimen/dp_10" android:src="@drawable/ic_chat_customer_service"/>
                <TextView android:textSize="13sp" android:textColor="#ff999999" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvCustomerService" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:layout_marginLeft="@dimen/dp_10" android:layout_marginRight="@dimen/dp_22" android:maxLines="1" android:layout_weight="1"/>
                <ImageView android:gravity="center_vertical" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="@dimen/conversation_info_height" android:src="@drawable/ic_right_arrow"/>
            </LinearLayout>
            <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent_transprent"/>
</RelativeLayout>
