<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.chaoxing.mobile.common.TitleBarView android:id="@+id/v_title_bar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <com.chaoxing.mobile.chat.widget.LoadSortListView android:id="@+id/v_load_list" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/edit_container" android:background="#f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="44dp">
            <TextView android:textSize="16sp" android:textColor="#b3b3b3" android:gravity="center" android:id="@+id/tvDelete" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/delete_resource" android:layout_weight="1"/>
            <View android:id="@+id/viewDivider" android:background="#ebebeb" android:layout_width="1px" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="#b3b3b3" android:gravity="center" android:id="@+id/tvMove" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/move_resource" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent_transprent"/>
</RelativeLayout>
