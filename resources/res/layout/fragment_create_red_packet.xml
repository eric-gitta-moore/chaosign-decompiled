<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/top" layout="@layout/common_title_bar_red"/>
        <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvErrorTip" android:background="#812f25" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="20dp"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/vgPrize" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp">
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_weight="1">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="0dp" android:layout_height="wrap_content" android:text="超星奖励基金" android:layout_weight="1"/>
                        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbPrize" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                    </LinearLayout>
                    <TextView android:textSize="12sp" android:textColor="#666666" android:id="@+id/tvPrizeDesc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="专用于员工奖励，员工可提现；\10不可用于活动或业务经费。"/>
                    <View android:background="@color/color_cccccc" android:layout_width="match_parent" android:layout_height="1px"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_choose_person" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
                    <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tv_send_to" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/red_packet_send_to"/>
                    <com.fanzhou.widget.CircleImageView android:id="@+id/iv_avatar" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" ss:border_color="@color/avatar_border" ss:border_width="1px" ss:is_circle="false" ss:x_radius="10px" ss:y_radius="10px"/>
                    <com.chaoxing.mobile.chat.widget.ConversationAvatar2 android:id="@+id/iv_icon" android:layout_width="20dp" android:layout_height="20dp"/>
                    <TextView android:textSize="16sp" android:textColor="#e68a00" android:ellipsize="end" android:id="@+id/tv_receiver_name" android:layout_width="0dp" android:layout_height="wrap_content" android:text="" android:maxLines="1" android:layout_weight="1" android:layout_marginStart="6dp"/>
                    <TextView android:textSize="16sp" android:textColor="#d85348" android:id="@+id/tv_choose_person" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bookCollections_Edit" android:layout_marginStart="10dp"/>
                </LinearLayout>
                <View android:background="@color/color_cccccc" android:layout_width="match_parent" android:layout_height="1px"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/vRedPachetCount" android:background="@drawable/bg_circular_red_packet" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="16dp" android:layout_marginTop="30dp" android:layout_marginRight="16dp">
                    <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:text="@string/red_packet_number"/>
                    <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/etRedPacketCount" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:inputType="number"/>
                        <TextView android:textSize="16sp" android:textColor="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tvRedPacketCountHint" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/fill_red_packet_number"/>
                    </FrameLayout>
                    <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="14dp" android:text="@string/red_packet_count"/>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="#90908f" android:id="@+id/tvGroupPersonNum" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginTop="6dp" android:layout_marginBottom="-10dp" android:text="本群共0人"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/vRedPachetMoney" android:background="@drawable/bg_circular_red_packet" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="16dp" android:layout_marginTop="30dp" android:layout_marginRight="16dp">
                    <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tvRedPachetMoney" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:text="@string/red_packet_total_sum"/>
                    <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tvPinTag" android:background="@drawable/bg_circular_red_packet_pin" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="拼"/>
                    <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/etRedPacketMoney" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:numeric="decimal"/>
                        <TextView android:textSize="16sp" android:textColor="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tvRedPacketMoneyHint" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/fill_red_packet_amount"/>
                    </FrameLayout>
                    <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="14dp" android:text="@string/red_packet_unit"/>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="#ffd85348" android:id="@+id/tvTipRewardFund" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="6dp" android:text="@string/message_tip_reward_fund"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/vTypeTip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginTop="6dp">
                    <TextView android:textSize="12sp" android:textColor="#333333" android:id="@+id/tvTypeTipCur" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/is_hand_air_red_packet"/>
                    <TextView android:textSize="12sp" android:textColor="#0066cc" android:id="@+id/tvTypeTipChange" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/change_common_red_packet"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/bg_circular_red_packet" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp">
                    <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="center_vertical" android:id="@+id/etRedPacketDesc" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginRight="14dp" android:minHeight="50dp" android:hint="" android:singleLine="false" android:maxLength="30" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/vgConditions" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
                    <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="0dp" android:layout_height="wrap_content" android:text="红包领取条件" android:layout_weight="1"/>
                    <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbConditions" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/vgConditionsPanel" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center_vertical" android:background="@drawable/bg_circular_red_packet" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:text="使用"/>
                        <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/etUsageCount" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="填写使用量" android:singleLine="true" android:layout_weight="1" android:inputType="number"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_vertical" android:background="@drawable/bg_circular_red_packet" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:text="笔记"/>
                        <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/etNoteCount" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="填写笔记量" android:singleLine="true" android:layout_weight="1" android:inputType="number"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_vertical" android:background="@drawable/bg_circular_red_packet" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:text="粉丝"/>
                        <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/etAttentionCount" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="填写粉丝人数" android:singleLine="true" android:layout_weight="1" android:inputType="number"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_vertical" android:background="@drawable/bg_circular_red_packet" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:text="@string/common_collection"/>
                        <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/etCollect" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="填写收藏量" android:singleLine="true" android:layout_weight="1" android:inputType="number"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_vertical" android:background="@drawable/bg_circular_red_packet" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:text="阅读"/>
                        <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/etReadCount" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="填写阅读时长" android:singleLine="true" android:layout_weight="1" android:inputType="number"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:textSize="32sp" android:textColor="#000000" android:gravity="center" android:id="@+id/tvShowMoney" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:text="￥0.00"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="36dp" android:layout_marginTop="22dp" android:layout_marginRight="36dp" android:layout_marginBottom="36dp">
                    <Button android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btnOk" android:background="@drawable/bg_btn_packet_disable" android:padding="12dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/cash_into_red_packet"/>
                    <View android:id="@+id/vBtnMask" android:background="#b0ebebeb" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent_transprent"/>
</RelativeLayout>
