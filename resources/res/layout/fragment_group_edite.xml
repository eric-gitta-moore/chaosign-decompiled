<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/parentView" android:background="@color/color_f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"/>
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="66dp">
        <ImageView android:id="@+id/iv_delete" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <EditText android:gravity="center_vertical" android:id="@+id/editGroupName" android:background="@android:color/transparent" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/grouplist_list_manage_nctext" android:singleLine="true" android:layout_toLeftOf="@+id/iv_delete" android:layout_centerVertical="true" style="@style/group_title_text"/>
    </RelativeLayout>
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:minHeight="66dp">
        <EditText android:textColorHint="@color/color_cccccc" android:id="@+id/groupIntroduct" android:background="@android:color/transparent" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/grouplist_list_manage_texthint" android:layout_toLeftOf="@+id/ivIntroductlear" android:layout_centerVertical="true" android:imeOptions="actionNext" style="@style/group_title_text"/>
        <ImageView android:id="@+id/ivIntroductlear" android:background="@android:color/transparent" android:padding="8dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlAvatar" android:background="@color/white" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:minHeight="66dp">
        <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ivAvatar" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginLeft="15dp" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/tvIntroductContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="@string/creategroup_group_icon" android:layout_toRightOf="@+id/ivAvatar" android:layout_centerVertical="true" style="@style/group_title_b3_text"/>
    </RelativeLayout>
    <include layout="@layout/wait_circle_bar_with_text"/>
</LinearLayout>
