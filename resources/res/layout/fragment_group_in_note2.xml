<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.mobile.note.widget.NoteListTitleBar android:gravity="center_vertical" android:id="@+id/viewTitleBar" android:layout_width="match_parent" android:layout_height="48dp"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_search" android:background="#ebeced" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_below="@+id/viewTitleBar">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@drawable/ll_search_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="9dp" android:layout_marginTop="8dp" android:layout_marginRight="9dp" android:layout_marginBottom="8dp">
            <ImageView android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_group_search"/>
            <TextView android:textSize="16sp" android:textColor="#cccccc" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="@string/comment_serarch"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/ll_search">
        <com.fanzhou.widget.SwipeListView android:scrollbarStyle="outsideOverlay" android:id="@+id/listView" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="#d9d9d9" android:dividerHeight="1px"/>
        <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent"/>
    </RelativeLayout>
    <include layout="@layout/wait_circle_bar_with_text"/>
    <ImageView android:id="@+id/ivLoad" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/state_loading_fail" android:layout_centerInParent="true"/>
    <RelativeLayout android:id="@+id/rl_selected_member" android:background="#efeff4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="68dp" android:layout_alignParentBottom="true">
        <HorizontalScrollView android:id="@+id/g_member" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/tv_add_member">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llSelected" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </HorizontalScrollView>
        <TextView android:textSize="14sp" android:textColor="#0099ff" android:gravity="center_vertical" android:id="@+id/tv_add_member" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="确定（）" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
