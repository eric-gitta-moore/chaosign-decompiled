<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/toolbar" layout="@layout/common_title_bar"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar">
        <ListView android:scrollbarStyle="outsideOverlay" android:id="@+id/lv_group" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:cacheColorHint="@android:color/transparent" android:divider="@android:color/transparent" android:dividerHeight="0px" android:headerDividersEnabled="false" android:footerDividersEnabled="false"/>
        <include android:id="@+id/loading_transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/common_loading_transparent"/>
        <include android:id="@+id/reload" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/loading_failed_match_parent_img"/>
        <TextView android:textSize="16sp" android:textColor="#999999" android:id="@+id/tv_prompt_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="180dp" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <include android:id="@+id/loading" android:clickable="true" layout="@layout/page_loading_circle"/>
</RelativeLayout>
