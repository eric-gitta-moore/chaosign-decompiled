<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/layout_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_top" android:background="@drawable/lesson_member_top_bg" android:layout_width="match_parent" android:layout_height="@dimen/adaptive_48dp">
        <ImageView android:id="@+id/iv_back" android:padding="@dimen/adaptive_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/normal_black" android:id="@+id/rb_members" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_online_member" android:singleLine="true" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="@color/blue_0099ff" android:id="@+id/tv_compare" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="@string/course_online_compare" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="15sp" android:textColor="#009966" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_speeker" android:background="#ffe4f7f1" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="42dp" android:text="@string/course_online_speeking" android:lines="1"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/rg_head" android:visibility="visible" android:layout_width="match_parent" android:layout_height="44dp">
        <RelativeLayout android:id="@+id/rl_members_in" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/rb_members_in" android:paddingLeft="@dimen/dp_10" android:paddingTop="@dimen/dp_5" android:paddingRight="@dimen/dp_10" android:paddingBottom="@dimen/dp_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/course_online_has_in" android:layout_centerInParent="true"/>
            <View android:id="@+id/rb_members_in_line" android:background="@color/chaoxing_blue" android:layout_width="16dp" android:layout_height="3dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_members_waitingRoom" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/rb_members_waitingRoom" android:paddingLeft="@dimen/dp_10" android:paddingTop="@dimen/dp_5" android:paddingRight="@dimen/dp_10" android:paddingBottom="@dimen/dp_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_online_waiting_room" android:layout_weight="1" android:layout_centerInParent="true"/>
            <View android:id="@+id/rb_members_waitingRoom_line" android:background="@color/chaoxing_blue" android:visibility="gone" android:layout_width="16dp" android:layout_height="3dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_members_not_in" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/rb_members_not_in" android:paddingLeft="@dimen/dp_10" android:paddingTop="@dimen/dp_5" android:paddingRight="@dimen/dp_10" android:paddingBottom="@dimen/dp_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/course_online_not_in" android:layout_weight="1" android:layout_centerInParent="true"/>
            <View android:id="@+id/rb_members_not_in_line" android:background="@color/chaoxing_blue" android:visibility="gone" android:layout_width="16dp" android:layout_height="3dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_members_audit" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/rb_members_audit" android:paddingLeft="@dimen/dp_10" android:paddingTop="@dimen/dp_5" android:paddingRight="@dimen/dp_10" android:paddingBottom="@dimen/dp_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/course_online_bystander" android:layout_weight="1" android:layout_centerInParent="true"/>
            <View android:id="@+id/rb_members_audit_line" android:background="@color/chaoxing_blue" android:visibility="gone" android:layout_width="16dp" android:layout_height="3dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.chaoxing.mobile.search.widget.SearchBar android:id="@+id/searchBar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RelativeLayout android:id="@+id/search_bar" android:background="@color/white" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/search_bg_night" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_toLeftOf="@+id/tv_action" android:layout_centerVertical="true">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_group_search" android:layout_marginStart="8dp" android:layout_marginEnd="5dp"/>
                <EditText android:textSize="14sp" android:textColor="@color/normal_gray" android:textColorHint="#ffb3b3b3" android:id="@+id/et_keyword" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="30dp" android:hint="@string/comment_serarch" android:layout_weight="1" android:layout_centerVertical="true" android:inputType="text" android:imeOptions="actionSearch"/>
                <ImageView android:id="@+id/iv_clear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:src="@drawable/clear" android:layout_weight="0"/>
            </LinearLayout>
            <TextView android:textSize="15sp" android:textColor="@color/bg_blue" android:id="@+id/tv_action" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/search_Action_Button"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.yanzhenjie.recyclerview.SwipeRecyclerView2 android:id="@+id/rv_speeker" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TextView android:textSize="16sp" android:textColor="#ffb3b3b3" android:gravity="center" android:id="@+id/tvNoSearchData" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="暂无搜索结果"/>
        <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent_white"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/rl_bottom" android:background="@drawable/lesson_member_bottom_bg" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="15sp" android:textColor="@color/blue_0099ff" android:gravity="center" android:id="@+id/tvGroupTalk" android:background="@drawable/btn_stroke_0099ff" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="7dp" android:layout_marginBottom="10dp" android:text="@string/course_online_group_talk" android:layout_weight="1"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_quite" android:background="@drawable/btn_solide_0099ff_radius" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:layout_marginTop="10dp" android:layout_marginRight="8dp" android:layout_marginBottom="10dp" android:layout_weight="1">
            <TextView android:textSize="15sp" android:textColor="@color/blue_0099ff" android:gravity="center" android:id="@+id/tvQuite" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/course_online_mute_all_voice" android:layout_weight="1"/>
            <View android:id="@+id/voiceLine" android:background="@color/blue_0099ff" android:visibility="gone" android:layout_width="0.5dp" android:layout_height="match_parent"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/ivVoice" android:background="@drawable/img_solide_ffffff" android:padding="15dp" android:layout_width="40dp" android:layout_height="match_parent" android:src="@drawable/icon_online_course_down"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_video" android:background="@drawable/btn_solide_0099ff_radius" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:layout_marginTop="10dp" android:layout_marginRight="8dp" android:layout_marginBottom="10dp" android:layout_weight="1">
            <TextView android:textSize="15sp" android:textColor="@color/blue_0099ff" android:gravity="center" android:id="@+id/tvMuteVideo" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/course_online_mute_all_video" android:layout_weight="1"/>
            <View android:id="@+id/videoLine" android:background="@color/blue_0099ff" android:visibility="gone" android:layout_width="0.5px" android:layout_height="match_parent"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/ivVideo" android:background="@drawable/img_solide_ffffff" android:padding="15dp" android:layout_width="40dp" android:layout_height="match_parent" android:src="@drawable/icon_online_course_down"/>
        </LinearLayout>
        <TextView android:textSize="15sp" android:textColor="@color/blue_0099ff" android:gravity="center" android:id="@+id/tvClassTip" android:background="@drawable/btn_stroke_0099ff" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:text="@string/course_online_class_tip" android:layout_weight="1"/>
        <TextView android:textSize="15sp" android:textColor="@color/blue_0099ff" android:gravity="center" android:id="@+id/tvMoveAll2Class" android:background="@drawable/btn_stroke_0099ff" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:text="@string/course_online_move_all_class" android:layout_weight="1"/>
        <TextView android:textSize="15sp" android:textColor="@color/blue_0099ff" android:gravity="center" android:id="@+id/tvRemoveAll2Class" android:background="@drawable/btn_stroke_0099ff" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:text="@string/course_online_remove_all_class" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
