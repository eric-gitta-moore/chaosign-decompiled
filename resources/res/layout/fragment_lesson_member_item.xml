<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="66dp">
    <RelativeLayout android:id="@+id/rl_avatar" android:background="@drawable/bg_lesson_member_avater" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="11dp" android:layout_marginTop="9dp" android:layout_marginBottom="9dp" android:layout_centerVertical="true">
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_avatar" android:layout_width="42dp" android:layout_height="42dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="centerCrop" android:layout_centerInParent="true" app:riv_oval="true"/>
        <RelativeLayout android:id="@+id/rl_call" android:background="@drawable/course_online_phone_call_bg" android:visibility="gone" android:layout_width="42dp" android:layout_height="42dp" android:layout_centerInParent="true">
            <ImageView android:id="@+id/iv_call" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_course_online_phone_call" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <ImageView android:id="@+id/iv_screen_share" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginRight="20dp" android:src="@mipmap/ic_lesson_member_screen_share_2"/>
        <com.chaoxing.mobile.conferencesw.view.MicStatusView android:id="@+id/iv_voice" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginRight="20dp" android:src="@mipmap/ic_online_course_no_mic_1"/>
        <ImageView android:id="@+id/iv_camera" android:layout_width="26dp" android:layout_height="26dp" android:src="@mipmap/ic_online_course_no_camera_2"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_waitingRoom" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/sp_13" android:textColor="@color/chaoxing_blue" android:id="@+id/tv_move_in_class" android:background="@drawable/online_course_member_tab_bg" android:paddingLeft="@dimen/dp_6" android:paddingTop="@dimen/dp_2" android:paddingRight="@dimen/dp_6" android:paddingBottom="@dimen/dp_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_online_move_to_class"/>
            <TextView android:textSize="@dimen/sp_13" android:textColor="@color/chaoxing_blue" android:id="@+id/tv_move_out_class" android:background="@drawable/online_course_member_tab_bg" android:paddingLeft="@dimen/dp_6" android:paddingTop="@dimen/dp_2" android:paddingRight="@dimen/dp_6" android:paddingBottom="@dimen/dp_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:text="@string/delete_student_from_class"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_toLeftOf="@+id/ll_right" android:layout_toRightOf="@+id/rl_avatar" android:layout_centerVertical="true">
        <TextView android:textSize="16sp" android:textColor="@color/normal_black" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:maxLines="2"/>
        <TextView android:textSize="13sp" android:textColor="@color/gray_999999" android:id="@+id/tv_role" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="" android:maxLines="1"/>
    </LinearLayout>
</RelativeLayout>
