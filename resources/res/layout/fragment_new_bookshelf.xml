<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlTop" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:textSize="14sp" android:ellipsize="end" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="0dp" android:minHeight="0dp" android:drawableLeft="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <Button android:textSize="14sp" android:id="@+id/btnLeft2" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:minWidth="0dp" android:minHeight="0dp" android:text="按钮" android:layout_toRightOf="@+id/btnLeft" android:layout_centerVertical="true"/>
        <TextView android:textColor="#333333" android:ellipsize="middle" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="65dp" android:layout_marginRight="65dp" android:text="书架" android:singleLine="true" android:layout_centerInParent="true" style="@style/Text_Title_Page"/>
        <Button android:textSize="14sp" android:id="@+id/btnRight" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="15dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="0dp" android:minHeight="0dp" android:text="确认" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="14sp" android:textColor="#999999" android:gravity="center" android:id="@+id/tvShowTag" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="35dp" android:text="@string/bookshelf_click_and_sort" android:layout_below="@+id/rlTop"/>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
    <com.chaoxing.bookshelf.view.BookShelfRecyclerView android:id="@+id/rvBookList" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/operation_toolbar" android:layout_below="@+id/tvShowTag"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/operation_toolbar" android:background="#f9f9f9" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textSize="18sp" android:textColor="#0099ff" android:layout_gravity="center_vertical" android:id="@+id/btn_delete" android:background="@android:color/transparent" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="删除" android:layout_weight="1"/>
        <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
    </RelativeLayout>
</RelativeLayout>
