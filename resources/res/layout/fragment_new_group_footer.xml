<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:textSize="16sp" android:id="@+id/add_new_group_member" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="50dp" android:layout_marginTop="22dp" android:layout_marginRight="50dp" android:layout_marginBottom="12dp" android:text="@string/pcenter_notes_group_new_member" style="@style/Button_blue_Submit"/>
    <RelativeLayout android:id="@+id/rlAddMember" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tvAddMember" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_notes_group_new_member" android:drawablePadding="2dp" android:layout_toLeftOf="@+id/tvAddMemberIcon" android:layout_centerVertical="true" style="@style/group_title_text"/>
        <TextView android:id="@+id/tvAddMemberIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:drawableRight="@drawable/ic_group_invite" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <View android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="1px"/>
        <View android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/tvAddMember"/>
    </RelativeLayout>
</RelativeLayout>
