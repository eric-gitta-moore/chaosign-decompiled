<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.core.widget.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/viewTitleBar" layout="@layout/common_title_bar_4"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.fanzhou.widget.SwipeListView android:scrollbarStyle="outsideOverlay" android:id="@+id/lvTopic" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="#00d9d9d9" android:dividerHeight="0dp"/>
            <include android:id="@+id/viewReload" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/loading_failed_match_parent_img"/>
            <RelativeLayout android:id="@+id/vg_no_list_tip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:id="@+id/tv_no_data_arrow" android:background="@drawable/conversation_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginRight="64dp" android:layout_alignParentRight="true"/>
                <TextView android:textSize="19sp" android:textColor="#cccccc" android:id="@+id/tvNoDataTip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_conversation_tip" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <include android:id="@+id/viewLoading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar_with_text_match_parent_white"/>
        </RelativeLayout>
    </LinearLayout>
</com.chaoxing.core.widget.SwipeBackLayout>
