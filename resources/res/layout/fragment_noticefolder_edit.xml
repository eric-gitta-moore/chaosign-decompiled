<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rlContainer" android:background="@color/color_f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:textSize="15sp" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="15dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/cl_ic_toolbar_arrow_left_24dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/normal_black" android:ellipsize="middle" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="75dp" android:layout_marginRight="75dp" android:singleLine="true" android:layout_centerInParent="true"/>
        <Button android:textSize="15sp" android:id="@+id/btnRight" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginRight="@dimen/dp_3" android:text="@string/note_Save" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView android:id="@+id/sv_content" android:background="#fff5f6f8" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/header">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_folder" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="66dp" android:layout_below="@+id/header">
                <EditText android:textSize="16sp" android:textColor="@color/normal_black" android:textColorHint="@color/color_ccc" android:gravity="center_vertical" android:id="@+id/editName" android:background="@android:color/white" android:paddingLeft="15dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="match_parent" android:hint="@string/bookCollections_createfolder_hint" android:singleLine="true" android:layout_weight="1"/>
                <ImageView android:id="@+id/iv_delete" android:background="@color/transparent" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="7dp" android:src="@drawable/clear"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginTop="8dp">
                <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/notice_store_sender_letter" android:layout_weight="1" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
                <ImageView android:id="@+id/ivAdd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/note_richtext_panel_open" android:layout_marginEnd="15dp"/>
            </LinearLayout>
            <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_rules" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rv_rules" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginTop="8dp">
                <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/store_letters_with_specified_title_keywords" android:layout_weight="1" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
                <ImageView android:id="@+id/ivTitleAdd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/note_richtext_panel_open" android:layout_marginEnd="15dp"/>
            </LinearLayout>
            <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_keywords" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rv_keywords" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/wait_circle_bar_with_text"/>
</RelativeLayout>
