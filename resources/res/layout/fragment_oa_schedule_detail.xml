<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/top" layout="@layout/conversation_title_bar"/>
    <ScrollView android:id="@+id/schedule_detail_sv" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_above="@+id/schedule_detail_set_remindtime" android:layout_below="@+id/top">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/detail_title_zone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/schedule_detail_onekey_type" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="15dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <EditText android:textSize="16sp" android:textColor="#000000" android:textColorHint="#999999" android:gravity="center_vertical" android:id="@+id/schedule_detail_title" android:background="#ffffff" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/schedule_content_tips" android:layout_toRightOf="@+id/schedule_detail_onekey_type"/>
            </RelativeLayout>
            <View android:id="@+id/schedule_detail_divider" android:background="#0099ff" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/detail_title_zone"/>
            <RelativeLayout android:id="@+id/beizhu_zone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/schedule_detail_divider">
                <EditText android:textSize="16sp" android:textColorHint="#cccccc" android:id="@+id/schedule_detail_content" android:background="@null" android:paddingLeft="15dp" android:paddingTop="10dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/schedule_add_tips"/>
                <ImageView android:id="@+id/schedule_detail_img_icon" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="15dp" android:src="@drawable/album_camera" android:layout_alignParentRight="true"/>
                <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/schedule_add_attachment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="50dp" android:layout_marginRight="15dp" android:layout_marginBottom="15dp" android:layout_below="@+id/schedule_detail_content"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/detail_label_zone" android:background="@drawable/shape_line_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="18sp" android:textColor="#999999" android:id="@+id/schedule_detail_label_lab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="标签" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/label_arrow_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/schedule_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="#0099ff" android:id="@+id/schedule_detail_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/schedule_unset" android:layout_toLeftOf="@+id/label_arrow_tip" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/schedule_detail_set_priority" android:background="@drawable/shape_line_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_above="@+id/detail_label_zone">
        <TextView android:textSize="18sp" android:textColor="#999999" android:id="@+id/schedule_detail_priority_lab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="优先级" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/priority_arrow_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/schedule_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/schedule_detail_priority" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/schedule_edit_priority_no" android:layout_toLeftOf="@+id/priority_arrow_tip" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="#0099ff" android:id="@+id/schedule_detail_priority_category" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/schedule_priority_low" android:layout_toLeftOf="@+id/schedule_detail_priority" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/schedule_detail_set_remindtime" android:background="@drawable/shape_line_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_above="@+id/schedule_detail_set_priority">
        <TextView android:textSize="18sp" android:textColor="#999999" android:id="@+id/schedule_detail_remind_lab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/schedule_tip_time_remider" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/time_arrow_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/schedule_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="#0099ff" android:id="@+id/schedule_detail_remind_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/schedule_unset" android:layout_toLeftOf="@+id/time_arrow_tip" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/detail_done_icon" android:visibility="gone" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/detail_done_icon_blue" android:layout_above="@+id/schedule_detail_set_remindtime" android:layout_alignParentRight="true"/>
</RelativeLayout>
