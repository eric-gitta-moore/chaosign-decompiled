                            <TextView android:textSize="13sp" android:textColor="#ff666666" android:ellipsize="end" android:id="@+id/tv_phone_number" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:drawablePadding="5dp" app:drawableStartCompat="@drawable/ic_phone_30dp"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_right_12dp" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
