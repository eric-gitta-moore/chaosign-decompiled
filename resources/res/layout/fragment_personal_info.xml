                                <TextView android:textSize="11sp" android:textColor="#bbffffff" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/personal_info_attention" android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/fans_view" android:layout_width="wrap_content" android:layout_height="wrap_content">
                                <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/tv_fans" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="-" android:maxLines="1"/>
                                <TextView android:textSize="11sp" android:textColor="#bbffffff" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/personal_info_fans" android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/great_view" android:layout_width="wrap_content" android:layout_height="wrap_content">
                                <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/tv_great" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="-" android:maxLines="1"/>
                                <TextView android:textSize="11sp" android:textColor="#bbffffff" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/personal_info_get_great" android:maxLines="1"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView android:textSize="12dp" android:textColor="@android:color/white" android:id="@+id/btn_send_message" android:background="@drawable/personal_info_btn_send_message" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personal_info_send_message" android:drawableLeft="@drawable/ic_message_15dp" android:drawablePadding="3dp" android:paddingStart="13dp" android:paddingEnd="13dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:layout_constraintVertical_bias="0"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="15dp">
                        <TextView android:textColor="#ddffffff" android:id="@+id/tv_caution_account_freeze" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="7dp" android:text="@string/personal_info_account_freeze" android:drawableLeft="@drawable/ic_caution_15dp" android:drawablePadding="5dp"/>
                        <TextView android:textColor="#ddffffff" android:id="@+id/tv_caution_added_to_blacklist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="7dp" android:text="@string/personal_info_added_other_to_blacklist" android:drawableLeft="@drawable/ic_caution_15dp" android:drawablePadding="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.cardview.widget.CardView android:id="@+id/contact_view" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="-55dp" android:layout_marginRight="15dp" android:layout_marginBottom="25dp" android:layout_below="@+id/header_content" app:cardCornerRadius="8dp" app:cardElevation="0dp">
                    <LinearLayout android:orientation="vertical" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="15dp" android:paddingEnd="15dp">
                        <LinearLayout android:orientation="horizontal" android:id="@+id/unit_dept_view" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@drawable/ic_unit_30dp"/>
                            <TextView android:textSize="13sp" android:textColor="#ff666666" android:id="@+id/tv_unit_dept" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:drawablePadding="5dp" android:drawableEnd="@drawable/ic_arrow_right_12dp"/>
                        </LinearLayout>
                        <TextView android:textSize="13sp" android:textColor="#ff666666" android:ellipsize="end" android:id="@+id/tv_internal_letter" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/personal_info_internal_letter" android:maxLines="1" android:drawablePadding="5dp" android:drawableStart="@drawable/ic_mail_30dp" android:drawableEnd="@drawable/ic_arrow_right_12dp"/>
