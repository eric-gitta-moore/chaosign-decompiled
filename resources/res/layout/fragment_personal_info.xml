        <TextView android:textSize="16sp" android:textColor="#ff666666" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/persioninfo_logout_tip" android:drawableTop="@drawable/user_logout_tip" android:drawablePadding="20dp"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
