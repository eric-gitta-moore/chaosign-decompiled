                            <TextView android:textSize="10dp" android:textColor="@android:color/white" android:layout_gravity="center_horizontal" android:id="@+id/tv_fans_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/focused_tag"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView android:textSize="13sp" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/tv_me" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="2" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
