<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/content_view" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlContainer" android:background="#33000000" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/rlClickContainer" android:background="#33000000" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/rl_replay"/>
        <RelativeLayout android:id="@+id/rl_replay" android:background="#f9f9f9" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <View android:id="@+id/dividerLine" android:background="#ffbfbfbf" android:layout_width="match_parent" android:layout_height="1px"/>
            <RelativeLayout android:id="@+id/rlTextPanel" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/dividerLine" android:layout_centerVertical="true">
                <RelativeLayout android:id="@+id/rlLeft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                    <ImageView android:id="@+id/btnSelectImage" android:background="@drawable/ic_topic_reply_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp"/>
                    <TextView android:textSize="11sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvImageCount" android:background="@drawable/circle_bg_f55925_nosize" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="2dp" android:layout_marginRight="-4dp" android:text="12" android:layout_alignRight="@+id/btnSelectImage"/>
                </RelativeLayout>
                <com.chaoxing.mobile.group.widget.AtToInBlueEditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#c6c7cc" android:gravity="top" android:id="@+id/etReplyText" android:background="@drawable/bg_edittext_circular_bead_white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:maxLines="4" android:maxLength="20000" android:layout_toLeftOf="@+id/btn_smilies" android:layout_toRightOf="@+id/rlLeft" android:layout_centerVertical="true"/>
                <Button android:id="@+id/btn_smilies" android:background="@drawable/chatting_biaoqing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="4dp" android:layout_marginRight="12dp" android:layout_marginBottom="4dp" android:layout_toLeftOf="@+id/btnSubmit" android:layout_centerVertical="true"/>
                <Button android:enabled="false" android:textColor="@drawable/bg_sl_text_reply_submit" android:id="@+id/btnSubmit" android:background="@drawable/bg_sl_btn_reply_submit" android:paddingLeft="10dp" android:paddingTop="4dp" android:paddingRight="10dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="8dp" android:text="完成" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:id="@+id/cover" android:background="#33000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/rlTextPanel" android:layout_alignBottom="@+id/rlTextPanel"/>
            <View android:id="@+id/dividerLine2" android:background="#ffd9d9d9" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/rlTextPanel"/>
            <RelativeLayout android:id="@+id/rlImagePanel" android:padding="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/dividerLine2">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvSelectedImage" android:layout_width="match_parent" android:layout_height="118dp" android:layout_centerHorizontal="true"/>
                <TextView android:textSize="12sp" android:textColor="#87888c" android:id="@+id/tvSelectedCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0/9" android:layout_below="@+id/rvSelectedImage" android:layout_centerHorizontal="true"/>
                <TextView android:textSize="12sp" android:textColor="#87888c" android:id="@+id/tvSelectTip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="还可以选择图片" android:layout_below="@+id/tvSelectedCount" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlOperaPanel" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/dividerLine2">
                <View android:background="#cccccc" android:layout_width="match_parent" android:layout_height="1px"/>
                <FrameLayout android:id="@+id/fl_footer_panel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlOperaRecodePanel" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/dividerLine2">
                <View android:background="#cccccc" android:layout_width="match_parent" android:layout_height="1px"/>
                <FrameLayout android:id="@+id/flRooterRecodePanel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_new_picture" android:background="@drawable/bg_new_picture" android:visibility="gone" android:layout_width="78dp" android:layout_height="124dp" android:layout_marginLeft="12dp" android:layout_marginBottom="12dp" android:layout_above="@+id/rl_replay">
            <TextView android:textSize="12sp" android:textColor="@color/normal_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="7dp" android:layout_marginRight="5dp" android:text="@string/common_user_recent_image"/>
            <ImageView android:id="@+id/img_new_picture" android:layout_width="68dp" android:layout_height="68dp" android:layout_marginTop="7dp" android:src="@drawable/plugin_camera_no_pictures" android:scaleType="centerCrop"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvUploading" android:background="@drawable/loading_bg" android:paddingLeft="30dp" android:paddingTop="16dp" android:paddingRight="30dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="录音上传中....." android:layout_centerInParent="true"/>
</RelativeLayout>
