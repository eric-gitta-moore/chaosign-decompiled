<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/parentView" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/viewTitleBar" layout="@layout/common_title_bar2_topiclist"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottomBar" android:layout_below="@+id/viewTitleBar">
        <com.fanzhou.widget.PullToRefreshListView android:scrollbarStyle="outsideOverlay" android:id="@+id/lvTopic" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@color/transparent" android:dividerHeight="0dp" android:headerDividersEnabled="false" android:footerDividersEnabled="false"/>
        <include android:id="@+id/enterLoadding" layout="@layout/page_loading_circle"/>
        <include android:id="@+id/viewReload" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/loading_failed_match_parent_img"/>
        <RelativeLayout android:id="@+id/rlEditTopic" android:background="@drawable/ic_bg_edit_topic" android:visibility="gone" android:layout_width="63dp" android:layout_height="63dp" android:layout_marginRight="16dp" android:layout_marginBottom="22dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
            <TextView android:textSize="12sp" android:textColor="@android:color/white" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="写话题" android:drawableTop="@drawable/ic_edit_topic" android:drawablePadding="4dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center" android:id="@+id/rl_no_list_tip" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="#b3b3b3" android:id="@+id/tv_no_data_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_no_search_result" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/show_course_top" android:background="#efeff4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="32dp" android:layout_alignParentTop="true">
            <View android:background="#cfcfcf" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
            <TextView android:textSize="18sp" android:textColor="#999999" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:text="讨论"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <Button android:textSize="14sp" android:id="@+id/btn_group_info_show" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/ic_go_group_info" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <Button android:textSize="14sp" android:id="@+id/btn_new_topic_show" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="6dp" android:drawableLeft="@drawable/ic_new_topic" android:layout_toLeftOf="@+id/btn_group_info_show" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <include android:id="@+id/bottomBar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentBottom="true" layout="@layout/topiclist_toolbar_bottom"/>
    <ImageView android:id="@+id/to_top" android:paddingBottom="22dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="17dp" android:src="@drawable/img_to_top" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    <include layout="@layout/page_loading_circle"/>
</RelativeLayout>
