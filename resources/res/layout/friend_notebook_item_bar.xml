<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/v_friend_bar" android:background="@drawable/selector_list_note_item" android:padding="12dp" android:layout_width="match_parent" android:layout_height="68dp">
        <ImageView android:id="@+id/ivFriendNoteBookIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="9dp" android:src="@drawable/ic_friend_note" android:layout_centerVertical="true"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toRightOf="@+id/ivFriendNoteBookIcon" android:layout_centerVertical="true">
            <TextView android:textSize="15sp" android:textColor="#000000" android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="12sp" android:textColor="#8e8e93" android:id="@+id/tvMessage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/tvName"/>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textColor="#8e8e93" android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
    <View android:background="#f1f1f1" android:layout_width="match_parent" android:layout_height="12dp"/>
    <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="1px"/>
</LinearLayout>
