<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:id="@+id/viewTitleBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
    <RelativeLayout android:id="@+id/rlLeft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <Button android:textSize="14sp" android:ellipsize="end" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:drawableLeft="@drawable/cl_ic_toolbar_arrow_left_24dp" android:layout_centerVertical="true"/>
        <RelativeLayout android:id="@+id/rl_photo" android:paddingLeft="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.fanzhou.widget.CircleImageView android:id="@+id/ivPhoto" android:layout_width="34dp" android:layout_height="34dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" android:layout_centerVertical="true" ss:border_color="@color/user_line" ss:border_width="1px" ss:is_circle="true"/>
            <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/ivPhoto" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="18sp" android:textColor="#ff333333" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="92dp" android:layout_marginRight="92dp" android:layout_centerInParent="true"/>
    <RelativeLayout android:id="@+id/rlRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <Button android:textSize="14sp" android:id="@+id/btnRight" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <Button android:textSize="14sp" android:id="@+id/btnRight2" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_toLeftOf="@+id/btnRight" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
