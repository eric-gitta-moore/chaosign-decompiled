<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/llReserve" android:background="#f3f3f3" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlCurReserve" android:background="@android:color/white" android:paddingLeft="16dp" android:paddingTop="21dp" android:paddingRight="21dp" android:paddingBottom="21dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="9dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/llReserveDetail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tvCancelReserve">
                <TextView android:textSize="15sp" android:textColor="#000000" android:id="@+id/tvCurReserve" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/my_cur_reserve" android:drawableLeft="@drawable/cur_reserve" android:drawablePadding="7dp"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="31dp" android:layout_marginTop="21dp">
                    <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/time"/>
                    <TextView android:textSize="13sp" android:textColor="#333333" android:id="@+id/tvReserveTime" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="31dp" android:layout_marginTop="14dp">
                    <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/address"/>
                    <TextView android:textSize="13sp" android:textColor="#333333" android:id="@+id/tvReserveAddress" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="31dp" android:layout_marginTop="14dp">
                    <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/seat"/>
                    <TextView android:textSize="13sp" android:textColor="#333333" android:id="@+id/tvReserveSeatCode" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/tvCancelReserve" android:background="@drawable/blue_border_corner_0099ff" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/my_reserve_cancel" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center_vertical" android:id="@+id/tvFinishReserve" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="56dp" android:text="@string/my_finish_reserve" android:drawableLeft="@drawable/finish_reserve" android:drawablePadding="7dp"/>
            <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
