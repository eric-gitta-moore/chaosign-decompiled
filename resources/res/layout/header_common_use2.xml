<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@android:color/white" android:paddingBottom="1px" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="65dp">
        <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp">
            <com.fanzhou.widget.CircleImageView android:id="@+id/iv_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerInParent="true" app:is_circle="false" app:x_radius="4dp" app:y_radius="4dp"/>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/message_contact" android:maxLines="1" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center_vertical" android:layout_width="@dimen/dp_8" android:layout_height="@dimen/dp_14" android:src="@mipmap/next_icon"/>
    </LinearLayout>
    <View android:id="@+id/viewline" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="8dp"/>
</LinearLayout>
