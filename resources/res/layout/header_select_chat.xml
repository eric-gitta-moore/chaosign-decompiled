<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/v_create_new_chat" android:layout_width="match_parent" android:layout_height="55dp">
        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="添加联系人" android:layout_weight="1"/>
        <ImageView android:id="@+id/icon_next" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/ic_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </LinearLayout>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:gravity="center_vertical" android:background="#f7f7f7" android:layout_width="match_parent" android:layout_height="25dp">
        <TextView android:textSize="10sp" android:textColor="#999999" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="最近聊天"/>
    </LinearLayout>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
