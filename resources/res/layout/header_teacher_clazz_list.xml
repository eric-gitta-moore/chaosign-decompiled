        <TextView android:textSize="14sp" android:textColor="@color/color_a6abb3" android:id="@+id/tv_label_clazz" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_teacher_class" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_999999" android:id="@+id/tv_add_clazz" android:paddingLeft="12dp" android:paddingTop="9dp" android:paddingRight="16dp" android:paddingBottom="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
