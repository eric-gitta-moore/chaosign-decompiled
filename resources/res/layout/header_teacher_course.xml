<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.mobile.widget.StiffSearchBar android:id="@+id/search_bar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:id="@+id/rl_cover" android:visibility="gone" android:layout_width="match_parent" android:layout_height="160dp">
        <ImageView android:id="@+id/iv_cover" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_default_image_bg" android:scaleType="centerCrop"/>
        <ImageView android:id="@+id/video_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_play" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/course_toolbar" android:layout_width="match_parent" android:layout_height="85dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
        <TextView android:textSize="13sp" android:textColor="#333333" android:gravity="center" android:id="@+id/item_ppt" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/course_ppt" android:drawableTop="@drawable/course_teacher_ppt" android:drawablePadding="6dp" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="#333333" android:gravity="center" android:id="@+id/item_catalog" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/course_chapter" android:drawableTop="@drawable/course_chapter_teacher" android:drawablePadding="6dp" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="#333333" android:gravity="center" android:id="@+id/item_resource" android:padding="8dp" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/course_teacher_resource" android:drawableTop="@drawable/course_resources_teacher" android:drawablePadding="6dp" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="#333333" android:gravity="center" android:id="@+id/item_faq" android:padding="8dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/course_teacher_discuss" android:drawableTop="@drawable/course_class_chat" android:drawablePadding="6dp" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="#333333" android:gravity="center" android:id="@+id/item_statistic" android:padding="8dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/course_teacher_statistic" android:drawableTop="@drawable/course_statistic_teacher" android:drawablePadding="6dp" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="#333333" android:gravity="center" android:id="@+id/item_homework" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/course_teacher_homework" android:drawableTop="@drawable/course_homework_teacher" android:drawablePadding="6dp" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="#333333" android:gravity="center" android:id="@+id/item_notice" android:padding="8dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/course_teacher_notice" android:drawableTop="@drawable/course_notice_teacher" android:drawablePadding="6dp" android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_class_label" android:background="@color/color_f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="29dp">
        <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/tv_label_clazz" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_teacher_class" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="#0099ff" android:id="@+id/tv_label_all_mission" android:paddingLeft="12dp" android:paddingTop="9dp" android:paddingRight="15dp" android:paddingBottom="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/tabs_mission" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#cccccc" android:layout_width="match_parent" android:layout_height="1px"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/rg_tabs" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <RadioButton android:textSize="16sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/rb_begin" android:background="@android:color/transparent" android:padding="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:checked="true" android:button="@null" android:text="未开始(0)" android:layout_weight="1"/>
            <RadioButton android:textSize="16sp" android:textColor="#808080" android:gravity="center" android:id="@+id/rb_start" android:background="@android:color/transparent" android:padding="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:button="@null" android:text="进行中(0)" android:layout_weight="1"/>
            <RadioButton android:textSize="16sp" android:textColor="#808080" android:gravity="center" android:id="@+id/rb_end" android:background="@android:color/transparent" android:padding="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:button="@null" android:text="已结束(0)" android:layout_weight="1"/>
        </RadioGroup>
        <LinearLayout android:orientation="horizontal" android:id="@+id/indicator" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
            <ImageView android:id="@+id/iv_indicator" android:background="#0099ff" android:layout_width="0dp" android:layout_height="1dp" android:scaleType="centerCrop" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#b2b2b2" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>
