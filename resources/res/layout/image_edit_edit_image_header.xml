<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/banner" android:background="@color/image_edit_bottom_banner_bg" android:layout_width="match_parent" android:layout_height="@dimen/image_edit_height_top_bar" android:layout_alignParentTop="true">
    <TextView android:textSize="17sp" android:textColor="#ffffff" android:layout_gravity="left" android:id="@+id/back_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/image_edit_cancel" android:layout_centerVertical="true"/>
    <ViewFlipper android:gravity="center" android:id="@+id/banner_flipper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:flipInterval="1000" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <TextView android:textSize="17sp" android:textColor="#fff" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/save_btn" android:layout_width="64dp" android:layout_height="30dp" android:text="@string/image_edit_save"/>
        <TextView android:textSize="17sp" android:textColor="#ffffff" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/apply" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/image_edit_apply"/>
    </ViewFlipper>
</RelativeLayout>
