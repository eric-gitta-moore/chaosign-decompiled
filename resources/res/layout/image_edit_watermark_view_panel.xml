<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/toolbar_panel" android:layout_width="match_parent" android:layout_height="40dp">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_close" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/image_edit_icon_watermark_close" android:scaleType="centerInside" android:layout_alignParentStart="true"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/view_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_centerHorizontal="true">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="16dp" android:textColor="#666666" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_style" android:background="@drawable/image_edit_watermark_selector_panel_title" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="样式" android:singleLine="true"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="16dp" android:textColor="#666666" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_font" android:background="@drawable/image_edit_watermark_selector_panel_title" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="字体" android:singleLine="true"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_ok" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/image_edit_icon_watermark_ok" android:scaleType="centerInside" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/view_style" android:background="#ffffff" android:paddingBottom="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar_panel">
        <com.chaoxing.imageeditlibrary.watermark.ui.view.WatermarkColorView android:id="@+id/layout_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:paddingStart="5dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_alpha" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textColor="#000000" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="不透明度" android:singleLine="true"/>
            <SeekBar android:layout_gravity="center_vertical" android:id="@+id/seekbar_alpha" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:maxHeight="2dp" android:max="100" android:progress="50" android:secondaryProgress="0" android:progressDrawable="@drawable/image_edit_seekbar_style" android:minHeight="2dp" android:thumb="@drawable/image_edit_icon_watermark_seekbar_thumb" android:thumbOffset="0dp" android:layout_weight="1" android:paddingStart="0dp" android:paddingEnd="0dp" android:layout_marginStart="20dp"/>
        </LinearLayout>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/layout_tiled" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textColor="#000000" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="平铺效果" android:singleLine="true" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/switch_tiled" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:kswAnimationDuration="300" app:kswBackDrawable="@drawable/image_edit_switch_background" app:kswThumbColor="#ffffff" app:kswThumbHeight="22dp" app:kswThumbRangeRatio="1.8" app:kswThumbWidth="22dp"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/layout_format" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textColor="#000000" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="版式" android:singleLine="true"/>
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/view_format_horizontal" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_format_horizontal" android:background="@drawable/image_edit_watermark_selector_format" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/image_edit_watermark_selector_format_horizontal"/>
                    <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#000000" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="水平" android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/view_format_oblique" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp">
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_format_oblique" android:background="@drawable/image_edit_watermark_selector_format" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/image_edit_watermark_selector_format_oblique"/>
                    <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#000000" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="斜式" android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.chaoxing.imageeditlibrary.watermark.ui.view.WatermarkFontView android:id="@+id/view_font" android:background="#ffffff" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignTop="@+id/view_style" android:layout_alignBottom="@+id/view_style"/>
</RelativeLayout>
