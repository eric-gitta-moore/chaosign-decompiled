<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:padding="0dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="0dp">
    <androidx.viewpager.widget.ViewPager android:id="@+id/vpImages" android:padding="0dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="0dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="#80000000" android:layout_width="match_parent" android:layout_height="30dp" android:layout_alignParentBottom="true">
        <TextView android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvPictureNewsTitle" android:paddingLeft="10dp" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:singleLine="true" android:layout_weight="1" style="@style/Text_White_16"/>
        <com.chaoxing.mobile.widget.MyPagerIndicators android:gravity="center_vertical" android:id="@+id/pagerIndicators" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/loadStateContainer" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
