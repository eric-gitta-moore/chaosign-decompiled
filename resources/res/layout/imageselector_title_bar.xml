<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:id="@+id/imageselector_title_bar_layout" android:background="@color/black" android:layout_width="match_parent" android:layout_height="50dp">
    <LinearLayout android:gravity="center" android:id="@+id/back" android:layout_width="50dp" android:layout_height="50dp">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/imageselector_back" android:contentDescription="@null"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="22sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/title_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/picture"/>
    </LinearLayout>
    <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="20sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/title_right" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="50dp" android:text="@string/finish"/>
    </LinearLayout>
</RelativeLayout>
