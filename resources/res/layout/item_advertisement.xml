<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" android:layout_above="@+id/ll_logo"/>
    <RelativeLayout android:gravity="center_vertical" android:layout_gravity="bottom" android:id="@+id/ll_logo" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="126dp">
        <ImageView android:id="@+id/iv_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="100dp" android:layout_marginRight="20dp" android:src="@drawable/logo"/>
        <TextView android:id="@+id/line" android:background="@color/black" android:layout_width="1dp" android:layout_height="30dp" android:layout_toRightOf="@+id/iv_logo"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:id="@+id/textView2" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_toRightOf="@+id/line" android:layout_alignBottom="@+id/iv_logo" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/line"/>
    </RelativeLayout>
    <TextView android:textSize="11sp" android:textColor="#9b9b9b" android:gravity="center" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/btn_time" android:background="@drawable/shape_circle_splash" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:alpha="0.5"/>
</FrameLayout>
