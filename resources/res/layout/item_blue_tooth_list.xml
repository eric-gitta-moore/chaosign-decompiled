<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="60dp">
    <ImageView android:id="@+id/bluetoothIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:src="@mipmap/as_blue_tooth_icon" android:scaleType="fitCenter" android:layout_centerVertical="true" android:layout_marginStart="@dimen/ui_10_dip" android:layout_alignParentStart="true"/>
