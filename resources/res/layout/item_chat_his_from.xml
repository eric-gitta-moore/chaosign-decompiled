<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:id="@+id/view_item_from" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.fanzhou.widget.CircleImageView android:id="@+id/iv_icon_avatar" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="8dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" android:contentDescription="@null" ss:border_color="#f2f2f2" ss:border_width="1px" ss:is_circle="false" ss:x_radius="5dp" ss:y_radius="5dp"/>
    <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="4dp" android:layout_marginBottom="-1dp" android:maxLines="1" android:layout_toRightOf="@+id/iv_icon_avatar"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/vg_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/iv_icon_avatar" android:layout_below="@+id/tv_user_name">
        <ViewStub android:id="@+id/view_text_message" android:layout="@layout/view_text_message_from" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ViewStub android:id="@+id/view_text_list_message" android:layout="@layout/view_text_list_message_from" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ViewStub android:id="@+id/view_image_text_message" android:layout="@layout/view_image_text_message_from" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ViewStub android:id="@+id/view_voice_message" android:layout="@layout/view_voice_message_from" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ViewStub android:id="@+id/view_voice_text_message" android:layout="@layout/view_voice_text_message_from" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ViewStub android:id="@+id/view_image_message" android:layout="@layout/view_image_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp"/>
        <ViewStub android:id="@+id/view_video_message" android:layout="@layout/view_video_message_from" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ViewStub android:id="@+id/view_attachment_message" android:layout="@layout/view_attachment_message" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-4dp" android:layout_marginRight="-4dp" android:src="@drawable/chat_voice_unread" android:layout_alignTop="@+id/vg_message" android:layout_alignRight="@+id/vg_message"/>
    <ImageView android:id="@+id/iv_jielong" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="8dp" android:src="@drawable/ic_chat_message_jielong" android:layout_toRightOf="@+id/vg_message" android:layout_alignTop="@+id/vg_message" android:layout_alignBottom="@+id/vg_message"/>
    <ProgressBar android:id="@+id/pb_status" android:paddingTop="15dp" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/vg_message" android:layout_centerVertical="true" style="?android:attr/progressBarStyleSmall"/>
</RelativeLayout>
