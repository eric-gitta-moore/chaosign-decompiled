<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="#cccccc" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp" android:layout_marginTop="8dp" android:layout_marginRight="12dp"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp">
        <View android:background="#cccccc" android:layout_width="1px" android:layout_height="match_parent"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="56dp">
            <com.chaoxing.fanya.aphone.view.AsyncImageView android:layout_gravity="center_vertical" android:id="@+id/iv_course" android:background="@drawable/default_course" android:layout_width="78dp" android:layout_height="48dp" android:layout_marginLeft="13dp" android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="17dp" android:layout_weight="1">
            <TextView android:textSize="17sp" android:textColor="#333333" android:id="@+id/tv_course_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:singleLine="true"/>
            <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tv_teacher_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp"/>
        </LinearLayout>
        <View android:background="#cccccc" android:layout_width="1px" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
