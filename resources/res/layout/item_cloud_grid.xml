        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/logo" android:visibility="gone" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginRight="7dp" android:src="@drawable/ic_ppt_file" android:layout_centerVertical="true" app:riv_corner_radius="@dimen/adaptive_4dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/public_list_title" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_name" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_toRightOf="@+id/logo"/>
    </RelativeLayout>
</RelativeLayout>
