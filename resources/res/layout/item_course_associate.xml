<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <CheckBox android:layout_gravity="center_vertical" android:id="@+id/cb_selected" android:layout_width="@dimen/dp_24" android:layout_height="@dimen/dp_24" android:button="@drawable/checkbox_group_member" android:layout_marginStart="15dp"/>
    <com.fanzhou.widget.CircleImageView android:id="@+id/ivPhoto" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_default_image" android:scaleType="fitCenter" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginStart="15dp" ss:border_color="#999d9e" ss:border_width="1px" ss:is_circle="false" ss:x_radius="4dp" ss:y_radius="4dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1">
        <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_course_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="语文" android:maxLines="2"/>
        <TextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_owner_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_2" android:text="张三" android:singleLine="true"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_next" android:layout_width="@dimen/dp_8" android:layout_height="@dimen/dp_14" android:layout_marginRight="@dimen/dp_15" android:src="@mipmap/next_icon"/>
</LinearLayout>
