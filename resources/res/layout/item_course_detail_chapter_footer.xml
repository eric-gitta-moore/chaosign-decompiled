    <RelativeLayout android:id="@+id/course_footer" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:textSize="16sp" android:textColor="#ffcbcbcb" android:id="@+id/tvPublishHint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/list_end" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/course_refresh_tip" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:textSize="16sp" android:textColor="#ffcbcbcb" android:id="@+id/tv_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下拉刷新可查看是否有新活动" android:layout_centerInParent="true"/>
