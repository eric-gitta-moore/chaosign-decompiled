<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="160dp">
        <ImageView android:id="@+id/course_img" android:layout_width="match_parent" android:layout_height="160dp" android:src="@drawable/default_course" android:scaleType="centerCrop"/>
        <ImageView android:id="@+id/video_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/media_screen_play" android:layout_centerInParent="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/bg_blue" android:gravity="center_vertical" android:id="@+id/course_info" android:background="@drawable/blue_border_corner_0099ff_circle_4" android:padding="4dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_marginBottom="12dp" android:text="@string/fanya_course_info" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View android:background="#cfcfcf" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/study_course" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/class_chat" android:visibility="gone" android:layout_width="match_parent" android:layout_height="48dp">
            <RelativeLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="80dp">
                <TextView android:textSize="15sp" android:textColor="@color/bg_blue" android:ellipsize="end" android:id="@+id/class_name" android:paddingRight="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="安居客和斯蒂芬京哈靠技ddd接受的发s" android:maxLines="1" android:drawableLeft="@drawable/class_chat" android:drawablePadding="6dp"/>
                <com.chaoxing.mobile.chat.widget.RedCircleTipView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/unread_count_one" android:background="@null" android:visibility="gone" android:layout_width="22dp" android:layout_height="22dp" android:layout_marginLeft="-22dp" android:text="10" android:layout_toRightOf="@+id/class_name"/>
            </RelativeLayout>
            <TextView android:textSize="13sp" android:textColor="#666666" android:id="@+id/class_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/activity_revise_course"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/class_line" android:background="#eae9ee" android:visibility="gone" android:layout_width="match_parent" android:layout_height="12dp">
            <View android:background="#cfcfcf" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
            <View android:background="#cfcfcf" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="14dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/header_bar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/rl_chat" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_chat_student" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="群聊" android:drawableTop="@drawable/course_discuss_teacher" android:drawablePadding="8dp" android:layout_weight="1"/>
                <TextView android:textSize="10sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_unread_message" android:background="@drawable/shape_mission_circle" android:layout_width="9dp" android:layout_height="9dp" android:layout_marginLeft="-8dp" android:layout_toRightOf="@+id/course_chat_student"/>
            </RelativeLayout>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_datum" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/topiclist_item_material" android:drawableTop="@drawable/course_resources_teacher" android:drawablePadding="8dp" android:layout_weight="1"/>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_discuss_student" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="讨论" android:drawableTop="@drawable/course_class_chat" android:drawablePadding="8dp" android:layout_weight="1"/>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_work_student" android:padding="8dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="作业" android:drawableTop="@drawable/course_homework_teacher" android:drawablePadding="8dp" android:layout_weight="1"/>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_exam_student" android:padding="8dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/course_exam" android:drawableTop="@drawable/course_exam_teacher" android:drawablePadding="8dp" android:layout_weight="1"/>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_question" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="答疑" android:drawableTop="@drawable/course_question" android:drawablePadding="8dp" android:layout_weight="1"/>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_notice_student" android:padding="8dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/message_notice" android:drawableTop="@drawable/course_notice_teacher" android:drawablePadding="8dp" android:layout_weight="1"/>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_thesis_student" android:padding="8dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="论文" android:drawableTop="@drawable/course_thesis_teacher" android:drawablePadding="8dp" android:layout_weight="1"/>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_classmates" android:padding="8dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="成员" android:drawableTop="@drawable/course_classmates" android:drawablePadding="8dp" android:layout_weight="1"/>
            <TextView android:textSize="11sp" android:textColor="#333333" android:gravity="center" android:id="@+id/course_information" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fanya_course_info" android:drawableTop="@drawable/course_information" android:drawablePadding="8dp" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="#eae9ee" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#cfcfcf" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
            <View android:background="#cfcfcf" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="14dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="18sp" android:textColor="@color/normal_blue" android:gravity="center_vertical" android:id="@+id/tv_course_info" android:background="#eae9ef" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="68dp" android:text="@string/fanya_course_info" android:drawableRight="@drawable/arrow_right_blue"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/tabs_lesson" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#cccccc" android:layout_width="match_parent" android:layout_height="1px"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/rg_tabs" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <RadioButton android:textSize="16sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/rb_lesson" android:background="@android:color/transparent" android:padding="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:checked="true" android:button="@null" android:text="课程目录" android:layout_weight="1"/>
            <RadioButton android:textSize="16sp" android:textColor="#808080" android:gravity="center" android:id="@+id/rb_mission" android:background="@android:color/transparent" android:padding="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:button="@null" android:text="活动" android:layout_weight="1"/>
        </RadioGroup>
        <LinearLayout android:orientation="horizontal" android:id="@+id/indicator" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <ImageView android:id="@+id/iv_indicator" android:background="#0099ff" android:layout_width="0dp" android:layout_height="1dp" android:scaleType="centerCrop" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#b2b2b2" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_mission" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
        <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerHorizontal="true">
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="15sp" android:textColor="@color/normal_title_color" android:gravity="center" android:id="@+id/tv_lesson" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/course_chapter"/>
                <View android:id="@+id/line_lesson" android:background="@color/normal_blue" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/tab_mission" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="15sp" android:textColor="@color/normal_blue" android:id="@+id/tv_mission" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="活动" android:layout_centerInParent="true"/>
                <TextView android:textSize="10sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_unfinish_tip" android:background="@drawable/shape_mission_circle" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="-3dp" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/tv_mission"/>
                <View android:id="@+id/line_mission" android:background="@color/normal_blue" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/no_mission_tip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="150dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_no_activity" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/no_chapter_tip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="150dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_cotent" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/course_top" android:background="#eae9ef" android:visibility="gone" android:layout_width="match_parent" android:layout_height="68dp">
        <TextView android:textSize="18sp" android:textColor="@color/normal_title_color" android:gravity="center_vertical" android:id="@+id/tv_catalog" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:text="目录"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/job_unfinish_tip" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="24dp">
            <TextView android:textSize="16sp" android:textColor="#333333" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/student_pendingTask"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_job_unfinish_count" android:background="@drawable/yellownode" android:visibility="visible" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
        <View android:id="@+id/view_line" android:background="@color/base_divider_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
