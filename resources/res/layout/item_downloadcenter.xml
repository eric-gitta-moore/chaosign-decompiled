<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.mobile.downloadcenter.ui.SwipeLeftDeleteItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:my="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="65dp" android:minHeight="65dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="60dp" android:layout_height="match_parent" android:text="删除"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="10dp">
                <com.fanzhou.widget.CircleImageView android:id="@+id/img_icon" android:layout_width="40dp" android:layout_height="40dp" android:scaleType="centerCrop" my:is_circle="false" my:x_radius="4dp" my:y_radius="4dp"/>
            </RelativeLayout>
            <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/rlContainer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/rlRightTag">
                    <RelativeLayout android:orientation="horizontal" android:paddingRight="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="43dp" android:text="专题名" android:singleLine="true"/>
                        <RelativeLayout android:id="@+id/rlTag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-38dp" android:layout_toRightOf="@+id/tvTitle" android:layout_centerVertical="true">
                            <TextView android:textSize="10dp" android:textColor="#a8a8a8" android:gravity="center" android:id="@+id/ivDownloaded" android:background="@drawable/bg_circular_bead_cccccc_tran_bg" android:visibility="gone" android:layout_width="38dp" android:layout_height="16dp" android:text="@string/downloadres_isDownloaded"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <ProgressBar android:id="@+id/pbProgress" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" style="@style/DownloadCenterProgressHorizontal"/>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
                        <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvSpeed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="122.0k/s" android:layout_alignParentRight="true"/>
                        <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvSize" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12.6M/22.6M"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView android:gravity="end" android:id="@+id/rlRightTag" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="25m" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/rlBtnContaioner" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
                <TextView android:textSize="13sp" android:gravity="center" android:id="@+id/tvOptioin" android:background="@drawable/bg_btn_downloadcenter_border_white" android:layout_width="50dp" android:layout_height="24dp" android:text="继续" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="65dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</com.chaoxing.mobile.downloadcenter.ui.SwipeLeftDeleteItem>
