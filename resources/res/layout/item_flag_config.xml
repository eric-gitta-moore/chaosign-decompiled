<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center_vertical" android:id="@+id/tv_flag" android:layout_width="wrap_content" android:layout_height="44dp"/>
        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/switch_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
    </RelativeLayout>
    <TextView android:gravity="center_horizontal" android:id="@+id/tv_footer" android:background="#f5f6f8" android:paddingTop="20dp" android:paddingBottom="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/list_end"/>
    <View android:id="@+id/divider_view" android:background="#f5f6f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="8dp"/>
</LinearLayout>
