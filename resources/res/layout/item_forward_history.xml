<?xml version="1.0" encoding="utf-8"?>
<com.fanzhou.widget.ViewSwipeListItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="56dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/tvTop" android:layout_centerVertical="true">
                <ViewFlipper android:id="@+id/vf_avatar" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" android:layout_centerVertical="true">
                    <ImageView android:id="@+id/iv_avatar" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter"/>
                    <com.fanzhou.widget.CircleImageView android:id="@+id/civ_avatar" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" app:is_circle="false" app:x_radius="4dp" app:y_radius="4dp"/>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.chaoxing.mobile.chat.widget.ConversationAvatar2 android:id="@+id/ga_avatar" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="match_parent"/>
                        <TextView android:textSize="10sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_self" android:background="@drawable/ic_self_tag_rectangle" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_alignLeft="@+id/ga_avatar" android:layout_alignRight="@+id/ga_avatar" android:layout_alignBottom="@+id/ga_avatar"/>
                    </RelativeLayout>
                </ViewFlipper>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_history" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/vf_avatar" android:layout_centerVertical="true">
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="16sp" android:textColor="#ff333333" android:ellipsize="end" android:id="@+id/tvHistory" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                        <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tvTag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:maxLines="1" android:layout_centerVertical="true"/>
                    </LinearLayout>
                    <TextView android:textSize="12sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tvDesc" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="#cccccc" android:id="@+id/tvTopTag" android:background="@drawable/bg_circular_bead_a8a8a8" android:paddingLeft="4dp" android:paddingRight="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/note_top" android:maxLines="1" android:layout_toRightOf="@+id/ll_history" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <ImageView android:id="@+id/iv_option" android:paddingTop="8dp" android:paddingBottom="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:src="@drawable/ic_recent_top_sign" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/tvTop" android:background="@drawable/bg_circular_bead_ff0099ff_1" android:paddingLeft="11dp" android:paddingTop="3dp" android:paddingRight="11dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/note_top" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <View android:background="#ffd9d9d9" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/options" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_option" android:background="@color/color_commen_edit" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_option2" android:background="@color/color_commen_del" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</com.fanzhou.widget.ViewSwipeListItem>
