<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.study.contacts.widget.ViewGropChatSwipeListItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:petal="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox android:layout_gravity="center" android:id="@+id/cb_selected" android:focusable="false" android:visibility="visible" android:clickable="false" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginLeft="10dp" android:layout_marginRight="8dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
        <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <RelativeLayout android:id="@+id/rlCategory" android:background="#ffefeff4" android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingRight="12dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tvCategory" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="管理员"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlMember" android:paddingLeft="8dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="13sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/tvMessageCount" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:text="0" android:drawableRight="@drawable/ic_chat_search_person_next" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
                <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/icon_user_head_portrait" android:layout_centerVertical="true" petal:border_color="@color/avatar_border" petal:border_width="1px" petal:is_circle="false" petal:x_radius="10px" petal:y_radius="10px"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_toLeftOf="@+id/linearl_attention" android:layout_toRightOf="@+id/ivAvatar" android:layout_alignTop="@+id/ivAvatar" android:layout_alignBottom="@+id/ivAvatar" android:layout_centerHorizontal="true">
                    <TextView android:textSize="16sp" android:textColor="#ff666666" android:ellipsize="end" android:id="@+id/tvMemberName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="名字" android:maxEms="6" android:singleLine="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/tvMemberTag" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="管理员" android:layout_toRightOf="@+id/tvMemberName" android:layout_centerVertical="true"/>
                    <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_toRightOf="@+id/tvMemberTag" android:layout_centerVertical="true"/>
                    <com.chaoxing.fanya.flower.ViewMoocPetal android:id="@+id/statisDataView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:layout_toRightOf="@+id/tvMemberTag" android:layout_centerVertical="true" petal:canvasSize="25dp"/>
                </RelativeLayout>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/linearl_attention" android:paddingRight="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                    <TextView android:textSize="13sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/tvAddFriend" android:layout_width="72dp" android:layout_height="32dp" android:text="@string/add_friend_attention"/>
                    <TextView android:textSize="9sp" android:textColor="#999999" android:id="@+id/tvAttentionMe" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/focused_tag"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/rlOperationPanel" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btnRight" android:background="@color/color_commen_setadmin" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/admin_set_add"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btnRight2" android:background="@color/color_commen_del" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/common_delete"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="1dp"/>
</com.chaoxing.study.contacts.widget.ViewGropChatSwipeListItem>
