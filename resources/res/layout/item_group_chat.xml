<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.study.contacts.widget.GropChatItemView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="65dp" android:layout_marginRight="-81dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/viewFront" android:background="@drawable/selector_list_item" android:paddingLeft="15dp" android:paddingRight="15dp" android:descendantFocusability="blocksDescendants" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <CheckBox android:id="@+id/cb_selected" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginRight="10dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                    <com.chaoxing.mobile.chat.widget.ConversationAvatar2 android:id="@+id/iv_icon" android:background="#ebebeb" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" android:layout_centerVertical="true"/>
                    <LinearLayout android:gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="34dp" android:text="Medium Text" android:singleLine="true"/>
                            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvContent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Small Text" android:singleLine="true"/>
                        </LinearLayout>
                        <TextView android:textSize="12sp" android:textColor="#a8a8a8" android:gravity="center" android:id="@+id/tvTopTag" android:background="@drawable/bg_circular_bead_ff999999" android:visibility="gone" android:layout_width="32dp" android:layout_height="18dp" android:layout_marginLeft="-33dp" android:layout_marginRight="6dp" android:text="@string/note_top"/>
                    </LinearLayout>
                    <TextView android:textSize="12sp" android:textColor="#b3b3b3" android:id="@+id/tvRight" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="5dp"/>
                </LinearLayout>
                <View android:id="@+id/spinner" android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="50dp" android:layout_marginBottom="1px"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="50dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/bookCollections_Delete"/>
    </LinearLayout>
</com.chaoxing.study.contacts.widget.GropChatItemView>
