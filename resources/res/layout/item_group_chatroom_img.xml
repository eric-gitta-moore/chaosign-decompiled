<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/item_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="2017-06-15" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/item_time">
        <ImageView android:id="@+id/item_iv_avatar" android:layout_width="40dp" android:layout_height="40dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/item_iv_avatar">
            <TextView android:id="@+id/item_tv_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="刘罗锅"/>
            <ImageView android:id="@+id/item_iv_img" android:background="@drawable/chat_im_from_bg_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_avatar_bg"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
