<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fanzhou="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/vGap" android:background="#f0eff3" android:layout_width="match_parent" android:layout_height="8dp"/>
    <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="45dp" android:layout_height="45dp" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:layout_marginRight="6dp">
            <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ga_avatar" android:background="@drawable/bg_group_head_circle" android:layout_width="45dp" android:layout_height="45dp"/>
            <ImageView android:id="@+id/ivAttention" android:visibility="gone" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/icon_attention_avatars"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <TextView android:textSize="14sp" android:textColor="#0066cc" android:id="@+id/tv_notebook" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp"/>
                <TextView android:textSize="10sp" android:textColor="#0099ff" android:id="@+id/tvAddFriend" android:background="@drawable/addfriend_btn_bg" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add_friend_attention"/>
                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                <TextView android:textSize="10sp" android:textColor="#ffffff" android:id="@+id/iv_icon" android:background="@drawable/dynamic_textview_gray_shape" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ivDel" android:paddingLeft="10dp" android:paddingTop="2dp" android:paddingRight="10dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/group_popwindow_del"/>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="#000000" android:ellipsize="end" android:id="@+id/tv_note_title" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:maxLines="3"/>
            <TextView android:textSize="15sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_note_content" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            <include android:id="@+id/vg_images" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/layout_item_images"/>
            <com.chaoxing.mobile.group.ViewAttachment android:id="@+id/view_forward_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp">
                <TextView android:textSize="12sp" android:textColor="#ff0099ff" android:ellipsize="end" android:gravity="right" android:id="@+id/tv_creator" android:paddingLeft="2dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:text="" android:singleLine="true"/>
                <TextView android:textSize="12sp" android:textColor="#aeaeae" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp">
                    <TextView android:textSize="12sp" android:textColor="#0099ff" android:id="@+id/tv_read_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="阅读:0"/>
                    <TextView android:textSize="12sp" android:textColor="#0099ff" android:id="@+id/tv_delete" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:text="@string/common_delete" android:layout_toRightOf="@+id/tv_read_count"/>
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                        <RelativeLayout android:id="@+id/rlTransfer" android:paddingLeft="6dp" android:paddingRight="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:id="@+id/ivTransfer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_do_transfer" android:layout_centerVertical="true"/>
                            <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvTransfer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="12" android:layout_toRightOf="@+id/ivTransfer" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <RelativeLayout android:id="@+id/rlPraise" android:paddingLeft="10dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:id="@+id/ivPraise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_do_praise" android:layout_centerVertical="true"/>
                            <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvPraise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="114" android:layout_toRightOf="@+id/ivPraise" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <RelativeLayout android:id="@+id/rlReply" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp">
                            <ImageView android:id="@+id/ivReply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_reply" android:layout_centerVertical="true"/>
                            <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvReply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="50" android:layout_toRightOf="@+id/ivReply" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/llComment" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
                <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp">
                    <TextView android:textSize="12sp" android:textColor="#0066cc" android:id="@+id/tvCommentName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="吴美蓉:"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvComment" android:layout_width="0dp" android:layout_height="wrap_content" android:text="最新评论最新评论" android:lines="1" android:layout_weight="1"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvCommentTime" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="09:48"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
