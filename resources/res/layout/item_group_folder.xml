<?xml version="1.0" encoding="utf-8"?>
<com.fanzhou.widget.ViewSwipeListItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="66dp" android:layout_weight="1">
            <CheckBox android:id="@+id/cb_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:button="@drawable/checkbox_group_member" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
            <RelativeLayout android:id="@+id/rl_icon" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/cb_selector" app:layout_constraintTop_toTopOf="0" app:layout_goneMarginLeft="15dp">
                <com.fanzhou.widget.CircleImageView android:id="@+id/iv_icon" android:layout_width="42dp" android:layout_height="42dp" android:src="@drawable/ic_folder_course_group_42dp"/>
                <TextView android:textSize="10sp" android:textColor="@android:color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_message_tip" android:background="@drawable/shape_red_circle_ff" android:visibility="visible" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="30dp" android:maxLines="1"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_option" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
                <TextView android:textSize="13sp" android:textColor="#b3b3b3" android:gravity="center_vertical" android:id="@+id/tv_group_count" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="5dp" android:layout_centerVertical="true" style="@style/group_sub_text"/>
                <TextView android:gravity="center_vertical" android:id="@+id/tvMoveEnterFolder" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_enter" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="5dp" android:layout_centerVertical="true" style="@style/group_blue_text"/>
                <ImageView android:id="@+id/iv_sort" android:paddingLeft="15dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_sort_36dp" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_text_content" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="5dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/rl_option" app:layout_constraintStart_toEndOf="@+id/rl_icon" app:layout_constraintTop_toTopOf="0">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llContentRoom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                    <TextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1" style="@style/group_title_text"/>
                    <TextView android:id="@+id/tv_top_tag" android:background="@drawable/bg_circular_bead_ff999999" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/note_top" android:maxLines="1" style="@style/group_sub_text_12"/>
                </LinearLayout>
                <TextView android:textColor="#faa316" android:ellipsize="end" android:id="@+id/tv_message" android:paddingTop="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="1" android:layout_below="@+id/llContentRoom" android:layout_alignLeft="@+id/llContentRoom" style="@style/group_sub_text"/>
            </RelativeLayout>
            <androidx.constraintlayout.widget.Barrier android:id="@+id/barrier" android:layout_width="wrap_content" android:layout_height="wrap_content" app:barrierDirection="0" app:constraint_referenced_ids="rl_text_content"/>
            <View android:id="@+id/devider" android:background="@color/DividerColor" android:layout_width="0dp" android:layout_height="1px" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="@+id/barrier"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_options" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_option3" android:background="#f7a923" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvMove" android:background="@color/color_commen_move" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/bookCollections_Move"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_option" android:background="#fa372d" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_option2" android:background="@color/color_commen_edit" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</com.fanzhou.widget.ViewSwipeListItem>
