<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@android:color/white" android:paddingBottom="1px" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="65dp">
        <RelativeLayout android:id="@+id/icon" android:layout_width="56dp" android:layout_height="56dp" android:layout_centerVertical="true">
            <com.fanzhou.widget.CircleImageView android:id="@+id/iv_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerInParent="true" app:is_circle="false" app:x_radius="4dp" app:y_radius="4dp"/>
            <TextView android:textSize="10sp" android:textColor="@android:color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_red_count" android:background="@drawable/shape_red_circle_ff" android:layout_width="18dp" android:layout_height="18dp" android:maxLines="1" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:maxLines="1" android:layout_toLeftOf="@+id/tvRightArrow" android:layout_toRightOf="@+id/icon" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/tvRightArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#fff5f6f8" android:layout_width="match_parent" android:layout_height="7dp"/>
</LinearLayout>
