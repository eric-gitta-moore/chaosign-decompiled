<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_content" android:paddingBottom="22dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="13dp" android:layout_marginRight="13dp">
        <RelativeLayout android:id="@+id/rl_avatar" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ga_avatar" android:layout_width="42dp" android:layout_height="42dp" android:src="@drawable/ic_group_head_item" android:scaleType="fitCenter" android:layout_centerVertical="true" app:riv_corner_radius="4dp" app:riv_mutate_background="true" app:riv_oval="true"/>
            <ImageView android:id="@+id/iv_tag" android:layout_width="42dp" android:layout_height="42dp" android:src="@drawable/icon_attention_avatars" android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlTop" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="3dp" android:layout_marginBottom="15dp" android:layout_toRightOf="@+id/rl_avatar">
            <TextView android:textSize="14sp" android:textColor="#0099ff" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:layout_toLeftOf="@+id/iv_arrow"/>
            <ImageView android:id="@+id/iv_arrow" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dynamic_down_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_author" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxWidth="64dp" android:maxLines="1" android:layout_below="@+id/tv_name"/>
            <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="5dp" android:maxLines="1" android:layout_toRightOf="@+id/tv_author" android:layout_below="@+id/tv_name"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_middle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_below="@+id/rlTop">
            <TextView android:textSize="17sp" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:maxLines="3"/>
            <TextView android:textSize="15sp" android:textColor="#363636" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:maxLines="5" android:layout_below="@+id/tv_title"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_images" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:layout_below="@+id/tv_content">
                <com.chaoxing.mobile.note.widget.DynamicItemImageAndVideoLayout android:id="@+id/vg_images" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/view_attachment" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_below="@+id/ll_images"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/rl_operation" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_middle" android:layout_centerVertical="true">
            <FrameLayout android:id="@+id/flReply" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/tv_reply" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:maxLines="1" android:drawableLeft="@drawable/dynamic_reply" android:drawablePadding="6dp" android:layout_toRightOf="@+id/tv_praise"/>
            </FrameLayout>
            <FrameLayout android:id="@+id/flPraise" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/tv_praise" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:maxLines="1" android:drawableLeft="@drawable/dynamic_prise" android:drawablePadding="6dp"/>
            </FrameLayout>
            <FrameLayout android:id="@+id/flShare" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/tvShare" android:background="@color/transparent" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:drawableLeft="@drawable/dynamic_share_icon" android:drawablePadding="6dp" android:layout_toRightOf="@+id/tv_reply"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/divler" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="8dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
