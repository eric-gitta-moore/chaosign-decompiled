<?xml version="1.0" encoding="utf-8"?>
<com.fanzhou.widget.ViewSwipeListItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="66dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <RelativeLayout android:id="@+id/rlCategory" android:background="@color/color_f5f6f8" android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingRight="9dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="15sp" android:textColor="#ff999999" android:id="@+id/tvCategory" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="管理员"/>
                <TextView android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/tvTopicCount" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="统计" android:drawableRight="@drawable/icon_right_blue" android:drawablePadding="3dp" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlMember" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingRight="15dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icon_user_head_portrait" android:layout_centerVertical="true" ss:border_color="@color/avatar_border" ss:border_width="1px" ss:is_circle="false" ss:x_radius="10px" ss:y_radius="10px"/>
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/options" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                    <TextView android:textSize="13sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/tvAddFriend" android:layout_width="60dp" android:layout_height="28dp" android:text="相互关注" android:layout_centerVertical="true"/>
                    <TextView android:textSize="10sp" android:textColor="@color/color_cccccc" android:id="@+id/tvAttentionMe" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/focused_tag"/>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toLeftOf="@+id/options" android:layout_toRightOf="@+id/ivAvatar" android:layout_centerHorizontal="true">
                    <LinearLayout android:orientation="horizontal" android:id="@+id/rl_userInfo" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:ellipsize="end" android:id="@+id/tvMemberName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="大发大" android:maxLines="1" android:layout_weight="1" style="@style/group_title_text"/>
                        <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/tvMemberTag" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:text="管理员"/>
                        <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/statisDataView" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_userInfo">
                        <TextView android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvUnit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="10dp" android:text="超星" android:lines="1" android:maxLength="8" style="@style/group_sub_text"/>
                        <TextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvJoinTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="08-08 15:23" android:singleLine="true" android:layout_toRightOf="@+id/tvUnit"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/rlOperationPanel" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btnRight_1" android:background="@color/color_commen_move" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/permission_settings"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btnRight" android:background="@color/color_commen_setadmin" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/admin_set_add"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btnRight2" android:background="@color/color_commen_del" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/topiclist_code_Delete"/>
        </LinearLayout>
    </LinearLayout>
</com.fanzhou.widget.ViewSwipeListItem>
