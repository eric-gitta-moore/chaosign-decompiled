<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/white" android:paddingLeft="12dp" android:paddingTop="16dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ivAvatar" android:background="@drawable/bg_group_head_circle" android:layout_width="42dp" android:layout_height="42dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_toLeftOf="@+id/rlButton" android:layout_toRightOf="@+id/ivAvatar">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="小新"/>
        <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/statisDataView" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tvAuthor"/>
        <TextView android:textSize="14sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tvOrganization" android:paddingRight="63dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="南京航空航天大学音乐血压" android:singleLine="true" android:layout_below="@+id/tvAuthor"/>
        <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tvRequestTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-60dp" android:text="2016-05-26" android:layout_toRightOf="@+id/tvOrganization" android:layout_below="@+id/tvAuthor"/>
        <TextView android:textSize="14sp" android:textColor="#ff333333" android:id="@+id/tvRequest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="申请加入设计图讨论" android:layout_below="@+id/tvRequestTime"/>
        <TextView android:textSize="14sp" android:textColor="#ff333333" android:id="@+id/tvRequestContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="验证信息：我是小新" android:layout_below="@+id/tvRequest"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_alignParentRight="true">
        <TextView android:textSize="16sp" android:textColor="#ff999999" android:id="@+id/button" android:background="@drawable/bg_btn_common_border_white" android:paddingLeft="8dp" android:paddingTop="2dp" android:paddingRight="8dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="拒绝"/>
        <TextView android:textSize="16sp" android:textColor="#ff999999" android:id="@+id/button2" android:background="@drawable/bg_btn_common_border_white" android:paddingLeft="8dp" android:paddingTop="2dp" android:paddingRight="8dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="同意" android:layout_toRightOf="@+id/button"/>
    </RelativeLayout>
</RelativeLayout>
