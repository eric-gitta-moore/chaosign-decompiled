<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/selectable_item_background" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/ivIcon" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/ic_folder_private" android:scaleType="fitXY" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="#333333" android:id="@+id/tvName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toLeftOf="@+id/ivRightTag" android:layout_toRightOf="@+id/ivIcon" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ivRightTag" android:background="@drawable/ic_right_arrow" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="#0099ff" android:id="@+id/tvEnter" android:padding="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_enter" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
