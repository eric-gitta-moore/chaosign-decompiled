<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/item_label" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="#666666" android:id="@+id/tv_label" android:background="#ffebeded" android:paddingLeft="12dp" android:paddingTop="8dp" android:paddingRight="12dp" android:paddingBottom="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/forward_forward" android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/item_content" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <RelativeLayout android:id="@+id/rl_showGroup" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <CheckBox android:id="@+id/cbSelector" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
            <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ivGroupAvatar" android:background="@drawable/bg_group_head_circle" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:layout_toRightOf="@+id/cbSelector"/>
            <TextView android:textSize="10sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_self" android:background="@drawable/ic_self_tag_circle" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_alignLeft="@+id/ivGroupAvatar" android:layout_alignRight="@+id/ivGroupAvatar" android:layout_alignBottom="@+id/ivGroupAvatar"/>
            <TextView android:textSize="18sp" android:textColor="#ff333333" android:ellipsize="end" android:id="@+id/tvGroupName" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="段子来了" android:maxEms="8" android:singleLine="true" android:layout_toRightOf="@+id/ivGroupAvatar"/>
            <TextView android:textSize="10sp" android:textColor="#999999" android:id="@+id/tv_top" android:background="@drawable/bg_circular_bead_ff999999" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/note_top" android:maxLines="1" android:layout_toRightOf="@+id/tvGroupName"/>
            <TextView android:textSize="18sp" android:textColor="#ff333333" android:ellipsize="end" android:id="@+id/tvGroupName_Center" android:padding="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="段子来了" android:singleLine="true" android:layout_toRightOf="@+id/ivGroupAvatar" android:layout_centerVertical="true"/>
            <TextView android:textSize="10sp" android:textColor="#999999" android:id="@+id/tv_top_cen" android:background="@drawable/bg_circular_bead_ff999999" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/note_top" android:maxLines="1" android:layout_toRightOf="@+id/tvGroupName_Center" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tvMemberCount" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="666" android:layout_toRightOf="@+id/ivGroupAvatar" android:layout_below="@+id/tvGroupName"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:src="@drawable/ic_group_info_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/ll_showFolder" android:padding="3dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <CheckBox android:id="@+id/cbFolderSelector" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:button="@drawable/checkbox_unnable" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/iv" android:background="@drawable/ic_folder_private" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="16sp" android:textColor="#333333" android:layout_gravity="center_vertical" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="名字" android:singleLine="true" android:layout_toRightOf="@+id/iv" android:layout_centerVertical="true"/>
            <TextView android:textSize="10sp" android:textColor="#999999" android:id="@+id/tv_top_folder" android:background="@drawable/bg_circular_bead_ff999999" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/note_top" android:maxLines="1" android:layout_toRightOf="@+id/name" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tv_folder" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="666" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:src="@drawable/ic_group_info_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
</RelativeLayout>
