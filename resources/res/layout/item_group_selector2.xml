<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="65dp">
        <CheckBox android:id="@+id/cb_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
        <RelativeLayout android:id="@+id/rl_avatar" android:layout_width="60dp" android:layout_height="60dp" android:layout_toRightOf="@+id/cb_selector" android:layout_centerVertical="true">
            <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ga_icon" android:layout_width="42dp" android:layout_height="42dp" android:src="@drawable/ic_group_head_item" android:scaleType="fitCenter" android:layout_centerVertical="true" app:riv_corner_radius="4dp" app:riv_mutate_background="true" app:riv_oval="true"/>
            <TextView android:textSize="10sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_self" android:background="@drawable/ic_self_tag_circle" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_alignLeft="@+id/ga_icon" android:layout_alignRight="@+id/ga_icon" android:layout_alignBottom="@+id/ga_icon"/>
        </RelativeLayout>
        <RelativeLayout android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/rl_avatar" android:layout_centerVertical="true">
            <LinearLayout android:gravity="center_vertical" android:id="@+id/lltitleContainer" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tv_count">
                <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_name" android:paddingRight="48dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                <TextView android:textSize="10sp" android:textColor="#999999" android:id="@+id/tv_top" android:background="@drawable/bg_circular_bead_ff999999" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-42dp" android:text="@string/note_top" android:maxLines="1"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="共享给1人" android:layout_below="@+id/lltitleContainer"/>
            <TextView android:textSize="12sp" android:textColor="#b3b3b3" android:gravity="center_vertical" android:id="@+id/tv_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="#0099ff" android:gravity="center_vertical" android:id="@+id/tvEnterFolder" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/common_enter" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/app_line_bg" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="60dp" android:layout_toRightOf="@+id/cb_selector" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
