<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:paddingLeft="6dp" android:paddingTop="6dp" android:paddingRight="16dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="73dp">
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_logo" android:visibility="gone" android:layout_width="60dp" android:layout_height="60dp" android:layout_centerVertical="true">
            <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ga_avatar" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/ic_folder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:textSize="15sp" android:textColor="#333333" android:id="@+id/rl_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_toRightOf="@+id/rl_logo" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tv_count"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tv_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
