<?xml version="1.0" encoding="utf-8"?>
<com.fanzhou.widget.ViewSwipeListItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cx="http://schemas.android.com/apk/res-auto" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="73dp">
        <RelativeLayout android:paddingLeft="6dp" android:paddingRight="16dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_centerVertical="true">
            <RelativeLayout android:id="@+id/icon" android:layout_width="60dp" android:layout_height="60dp" android:layout_centerVertical="true">
                <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ga_icon" android:background="@drawable/ic_chaoxing_default" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginLeft="12dp" android:layout_toRightOf="@+id/cb_selector" android:layout_centerInParent="true"/>
                <TextView android:textSize="10sp" android:textColor="@android:color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_red_count" android:background="@drawable/shape_red_circle_ff" android:layout_width="18dp" android:layout_height="18dp" android:maxLines="1" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toLeftOf="@+id/tv_count" android:layout_toRightOf="@+id/icon" android:layout_centerVertical="true">
                <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_title" android:paddingRight="68dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-64dp" android:layout_toRightOf="@+id/tv_title">
                    <TextView android:textSize="10sp" android:textColor="#0099ff" android:id="@+id/tv_tag" android:background="@drawable/bg_circular_bead_ff0099ff_2" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="教学"/>
                    <TextView android:textSize="10sp" android:textColor="#0099ff" android:id="@+id/tv_top" android:background="@drawable/bg_circular_bead_ff0099ff_2" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/note_top" android:maxLines="1"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="center_vertical" android:id="@+id/tv_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/options" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_option" android:background="@color/common_stick" android:paddingLeft="18dp" android:paddingRight="18dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_option2" android:background="@color/common_delete" android:paddingLeft="18dp" android:paddingRight="18dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="70dp" android:layout_alignParentBottom="true"/>
</com.fanzhou.widget.ViewSwipeListItem>
