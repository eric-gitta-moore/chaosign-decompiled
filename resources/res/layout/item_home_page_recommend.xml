<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/ll_recommend_container" android:paddingTop="18dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/ll_top" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp">
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_avatar" android:layout_width="38dp" android:layout_height="38dp" android:scaleType="centerCrop" android:layout_marginStart="@dimen/home_item_margin_left" app:riv_border_color="@color/home_image_border" app:riv_border_width="@dimen/home_image_border" app:riv_mutate_background="true" app:riv_oval="true"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/tv_focus" android:layout_toEndOf="@+id/iv_avatar">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/home_name_size" android:textStyle="bold" android:textColor="@color/home_color_name" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/home_time_size" android:textColor="@color/home_color_time" android:ellipsize="end" android:id="@+id/tv_info" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="1" android:layout_below="@+id/tv_name" android:layout_marginStart="15dp"/>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_focus" android:background="@drawable/bg_home_focus_no" android:paddingTop="4.5dp" android:paddingBottom="4.5dp" android:visibility="visible" android:layout_width="53dp" android:layout_height="wrap_content" android:layout_toStartOf="@+id/iv_del"/>
        <ImageView android:id="@+id/iv_del" android:paddingTop="2.5dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_home_recommend_del" android:paddingStart="7.5dp" android:paddingEnd="7.5dp" android:layout_marginStart="9dp" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/home_title_size" android:textColor="@color/home_color_title" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:lineSpacingExtra="@dimen/home_title_spacing" android:layout_marginStart="@dimen/home_item_margin_left" android:layout_marginEnd="@dimen/home_item_margin_right" android:letterSpacing="0.02"/>
    <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/home_content_size" android:textColor="@color/home_color_content" android:ellipsize="end" android:id="@+id/tv_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginBottom="2dp" android:maxLines="2" android:lineSpacingExtra="@dimen/home_content_spacing" android:layout_marginStart="@dimen/home_item_margin_left" android:layout_marginEnd="@dimen/home_item_margin_right" android:letterSpacing="0.02"/>
    <com.chaoxing.mobile.study.home.mainpage.view.RecommendImageLayout android:id="@+id/ll_images" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_marginStart="@dimen/home_item_margin_left" android:layout_marginEnd="@dimen/home_item_margin_right"/>
    <RelativeLayout android:id="@+id/rl_bottom" android:layout_width="match_parent" android:layout_height="38dp" android:layout_marginBottom="7dp">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#b3b3b3" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true" android:layout_marginStart="@dimen/home_item_margin_left"/>
        <include android:id="@+id/ll_buttons" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" layout="@layout/layout_mainpage_bottom_button"/>
    </RelativeLayout>
    <View android:id="@+id/view_divider" android:background="@color/home_item_divider" android:layout_width="match_parent" android:layout_height="@dimen/home_item_divider"/>
</LinearLayout>
