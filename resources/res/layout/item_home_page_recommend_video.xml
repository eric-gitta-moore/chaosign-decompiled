<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/ll_recommend_container" android:paddingTop="18dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_top" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:paddingStart="@dimen/home_item_margin_left" android:paddingEnd="@dimen/home_item_margin_right">
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_avatar" android:layout_width="38dp" android:layout_height="38dp" android:scaleType="centerCrop" app:riv_oval="true"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textStyle="bold" android:textColor="#4d4d4d" android:ellipsize="end" android:id="@+id/tv_speaker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:maxLines="1" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/iv_avatar"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#b1b2b3" android:ellipsize="end" android:id="@+id/tv_speaker_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:layout_below="@+id/tv_speaker" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/iv_avatar"/>
    </RelativeLayout>
    <com.chaoxing.mobile.study.home.mainpage.view.HomeVideoImageView android:id="@+id/v_top_video" android:visibility="gone" android:layout_width="match_parent" android:layout_height="175dp" android:layout_marginBottom="5dp" android:paddingStart="@dimen/home_item_margin_left" android:paddingEnd="@dimen/home_item_margin_right"/>
    <androidx.appcompat.widget.AppCompatTextView android:textSize="18sp" android:textColor="#262626" android:ellipsize="end" android:id="@+id/tv_video_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:lineSpacingExtra="4dp" android:paddingStart="@dimen/home_item_margin_left" android:paddingEnd="@dimen/home_item_margin_right"/>
    <RelativeLayout android:id="@+id/rl_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:paddingStart="@dimen/home_item_margin_left" android:paddingEnd="@dimen/home_item_margin_right">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="15sp" android:textColor="#7d7e80" android:ellipsize="end" android:id="@+id/tv_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_centerVertical="true" android:lineSpacingExtra="4dp" android:layout_toStartOf="@+id/v_right_img"/>
        <com.chaoxing.mobile.study.home.mainpage.view.HomeVideoImageView android:id="@+id/v_right_img" android:visibility="gone" android:layout_width="113dp" android:layout_height="80dp" android:layout_marginStart="5dp" android:layout_alignParentEnd="true" app:video_shadow_height="30dp"/>
    </RelativeLayout>
    <com.chaoxing.mobile.study.home.mainpage.view.RecommendVideoLayout android:id="@+id/rl_video2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:paddingStart="@dimen/home_item_margin_left" android:paddingEnd="@dimen/home_item_margin_right"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginBottom="7dp" android:paddingStart="@dimen/home_item_margin_left">
        <ImageView android:id="@+id/iv_del" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_home_recommend_del" android:layout_centerVertical="true" android:paddingStart="15dp" android:paddingEnd="@dimen/home_item_margin_right" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/view_divider" android:background="@color/home_item_divider" android:layout_width="match_parent" android:layout_height="@dimen/home_item_divider"/>
</LinearLayout>
