<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/ll_container" android:paddingTop="18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_top" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:paddingStart="@dimen/home_item_margin_left" android:paddingEnd="@dimen/home_item_margin_right">
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_avatar" android:layout_width="38dp" android:layout_height="38dp" android:scaleType="centerCrop" app:riv_oval="true"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textStyle="bold" android:textColor="#4d4d4d" android:ellipsize="end" android:id="@+id/tv_speaker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="1" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/iv_avatar"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#b1b2b3" android:ellipsize="end" android:id="@+id/tv_speaker_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:layout_below="@+id/tv_speaker" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/iv_avatar"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/home_item_margin_left" android:paddingEnd="@dimen/home_item_margin_right">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="18sp" android:textColor="#262626" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:lineSpacingExtra="4dp" android:layout_toStartOf="@+id/iv_img" android:layout_alignParentStart="true"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="15sp" android:textColor="#7d7e80" android:ellipsize="end" android:id="@+id/tv_introduce" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:maxLines="2" android:layout_below="@+id/tv_title" android:lineSpacingExtra="4dp" android:layout_toStartOf="@+id/iv_img"/>
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_img" android:layout_width="75dp" android:layout_height="110dp" android:scaleType="centerCrop" android:layout_marginStart="10dp" android:layout_alignParentEnd="true" app:riv_corner_radius="4dp" app:riv_mutate_background="true"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="10sp" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/tv_tag" android:background="@drawable/bg_home_book_tag" android:paddingLeft="4dp" android:paddingTop="1.2dp" android:paddingRight="4dp" android:paddingBottom="1.2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/string_home_book" android:maxLines="1" android:layout_alignTop="@+id/iv_img" android:layout_alignEnd="@+id/iv_img"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginBottom="7dp" android:paddingStart="@dimen/home_item_margin_left">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#b2b2b2" android:id="@+id/tv_other" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        <ImageView android:id="@+id/iv_del" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_home_recommend_del" android:layout_centerVertical="true" android:paddingStart="15dp" android:paddingEnd="@dimen/home_item_margin_right" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/view_divider" android:background="@color/home_item_divider" android:layout_width="match_parent" android:layout_height="@dimen/home_item_divider"/>
</LinearLayout>
