<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#1a1a1a" android:id="@+id/tv_column_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="#666666" android:id="@+id/tv_column_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/string_home_more" android:drawableRight="@drawable/ic_home_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_items" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="15sp" android:textColor="#0099ff" android:id="@+id/tv_choose_discipline" android:background="@drawable/bg_home__fff7f8fa" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="15dp" android:layout_marginBottom="20dp" android:text="选择我的学科"/>
    </LinearLayout>
</LinearLayout>
