<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_column_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:paddingStart="@dimen/home_item_margin_left" android:paddingEnd="@dimen/home_item_margin_right">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="18sp" android:textStyle="bold" android:textColor="#1a1a1a" android:ellipsize="end" android:id="@+id/tv_column_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/tv_column_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/string_home_more" android:singleLine="true" android:drawableRight="@drawable/ic_home_right_arrow" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <com.chaoxing.mobile.study.home.mainpage.view.horizontal.HomeHorizontalView android:id="@+id/view_column_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="25dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_column_desc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="25dp">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_column_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#b3b3b3" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_column_desc2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="2"/>
    </LinearLayout>
    <View android:background="@color/home_item_divider" android:layout_width="match_parent" android:layout_height="@dimen/home_item_divider"/>
</LinearLayout>
