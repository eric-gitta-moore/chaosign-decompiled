<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="70dp">
    <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_img" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_chaoxing_default" android:scaleType="centerCrop" android:layout_centerVertical="true" app:riv_corner_radius="4dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="15dp" android:layout_toStartOf="@+id/tv_sub" android:layout_toEndOf="@+id/iv_img">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#b3b3b3" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="内容" android:singleLine="true"/>
    </LinearLayout>
    <TextView android:textSize="12sp" android:gravity="center" android:id="@+id/tv_sub" android:layout_width="53dp" android:layout_height="26dp" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
