<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingLeft="15dp" android:paddingTop="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="17sp" android:textColor="@color/wifi_red" android:gravity="center" android:id="@+id/leave_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:layout_alignParentLeft="true"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/reason_flag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wf_leave_reason" android:layout_below="@+id/leave_type" android:layout_alignParentLeft="true"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:ellipsize="end" android:gravity="center" android:id="@+id/reason" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="1" android:layout_toRightOf="@+id/reason_flag" android:layout_below="@+id/leave_type"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/time_flag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/wf_leave_time" android:layout_below="@+id/reason_flag" android:layout_alignParentLeft="true"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:ellipsize="end" android:gravity="center" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="12dp" android:maxLines="1" android:layout_toRightOf="@+id/time_flag" android:layout_below="@+id/reason"/>
    <View android:background="@color/divider_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp" android:layout_below="@+id/time_flag"/>
</RelativeLayout>
