<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.chaoxing.mobile.study.home.mainpage2.video.player.MainZhiVideoView android:id="@+id/view_video" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:paddingTop="11dp" android:paddingBottom="22dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_avatar" android:layout_width="35dp" android:layout_height="35dp" android:scaleType="centerCrop" android:layout_alignParentTop="true" android:layout_marginStart="15dp" android:layout_alignParentStart="true" app:riv_oval="true"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="15sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_marginStart="10dp" android:layout_toStartOf="@+id/iv_more" android:layout_toEndOf="@+id/iv_avatar"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_title" android:layout_alignStart="@+id/tv_title" android:layout_alignEnd="@+id/tv_title">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_anchor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textStyle="bold" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_divider1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text=" · " android:singleLine="true"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_play_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textStyle="bold" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_divider2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text=" · " android:singleLine="true"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_release_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:src="@drawable/ic_main_video_more" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
