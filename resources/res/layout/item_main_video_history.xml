<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="11dp" android:paddingEnd="15dp">
    <RelativeLayout android:id="@+id/rl_video_container" android:layout_width="124dp" android:layout_height="68dp">
