<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
        <TextView android:textSize="14sp" android:textColor="#999999" android:gravity="center_vertical" android:id="@+id/tv_group" android:layout_width="match_parent" android:layout_height="30dp" android:layout_toLeftOf="@+id/tv_right_arrow"/>
        <TextView android:textSize="14sp" android:textColor="@color/blue_0099ff" android:id="@+id/tv_fold" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</LinearLayout>
