<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="65.5dp">
    <com.chaoxing.mobile.widget.roundedimageview.RoundedImageView android:id="@+id/userHeaderIcon" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_launcher_background" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_alignParentStart="true" app:riv_oval="true"/>
    <TextView android:textSize="14sp" android:textColor="#333333" android:id="@+id/userNameTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ui_10_dip" android:layout_toRightOf="@+id/userHeaderIcon" android:layout_centerVertical="true"/>
    <RelativeLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/rightLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ui_10_dip" android:layout_marginRight="@dimen/ui_10_dip" android:layout_toRightOf="@+id/userNameTv" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/contentLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:ellipsize="end" android:id="@+id/countTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="12sp" android:textColor="#fe953e" android:ellipsize="end" android:id="@+id/durationTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:singleLine="true"/>
        </LinearLayout>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/as_arrow_right_gray" android:layout_toRightOf="@+id/contentLayout" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/divider" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignLeft="@+id/userNameTv" android:layout_alignParentBottom="true" android:contentDescription="@string/mission_introduce"/>
</RelativeLayout>
