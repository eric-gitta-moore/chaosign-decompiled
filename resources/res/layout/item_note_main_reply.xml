<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:background="#fafafa" android:clickable="true" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/topline" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <RelativeLayout android:id="@+id/rlReplyHeader" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:minHeight="30dp" android:layout_below="@+id/topline">
        <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginRight="15dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" ss:border_color="@color/avatar_border" ss:border_width="0px" ss:is_circle="false" ss:x_radius="5dp" ss:y_radius="5dp"/>
        <RelativeLayout android:id="@+id/rlTop" android:layout_width="match_parent" android:layout_height="26dp" android:layout_toLeftOf="@+id/rlRight" android:layout_toRightOf="@+id/ivAvatar">
            <TextView android:textSize="15sp" android:textColor="#ff666666" android:ellipsize="end" android:id="@+id/tvAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="作者" android:singleLine="true" android:maxLength="10" android:layout_centerVertical="true"/>
            <TextView android:textSize="11sp" android:textColor="@android:color/white" android:id="@+id/tvMemberTag" android:paddingLeft="3dp" android:paddingRight="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="16dp" android:layout_marginLeft="8dp" android:text="管理员" android:layout_toRightOf="@+id/tvAuthor" android:layout_centerVertical="true"/>
            <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_toRightOf="@+id/tvMemberTag" android:layout_centerVertical="true"/>
            <Button android:textSize="10sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/btnFriends" android:background="@drawable/bg_circle_border_ff0099ff_transparent" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/pcenter_message_addfirend_addFriend" android:layout_toRightOf="@+id/userFlower" android:layout_centerVertical="true"/>
            <TextView android:textSize="11sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvTopTag" android:background="@drawable/bg_circular_bead_ff5aaaf8" android:visibility="visible" android:layout_width="32dp" android:layout_height="16dp" android:layout_marginLeft="5dp" android:text="@string/note_top" android:layout_toRightOf="@+id/btnFriends" android:layout_centerVertical="true"/>
            <TextView android:textSize="11sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvChoiceTag" android:background="@drawable/bg_circular_bead_fff14848" android:visibility="visible" android:layout_width="20dp" android:layout_height="16dp" android:layout_marginLeft="5dp" android:text="@string/note_choice" android:layout_toRightOf="@+id/tvTopTag" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlBottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/rlRight" android:layout_toRightOf="@+id/ivAvatar" android:layout_below="@+id/rlTop">
            <TextView android:textSize="12sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tvOrganization" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="机构名称" android:singleLine="true" android:layout_centerVertical="true"/>
            <RelativeLayout android:id="@+id/rlTag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tvOrganization">
                <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvFloor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="第1楼"/>
                <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvReplyTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="刚刚" android:lines="1" android:layout_toRightOf="@+id/tvFloor"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_screen" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_screen" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_screen_topic_reply"/>
                <TextView android:textSize="14sp" android:textColor="#0099ff" android:layout_gravity="center_vertical" android:id="@+id/tv_screen" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="关闭" android:layout_marginEnd="5dp" android:layout_toEndOf="@+id/iv_screen"/>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/ivMark" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/icon_res_unmark" android:drawablePadding="5dp" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_toEndOf="@+id/ll_screen"/>
            <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/btnPraise" android:background="@android:color/transparent" android:paddingTop="3dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="99" android:drawableLeft="@drawable/ic_do_praise_null_new" android:drawablePadding="3dp" android:layout_toRightOf="@+id/ivMark"/>
            <TextView android:id="@+id/btnReply" android:background="@android:color/transparent" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:drawableLeft="@drawable/ic_reply" android:layout_toRightOf="@+id/btnPraise" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlReply" android:paddingLeft="68dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_below="@+id/rlReplyHeader">
        <RelativeLayout android:id="@+id/rlReplyContent" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.chaoxing.mobile.note.views.ReplyItemView android:textSize="16sp" android:textColor="#ff474747" android:ellipsize="end" android:id="@+id/vReplyContent" android:focusable="true" android:clickable="true" android:longClickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="回复内容" android:maxLines="12" android:lineSpacingMultiplier="1.2" android:nestedScrollingEnabled="false"/>
            <View android:id="@+id/viewCover" android:background="#33000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/vReplyContent" android:layout_alignBottom="@+id/vReplyContent"/>
            <com.chaoxing.mobile.note.widget.ReplyItemImageLayout android:id="@+id/ll_ReplyImage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/vReplyContent"/>
            <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/attachmentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/ll_ReplyImage"/>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textColor="#ffcccccc" android:id="@+id/tvReplyEditTip" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="修改提示" android:layout_below="@+id/rlReplyContent"/>
    </RelativeLayout>
    <View android:id="@+id/bottomline" android:background="#ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_below="@+id/rlReply"/>
</RelativeLayout>
