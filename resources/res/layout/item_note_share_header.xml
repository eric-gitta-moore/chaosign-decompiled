<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/viewFront" android:background="@drawable/selector_list_item" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/icon_next" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/ic_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="13sp" android:textColor="#b3b3b3" android:id="@+id/tv_num_count" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="0" android:layout_toLeftOf="@+id/icon_next" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tv_num_count">
            <TextView android:textSize="16sp" android:textColor="#ff333333" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvName" android:clickable="false" android:layout_width="wrap_content" android:layout_height="55dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:text="好友共享的笔记" android:singleLine="true" android:drawablePadding="16dp" android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="1px"/>
    <View android:background="#e8efec" android:visibility="gone" android:layout_width="match_parent" android:layout_height="16dp"/>
    <View android:background="#d9d9d9" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
