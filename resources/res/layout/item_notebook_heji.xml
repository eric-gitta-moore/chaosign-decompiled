<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/itemContainer" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="-113dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="1px">
        <RelativeLayout android:id="@+id/viewFront" android:background="@drawable/selector_list_note_item" android:descendantFocusability="blocksDescendants" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:id="@+id/icon_next" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_right_arrow"/>
                <ImageView android:id="@+id/iv_sort" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:src="@drawable/ic_sort_36dp"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="#b3b3b3" android:id="@+id/tv_num_count" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:layout_toLeftOf="@+id/ll_right" android:layout_centerVertical="true"/>
            <RelativeLayout android:id="@+id/rlCheckContainer" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginRight="-10dp" android:layout_centerVertical="true">
                <CheckBox android:id="@+id/cb_selected" android:focusable="false" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:button="@drawable/checkbox_group_member" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="65dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_toLeftOf="@+id/tv_num_count" android:layout_toRightOf="@+id/rlCheckContainer">
                <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ivIcon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" android:src="@drawable/ic_folder_private" android:scaleType="fitXY" android:layout_centerVertical="true" app:riv_corner_radius="4dp" app:riv_oval="false"/>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/ivIcon" android:layout_centerVertical="true">
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/v_name" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tvName" android:paddingRight="36dp" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
                        <TextView android:textSize="11sp" android:textColor="#a8a8a8" android:gravity="center" android:id="@+id/tvTag" android:background="@drawable/bg_circular_bead_cccccc" android:visibility="gone" android:layout_width="30dp" android:layout_height="16dp" android:layout_marginLeft="-31dp" android:text="@string/note_top"/>
                    </LinearLayout>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvIntroduction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:layout_below="@+id/v_name"/>
                </RelativeLayout>
            </RelativeLayout>
            <View android:id="@+id/line1" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="65dp" android:layout_toRightOf="@+id/rlCheckContainer" android:layout_alignParentBottom="true"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="62dp" android:weightSum="3">
                <TextView android:id="@+id/vCheckArea" android:background="#00000000" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvStick" android:background="@color/color_commen_edit" android:visibility="gone" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/note_top"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvMove" android:background="@color/color_commen_move" android:visibility="gone" android:layout_width="56dp" android:layout_height="match_parent" android:text="@string/bookCollections_Move"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvEdit" android:background="@color/color_commen_stick" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/note_Edit"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvReBack" android:background="@color/color_commen_move" android:visibility="gone" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/common_reback"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/gTimeline_Delete"/>
    </LinearLayout>
    <View android:id="@+id/line2" android:background="#f5f6f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="8dp"/>
</LinearLayout>
