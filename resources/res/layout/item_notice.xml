<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="-112dp" android:layout_marginBottom="1px">
    <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/viewFront" android:background="@drawable/selector_list_item" android:descendantFocusability="blocksDescendants" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <CheckBox android:id="@+id/cb_selected" android:background="@drawable/checkbox_group_member" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:layout_marginRight="-5dp" android:button="@null" android:layout_centerVertical="true"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/cb_selected">
            <RelativeLayout android:id="@+id/fl_imageView" android:layout_width="65dp" android:layout_height="65dp" android:layout_centerVertical="true">
                <com.chaoxing.mobile.notify.ui.NoticeRecentHeadAvatar android:layout_gravity="center" android:id="@+id/iv_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_centerVertical="true"/>
                <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/red_tv_unread_count" android:background="@drawable/bg_unread_count_tip" android:paddingLeft="4dp" android:paddingRight="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="18dp" android:layout_marginTop="-6dp" android:layout_marginRight="-6dp" android:minWidth="18dp" android:layout_alignTop="@+id/iv_icon" android:layout_alignRight="@+id/iv_icon"/>
                <TextView android:id="@+id/tv_unread_count" android:background="@drawable/bg_notice_unread_tip" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginTop="-3dp" android:layout_marginRight="-3dp" android:layout_alignTop="@+id/iv_icon" android:layout_alignRight="@+id/iv_icon"/>
                <ImageView android:id="@+id/iv_sendTime" android:visibility="gone" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginRight="5dp" android:src="@drawable/ic_notice_send_time" android:layout_alignBottom="@+id/iv_icon" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_toRightOf="@+id/fl_imageView" android:layout_centerVertical="true" layout="@layout/item_notice_reward"/>
            <RelativeLayout android:gravity="center_vertical" android:id="@+id/vNoticeBody" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginRight="15dp" android:layout_marginBottom="12dp" android:layout_toRightOf="@+id/fl_imageView" android:layout_centerVertical="true">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_test" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.chaoxing.mobile.notify.widget.NoticeListItemView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvName" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1" android:lineSpacingMultiplier="1.1"/>
                    <TextView android:textSize="12sp" android:textColor="#a8a8a8" android:gravity="center" android:id="@+id/tv_top" android:background="@drawable/bg_circular_bead_ff999999" android:visibility="gone" android:layout_width="32dp" android:layout_height="18dp" android:text="@string/note_top" android:maxLines="1" android:layout_marginEnd="-10dp"/>
                    <TextView android:textSize="12sp" android:textColor="#b3b3b3" android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginStart="15dp"/>
                </LinearLayout>
                <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rl_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/ll_test">
                    <TextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
                    <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvUnread" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="" android:singleLine="true" android:layout_toRightOf="@+id/tvContent"/>
                    <ImageView android:id="@+id/iv_sign" android:background="@drawable/dispose_sign" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/search_content" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5.5dp" android:singleLine="true" android:layout_below="@+id/rl_content"/>
            </RelativeLayout>
            <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true" android:layout_alignStart="@+id/vNoticeBody"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvStick" android:background="@color/color_commen_edit" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/note_top"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvRecall" android:background="@color/color_commen_addgroup" android:visibility="gone" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/message_notice_recall"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvMove" android:background="@color/color_3e9cfa" android:visibility="gone" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/bookCollections_Move"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvRead" android:background="@color/color_commen_addgroup" android:visibility="gone" android:layout_width="86dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/sign_notice_unread"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/bookCollections_Delete"/>
</LinearLayout>
