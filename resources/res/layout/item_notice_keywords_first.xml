<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/rl_layout" android:layout_width="match_parent" android:layout_height="66dp">
        <EditText android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:id="@+id/etTitleKey" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="22dp" android:layout_marginTop="22dp" android:hint="@string/enter_title_keywords" android:singleLine="true" android:layout_weight="1" android:layout_toLeftOf="@+id/ivDeleteFirst" android:layout_marginStart="17dp"/>
        <ImageView android:id="@+id/ivDeleteFirst" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:src="@drawable/ic_notice_key_delete" android:layout_toLeftOf="@+id/view" android:layout_marginStart="10dp"/>
        <View android:id="@+id/view" android:background="@color/date_line" android:layout_width="1dp" android:layout_height="15dp" android:layout_marginTop="26dp" android:layout_toLeftOf="@+id/with_or_without" android:layout_marginStart="10dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_contain_first" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textColor="#333333" android:gravity="start" android:id="@+id/with_or_without" android:layout_width="50dp" android:layout_height="21dp" android:layout_marginTop="22dp" android:text="@string/notice_include" android:layout_toLeftOf="@+id/ivExport" android:layout_marginStart="16dp"/>
            <ImageView android:id="@+id/ivExport" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="27dp" android:src="@drawable/ic_notice_keywords_export" android:layout_alignParentRight="true" android:layout_marginEnd="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/view1" android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="7dp" android:layout_below="@+id/rl_layout"/>
</LinearLayout>
