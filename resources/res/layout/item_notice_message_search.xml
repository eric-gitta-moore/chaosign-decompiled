<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="-112dp">
        <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/viewFront" android:background="@drawable/selector_list_item" android:descendantFocusability="blocksDescendants" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <CheckBox android:id="@+id/cb_selected" android:background="@drawable/checkbox_group_member" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_marginEnd="-5dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toEndOf="@+id/cb_selected">
                <RelativeLayout android:id="@+id/fl_imageView" android:layout_width="65dp" android:layout_height="65dp" android:layout_centerVertical="true">
                    <com.chaoxing.mobile.group.ui.GroupAvatar android:layout_gravity="center" android:id="@+id/iv_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerVertical="true" android:layout_marginStart="15dp"/>
                    <com.chaoxing.mobile.chat.widget.RedCircleTipView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_unread_count" android:background="@null" android:layout_width="19dp" android:layout_height="19dp" android:layout_marginTop="2dp" android:text="0" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="12dp" android:layout_toEndOf="@+id/fl_imageView" layout="@layout/item_notice_reward"/>
                <RelativeLayout android:gravity="center_vertical" android:id="@+id/vNoticeBody" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_centerVertical="true" android:layout_marginEnd="15dp" android:layout_toEndOf="@+id/fl_imageView">
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_test" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvName" android:layout_width="0dp" android:layout_height="wrap_content" android:text="" android:maxLines="2" android:layout_weight="1" android:lineSpacingMultiplier="1.1"/>
                        <TextView android:textSize="12sp" android:textColor="#a8a8a8" android:gravity="center" android:id="@+id/tv_top" android:background="@drawable/bg_circular_bead_ff999999" android:visibility="gone" android:layout_width="32dp" android:layout_height="18dp" android:text="@string/note_top" android:maxLines="1" android:layout_marginEnd="-10dp"/>
                        <TextView android:textSize="12sp" android:textColor="#b3b3b3" android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:singleLine="true" android:layout_marginStart="15dp"/>
                    </LinearLayout>
                    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rl_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/ll_test">
                        <TextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:singleLine="true"/>
                        <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvUnread" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:singleLine="true" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/tvContent"/>
                        <ImageView android:id="@+id/iv_sign" android:background="@drawable/dispose_sign" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/search_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5.5dp" android:singleLine="true" android:layout_below="@+id/rl_content"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvStick" android:background="@color/color_commen_edit" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/note_top"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvRecall" android:background="@color/color_commen_addgroup" android:visibility="gone" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/message_notice_recall"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvMove" android:background="@color/color_3e9cfa" android:visibility="gone" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/bookCollections_Move"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvRead" android:background="@color/color_commen_addgroup" android:visibility="gone" android:layout_width="86dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/sign_notice_unread"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/bookCollections_Delete"/>
    </LinearLayout>
</LinearLayout>
