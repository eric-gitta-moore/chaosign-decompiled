<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="-182dp" android:layout_marginBottom="1px">
    <RelativeLayout android:id="@+id/viewFront" android:background="@drawable/selector_list_note_item" android:descendantFocusability="blocksDescendants" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <CheckBox android:id="@+id/cb_selected" android:background="@drawable/checkbox_group_member" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:layout_marginRight="-5dp" android:button="@null" android:layout_centerVertical="true"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="86dp" android:layout_toRightOf="@+id/cb_selected">
            <ImageView android:id="@+id/ivIcon" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_folder_private" android:scaleType="fitXY" android:layout_centerVertical="true" android:layout_marginStart="15dp" android:layout_marginEnd="10dp"/>
            <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_unread_count" android:background="@drawable/bg_unread_count_tip" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="18dp" android:layout_marginTop="0.5dp" android:minWidth="18dp" android:text="0" android:layout_alignTop="@+id/ivIcon" android:layout_marginEnd="-7dp" android:layout_alignEnd="@+id/ivIcon"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="15dp">
                <ImageView android:id="@+id/icon_next" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_right_arrow"/>
                <ImageView android:id="@+id/iv_sort" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:src="@drawable/ic_sort_36dp"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="#b3b3b3" android:id="@+id/tv_num_count" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:layout_toLeftOf="@+id/ll_right" android:layout_centerVertical="true"/>
            <RelativeLayout android:id="@+id/v_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/tv_num_count" android:layout_toRightOf="@+id/ivIcon" android:layout_centerVertical="true">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llName" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tvName" android:paddingRight="36dp" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
                    <TextView android:textSize="12sp" android:textColor="#a8a8a8" android:gravity="center" android:layout_gravity="center" android:id="@+id/tvTag" android:background="@drawable/bg_circular_bead_ff999999" android:visibility="gone" android:layout_width="32dp" android:layout_height="18dp" android:layout_marginLeft="-32dp" android:text="@string/note_top"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/llFrom" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/llName">
                    <TextView android:textSize="13sp" android:textColor="#8a8b99" android:ellipsize="end" android:id="@+id/tvFrom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notice_specify_sender" android:maxLines="1"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/llKeywords" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/llFrom">
                    <TextView android:textSize="13sp" android:textColor="#8a8b99" android:ellipsize="end" android:id="@+id/tvKeywords" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notice_specify_keyword" android:maxLines="1"/>
                </LinearLayout>
            </RelativeLayout>
            <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true" android:layout_alignStart="@+id/v_name"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvStick" android:background="@color/color_commen_edit" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/note_top"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvEdit" android:background="@color/color_commen_addgroup" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/common_modify"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/gTimeline_Delete"/>
</LinearLayout>
