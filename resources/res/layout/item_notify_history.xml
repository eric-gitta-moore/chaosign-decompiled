<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/itemContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="-143dp">
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <FrameLayout android:id="@+id/flIcon" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginLeft="15dp" android:layout_marginTop="8dp" android:layout_marginRight="12dp" android:layout_marginBottom="8dp" android:layout_centerVertical="true">
                <com.chaoxing.mobile.chat.widget.ConversationAvatar2 android:id="@+id/ivGroup" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </FrameLayout>
            <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_toLeftOf="@+id/tvTag" android:layout_toRightOf="@+id/flIcon" android:layout_centerVertical="true">
                <TextView android:textSize="16sp" android:textColor="#ff333333" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvHistory" android:layout_width="wrap_content" android:layout_height="65dp" android:text="超星集团交流圈" android:lines="2"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llTopTag" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textColor="#a8a8a8" android:gravity="center" android:id="@+id/tv_commonly_used" android:background="@drawable/bg_circular_bead_ff999999" android:visibility="gone" android:layout_width="32dp" android:layout_height="18dp" android:layout_marginLeft="5dp" android:text="@string/message_commonly_used"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="#ff999999" android:id="@+id/tvTag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="小组" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <View android:id="@+id/view_divider" android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1.5px" android:layout_marginLeft="15dp" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvStick" android:background="@color/color_commen_addgroup" android:layout_width="86dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="添加常用"/>
        <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvDelete" android:background="@color/color_commen_del" android:layout_width="56dp" android:layout_height="match_parent" android:minHeight="48dp" android:text="@string/bookCollections_Delete"/>
    </LinearLayout>
</LinearLayout>
