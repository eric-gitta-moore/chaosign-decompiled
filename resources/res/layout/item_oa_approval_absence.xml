<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/approval_normal_ll_card" android:background="@drawable/shape_border_approval_item_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <RelativeLayout android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:id="@+id/absence_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="XXX的请假单" android:layout_alignParentLeft="true"/>
            <ImageView android:id="@+id/absence_unread_state" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginLeft="8dp" android:src="@drawable/voice_unread" android:layout_toRightOf="@+id/absence_title" android:layout_centerVertical="true"/>
            <TextView android:id="@+id/absence_info_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="xx-xx" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/item_oa_absence_summary" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
