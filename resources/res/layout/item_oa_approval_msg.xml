<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/approval_msg_ll_card" android:background="@drawable/shape_border_approval_item_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <RelativeLayout android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:id="@+id/approval_msg_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="XXX的报销单"/>
            <ImageView android:id="@+id/approval_msg_unread_state" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginLeft="8dp" android:src="@drawable/voice_unread" android:layout_toRightOf="@+id/approval_msg_title" android:layout_centerVertical="true"/>
            <TextView android:id="@+id/approval_msg_info_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="xx-xx" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="#eaeaea" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:layout_gravity="center_horizontal" android:id="@+id/approval_msg_go" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="点击查看"/>
    </LinearLayout>
</LinearLayout>
