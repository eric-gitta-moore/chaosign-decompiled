<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlCover" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp">
            <ImageView android:id="@+id/ivCover" android:background="@drawable/default_cover_bg" android:layout_width="106dp" android:layout_height="64dp" android:layout_margin="1px" android:scaleType="fitXY" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/ivCoverTop" android:background="@color/trans_black" android:visibility="gone" android:clickable="false" android:layout_width="106dp" android:layout_height="64dp" android:scaleType="fitXY" android:layout_centerInParent="true"/>
            <ImageView android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/opencourse_play" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llContent" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_toRightOf="@+id/rlCover" android:layout_centerVertical="true">
            <TextView android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="钓鱼岛是中国的" android:maxLines="2" style="@style/Text_Title"/>
            <TextView android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="学校" android:singleLine="true" style="@style/Text_Content_14"/>
            <TextView android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="讲时" android:singleLine="true" style="@style/Text_Content_14"/>
        </LinearLayout>
        <CheckBox android:id="@+id/cbSelector" android:focusable="false" android:focusableInTouchMode="false" android:visibility="invisible" android:clickable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:button="@drawable/rss_checkbox"/>
    </LinearLayout>
</LinearLayout>
