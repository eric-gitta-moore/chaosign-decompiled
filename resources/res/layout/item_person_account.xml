<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/llAccountID" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.chaoxing.mobile.login.ui.SwipeMenuLayoutFix android:id="@+id/smLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" app:contentViewId="@+id/content" app:rightViewId="@+id/right">
        <RelativeLayout android:id="@+id/content" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#999999" android:id="@+id/tvUnitName" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="14sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvAccountID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="@string/persioninfo_OrganizationID_label" android:maxLines="1" android:layout_below="@+id/tvUnitName"/>
            <TextView android:id="@+id/tvAuthTip" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_auth_tip" android:layout_toLeftOf="@+id/tvAccountIDRight" android:layout_centerVertical="true"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvAccountIDRight" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/right" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/setting" android:background="@color/common_stick" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/personinfo_unit_default"/>
            <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/delete" android:background="@color/common_delete" android:paddingLeft="12dp" android:paddingRight="12dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/common_menu_delete"/>
        </LinearLayout>
    </com.chaoxing.mobile.login.ui.SwipeMenuLayoutFix>
    <View android:id="@+id/line" android:background="@color/date_line" android:layout_width="match_parent" android:layout_height="1px"/>
</RelativeLayout>
