<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fanzhou="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:id="@+id/container" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginTop="17dp" android:layout_marginRight="6dp">
        <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="46dp" android:layout_height="46dp" fanzhou:is_circle="false" fanzhou:x_radius="4dp" fanzhou:y_radius="4dp"/>
        <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ga_avatar" android:background="@drawable/bg_group_head_circle" android:visibility="gone" android:layout_width="46dp" android:layout_height="46dp"/>
        <ImageView android:id="@+id/ivAttention" android:visibility="gone" android:layout_width="46dp" android:layout_height="46dp" android:src="@drawable/icon_attention_avatars"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="12dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp">
                <TextView android:textSize="14sp" android:textColor="#0066cc" android:ellipsize="end" android:id="@+id/tv_creator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="150dp" android:singleLine="true"/>
                <TextView android:textSize="14sp" android:textColor="#0066cc" android:id="@+id/tv_notebook" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp"/>
                <TextView android:textSize="10sp" android:textColor="#0099ff" android:id="@+id/tvAddFriend" android:background="@drawable/addfriend_btn_bg" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/add_friend_attention"/>
                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                <LinearLayout android:gravity="center_vertical" android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/llRight" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="10sp" android:textColor="#ffffff" android:id="@+id/iv_icon" android:background="@drawable/dynamic_textview_gray_shape" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
                    <TextView android:textSize="14sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tv_Note_Topic" android:paddingLeft="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="180dp" android:text="" android:singleLine="true" android:drawableRight="@drawable/dynamic_down_arrow_ss" android:drawablePadding="3dp"/>
                </LinearLayout>
                <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ivDown" android:paddingLeft="10dp" android:paddingTop="2dp" android:paddingRight="10dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_dynamic_delete"/>
                <TextView android:textSize="10sp" android:textColor="#ff999999" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tvPrivateNote" android:background="@drawable/privatenote_stroke_bg" android:paddingLeft="2dp" android:paddingTop="2dp" android:paddingRight="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="私有笔记"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_unit" android:visibility="gone" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3"/>
            <TextView android:textSize="16sp" android:textColor="#000000" android:ellipsize="end" android:id="@+id/tv_note_title" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:maxLines="3"/>
            <TextView android:textSize="15sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_note_content" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            <include android:id="@+id/vg_images" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/layout_item_images"/>
            <RelativeLayout android:id="@+id/rl_view_attachment" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp">
                <com.chaoxing.mobile.group.ViewAttachment android:id="@+id/view_forward_info" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <ImageView android:id="@+id/iv_attch_more" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_marginBottom="6dp" android:src="@drawable/attach_more" android:layout_alignRight="@+id/view_forward_info" android:layout_alignBottom="@+id/view_forward_info"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llComment" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
            <TextView android:textSize="12sp" android:textColor="#0066cc" android:ellipsize="end" android:id="@+id/tvCommentName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:text="吴美蓉:" android:maxLines="1"/>
            <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvComment" android:layout_width="0dp" android:layout_height="wrap_content" android:text="最新评论最新评论" android:lines="1" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvCommentTime" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="09:48"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="12dp">
            <TextView android:textSize="12sp" android:textColor="#ff0099ff" android:ellipsize="end" android:gravity="right" android:id="@+id/tv_creator2" android:paddingLeft="2dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:text="" android:singleLine="true"/>
            <TextView android:textSize="12sp" android:textColor="#aeaeae" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>
            <RelativeLayout android:id="@+id/rl_buttom_rlayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp">
                <TextView android:textSize="12sp" android:textColor="#0099ff" android:id="@+id/tv_read_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="阅读:0"/>
                <TextView android:textSize="12sp" android:textColor="#0099ff" android:id="@+id/tv_delete" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:text="@string/common_delete" android:layout_toRightOf="@+id/tv_read_count"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/iv_icon_private" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_delete" android:layout_centerVertical="true">
                    <TextView android:textSize="8sp" android:textColor="#ffffff" android:id="@+id/tv_private" android:background="@drawable/dynamic_textview_gray_shapep" android:paddingLeft="1dp" android:paddingRight="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/note_private"/>
                    <TextView android:textSize="10sp" android:textColor="#999999" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="仅自己可见" android:layout_alignRight="@+id/iv_icon2"/>
                </LinearLayout>
                <RelativeLayout android:gravity="center_vertical" android:id="@+id/rlReply" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                    <ImageView android:id="@+id/ivReply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_reply" android:layout_centerVertical="true"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvReply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="50" android:layout_toRightOf="@+id/ivReply" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rlPraise" android:paddingLeft="10dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_toLeftOf="@+id/rlReply">
                    <ImageView android:id="@+id/ivPraise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_do_praise" android:layout_centerVertical="true"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvPraise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="114" android:layout_toRightOf="@+id/ivPraise" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
