<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/recordLayout" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_upLine" android:background="#cccccc" android:visibility="gone" android:layout_width="2dp" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginBottom="-12dp" android:layout_above="@+id/iv_circle" android:layout_alignLeft="@+id/iv_circle" android:layout_alignTop="@+id/divider_up" android:layout_marginStart="9dp" android:layout_alignStart="@+id/iv_circle"/>
    <ImageView android:id="@+id/iv_circle" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="8dp" android:src="@drawable/punch_record_icon" android:layout_alignTop="@+id/rightParent"/>
    <ImageView android:id="@+id/iv_bottomLine" android:background="#cccccc" android:layout_width="2dp" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginTop="-4dp" android:layout_below="@+id/iv_circle" android:layout_alignLeft="@+id/iv_circle" android:layout_alignBottom="@+id/divider_bottom" android:layout_marginStart="9dp" android:layout_alignStart="@+id/iv_circle"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/rightParent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ui_10_dip" android:minHeight="120dp" android:layout_toRightOf="@+id/iv_circle" android:layout_centerInParent="true" android:paddingStart="6dp" android:layout_marginStart="@dimen/ui_10_dip" android:layout_toEndOf="@+id/iv_circle">
        <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:id="@+id/clockSettingTimeTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#fff7a923" android:id="@+id/clockDateTimeTv" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#ff4c26" android:id="@+id/inValidPunchTv" android:background="@drawable/bg_invalid_punch" android:paddingLeft="2.5dp" android:paddingTop="2.5dp" android:paddingRight="2.5dp" android:paddingBottom="2.5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/invalid_punch" android:layout_marginStart="5dp"/>
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#898989" android:id="@+id/noNeedPunchTv" android:background="@drawable/bg_no_need_punch" android:paddingLeft="2.5dp" android:paddingTop="2.5dp" android:paddingRight="2.5dp" android:paddingBottom="2.5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_need_punch" android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/locationLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/locationIcon" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/effective_location"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/locationTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/wifiLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/wifiIcon" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/effective_wifi"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/wifiNameTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="3dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/bluetoothLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/bluetoothIcon" android:layout_width="20dp" android:layout_height="20dp" android:src="@mipmap/as_blue_tooth_icon"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/bluetoothNameTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="13sp" android:textColor="@color/chaoxing_blue" android:id="@+id/updatePunchTv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update_punch" android:drawableEnd="@drawable/wifi_punch_arrow_right" android:layout_marginEnd="5dp"/>
            <TextView android:textSize="13sp" android:textColor="@color/chaoxing_blue" android:id="@+id/viewRemarkTv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_remark" android:drawableEnd="@drawable/wifi_punch_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/divider_bottom" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="0.5px" android:layout_below="@+id/rightParent"/>
    <View android:id="@+id/divider_up" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="0.5px" android:layout_alignParentTop="true"/>
</RelativeLayout>
