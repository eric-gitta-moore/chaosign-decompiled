<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rl_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_centerVertical="true">
            <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ga_avatar" android:layout_width="42dp" android:layout_height="42dp" android:src="@drawable/ic_group_head_item" android:scaleType="fitCenter" android:layout_centerInParent="true" app:riv_corner_radius="4dp" app:riv_mutate_background="true" app:riv_oval="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toLeftOf="@+id/tv_join" android:layout_toRightOf="@+id/rl_icon" android:layout_centerVertical="true">
            <TextView android:ellipsize="end" android:id="@+id/tv_name" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" style="@style/group_title_text"/>
            <TextView android:ellipsize="end" android:id="@+id/tv_content" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" style="@style/group_sub_text"/>
        </LinearLayout>
        <TextView android:id="@+id/tv_join" android:background="@drawable/btn_join" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/group_sub_text"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="63dp"/>
</LinearLayout>
