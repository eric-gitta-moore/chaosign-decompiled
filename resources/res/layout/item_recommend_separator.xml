<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ebeced" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/rlRefresh">
        <TextView android:textSize="16sp" android:textColor="#666666" android:id="@+id/tv_subject" android:background="#ebeced" android:paddingLeft="12dp" android:paddingTop="8dp" android:paddingRight="12dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="专题" android:layout_centerVertical="true"/>
        <View android:id="@+id/indicator_subject" android:background="#0066cc" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_alignLeft="@+id/tv_subject" android:layout_alignRight="@+id/tv_subject" android:layout_alignBottom="@+id/tv_subject"/>
        <TextView android:textSize="16sp" android:textColor="#666666" android:id="@+id/tv_book" android:background="#ebeced" android:paddingLeft="12dp" android:paddingTop="8dp" android:paddingRight="12dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="图书" android:layout_toRightOf="@+id/tv_subject" android:layout_centerVertical="true"/>
        <View android:id="@+id/indicator_book" android:background="#0066cc" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_alignLeft="@+id/tv_book" android:layout_alignRight="@+id/tv_book" android:layout_alignBottom="@+id/tv_book"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/rlRefresh" android:layout_width="36dp" android:layout_height="36dp" android:layout_alignParentRight="true" android:layout_centerInParent="true">
        <ImageView android:id="@+id/iv_refresh" android:background="@drawable/img_refresh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        <ProgressBar android:id="@+id/pbLoading" android:visibility="gone" android:layout_width="23dp" android:layout_height="23dp" android:layout_marginRight="5dp" android:indeterminateDrawable="@drawable/frame_loading" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
