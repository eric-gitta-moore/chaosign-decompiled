<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/item_box_header" android:background="@drawable/shape_line_bg" android:layout_width="match_parent" android:layout_height="45dp">
        <TextView android:textSize="17sp" android:id="@+id/item_remind_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:text="12-27"/>
        <TextView android:textSize="17sp" android:id="@+id/item_remind_week" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="星期一"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/shape_line_white_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/fl_left" android:layout_width="39dp" android:layout_height="match_parent">
            <View android:id="@+id/item_remind_line" android:background="@color/chaoxingBlue" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="17dp" android:layout_centerHorizontal="true"/>
            <ImageView android:id="@+id/item_clock_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="19dp" android:src="@mipmap/clock_blue_icon" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/item_remind_time" android:background="@mipmap/time_blue_bg_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:text="00:00"/>
                <TextView android:layout_gravity="center_vertical" android:id="@+id/red_icon" android:background="@drawable/shape_red_rop" android:layout_width="9dp" android:layout_height="9dp" android:layout_marginTop="17dp" android:layout_marginRight="16dp" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView android:textSize="15sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/item_remind_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:layout_marginBottom="17dp" android:text="默认提醒内容" android:maxLines="3"/>
            <RelativeLayout android:id="@+id/note_widget_ll" android:background="@drawable/shape_line_blue_bg" android:paddingTop="6dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_marginBottom="12dp">
                <ImageView android:id="@+id/attachment_img_iv" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="6dp" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/attachment_img_iv" android:layout_centerVertical="true">
                    <TextView android:ellipsize="end" android:id="@+id/note_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="主题" android:maxLines="1"/>
                    <TextView android:ellipsize="end" android:id="@+id/note_content_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="内容" android:maxLines="2"/>
                    <TextView android:id="@+id/note_from_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="来自哪里"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/box_item_live_widget" android:background="@drawable/shape_line_blue_bg" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_marginBottom="12dp">
                <RelativeLayout android:id="@+id/box_item_live_above" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp">
                    <ImageView android:id="@+id/box_item_live_icon_iv" android:layout_width="30dp" android:layout_height="30dp" android:src="@mipmap/reminder_icon_live_end" android:layout_centerVertical="true"/>
                    <TextView android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="直播" android:layout_toRightOf="@+id/box_item_live_icon_iv" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:background="@color/mainGrey" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="24dp" android:layout_margin="2dp" android:layout_below="@+id/box_item_live_above">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="直播详情" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                    <ImageView android:id="@+id/box_item_live_next" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/next_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:id="@+id/box_item_live_anchor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:text="主播：超星视频" android:layout_toLeftOf="@+id/box_item_live_next" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
