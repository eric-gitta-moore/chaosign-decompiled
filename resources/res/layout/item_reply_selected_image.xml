<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp">
    <RelativeLayout android:layout_width="100dp" android:layout_height="100dp">
        <RelativeLayout android:layout_width="80dp" android:layout_height="80dp" android:layout_centerInParent="true">
            <com.chaoxing.mobile.widget.roundedimageview.RoundedImageView android:id="@+id/ivImage" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_default_image" android:scaleType="centerCrop" android:layout_centerInParent="true" app:riv_corner_radius="4dp" app:riv_oval="false"/>
            <View android:id="@+id/viewCover" android:background="@drawable/bg_image_upload_cover_66000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <ImageView android:id="@+id/iv_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_reply_video_retry" android:layout_centerInParent="true"/>
            <com.chaoxing.mobile.group.widget.RoundProgressView android:id="@+id/progressView" android:visibility="gone" android:layout_width="36dp" android:layout_height="36dp" android:layout_centerInParent="true"/>
            <RelativeLayout android:id="@+id/rl_video" android:background="@drawable/bg_item_selectimg_textview" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_alignParentBottom="true">
                <TextView android:textSize="@dimen/sp_12" android:textColor="@color/white" android:id="@+id/tv_length" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:text="00:01" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <Button android:id="@+id/btnDelete" android:background="@android:color/transparent" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/item_selimg_del_icon" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
