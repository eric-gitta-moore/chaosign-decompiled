<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_gravity="center_vertical" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="65dp">
        <com.fanzhou.widget.CircleImageView android:id="@+id/iv_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="15dp" android:layout_centerVertical="true" app:is_circle="false" app:x_radius="8px" app:y_radius="8px"/>
