            <TextView android:textSize="10sp" android:textColor="@color/public_list_content" android:ellipsize="end" android:id="@+id/tv_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_alignBaseline="@+id/tv_title" android:layout_alignParentRight="true"/>
