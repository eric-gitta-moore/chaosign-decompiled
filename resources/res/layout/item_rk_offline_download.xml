<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/rk_bg_item_offline" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textSize="10sp" android:textColor="@color/red" android:id="@+id/course_type" android:background="@drawable/bg_cc_course_type" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="5dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:text="四级"/>
    <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/course_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="20dp" android:text="四级核心四级核心四级核心" android:lines="1" android:maxEms="10" android:layout_toRightOf="@+id/course_type"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/download_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:text="已下载 2(58.3M) | 全部 5" android:layout_below="@+id/course_type"/>
    <TextView android:textSize="12sp" android:id="@+id/remaining_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:text="2018.03.07 到期  距离到期还有 1 天" android:layout_below="@+id/download_count"/>
    <ImageView android:id="@+id/course_image" android:layout_width="130dp" android:layout_height="112dp" android:layout_marginLeft="24dp" android:layout_marginTop="15dp" android:layout_marginRight="5dp" android:layout_marginBottom="0dp" android:layout_toRightOf="@+id/remaining_time"/>
    <ImageView android:id="@+id/expired" android:background="@drawable/rk_expired" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
