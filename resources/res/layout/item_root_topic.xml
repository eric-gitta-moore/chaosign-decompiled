<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.mobile.group.widget.TopicRootItemView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/dliver" android:background="#f5f6f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="8dp"/>
    <CheckBox android:id="@+id/cb_selector" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/rl_content" android:paddingLeft="13dp" android:paddingTop="13dp" android:paddingRight="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/cb_selector" android:layout_below="@+id/dliver">
        <com.fanzhou.widget.CircleImageView android:id="@+id/iv_avatar" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginTop="2dp" android:src="@drawable/icon_user_head_portrait" app:is_circle="false" app:x_radius="5dp" app:y_radius="5dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/user" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="15dp" android:layout_toRightOf="@+id/iv_avatar">
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="#ff0099ff" android:ellipsize="end" android:id="@+id/tv_author" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="小清新" android:maxLines="1" android:maxEms="10" android:maxLength="10" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tv_unit" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="1" android:layout_toRightOf="@+id/tv_author" android:layout_centerVertical="true"/>
                <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/flower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/tv_unit" android:layout_centerVertical="true"/>
                <Button android:textSize="12sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/btn_attention" android:background="@drawable/bg_circle_border_ff0099ff_transparent" android:paddingLeft="3dp" android:paddingTop="1dp" android:paddingRight="3dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/add_friend_attention" android:layout_toRightOf="@+id/flower" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/tvMemberTag" android:paddingLeft="3dp" android:paddingTop="1dp" android:paddingRight="3dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="管理员" android:layout_toRightOf="@+id/btn_attention" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/tvTeacherTag" android:paddingLeft="3dp" android:paddingTop="1dp" android:paddingRight="3dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/topic_teacher_tag" android:layout_toRightOf="@+id/tvMemberTag" android:layout_centerVertical="true"/>
                <TextView android:textSize="11sp" android:textColor="#999999" android:id="@+id/tv_reply" android:background="@drawable/bg_topic_reply" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="5dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="已回复" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="13sp" android:textColor="#b3b3b3" android:ellipsize="end" android:gravity="right" android:id="@+id/tv_usersTopicFolderDes" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="根目" android:maxLines="1" android:drawableRight="@drawable/as_arrow_right_gray" android:drawablePadding="3dp" android:layout_toRightOf="@+id/btn_attention" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView android:textSize="12sp" android:textColor="#878889" android:id="@+id/tv_publish_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_below="@+id/tv_author"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/user" android:layout_alignParentEnd="true">
            <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tv_topic_class_info" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="185dp" android:drawablePadding="5dp" android:layout_marginEnd="3dp" android:layout_alignParentEnd="true"/>
            <ImageView android:id="@+id/ivUnreadTag" android:background="@drawable/circle_bg_0099ff" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="19dp" android:layout_below="@+id/tv_topic_class_info" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/c" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:layout_below="@+id/user">
            <RelativeLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
                    <TextView android:textSize="17sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_title_tag"/>
                    <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_title_tag" android:background="@drawable/shape_digest_backgroud" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="精"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_below="@+id/title">
                    <TextView android:textSize="16sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/tv_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_text_tag" android:lineSpacingMultiplier="1.2"/>
                    <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_text_tag" android:background="@drawable/shape_digest_backgroud" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="精"/>
                </RelativeLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/image" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="13dp" android:weightSum="3" android:layout_below="@+id/text">
                    <com.chaoxing.mobile.note.widget.DynamicItemImageAndVideoLayout android:id="@+id/vg_images" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/image">
                    <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/attachment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
                    <TextView android:textSize="10sp" android:textColor="#cccccc" android:id="@+id/tv_fj_fold" android:paddingBottom="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/icon_more_atts" android:drawableRight="@drawable/blue_ic_down" android:drawablePadding="5dp" android:layout_below="@+id/attachment" android:layout_alignParentRight="true"/>
                    <View android:id="@+id/attachment_cover" android:background="#80999999" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignTop="@+id/attachment" android:layout_alignBottom="@+id/attachment"/>
                    <View android:id="@+id/view_segmentation" android:background="#55cccccc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginBottom="8dp" android:layout_below="@+id/tv_fj_fold"/>
                    <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/transition_attachment" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_below="@+id/view_segmentation"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_tabs_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_below="@+id/content">
                <com.zhy.view.flowlayout.TagFlowLayout android:id="@+id/id_flowlayout_tags" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="-5dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/reply" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_below="@+id/ll_tabs_view">
                <TextView android:textSize="12sp" android:textColor="#ff0099ff" android:ellipsize="end" android:gravity="bottom" android:layout_gravity="center_vertical" android:id="@+id/tv_replier" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                <TextView android:textSize="12sp" android:textColor="#ff999999" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tv_reply_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="@android:color/black" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tv_delete_reason" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_below="@+id/reply"/>
            <RelativeLayout android:id="@+id/count" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_delete_reason">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/option" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
                    <FrameLayout android:id="@+id/flShare" android:paddingTop="3dp" android:paddingBottom="13dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_share" android:background="@android:color/transparent" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/dynamic_share_icon" android:drawablePadding="8dp" android:layout_toRightOf="@+id/ivPraise" android:contentDescription="转发按钮"/>
                    </FrameLayout>
                    <FrameLayout android:id="@+id/flReply" android:paddingTop="3dp" android:paddingBottom="13dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_reply" android:background="@android:color/transparent" android:clickable="false" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/dynamic_reply" android:drawablePadding="8dp" android:contentDescription="@string/tab_Comments"/>
                    </FrameLayout>
                    <FrameLayout android:id="@+id/flPraise" android:paddingTop="3dp" android:paddingBottom="13dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_praise" android:background="@android:color/transparent" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/dynamic_prise" android:drawablePadding="8dp" android:layout_toRightOf="@+id/ivPraise" android:contentDescription="点赞"/>
                    </FrameLayout>
                </LinearLayout>
            </RelativeLayout>
            <View android:id="@+id/content_cover" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/count" android:layout_alignTop="@+id/content"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/bottom_dliver" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/rl_content"/>
    <View android:id="@+id/view_deliver" android:background="@color/DividerColor" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="39dp" android:layout_below="@+id/rl_content"/>
    <View android:id="@+id/view_cover" android:background="#80999999" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignTop="@+id/rl_content" android:layout_alignBottom="@+id/rl_content"/>
</com.chaoxing.mobile.group.widget.TopicRootItemView>
