<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="65dp">
    <RelativeLayout android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ivLogo" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_resource_default" android:scaleType="fitCenter" android:layout_centerVertical="true" app:riv_corner_radius="4dp" app:riv_mutate_background="true" app:riv_oval="false"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toLeftOf="@+id/tvScore" android:layout_toRightOf="@+id/ivLogo" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/flower" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tvName"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/tvContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tvName"/>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="#999999" android:id="@+id/tvScore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="65dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
