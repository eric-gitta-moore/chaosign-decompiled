<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/selector_list_item" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="66dp">
        <CheckBox android:id="@+id/cbSelected" android:clickable="false" android:layout_width="28dp" android:layout_height="28dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/llContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_toRightOf="@+id/cbSelected" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvName" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="13sp" android:textColor="#b3b3b3" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true"/>
        </LinearLayout>
        <View android:background="@color/date_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignLeft="@+id/rlContent" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
