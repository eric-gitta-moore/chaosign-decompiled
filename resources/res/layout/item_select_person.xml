<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/selector_list_item" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="66dp">
        <CheckBox android:id="@+id/cbSelected" android:clickable="false" android:layout_width="28dp" android:layout_height="28dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/cbSelected" android:layout_centerVertical="true" app:riv_corner_radius="4dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:singleLine="true" android:layout_toRightOf="@+id/iv_icon" android:layout_centerVertical="true"/>
        <View android:background="@color/date_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
