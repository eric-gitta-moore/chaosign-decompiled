<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ebeced" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/tv_separator" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingRight="15dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/Timeline_title" android:layout_toLeftOf="@+id/rlRefresh" android:layout_centerVertical="true" style="@style/group_title_text"/>
    <RelativeLayout android:id="@+id/refresh" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/tv_separator" android:layout_alignBottom="@+id/tv_separator" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/iv_refresh" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/img_refresh" android:layout_centerInParent="true"/>
        <com.chaoxing.core.widget.CircleProgressBar android:id="@+id/pb_loading" android:visibility="gone" android:layout_width="26dp" android:layout_height="26dp" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
