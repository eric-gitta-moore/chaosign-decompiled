<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.mobile.group.ui.TopicFolderListItem xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_edit" android:background="@color/color_commen_addgroup" android:visibility="gone" android:layout_width="60dp" android:layout_height="match_parent" android:text="@string/grouplist_Edit"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_delete" android:background="@color/color_commen_del" android:visibility="gone" android:layout_width="60dp" android:layout_height="match_parent" android:text="@string/something_xuexitong_delete"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:id="@+id/cb_selector" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true"/>
            <RelativeLayout android:id="@+id/content_view" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/cb_selector" android:layout_centerVertical="true">
                <TextView android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="名字" android:maxLines="2" style="@style/group_title_text"/>
                <TextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="3dp" android:maxLines="2" android:layout_below="@+id/tv_name"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:id="@+id/line" android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp"/>
    </LinearLayout>
</com.chaoxing.mobile.group.ui.TopicFolderListItem>
