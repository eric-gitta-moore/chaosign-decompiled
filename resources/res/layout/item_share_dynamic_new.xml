<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fanzhou="http://schemas.android.com/apk/res-auto" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/content_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="15dp" android:paddingEnd="15dp">
        <RelativeLayout android:id="@+id/rlCheckContainer" android:paddingLeft="8dp" android:paddingTop="40dp" android:paddingRight="8dp" android:paddingBottom="40dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-8dp" android:layout_marginRight="7dp" android:layout_centerVertical="true">
            <CheckBox android:id="@+id/cb_selected" android:focusable="false" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:button="@drawable/checkbox_group_member" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/rlCheckContainer">
            <RelativeLayout android:id="@+id/rl_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginRight="10dp">
                <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="40dp" android:layout_height="40dp" fanzhou:is_circle="false" fanzhou:x_radius="4dp" fanzhou:y_radius="4dp"/>
                <com.fanzhou.widget.CircleImageView android:id="@+id/ga_avatar" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerVertical="true" fanzhou:is_circle="true"/>
                <ImageView android:id="@+id/ivAttention" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icon_attention_avatars"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/rl_right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_weight="1">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_top" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="14sp" android:textColor="@color/chaoxing_blue" android:ellipsize="end" android:id="@+id/tv_creator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="150dp" android:singleLine="true"/>
                    <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/tv_notebook" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1"/>
                    <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                    <TextView android:textSize="10sp" android:textColor="#0099ff" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/tvAddFriend" android:background="@drawable/addfriend_btn_bg" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/add_friend_attention"/>
                    <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/llRight" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="10sp" android:textColor="#ffffff" android:id="@+id/iv_icon" android:background="@drawable/dynamic_textview_gray_shape" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/iv_icon_private" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp">
                            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_private" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_private_dynamic"/>
                            <TextView android:textSize="10sp" android:textColor="#999999" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="仅自己可见" android:layout_alignRight="@+id/iv_icon2"/>
                        </LinearLayout>
                        <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvUploading" android:background="@drawable/bg_circular_bead_c7c7cb" android:visibility="gone" android:layout_width="42dp" android:layout_height="18dp" android:layout_marginLeft="5dp" android:text="同步中"/>
                        <LinearLayout android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/ll_Note_Topic" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tv_Note_Topic" android:paddingLeft="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:singleLine="true" android:layout_weight="1"/>
                            <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:src="@drawable/dynamic_down_arrow_ss" android:layout_weight="0"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View android:id="@+id/view" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                    <TextView android:textSize="13sp" android:textColor="#999999" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tvRecommend" android:background="@drawable/recommend_gray_bg" android:paddingLeft="2dp" android:paddingRight="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="18dp" android:text="@string/btn_Recommend_text"/>
                    <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ivDown" android:paddingLeft="13dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_dynamic_delete" android:scaleType="center"/>
                    <TextView android:textSize="10sp" android:textColor="#ff999999" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tvPrivateNote" android:background="@drawable/privatenote_stroke_bg" android:paddingLeft="2dp" android:paddingTop="2dp" android:paddingRight="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="私有笔记"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_unit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_below="@+id/ll_top">
                    <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_creator2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:maxWidth="72dp" android:text="" android:singleLine="true"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_unit" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:maxLines="1"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="12sp" android:textColor="#0099ff" android:id="@+id/tvReadCount" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView android:textSize="12sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_focus" android:background="@drawable/bg_home_focus_no" android:paddingTop="4.5dp" android:paddingBottom="4.5dp" android:visibility="gone" android:layout_width="53dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_weight="0" android:layout_centerVertical="true"/>
        </LinearLayout>
        <TextView android:textSize="13sp" android:textColor="#cccccc" android:ellipsize="end" android:id="@+id/tv_from" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:lines="1" android:layout_toRightOf="@+id/rlCheckContainer" android:layout_below="@+id/ll_title"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_contentainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_toRightOf="@+id/rlCheckContainer" android:layout_below="@+id/tv_from">
            <TextView android:textSize="17sp" android:textColor="#000000" android:ellipsize="end" android:id="@+id/tv_note_title" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3" android:lineSpacingMultiplier="1" android:letterSpacing="0.02"/>
            <RelativeLayout android:id="@+id/rlContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="16sp" android:textColor="#444444" android:ellipsize="end" android:id="@+id/tv_note_content" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.2" android:letterSpacing="0.02"/>
                <TextView android:textSize="16sp" android:textColor="#0099ff" android:ellipsize="end" android:id="@+id/tv_Folder" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.2" android:letterSpacing="0.05"/>
            </RelativeLayout>
            <com.chaoxing.mobile.note.widget.DynamicItemImageAndVideoLayout android:id="@+id/vg_images" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/view_forward_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llComment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_weight="1">
                <TextView android:textSize="12sp" android:textColor="#0099ff" android:ellipsize="end" android:id="@+id/tvCommentName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:text="吴美蓉: " android:maxLines="1"/>
                <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvComment" android:layout_width="0dp" android:layout_height="wrap_content" android:text="最新评论最新评论" android:lines="1" android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvCommentTime" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="09:48"/>
            </LinearLayout>
            <View android:id="@+id/bottomLine" android:background="#ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_buttom_rlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ll_contentainer">
            <RelativeLayout android:gravity="center" android:id="@+id/rlShare" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:id="@+id/ivShare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dynamic_share_icon" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:id="@+id/tvShare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/topic_share" android:layout_toRightOf="@+id/ivShare" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:id="@+id/rlReply" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:id="@+id/ivReply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dynamic_reply" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:id="@+id/tvReply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/topic_review" android:layout_toRightOf="@+id/ivReply" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:id="@+id/rlPraise" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:id="@+id/ivPraise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dynamic_prise" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textColor="#4f4f4f" android:id="@+id/tvPraise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/topic_like" android:layout_toRightOf="@+id/ivPraise" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/cover" android:background="#80999999" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/content_view" android:layout_alignBottom="@+id/content_view"/>
    <View android:id="@+id/viewline1" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/content_view"/>
</RelativeLayout>
