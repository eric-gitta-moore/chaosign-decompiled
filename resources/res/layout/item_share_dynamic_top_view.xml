<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:paddingLeft="15dp" android:paddingTop="15dp" android:paddingRight="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:id="@+id/vTag" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textColor="#ff9933" android:gravity="center" android:id="@+id/tvTag" android:background="@drawable/bg_circular_bead_ff9933" android:layout_width="30dp" android:layout_height="18dp" android:layout_marginRight="6dp" android:text="活动"/>
            </LinearLayout>
            <TextView android:textSize="15sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvTitle" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_toRightOf="@+id/vTag"/>
        </RelativeLayout>
        <ImageView android:id="@+id/iv_note_img" android:visibility="gone" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginLeft="15dp" android:scaleType="centerCrop"/>
    </LinearLayout>
    <View android:id="@+id/viewline1" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="8dp"/>
</LinearLayout>
