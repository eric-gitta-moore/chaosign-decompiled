<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/text_size_15" android:textColor="@color/text_devices" android:id="@+id/tv_section_list" android:paddingLeft="10dp" android:paddingTop="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/data_format_ymd"/>
    <RelativeLayout android:id="@+id/rl_video_list" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/item_video_list_imageView" android:background="@color/black" android:layout_width="55dp" android:layout_height="55dp" android:layout_marginLeft="27dp" android:layout_marginTop="3dp" android:layout_marginBottom="3dp" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_15" android:textStyle="bold" android:textColor="@color/text_devices" android:ellipsize="end" android:id="@+id/item_name_textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="10dp" android:layout_marginRight="25dp" android:maxLines="1" android:layout_toLeftOf="@+id/item_video_screen_projection_textView" android:layout_toRightOf="@+id/item_video_list_imageView" android:layout_alignTop="@+id/item_video_list_imageView"/>
        <TextView android:textSize="@dimen/text_size_13" android:textColor="@color/text_video_time" android:id="@+id/item_duration_textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/item_video_list_imageView" android:layout_below="@+id/item_name_textView"/>
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@color/bg_top" android:gravity="center" android:id="@+id/item_video_screen_projection_textView" android:background="@drawable/bg_video_list_screen_projection" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="@string/check" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <View android:background="@color/divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="5dp" android:layout_below="@+id/item_video_list_imageView" android:layout_alignLeft="@+id/item_name_textView"/>
        <View android:id="@+id/item_divider_list" android:background="@color/divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="5dp" android:layout_below="@+id/item_video_list_imageView" android:layout_alignLeft="@+id/item_video_list_imageView"/>
    </RelativeLayout>
    <View android:id="@+id/item_margin_bottom" android:visibility="gone" android:layout_width="match_parent" android:layout_height="15dp"/>
</LinearLayout>
