<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="60dp">
    <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/avatar" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerVertical="true" android:layout_alignParentStart="true" app:riv_corner_radius="4dp" app:riv_oval="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/llo_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/avatar">
        <TextView android:textSize="15sp" android:textColor="@color/color_333333" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
    </LinearLayout>
    <View android:background="@color/divider_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="17dp" android:layout_below="@+id/llo_info" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/avatar"/>
    <TextView android:textSize="17sp" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/leave_type" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toEndOf="@+id/llo_info" android:layout_alignParentEnd="true"/>
</RelativeLayout>
