<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="6dp" android:paddingBottom="6dp" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/viewDivider" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlReply" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#666666" android:gravity="center_vertical" android:id="@+id/tvReply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.2"/>
            <View android:id="@+id/viewCover" android:background="#33000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/tvReply" android:layout_alignBottom="@+id/tvReply"/>
            <com.chaoxing.mobile.note.widget.ReplyItemImageLayout android:id="@+id/rlImage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/tvReply"/>
            <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/attachmentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/rlImage"/>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textColor="#ffcccccc" android:id="@+id/tvReplyEditTip" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlReply"/>
    </RelativeLayout>
</LinearLayout>
