<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="50dp">
    <RadioButton android:id="@+id/rb" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:checked="false" android:button="@drawable/group_type" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_icon" android:layout_width="@dimen/dp_40" android:layout_height="@dimen/dp_40" android:layout_marginLeft="30dp" android:src="@drawable/img_clazz" android:layout_toRightOf="@+id/rb" android:layout_centerVertical="true" app:riv_corner_radius="4dp"/>
    <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:singleLine="true" android:layout_toLeftOf="@+id/iv_option" android:layout_toRightOf="@+id/iv_icon" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/iv_option" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/icon_mark_delete" android:layout_alignParentRight="true"/>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
