<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/content_view" android:paddingLeft="13dp" android:paddingTop="10dp" android:paddingRight="13dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlUserProfile" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp">
            <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginTop="2dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" ss:border_color="@color/avatar_border" ss:border_width="1px" ss:is_circle="false" ss:x_radius="5dp" ss:y_radius="5dp"/>
            <RelativeLayout android:gravity="center_vertical" android:id="@+id/rlUser" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toLeftOf="@+id/ivUnreadTag" android:layout_toRightOf="@+id/ivAvatar">
                <TextView android:textSize="14sp" android:textColor="#ff0099ff" android:ellipsize="end" android:id="@+id/tvAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:maxLines="1" android:maxEms="10" android:layout_centerVertical="true"/>
                <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/tvAuthor"/>
                <TextView android:textSize="12sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tvOrganization" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:text="超星集团" android:singleLine="true" android:layout_below="@+id/tvAuthor"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:layout_toRightOf="@+id/ivAvatar" android:layout_below="@+id/rlUser" android:layout_centerVertical="true">
                <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tvPublishTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="06-06 08:08"/>
                <TextView android:textSize="13sp" android:textColor="#0099ff" android:id="@+id/tvDelete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/common_delete"/>
                <TextView android:textSize="13sp" android:textColor="#0099ff" android:id="@+id/tvRelease" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/topiccheck_list_release"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlContentBody" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_below="@+id/rlUserProfile">
            <RelativeLayout android:id="@+id/rlTitleContainer" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tvTitleDigest" android:background="@drawable/shape_digest_backgroud" android:paddingLeft="3dp" android:paddingTop="2dp" android:paddingRight="3dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="精"/>
                <TextView android:textSize="17sp" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text=""/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlContentContaioner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/rlTitleContainer">
                <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tvContentDigest" android:background="@drawable/shape_digest_backgroud" android:paddingLeft="3dp" android:paddingTop="2dp" android:paddingRight="3dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="精"/>
                <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="" android:lineSpacingMultiplier="1.2"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="13dp" android:layout_below="@+id/rlContentContaioner">
                <com.chaoxing.mobile.note.widget.DynamicItemImageAndVideoLayout android:id="@+id/vg_images" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/flAttachment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlImage">
                <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/viewAttachment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
            </FrameLayout>
            <TextView android:textSize="10sp" android:textColor="#cccccc" android:id="@+id/tv_fj_fold" android:paddingTop="10dp" android:paddingBottom="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/icon_more_atts" android:drawableRight="@drawable/blue_ic_down" android:drawablePadding="5dp" android:layout_below="@+id/flAttachment" android:layout_alignParentRight="true"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_tabs_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_below="@+id/tv_fj_fold">
                <com.zhy.view.flowlayout.TagFlowLayout android:id="@+id/id_flowlayout_tags" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="-5dp"/>
            </LinearLayout>
            <View android:id="@+id/view_segmentation" android:background="#55cccccc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginBottom="8dp" android:layout_below="@+id/ll_tabs_view"/>
            <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_below="@+id/view_segmentation" layout="@layout/item_topic_reply_des"/>
        </RelativeLayout>
        <View android:id="@+id/viewCover" android:background="#33000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/rlContentBody" android:layout_alignBottom="@+id/rlContentBody"/>
    </RelativeLayout>
    <View android:id="@+id/divler" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="8dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
