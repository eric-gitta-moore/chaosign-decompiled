<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:background="#fafafa" android:paddingBottom="1px" android:clickable="true" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/topic_reply_item" android:paddingLeft="15dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlReplyHeader" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="30dp" android:layout_toRightOf="@+id/cb_selector">
            <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginTop="5dp" android:layout_marginRight="15dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" android:importantForAccessibility="no" ss:border_color="@color/avatar_border" ss:border_width="0px" ss:is_circle="false" ss:x_radius="5dp" ss:y_radius="5dp"/>
            <RelativeLayout android:id="@+id/rlTop" android:layout_width="match_parent" android:layout_height="26dp" android:layout_toLeftOf="@+id/rlRight" android:layout_toRightOf="@+id/ivAvatar">
                <TextView android:textSize="15sp" android:textColor="#ff666666" android:ellipsize="end" android:id="@+id/tvAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="作者" android:singleLine="true" android:maxLength="10" android:layout_centerVertical="true" android:importantForAccessibility="no"/>
                <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_toRightOf="@+id/tvAuthor" android:layout_centerVertical="true"/>
                <TextView android:textSize="11sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tvTopTag" android:background="@drawable/bg_circle_border_ff0099ff_transparent" android:visibility="gone" android:layout_width="30dp" android:layout_height="16dp" android:layout_marginLeft="2dp" android:text="@string/note_top" android:layout_toRightOf="@+id/userFlower" android:layout_centerVertical="true"/>
                <Button android:textSize="11sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/btnFriends" android:background="@drawable/bg_circle_border_ff0099ff_transparent" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/pcenter_message_addfirend_addFriend" android:layout_toRightOf="@+id/tvTopTag" android:layout_centerVertical="true" android:importantForAccessibility="no"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlBottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/rlRight" android:layout_toRightOf="@+id/ivAvatar" android:layout_below="@+id/rlTop">
                <TextView android:textSize="12sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tvOrganization" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="机构名称" android:singleLine="true" android:layout_centerVertical="true"/>
                <RelativeLayout android:id="@+id/rlTag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tvOrganization">
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvFloor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="第1楼" android:importantForAccessibility="no"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvReplyTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="刚刚" android:lines="1" android:layout_toRightOf="@+id/tvFloor" android:importantForAccessibility="no"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_screen" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/iv_screen" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_screen_topic_reply" android:layout_marginStart="0dp"/>
                    <TextView android:textSize="14sp" android:textColor="#0099ff" android:layout_gravity="center_vertical" android:id="@+id/tv_screen" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="关闭" android:layout_marginEnd="5dp" android:layout_toEndOf="@+id/iv_screen"/>
                </LinearLayout>
                <TextView android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/ivMark" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/icon_res_unmark" android:drawablePadding="5dp" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_toEndOf="@+id/ll_screen"/>
                <Button android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/btnPraise" android:background="@android:color/transparent" android:paddingTop="1dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="99" android:drawableLeft="@drawable/ic_do_praise_null" android:drawablePadding="5dp" android:layout_toRightOf="@+id/ivMark" android:layout_centerVertical="true" android:importantForAccessibility="no"/>
                <Button android:id="@+id/btnReply" android:background="@android:color/transparent" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:drawableLeft="@drawable/ic_reply" android:layout_toRightOf="@+id/btnPraise" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlReply" android:paddingLeft="53dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_toRightOf="@+id/cb_selector" android:layout_below="@+id/rlReplyHeader">
            <RelativeLayout android:id="@+id/rlReplyContent" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.chaoxing.mobile.note.views.ReplyItemView android:textSize="16sp" android:textColor="#ff474747" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/vReplyContent" android:focusable="true" android:clickable="true" android:longClickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="回复内容" android:maxLines="7" android:lineSpacingMultiplier="1.2"/>
                <View android:id="@+id/viewCover" android:background="#33000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/vReplyContent" android:layout_alignBottom="@+id/vReplyContent"/>
                <com.chaoxing.mobile.note.widget.ReplyItemImageLayout android:id="@+id/llReplyImage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/vReplyContent"/>
                <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/attachmentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/llReplyImage"/>
            </RelativeLayout>
            <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tvReplyEditTip" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="修改提示" android:layout_below="@+id/rlReplyContent"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llSubReplies" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="53dp" android:layout_marginRight="15dp" android:layout_toRightOf="@+id/cb_selector" android:layout_below="@+id/rlReply"/>
        <TextView android:textSize="16sp" android:textColor="#0099ff" android:id="@+id/tvReplyMore" android:paddingTop="9dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/message_note_reply_more" android:layout_below="@+id/llSubReplies" android:layout_centerHorizontal="true"/>
        <CheckBox android:id="@+id/cb_selector" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:button="@drawable/checkbox_group_member" android:layout_centerVertical="true" android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
