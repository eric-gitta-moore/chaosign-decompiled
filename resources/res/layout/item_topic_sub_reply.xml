<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/ll_sub" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_sub" android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="66dp" android:layout_marginRight="13dp" android:layout_marginBottom="8dp">
        <RelativeLayout android:id="@+id/rlReply" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#ff474747" android:gravity="center_vertical" android:id="@+id/tvReply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.2"/>
            <View android:id="@+id/viewCover" android:background="#33000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/tvReply" android:layout_alignBottom="@+id/tvReply"/>
            <com.chaoxing.mobile.note.widget.ReplyItemImageLayout android:id="@+id/ll_ReplyImage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/tvReply"/>
            <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/attachmentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/ll_ReplyImage"/>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/tvReplyEditTip" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlReply"/>
    </RelativeLayout>
    <View android:id="@+id/bottomline" android:background="#ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
</LinearLayout>
