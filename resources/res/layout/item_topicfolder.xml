<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlMain" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
        <ImageView android:id="@+id/ivTag" android:background="@drawable/ic_folder_private" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp"/>
        <TextView android:textColor="#0099ff" android:id="@+id/tvEnter" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_enter" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="文件夹名称" android:maxLines="2" android:layout_toLeftOf="@+id/tvEnter" android:layout_toRightOf="@+id/ivTag" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#e7e8e7" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_alignBottom="@+id/rlMain"/>
</RelativeLayout>
