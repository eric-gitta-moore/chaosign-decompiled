<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingEnd="15dp">
    <ImageView android:id="@+id/ivSelect" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:src="@drawable/ic_att_video_select" android:layout_marginStart="5dp"/>
    <TextView android:textSize="14sp" android:textColor="#a6abb3" android:id="@+id/tvChatTime" android:layout_width="54dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginStart="22dp"/>
    <RelativeLayout android:orientation="horizontal" android:paddingTop="8dp" android:paddingBottom="6.5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="8dp" android:paddingEnd="8dp" android:layout_toEndOf="@+id/tvChatTime">
        <TextView android:textSize="15sp" android:textColor="#475466" android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="15sp" android:textColor="#475466" android:id="@+id/tvChat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@+id/tvName"/>
    </RelativeLayout>
</RelativeLayout>
