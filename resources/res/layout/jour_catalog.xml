<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlCateTopBar" android:background="@drawable/top_toolbar_bg" android:layout_width="match_parent" android:layout_height="48dp">
        <TextView android:id="@+id/tv_left" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <TextView android:ellipsize="middle" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="65dp" android:layout_marginRight="65dp" android:singleLine="true" android:layout_centerInParent="true" style="@style/Text_Title_Page"/>
        <TextView android:id="@+id/tvLanguage" android:background="@drawable/light_blue_btn_bg" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="语言/中文" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/Text_White_16"/>
        <LinearLayout android:id="@+id/llGoHome" android:background="#00a0de" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <TextView android:id="@+id/tvGoHome" android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingRight="12dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="首页" style="@style/Text_White_18"/>
        </LinearLayout>
        <TextView android:id="@+id/tvDiscuss" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_alignParentRight="true" style="@style/text_discuss_style"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/relativell" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rlCateTopBar">
        <RelativeLayout android:id="@+id/rlwheel" android:background="@drawable/online_resource_newspaper_picker_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <com.fanzhou.scholarship.widget.WheelView android:id="@+id/city" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/llIndicators" android:background="@drawable/standard_button_background" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_above="@+id/rlwheel" android:layout_centerHorizontal="true"/>
        <androidx.viewpager.widget.ViewPager android:id="@+id/catapage" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:layout_above="@+id/llIndicators" android:layout_below="@+id/rlCateTopBar"/>
    </RelativeLayout>
    <ProgressBar android:id="@+id/pbCateWait" android:background="@drawable/busy" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerInParent="true"/>
</RelativeLayout>
