<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlContainer" android:layout_width="match_parent" android:layout_height="84dp">
        <ImageView android:id="@+id/ivCover" android:layout_width="46dp" android:layout_height="62dp" android:layout_marginLeft="12dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ivCoverTop" android:layout_width="match_parent" android:layout_height="84dp" android:scaleType="fitXY" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:id="@+id/selectedBg" android:background="@color/black_4c000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="84dp" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/edit_selected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="1dp" android:layout_marginBottom="2dp" android:src="@drawable/bookshelf_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/ivCover" android:layout_centerVertical="true" style="@style/Text_Title"/>
        <ImageView android:id="@+id/ivRightArrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="12dp" android:src="@drawable/right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</FrameLayout>
