<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#171719" android:layout_width="match_parent" android:layout_height="match_parent">
    <GridView android:id="@+id/app_grid" android:layout_width="match_parent" android:layout_height="match_parent" android:numColumns="4"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_waiting" android:background="#00000000" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
        <ProgressBar android:gravity="center" android:layout_gravity="center" android:id="@+id/loading_progress" android:layout_width="@dimen/loading_min_width" android:layout_height="@dimen/loading_min_width" android:layout_marginTop="20dp"/>
        <TextView android:textSize="12dp" android:textColor="#f0f0f0" android:gravity="center" android:layout_gravity="center" android:id="@+id/loading_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/refreshing"/>
    </LinearLayout>
</RelativeLayout>
