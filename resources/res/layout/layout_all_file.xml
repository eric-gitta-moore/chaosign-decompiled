<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:background="#d1f0f0f0" android:layout_width="400dp" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_title" android:background="#d5000000" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_file_photo" android:paddingTop="10dp" android:paddingBottom="10dp" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/local_image" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_file_video" android:paddingTop="10dp" android:paddingBottom="10dp" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/local_video" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_file_music" android:paddingTop="10dp" android:paddingBottom="10dp" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/local_audio" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_file_doc" android:paddingTop="10dp" android:paddingBottom="10dp" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/local_document" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_apps" android:paddingTop="10dp" android:paddingBottom="10dp" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/remote_application" android:layout_weight="1"/>
    </LinearLayout>
    <ListView android:id="@+id/list_view" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@drawable/list_video_sel" android:divider="#99333333" android:dividerHeight="1px" android:layout_below="@+id/layout_title" android:scrollbarFadeDuration="0" android:fadeScrollbars="false"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_waiting" android:background="#90ffffff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/layout_title" android:layout_centerInParent="true">
        <ProgressBar android:gravity="center" android:layout_gravity="center" android:id="@+id/loading_progress" android:layout_width="@dimen/loading_min_width" android:layout_height="@dimen/loading_min_width" android:layout_marginTop="20dp"/>
        <TextView android:textSize="12dp" android:textColor="#666666" android:gravity="center" android:layout_gravity="center" android:id="@+id/loading_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/refreshing"/>
    </LinearLayout>
</RelativeLayout>
