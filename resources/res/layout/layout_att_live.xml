<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/reminder_live_widget" android:background="@drawable/shape_line_blue_bg" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/reminder_live_above" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp">
            <ImageView android:id="@+id/reminder_live_icon_iv" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="6dp" android:src="@mipmap/reminder_icon_live_end" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="直播" android:layout_toRightOf="@+id/reminder_live_icon_iv" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:background="@color/mainGrey" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_margin="1dp" android:layout_below="@+id/reminder_live_above">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="直播详情" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/reminder_live_next" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/next_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:id="@+id/att_live_anchor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:text="主播：超星视频" android:layout_toLeftOf="@+id/reminder_live_next" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
