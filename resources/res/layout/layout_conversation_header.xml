<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="45dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_contact" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_message_contact"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/message_contact" android:layout_marginStart="6dp"/>
        </LinearLayout>
        <View android:layout_gravity="center_vertical" android:background="@color/color_ebebeb" android:layout_width="1px" android:layout_height="20dp"/>
        <RelativeLayout android:id="@+id/ll_to_do" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:id="@+id/tv_to_do" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/message_to_do" android:drawablePadding="6dp" android:layout_centerInParent="true" android:drawableStart="@drawable/icon_message_to_do"/>
            <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_to_do_count" android:background="@drawable/bg_unread_count_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="18dp" android:minWidth="18dp" android:layout_centerVertical="true" android:layout_marginStart="6dp" android:layout_toEndOf="@+id/tv_to_do"/>
        </RelativeLayout>
        <View android:layout_gravity="center_vertical" android:background="@color/color_ebebeb" android:layout_width="1px" android:layout_height="20dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_schedule" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_message_schedule"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/message_schedule" android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginBottom="5dp"/>
</LinearLayout>
