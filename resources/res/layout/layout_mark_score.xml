<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#90000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl1_relativelayout" android:background="@drawable/bg_write_circle_core" android:layout_width="260dp" android:layout_height="185dp" android:layout_centerInParent="true">
        <LinearLayout android:id="@+id/llContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_centerHorizontal="true">
            <TextView android:textSize="15sp" android:textColor="#333" android:layout_gravity="center_vertical" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:text="@string/topic_rate"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="146dp" android:layout_height="37dp">
                <RelativeLayout android:layout_gravity="center" android:id="@+id/rlReduce" android:background="@drawable/bg_writebg_blueborder_8corner_2" android:layout_width="24dp" android:layout_height="24dp">
                    <ImageView android:textSize="14sp" android:gravity="center" android:id="@+id/tvReduce" android:background="@drawable/icon_score_reduce" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <EditText android:textSize="18sp" android:textColor="#0099ff" android:textColorHint="#0099ff" android:gravity="center" android:id="@+id/etScore" android:background="@drawable/bg_writebg_blueborder_8corner" android:layout_width="68dp" android:layout_height="36dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp" android:text="0" android:maxLines="1" android:inputType="numberSigned"/>
                <RelativeLayout android:layout_gravity="center" android:id="@+id/rlAdd" android:background="@drawable/bg_writebg_blueborder_8corner_2" android:layout_width="24dp" android:layout_height="24dp">
                    <ImageView android:id="@+id/tvAdd" android:background="@drawable/icon_score_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <com.chaoxing.mobile.group.widget.ChaoXingScoreRatingBar android:id="@+id/srv_ratable" android:layout_width="195dp" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:layout_below="@+id/llContent" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="12sp" android:textColor="#000" android:id="@+id/tvMessage" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="5dp" android:text="不能再少了" android:layout_below="@+id/srv_ratable" android:layout_centerHorizontal="true"/>
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignTop="@+id/llBottom"/>
        <LinearLayout android:id="@+id/llBottom" android:layout_width="match_parent" android:layout_height="44dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="17sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tvCancel" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/choose_canncel" android:layout_weight="1"/>
            <View android:background="#ebebeb" android:layout_width="1px" android:layout_height="match_parent"/>
            <TextView android:textSize="17sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tvSure" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/topiclist_code_Sure" android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
