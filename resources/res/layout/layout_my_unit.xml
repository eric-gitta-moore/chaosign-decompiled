<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.library.widget.CToolbar android:id="@+id/topBar" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvTips" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/personinfo_unit_list_activity_tips_set_unit" android:layout_below="@+id/topBar" android:paddingStart="15dp" android:paddingEnd="15dp"/>
    <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/rvUnit" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="61dp" android:layout_below="@+id/tvTips"/>
    <View android:id="@+id/vLine" android:background="#ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_above="@+id/tvAddUnit"/>
    <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvAddUnit" android:background="@drawable/btn_blue_bg" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:text="@string/person_addUnit" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/tvTipsUnboundUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/person_unbound_units" android:layout_centerInParent="true"/>
</RelativeLayout>
