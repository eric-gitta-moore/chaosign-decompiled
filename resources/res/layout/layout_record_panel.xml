<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="1px"/>
        <com.chaoxing.libspeechrecognizer.widget.RecordTextView android:textSize="16sp" android:textColor="#333333" android:textColorHint="#cccccc" android:gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/tvVoiceText" android:background="@null" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="128dp" android:layout_marginLeft="20dp" android:layout_marginTop="26dp" android:layout_marginRight="20dp" android:hint="@string/please_speak" android:cursorVisible="false"/>
        <TextView android:textSize="13sp" android:textColor="#999999" android:gravity="center_horizontal" android:id="@+id/tvTime" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:maxLines="1"/>
        <LinearLayout android:id="@+id/ll_panel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="16sp" android:textColor="#0099ff" android:id="@+id/btnRecordLeft" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <com.chaoxing.libspeechrecognizer.widget.RecordBtnView android:id="@+id/rbvRecord" android:layout_width="120dp" android:layout_height="120dp" android:src="@drawable/icon_audio_record" android:scaleType="center"/>
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="16sp" android:textColor="#0099ff" android:id="@+id/btnRecordRight" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/finish" android:layout_centerInParent="true"/>
                <TextView android:textSize="10sp" android:textColor="#999999" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="7dp" android:layout_marginBottom="7dp" android:text="该技术由讯飞提供" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</merge>
