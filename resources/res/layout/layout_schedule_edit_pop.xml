<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/add_schedule_zone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/edit_close_zone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/schedule_priority_zone"/>
        <RelativeLayout android:id="@+id/schedule_label_zone" android:background="@drawable/shape_border_approval_item_bg" android:visibility="gone" android:layout_width="294dp" android:layout_height="245dp" android:layout_marginLeft="15dp" android:layout_marginBottom="5dp" android:layout_above="@+id/edit_zone">
            <com.yanzhenjie.recyclerview.SwipeRecyclerView android:id="@+id/schedule_label_lv" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="6.5dp" android:divider="@null" android:layout_above="@+id/et_add_schedule_label"/>
            <EditText android:textSize="15sp" android:textColorHint="#cccccc" android:id="@+id/et_add_schedule_label" android:background="@null" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6.5dp" android:hint="@string/schedule_set_label" android:maxLines="1" android:layout_above="@+id/label_divider"/>
            <View android:id="@+id/label_divider" android:background="#999999" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="15dp" android:layout_marginTop="4dp" android:layout_marginRight="15dp" android:layout_above="@+id/add_schedule_label_ok"/>
            <Button android:textSize="15sp" android:textColor="#0099ff" android:id="@+id/add_schedule_label_ok" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6.5dp" android:layout_marginRight="15dp" android:layout_marginBottom="15dp" android:text="@string/schedule_done_text" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/schedule_priority_zone" android:background="#f5f6f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/edit_zone">
            <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/schedule_priority_high" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="50dp">
                <ImageView android:id="@+id/schedule_priority_high_icon" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/schedule_edit_priority_high" android:layout_centerVertical="true"/>
                <TextView android:textSize="16sp" android:textColor="#f6362d" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/schedule_priority_high" android:layout_toRightOf="@+id/schedule_priority_high_icon" android:layout_centerVertical="true"/>
                <CheckBox android:id="@+id/priority_high_cb" android:background="@drawable/selector_schedule_priority_check_cb" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="15dp" android:button="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/schedule_priority_mid" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="50dp">
                <ImageView android:id="@+id/schedule_priority_mid_icon" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/schedule_edit_priority_mid" android:layout_centerVertical="true"/>
                <TextView android:textSize="16sp" android:textColor="#ff8d30" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/schedule_priority_mid" android:layout_toRightOf="@+id/schedule_priority_mid_icon" android:layout_centerVertical="true"/>
                <CheckBox android:id="@+id/priority_mid_cb" android:background="@drawable/selector_schedule_priority_check_cb" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="15dp" android:button="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
            <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/schedule_priority_no" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="50dp">
                <ImageView android:id="@+id/schedule_priority_no_icon" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/schedule_edit_priority_no" android:layout_centerVertical="true"/>
                <TextView android:textSize="16sp" android:textColor="#0099ff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/schedule_priority_low" android:layout_toRightOf="@+id/schedule_priority_no_icon" android:layout_centerVertical="true"/>
                <CheckBox android:id="@+id/priority_no_cb" android:background="@drawable/selector_schedule_priority_check_cb" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="15dp" android:button="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/edit_zone" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/schedule_tool_bar">
            <TextView android:textSize="15sp" android:textColor="#cccccc" android:gravity="center" android:id="@+id/bt_schedule_ok" android:background="@drawable/shape_schedule_bt_border_bg" android:layout_width="55dp" android:layout_height="30dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="@string/schedule_join" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <EditText android:textSize="15sp" android:textColor="@android:color/black" android:textColorHint="#cccccc" android:id="@+id/et_schedule_title" android:background="@drawable/shape_schedule_edit_title_border_bg" android:paddingLeft="7dp" android:paddingRight="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="3dp" android:minHeight="39dp" android:hint="@string/schedule_add_new" android:layout_toLeftOf="@+id/bt_schedule_ok" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:id="@+id/schedule_tool_bar" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/schedule_calendar_icon" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="53dp" android:layout_height="34dp" android:src="@drawable/schedule_edit_calendar_icon_normal" android:scaleType="fitStart"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/schedule_priority_icon" android:paddingLeft="20dp" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="58dp" android:layout_height="34dp" android:src="@drawable/schedule_priority_icon_normal" android:scaleType="fitStart"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/schedule_lab_icon" android:paddingLeft="20dp" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="58dp" android:layout_height="34dp" android:src="@drawable/schedule_lab_icon_normal" android:scaleType="fitStart"/>
            <TextView android:textSize="12sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/edit_label_tip" android:background="@drawable/shape_schedule_label_bg_normal" android:paddingLeft="6dp" android:paddingRight="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="20dp" android:maxLines="1" android:maxEms="10"/>
            <ImageView android:layout_gravity="top" android:id="@+id/edit_delete_label" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="-10dp" android:src="@drawable/schedule_label_delete_icon" android:scaleType="centerInside" android:layout_toRightOf="@+id/edit_label_tip"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
