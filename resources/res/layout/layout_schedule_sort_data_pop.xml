<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/schedule_sort_title" android:background="@drawable/shape_schedule_sort_title_bg" android:layout_width="match_parent" android:layout_height="@dimen/dp_44" android:layout_above="@+id/schedule_sort_rg">
        <TextView android:textSize="@dimen/sp_14" android:textColor="#4d4d4d" android:id="@+id/schedule_sort_date_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/schedule_sort_tip" android:layout_centerInParent="true"/>
        <Button android:textSize="@dimen/sp_14" android:textColor="#999999" android:gravity="center" android:id="@+id/btnSortCancle" android:background="@android:color/transparent" android:padding="@dimen/sp_12" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/comment_closed" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View android:id="@+id/sort_divide_line" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="@dimen/dp_1" android:layout_above="@+id/schedule_sort_rg"/>
    <RadioGroup android:orientation="vertical" android:id="@+id/schedule_sort_rg" android:background="@color/white" android:paddingBottom="@dimen/dp_30" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <RadioButton android:textSize="@dimen/sp_14" android:textColor="@color/selector_schedule_sort_text_color" android:gravity="center_vertical" android:id="@+id/rb_default_sort" android:background="@drawable/selector_bg_schedule_sort_item" android:paddingLeft="@dimen/dp_15" android:paddingRight="@dimen/dp_20" android:layout_width="match_parent" android:layout_height="@dimen/dp_50" android:button="@null" android:text="@string/schedule_sort_by_manual" android:drawableRight="@drawable/selector_schedule_sort_rb_bg"/>
        <RadioButton android:textSize="@dimen/sp_14" android:textColor="@color/selector_schedule_sort_text_color" android:gravity="center_vertical" android:id="@+id/rb_happentiem_sort" android:background="@drawable/selector_bg_schedule_sort_item" android:paddingLeft="@dimen/dp_15" android:paddingRight="@dimen/dp_20" android:layout_width="match_parent" android:layout_height="@dimen/dp_50" android:checked="false" android:button="@null" android:text="@string/schedule_sort_by_time" android:drawableRight="@drawable/selector_schedule_sort_rb_bg"/>
        <RadioButton android:textSize="@dimen/sp_14" android:textColor="@color/selector_schedule_sort_text_color" android:gravity="center_vertical" android:id="@+id/rb_label_sort" android:background="@drawable/selector_bg_schedule_sort_item" android:paddingLeft="@dimen/dp_15" android:paddingRight="@dimen/dp_20" android:layout_width="match_parent" android:layout_height="@dimen/dp_50" android:checked="false" android:button="@null" android:text="@string/schedule_sort_by_label" android:drawableRight="@drawable/selector_schedule_sort_rb_bg"/>
        <RadioButton android:textSize="@dimen/sp_14" android:textColor="@color/selector_schedule_sort_text_color" android:gravity="center_vertical" android:id="@+id/rb_priority_sort" android:background="@drawable/selector_bg_schedule_sort_item" android:paddingLeft="@dimen/dp_15" android:paddingRight="@dimen/dp_20" android:layout_width="match_parent" android:layout_height="@dimen/dp_50" android:checked="false" android:button="@null" android:text="@string/schedule_sort_by_priority" android:drawableRight="@drawable/selector_schedule_sort_rb_bg"/>
    </RadioGroup>
    <LinearLayout android:orientation="vertical" android:id="@+id/sort_close_zone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/schedule_sort_title"/>
</RelativeLayout>
