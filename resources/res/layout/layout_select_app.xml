<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#666666" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/text_size_16" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_exit" android:padding="12dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/exit"/>
    <TextView android:textSize="@dimen/text_size_16" android:textColor="@drawable/text_mode" android:gravity="center" android:id="@+id/btn_reset" android:padding="12dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/reset" android:layout_toRightOf="@+id/btn_exit"/>
    <View android:id="@+id/cut_line" android:background="#f0f0f0" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/btn_exit"/>
    <GridView android:id="@+id/app_grid" android:layout_width="match_parent" android:layout_height="match_parent" android:numColumns="4" android:layout_below="@+id/cut_line"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_waiting" android:background="#00000000" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/cut_line" android:layout_centerInParent="true">
        <ProgressBar android:gravity="center" android:layout_gravity="center" android:id="@+id/loading_progress" android:layout_width="@dimen/loading_min_width" android:layout_height="@dimen/loading_min_width" android:layout_marginTop="20dp"/>
        <TextView android:textSize="12dp" android:textColor="#f0f0f0" android:gravity="center" android:layout_gravity="center" android:id="@+id/loading_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/refreshing"/>
    </LinearLayout>
</RelativeLayout>
