<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#80999999" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_tl_tr_10dp_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="40dp">
            <TextView android:textSize="14sp" android:textColor="@color/color_999999" android:id="@+id/tv_pdf" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="请选择发件人"/>
        </LinearLayout>
        <ScrollView android:id="@+id/scrollView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </ScrollView>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="96dp">
            <TextView android:textSize="16sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_cancel" android:background="@drawable/bg_btn_5dp_eff0f2" android:layout_width="120dp" android:layout_height="40dp" android:text="@string/cancel"/>
            <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_send" android:background="@drawable/bg_btn_5dp_0099ff" android:layout_width="120dp" android:layout_height="40dp" android:text="@string/button_send" android:layout_marginStart="30dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
