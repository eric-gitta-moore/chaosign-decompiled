<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#f5f5f5" android:paddingLeft="10dp" android:paddingTop="4dp" android:paddingRight="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_centerVertical="true">
    <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/gaHeader" android:background="#f5f5f5" android:layout_width="32dp" android:layout_height="32dp" android:layout_centerVertical="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toLeftOf="@+id/tvJoinGroup" android:layout_toRightOf="@+id/gaHeader" android:layout_centerVertical="true">
        <TextView android:textSize="16sp" android:textColor="#0099ff" android:ellipsize="end" android:id="@+id/tvGroupName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="小组名" android:lines="1"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvGroupMemeberCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="成员:12" android:lines="1" android:layout_centerVertical="true"/>
            <TextView android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvGroupTopicCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="话题:30" android:lines="1" android:layout_centerVertical="true"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/tvJoinGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="加入小组" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
