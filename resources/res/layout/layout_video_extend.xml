<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.videoplayer.player.ExtendVideoPlayer android:id="@+id/videoPlayer" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <TextView android:textColor="@android:color/white" android:id="@+id/tv_chinese" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="120dp" android:text="中文"/>
    <TextView android:textColor="@android:color/white" android:id="@+id/tv_english" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="英文" android:layout_toRightOf="@+id/tv_chinese"/>
</RelativeLayout>
