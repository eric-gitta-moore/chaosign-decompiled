<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/oldStyleParent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="74dp">
        <RelativeLayout android:id="@+id/rlContainer" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_centerVertical="true">
            <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_icon" android:layout_width="@dimen/lib_attachment_icon_size" android:layout_height="@dimen/lib_attachment_icon_size" android:layout_marginRight="10dp" android:src="@drawable/lib_attachment_icon_weburl" android:scaleType="centerCrop" android:layout_centerVertical="true" app:riv_border_color="@color/lib_attachment_avatar_border" app:riv_border_width="0.5dp" app:riv_corner_radius="3dp" app:riv_oval="false"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_icon" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/lib_attachment_title" android:textColor="@color/lib_attachment_color_attachemt_title" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
                <TextView android:textSize="@dimen/lib_attachment_content" android:textColor="@color/lib_attachment_color_attachemt_content" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView android:id="@+id/iv_remove" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lib_attachment_icon_delete" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@null"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/newStyleParent" android:background="@drawable/lib_attachment_bg_epub_border_lightgray" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="15sp" android:textColor="#829099" android:ellipsize="end" android:id="@+id/extractFromTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="22dp" android:layout_marginRight="15dp" android:maxLines="2"/>
        <TextView android:textSize="13sp" android:textColor="@color/lib_attachment_color_attachemt_content" android:ellipsize="end" android:id="@+id/contentTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="12dp" android:maxLines="3" android:layout_below="@+id/extractFromTv" android:lineSpacingExtra="3dp"/>
        <RelativeLayout android:id="@+id/attachmentLayout" android:background="@drawable/lib_attachment_bg_epub_border_fill_f4f5f6" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginRight="1dp" android:layout_marginBottom="1dp" android:layout_below="@+id/contentTv">
            <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iconCover" android:layout_width="@dimen/lib_attachment_icon_size" android:layout_height="@dimen/lib_attachment_icon_size" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_marginBottom="10dp" android:src="@drawable/lib_attachment_icon_weburl" android:scaleType="centerCrop" android:layout_centerVertical="true" app:riv_border_color="@color/lib_attachment_avatar_border" app:riv_border_width="0.5dp" app:riv_corner_radius="4dp" app:riv_oval="false"/>
            <TextView android:textSize="16sp" android:textColor="@color/lib_attachment_color_attachemt_title" android:ellipsize="end" android:id="@+id/bookNameTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:layout_toRightOf="@+id/iconCover" android:layout_alignTop="@+id/iconCover"/>
            <TextView android:textSize="12sp" android:textColor="#829099" android:ellipsize="end" android:id="@+id/bookAuthorTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:layout_alignLeft="@+id/bookNameTv" android:layout_alignBottom="@+id/iconCover"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
