<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="74dp">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/course" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp">
        <com.makeramen.roundedimageview.RoundedImageView android:layout_gravity="center_vertical" android:id="@+id/iv_course_icon" android:layout_width="@dimen/lib_attachment_icon_size" android:layout_height="@dimen/lib_attachment_icon_size" android:layout_marginRight="10dp" android:src="@drawable/lib_attachment_icon_default_image" android:scaleType="fitCenter" app:riv_corner_radius="4dp" app:riv_mutate_background="true" app:riv_oval="true"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_course_icon" android:layout_centerVertical="true">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/llmid" android:paddingRight="40dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/lib_attachment_title" android:textColor="@color/lib_attachment_color_attachemt_title" android:ellipsize="end" android:id="@+id/tv_course_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="几米漫画几米漫画几米漫画几漫漫画几米漫画几漫漫画几米漫画几漫漫画几米漫画几漫" android:maxLines="2"/>
                <TextView android:textSize="@dimen/lib_attachment_content" android:textColor="@color/lib_attachment_color_attachemt_content" android:ellipsize="end" android:id="@+id/tv_course_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="林间一棵树" android:maxLines="1"/>
            </LinearLayout>
            <TextView android:textSize="11sp" android:textColor="#ffffff" android:ellipsize="end" android:gravity="center" android:id="@+id/tvCourseTag" android:background="@drawable/lib_attachment_bg_attachment_group" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-35dp" android:text="课程" android:singleLine="true" android:layout_toRightOf="@+id/llmid"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/iv_remove" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lib_attachment_icon_delete" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@null"/>
</RelativeLayout>
