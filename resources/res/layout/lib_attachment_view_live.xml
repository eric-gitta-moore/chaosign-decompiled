<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/rlcontainer" android:background="@drawable/lib_attachment_bg_circle_border_cccccc" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="82dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/vMainContent" android:paddingLeft="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:minHeight="64dp">
            <LinearLayout android:gravity="center_vertical" android:id="@+id/llImage" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ivImage" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginRight="5dp" android:src="@drawable/lib_attachment_icon_default_image" android:scaleType="fitXY" app:riv_corner_radius="4dp" app:riv_oval="false"/>
                <View android:background="#cccccc" android:visibility="gone" android:layout_width="1dp" android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="@dimen/lib_attachment_title" android:textColor="@color/lib_attachment_color_attachemt_title" android:ellipsize="end" android:id="@+id/tvTitle" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="几米在作品中吐露着现代人" android:maxLines="2"/>
                <TextView android:textSize="@dimen/lib_attachment_content" android:textColor="@color/lib_attachment_color_attachemt_content" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLines="2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llSeeDetails" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:gravity="center_vertical" android:id="@+id/rlBottomBackgroud" android:background="#ffffff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="22dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textColor="@color/lib_attachment_color_attachemt_content" android:id="@+id/tvTip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="查看详情" android:layout_centerVertical="true"/>
                    <TextView android:textSize="12sp" android:textColor="@color/lib_attachment_color_attachemt_content" android:id="@+id/tvTime" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="(03:40)" android:layout_toRightOf="@+id/tvTip" android:layout_centerVertical="true"/>
                    <TextView android:textSize="12sp" android:textColor="@color/lib_attachment_color_attachemt_content" android:ellipsize="end" android:id="@+id/tvAnchor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="主播:吴辉" android:maxEms="9" android:singleLine="true" android:drawableRight="@drawable/lib_attachment_icon_live_right_arrow" android:drawablePadding="7dp" android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/iv_remove" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lib_attachment_icon_delete" android:layout_alignParentRight="true" android:contentDescription="@null"/>
</RelativeLayout>
