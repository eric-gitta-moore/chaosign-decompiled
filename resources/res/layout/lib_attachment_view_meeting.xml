<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rlcontainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="74dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/note" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/ivImage" android:visibility="visible" android:layout_width="@dimen/lib_attachment_icon_size" android:layout_height="@dimen/lib_attachment_icon_size" android:layout_marginRight="10dp" android:src="@drawable/lib_attachment_icon_meeting" android:scaleType="centerCrop"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/lib_attachment_title" android:textColor="@color/lib_attachment_color_attachemt_title" android:ellipsize="end" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="会议" android:maxLines="2"/>
            <TextView android:textSize="@dimen/lib_attachment_content" android:textColor="@color/lib_attachment_color_attachemt_content" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="点击立即参加" android:maxLines="2"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/iv_remove" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lib_attachment_icon_delete" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@null"/>
</RelativeLayout>
