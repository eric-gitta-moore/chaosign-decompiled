<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:my="http://schemas.android.com/apk/res-auto" android:id="@+id/rlcontainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="74dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/note" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_centerVertical="true">
        <com.makeramen.roundedimageview.RoundedImageView android:layout_gravity="center_vertical" android:id="@+id/ivImage" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:src="@drawable/lib_attachment_bg_img_default_att_header" android:scaleType="centerCrop" my:riv_corner_radius="3dp" my:riv_oval="false"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/lib_attachment_title" android:textColor="@color/lib_attachment_color_attachemt_title" android:ellipsize="end" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="几米在作品中吐露着现代人" android:maxLines="2"/>
            <TextView android:textSize="12sp" android:textColor="@color/lib_attachment_color_attachemt_content" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="几米在作品中吐露着现代人内心深处不为人知的的隐痛与困顿，揭示出" android:maxLines="2"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/lib_attachment_from" android:textColor="@color/lib_attachment_color_attachemt_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lib_attachment_note_attachment_from" android:singleLine="true"/>
                <TextView android:textSize="@dimen/lib_attachment_from" android:textColor="#ff0099ff" android:ellipsize="end" android:id="@+id/tvGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="《几米漫画》" android:singleLine="true"/>
                <TextView android:textSize="@dimen/lib_attachment_from" android:textColor="@color/lib_attachment_color_attachemt_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="的笔记" android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="@dimen/lib_attachment_from" android:textColor="@color/lib_attachment_color_attachemt_content" android:gravity="center_vertical" android:id="@+id/tv_edit_tip" android:background="#f7f8fa" android:visibility="gone" android:layout_width="match_parent" android:layout_height="23dp" android:text="你可编辑该笔记" android:layout_below="@+id/note" android:paddingStart="14dp"/>
    <ImageView android:id="@+id/iv_remove" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lib_attachment_icon_delete" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@null"/>
</RelativeLayout>
