<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="74dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/subject" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_toLeftOf="@+id/iv_add_common_use">
        <com.makeramen.roundedimageview.RoundedImageView android:layout_gravity="center_vertical" android:id="@+id/iv_subject_icon" android:layout_width="@dimen/lib_attachment_icon_size" android:layout_height="@dimen/lib_attachment_icon_size" android:src="@drawable/lib_attachment_icon_default_image" android:scaleType="centerCrop" android:contentDescription="@null" app:riv_border_color="@color/lib_attachment_avatar_border" app:riv_border_width="0.5dp" app:riv_corner_radius="3dp" app:riv_oval="false"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:textSize="@dimen/lib_attachment_title" android:textColor="@color/lib_attachment_color_attachemt_title" android:ellipsize="end" android:id="@+id/tv_subject_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="几米漫画" android:maxLines="2"/>
            <TextView android:textSize="@dimen/lib_attachment_content" android:textColor="@color/lib_attachment_color_attachemt_content" android:ellipsize="end" android:id="@+id/tv_subject_author" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="林间一棵树" android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/chapter" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_toLeftOf="@+id/iv_add_common_use">
        <com.makeramen.roundedimageview.RoundedImageView android:layout_gravity="center_vertical" android:id="@+id/iv_chapter_icon" android:layout_width="@dimen/lib_attachment_icon_size" android:layout_height="@dimen/lib_attachment_icon_size" android:src="@drawable/lib_attachment_icon_default_image" android:scaleType="centerCrop" android:contentDescription="@null" app:riv_border_color="@color/lib_attachment_avatar_border" app:riv_border_width="0.5dp" app:riv_corner_radius="3dp" app:riv_oval="false"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:textSize="@dimen/lib_attachment_title" android:textColor="@color/lib_attachment_color_attachemt_title" android:ellipsize="end" android:id="@+id/tv_chapter_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
            <TextView android:textSize="@dimen/lib_attachment_content" android:textColor="#ff0099ff" android:ellipsize="end" android:id="@+id/tv_chapter_source" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/iv_add_common_use" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:src="@drawable/lib_attachment_icon_add_common_use" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/iv_remove" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lib_attachment_icon_delete" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@null"/>
</RelativeLayout>
