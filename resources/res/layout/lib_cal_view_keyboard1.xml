<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/lib_cal_transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/inputLayout" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/keyGridView">
        <TextView android:textSize="18sp" android:id="@+id/labelTv" android:paddingLeft="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:textSize="20sp" android:textStyle="bold" android:textColor="@color/lib_cal_black" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/inputText" android:background="#ebebeb" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="15dp" android:paddingBottom="5dp" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp" android:maxLines="5"/>
    </LinearLayout>
    <GridView android:id="@+id/keyGridView" android:background="#ebebeb" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="225dp" android:horizontalSpacing="5dp" android:verticalSpacing="5dp" android:numColumns="4" android:layout_alignParentBottom="true"/>
    <View android:id="@+id/spaceHolderView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/inputLayout"/>
</RelativeLayout>
