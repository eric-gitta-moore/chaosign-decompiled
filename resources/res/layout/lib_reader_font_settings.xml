<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@mipmap/lib_reader_toolbar_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/place_holder_view" android:background="#00000000" android:layout_width="match_parent" android:layout_height="0dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/toolbar" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp">
            <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ib_left" android:background="@android:color/transparent" android:layout_width="48dp" android:layout_height="48dp" android:foreground="?android:attr/selectableItemBackground" android:src="@mipmap/lib_reader_ic_toolbar_back_left" android:scaleType="center" android:layout_centerVertical="true" style="@style/Widget.AppCompat.Button"/>
            <TextView android:textSize="16dp" android:textColor="@color/lib_reader_toolbar_text" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Title" android:maxLines="2" android:layout_toLeftOf="@+id/ib_right" android:layout_toRightOf="@+id/ib_left" android:layout_centerVertical="true"/>
            <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ib_right" android:background="@android:color/transparent" android:visibility="invisible" android:layout_width="48dp" android:layout_height="48dp" android:foreground="?android:attr/selectableItemBackground" android:src="@mipmap/lib_reader_ic_toolbar_menu" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:background="@color/lib_reader_dash_divider_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <androidx.core.widget.ContentLoadingProgressBar android:id="@+id/pb_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
    </RelativeLayout>
</LinearLayout>
