<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/lib_reader_pdz_dialog_edit_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <TextView android:textSize="20sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/lib_reader_pdz_page_goto_title"/>
        <View android:background="#b2b2b2" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="16sp" android:textColor="#333333" android:gravity="left" android:id="@+id/tv_page_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp"/>
        <EditText android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="14sp" android:textColor="#333333" android:gravity="center_vertical" android:id="@+id/et_page_no" android:background="@drawable/lib_reader_pdz_dialog_edit_normal_bg" android:paddingLeft="10dp" android:layout_width="220dp" android:layout_height="35dp" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp" android:scrollHorizontally="true" android:inputType="number"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text=""/>
        </LinearLayout>
        <View android:background="#b2b2b2" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="15dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
            <Button android:textSize="16sp" android:textColor="#333333" android:gravity="center" android:id="@+id/btnCancel" android:background="@drawable/lib_reader_pdz_dialog_edit_cancel_bg" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/lib_reader_btn_no" android:layout_weight="1"/>
            <View android:background="#b2b2b2" android:layout_width="1px" android:layout_height="match_parent"/>
            <Button android:textSize="16sp" android:textColor="#333333" android:gravity="center" android:id="@+id/btnOK" android:background="@drawable/lib_reader_pdz_dialog_edit_ok_bg" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/lib_reader_btn_yes" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
