<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:id="@+id/local_video_list_linearLayout" android:background="@drawable/rect_white_trans_back_shape" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/local_video_imgs_relativeLayout" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_local_video_img" android:layout_width="213dp" android:layout_height="160dp" android:layout_marginLeft="10dp"/>
        <ImageView android:id="@+id/iv_local_video_img_del" android:visibility="visible" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_alignParentRight="true"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_download_status" android:background="#a0000000" android:layout_width="213dp" android:layout_height="160dp" android:layout_marginLeft="10dp">
            <TextView android:textColor="#ffffff" android:layout_gravity="center" android:id="@+id/tv_download_status" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/rl_download_progress" android:background="#e0e0ffff" android:layout_width="213dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_marginTop="100dp">
            <ProgressBar android:id="@+id/pb_download_progress" android:layout_width="200dp" android:layout_height="10dp" android:layout_marginLeft="8dp" android:layout_marginTop="5dp" android:max="10000" android:progressDrawable="@drawable/progressbar_style" style="?android:attr/progressBarStyleHorizontal"/>
            <TextView android:textColor="#eead0e" android:id="@+id/tv_download_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/pb_download_progress" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/local_video_list_text_linearLayout" android:layout_width="213dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:ellipsize="marquee" android:layout_gravity="center_horizontal" android:id="@+id/tv_local_video_title" android:layout_width="213dp" android:layout_height="wrap_content" android:lines="2" android:marqueeRepeatLimit="marquee_forever"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/tv_local_video_size" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>
