<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="@dimen/header_height">
        <TextView android:textSize="16sp" android:textColor="#999999" android:id="@+id/tv_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/cancel" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/account" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#9ea0a1" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="vertical" android:background="@color/bg_gray" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:background="#c8c7cc" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="46dp"/>
        <LinearLayout android:orientation="vertical" android:background="#ffffff" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/school_bg" android:layout_width="match_parent" android:layout_height="@dimen/base_item_height" android:layout_marginRight="16dp">
                <TextView android:textSize="17sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_school_title" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/login_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:drawableRight="@drawable/arrow_right_gray" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="15sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/school_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="88dp" android:singleLine="true" android:layout_toLeftOf="@+id/login_select" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:background="#c8c7cc" android:layout_width="match_parent" android:layout_height="1px"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/base_item_height" android:layout_marginRight="16dp">
                <TextView android:textSize="17sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/username" android:layout_centerVertical="true"/>
                <EditText android:textSize="15sp" android:textColor="#333333" android:textColorHint="#cccccc" android:id="@+id/username" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="88dp" android:hint="@string/input_username" android:singleLine="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:background="#c8c7cc" android:layout_width="match_parent" android:layout_height="1px"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/base_item_height" android:layout_marginRight="16dp">
                <TextView android:textSize="17sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/password" android:layout_centerVertical="true"/>
                <EditText android:textSize="15sp" android:textColor="#333333" android:textColorHint="#cccccc" android:id="@+id/password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="88dp" android:hint="@string/input_password" android:singleLine="true" android:layout_centerVertical="true" android:inputType="textPassword"/>
            </RelativeLayout>
        </LinearLayout>
        <View android:background="#c8c7cc" android:layout_width="match_parent" android:layout_height="1px"/>
        <Button android:textSize="18sp" android:textColor="#ffffff" android:id="@+id/login" android:background="@drawable/green_button_selector" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:text="@string/login"/>
    </LinearLayout>
</LinearLayout>
