<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#59000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="13sp" android:textColor="#818181" android:gravity="center" android:id="@+id/tip" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/course_online_leave_tip"/>
        <RelativeLayout android:gravity="center" android:id="@+id/rl_leave" android:padding="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_leave" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/course_online_leave" android:layout_centerHorizontal="true" style="@style/group_popwindow_text"/>
            <TextView android:textSize="@dimen/sp_12" android:textColor="#999999" android:id="@+id/tvLeaveTip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/course_online_leave_explain" android:layout_below="@+id/tv_leave" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textColor="#ff3b30" android:gravity="center" android:id="@+id/tv_end_group" android:background="@color/white" android:padding="@dimen/dp_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/course_online_end_group" style="@style/group_popwindow_text"/>
        <View android:id="@+id/viewline" android:background="@color/DividerColor" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
        <RelativeLayout android:gravity="center" android:id="@+id/rl_end" android:padding="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="#ff3b30" android:id="@+id/tv_end" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ys_end" android:layout_centerHorizontal="true" style="@style/group_popwindow_text"/>
            <TextView android:textSize="@dimen/sp_12" android:textColor="#999999" android:id="@+id/tvEndTip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/course_online_end_explain" android:layout_below="@+id/tv_end" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View android:background="@color/bg_color_f5f6f8" android:layout_width="match_parent" android:layout_height="8dp"/>
        <TextView android:gravity="center" android:id="@+id/tv_Cancel" android:background="@color/white" android:padding="@dimen/dp_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/cancel" style="@style/group_popwindow_text"/>
    </LinearLayout>
</RelativeLayout>
