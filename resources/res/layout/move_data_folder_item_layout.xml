<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/itemContainer" android:background="@drawable/selector_list_item" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/rlContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="65dp" android:layout_toLeftOf="@+id/btnNext">
        <ImageView android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/iv_icon" android:visibility="visible" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="15dp" android:src="@drawable/ic_folder_private"/>
