<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/rlContainer" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlMoveTop" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <Button android:textSize="16sp" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/tvMoveTitle" android:layout_width="wrap_content" android:layout_height="45dp" android:text="@string/sub_moveToFolder" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/ivCreateFolder" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:src="@drawable/create_folder" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.fanzhou.widget.SwipeListView android:id="@+id/listView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:divider="#d9d9d9" android:dividerHeight="0px" android:minHeight="113dp" android:layout_below="@+id/rlMoveTop" android:headerDividersEnabled="false" android:footerDividersEnabled="true"/>
    <include android:id="@+id/viewReload" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/loading_failed_match_parent_img"/>
    <TextView android:textSize="16sp" android:textColor="#66333333" android:gravity="center" android:id="@+id/tvNoDataTip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
    <include android:id="@+id/vLoading" android:visibility="gone" layout="@layout/wait_circle_bar_with_text_match_parent"/>
</RelativeLayout>
