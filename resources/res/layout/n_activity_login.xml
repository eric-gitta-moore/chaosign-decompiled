<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rl_login_container" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.mobile.study.account.NoScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_top_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="48dp">
                <TextView android:textSize="15dp" android:textColor="#ff999999" android:gravity="center_vertical" android:id="@+id/tv_left" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/login_tourist" android:drawableLeft="@drawable/navigation_img_back"/>
                <TextView android:textSize="14dp" android:textColor="#ff9c9c9c" android:gravity="center" android:id="@+id/tv_right" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/service_online" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/input" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:layout_marginTop="30dp" android:layout_marginRight="26dp" android:layout_below="@+id/toolbar">
                <TextView android:textSize="28dp" android:textColor="#ff444444" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/login_hello"/>
                <TextView android:textSize="16dp" android:textColor="#ff999999" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/login_welcome"/>
                <RelativeLayout android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:textSize="16dp" android:textColor="#ff333333" android:textColorHint="#ffc9c9c9" android:id="@+id/et_account" android:background="@android:color/white" android:paddingTop="12dp" android:paddingBottom="12dp" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:hint="@string/login_hint_account" android:singleLine="true" android:layout_toLeftOf="@+id/iv_clear_account" android:inputType="text" android:imeOptions="actionNext" android:nextFocusForward="@+id/et_password"/>
                    <ImageView android:id="@+id/iv_clear_account" android:paddingLeft="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear" android:scaleType="center" android:layout_toLeftOf="@+id/iv_login_cache_arrow" android:layout_alignTop="@+id/et_account" android:layout_alignBottom="@+id/et_account" android:layout_alignWithParentIfMissing="true" android:contentDescription="清除账号"/>
                    <com.chaoxing.mobile.study.account.cache.ArrowView android:id="@+id/iv_login_cache_arrow" android:paddingLeft="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_login_cache_arrow" android:scaleType="center" android:layout_alignTop="@+id/et_account" android:layout_alignBottom="@+id/et_account" android:layout_alignParentRight="true" android:contentDescription="下拉框"/>
                </RelativeLayout>
                <View android:background="#ffcccccc" android:layout_width="match_parent" android:layout_height="1px"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                    <EditText android:textSize="16dp" android:textColor="#ff333333" android:textColorHint="#ffc9c9c9" android:id="@+id/et_password" android:background="@android:color/white" android:paddingTop="12dp" android:paddingBottom="12dp" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/login_hint_password" android:singleLine="true" android:layout_toLeftOf="@+id/right" android:layout_centerVertical="true" android:inputType="textPassword" android:imeOptions="actionDone"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginStart="20dp">
                        <TextView android:textColor="#ff999999" android:layout_gravity="center_vertical" android:id="@+id/tv_forget_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/forget_password"/>
                    </LinearLayout>
                </RelativeLayout>
                <View android:background="#ffcccccc" android:layout_width="match_parent" android:layout_height="1px"/>
                <com.chaoxing.mobile.study.account.privacy.UserPrivacyView android:id="@+id/user_agreement_tips" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="30dp"/>
                <Button android:textSize="14dp" android:textColor="@android:color/white" android:id="@+id/btn_login" android:background="@drawable/login_fragment_btn_login" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:text="@string/login"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:weightSum="2" android:layout_below="@+id/input">
                <TextView android:textSize="12sp" android:textColor="#0099ff" android:gravity="left" android:id="@+id/tv_sign_up" android:padding="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:text="@string/login_regist_member" android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="#0099ff" android:gravity="right" android:id="@+id/tv_login_by_phone" android:padding="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:text="@string/cx_shanyan_mobile_code_login" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </com.chaoxing.mobile.study.account.NoScrollView>
    <TextView android:textColor="#ff999999" android:id="@+id/tv_login_by" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="9dp" android:text="@string/login_other_login" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <include android:visibility="gone" layout="@layout/common_loading_transparent"/>
</RelativeLayout>
