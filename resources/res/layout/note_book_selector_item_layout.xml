<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/itemContainer" android:background="@drawable/selector_list_item" android:layout_width="match_parent" android:layout_height="wrap_content">
    <Button android:textColor="#0099ff" android:id="@+id/btnNext" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_enter" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <RelativeLayout android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/btnNext">
        <ImageView android:id="@+id/ivIcon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" android:src="@drawable/ic_folder_private" android:scaleType="fitXY" android:layout_centerVertical="true"/>
        <RelativeLayout android:paddingRight="50dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/ivIcon" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvName" android:paddingRight="12dp" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tvIntroduction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/tvName"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
