<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/top" layout="@layout/contact_title_bar"/>
    <RelativeLayout android:id="@+id/rlpersonGroup" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="68dp">
        <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tv_personGroup" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_message_my_Persongroup" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="#999999" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/line" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/rlGroup" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="68dp">
        <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tv_group" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="按组" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="#999999" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/line1" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/rlPerson" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="68dp">
        <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tv_person" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="按人" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="#999999" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/line2" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
