<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ssreader="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/open_external_top_bar" android:background="@drawable/open_external_top_bg" android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:textSize="18sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_open_path" android:layout_width="wrap_content" android:layout_height="38dp" android:layout_marginLeft="8dp"/>
        <ImageButton android:id="@+id/search" android:padding="0px" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginRight="20dp" android:src="@drawable/searchbook_btn_blue" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/open_external_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/open_external_top_bar">
        <ListView android:id="@+id/lv_open_mntdev" android:background="#303030" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:cacheColorHint="#00000000" android:divider="@color/divider_line" android:dividerHeight="1px" android:layout_weight="2"/>
        <ListView android:id="@+id/lv_open_external_book_list" android:background="#000000" android:paddingLeft="0dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginBottom="60dp" android:cacheColorHint="#000000" android:divider="@color/divider_line" android:dividerHeight="1px" android:layout_weight="1" android:fastScrollEnabled="true"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/open_tool_bar" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentBottom="true">
        <ImageView android:background="#ffa800" android:layout_width="match_parent" android:layout_height="2dp" android:layout_alignParentTop="true"/>
        <Button android:textSize="14sp" android:textColor="#000000" android:id="@+id/btn_open_import" android:background="@drawable/blue_stoke_btn" android:layout_width="wrap_content" android:layout_height="35dp" android:layout_marginLeft="8dp" android:text="@string/import_all_book" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <Button android:textSize="14sp" android:textColor="#000000" android:id="@+id/btn_open_sort" android:background="@drawable/blue_stoke_btn" android:layout_width="75dp" android:layout_height="35dp" android:layout_marginLeft="10dp" android:text="@string/sort" android:layout_toRightOf="@+id/btn_open_import" android:layout_centerVertical="true"/>
        <Button android:textSize="13sp" android:textColor="#000000" android:id="@+id/btn_open_return" android:layout_width="75dp" android:layout_height="35dp" android:layout_marginRight="8dp" android:text="@string/import_done" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ViewStub android:id="@+id/bookshelf_search_bar_stub" android:clickable="true" android:layout="@layout/open_external_book_search_bar" android:layout_width="match_parent" android:layout_height="493dp" android:layout_marginTop="40dp"/>
    <ProgressBar android:id="@+id/pb_open_wite" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
