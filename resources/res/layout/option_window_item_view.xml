<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_left" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_course_teach_res_lib" android:layout_toLeftOf="@+id/tv_title" android:layout_centerVertical="true"/>
        <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="56dp" android:maxWidth="350dp" android:text="测试" android:layout_centerHorizontal="true"/>
        <TextView android:id="@+id/tv_right" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/right_arrow" android:layout_toRightOf="@+id/tv_title" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="@color/gray_ebebeb" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
