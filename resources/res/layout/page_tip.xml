<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/tip_back" android:background="@drawable/popup" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/txt_title" android:paddingLeft="7dp" android:paddingTop="7dp" android:paddingRight="7dp" android:scrollbars="none" android:layout_width="300dp" android:layout_height="wrap_content" android:text="@null" android:maxLines="2" android:singleLine="false"/>
        <TextView android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/txt_tip" android:paddingLeft="7dp" android:paddingTop="6dp" android:paddingRight="7dp" android:paddingBottom="7dp" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:text="@null"/>
    </LinearLayout>
    <ImageView android:id="@+id/img_arrow_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginTop="-9dp" android:src="@drawable/arrow_down" android:layout_below="@+id/tip_back" android:contentDescription="@null"/>
</RelativeLayout>
