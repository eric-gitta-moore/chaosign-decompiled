<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/pop_layout" android:background="@drawable/shape_rectangle_white_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/btn_cancel">
        <TextView android:textColor="@color/chaoxingBlue" android:gravity="center" android:id="@+id/btn_up" android:layout_width="match_parent" android:layout_height="44dp" android:text="不保存"/>
        <View android:background="@color/mainGrey" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <TextView android:textColor="@color/chaoxingBlue" android:gravity="center" android:id="@+id/btn_down" android:layout_width="match_parent" android:layout_height="44dp" android:text="存储"/>
    </LinearLayout>
    <Button android:textColor="@color/chaoxingBlue" android:id="@+id/btn_cancel" android:background="@drawable/shape_rectangle_white_bg" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="12dp" android:text="取消" android:layout_alignParentBottom="true"/>
</RelativeLayout>
