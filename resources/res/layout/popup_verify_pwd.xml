<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/view_cover" android:background="@color/trans_50" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/ll_verify"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_verify" android:background="#fafafa" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="18sp" android:textColor="@color/color_333333" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="11dp" android:text="@string/pcenter_letter_psw"/>
        <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1px"/>
        <com.chaoxing.mobile.notify.widget.VerifyPwdInputView android:id="@+id/view_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="24dp" android:layout_marginRight="15dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textColor="@color/color_333333" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_show_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="12.5dp" android:layout_marginRight="15dp" android:layout_marginBottom="26.5dp" android:text="请输入权限密码" android:maxLines="2"/>
        </LinearLayout>
        <GridView android:id="@+id/gv_keyboard" android:background="#d9d9d9" android:paddingTop="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@null" android:horizontalSpacing="1dp" android:verticalSpacing="1dp" android:numColumns="3"/>
    </LinearLayout>
</RelativeLayout>
