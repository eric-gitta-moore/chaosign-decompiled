        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/pull_to_load_image" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="20dp"/>
