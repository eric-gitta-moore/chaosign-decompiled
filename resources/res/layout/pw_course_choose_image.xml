<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/viewContainer" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="#f7f7f7" android:paddingLeft="22dp" android:paddingRight="22dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:background="@drawable/bg_group_qrcode_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <TextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/btnTakePhoto" android:background="@drawable/menu_btn_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/take_photo"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/bg_group_qrcode_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <TextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/btnSelectImage" android:background="@drawable/menu_btn_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/choose_local_image"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llPreview" android:background="@drawable/bg_group_qrcode_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <TextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/btnPreview" android:background="@drawable/menu_btn_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/view_original_image"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/bg_group_qrcode_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:layout_marginBottom="16dp">
            <TextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/btnCancel" android:background="@drawable/menu_btn_gray_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/view_original_cancle"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
