<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/viewContainer" android:background="#33000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:paddingLeft="12dp" android:paddingTop="4dp" android:paddingRight="12dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:background="@drawable/shape_border_radius_12dp_fcffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="48dp">
                <Button android:enabled="false" android:textSize="12sp" android:textColor="#cccccc" android:gravity="center" android:id="@+id/btn_option" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/live_stop_message" android:layout_weight="1"/>
                <View android:background="#fff0eeef" android:layout_width="match_parent" android:layout_height="1px"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/option2" android:layout_width="match_parent" android:layout_height="48dp">
                <Button android:textSize="16sp" android:textColor="#ffff8080" android:gravity="center" android:id="@+id/btn_option2" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/live_stop_not_allow_review" android:layout_weight="1"/>
                <View android:background="#fff0eeef" android:layout_width="match_parent" android:layout_height="1px"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="48dp">
                <Button android:textSize="16sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/btn_option3" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/live_stop_not_review" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/shape_border_radius_12dp_fcffffff" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="8dp">
            <Button android:textSize="16sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/btn_cancel" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/view_original_cancle" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
