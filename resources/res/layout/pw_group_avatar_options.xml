<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/viewContainer" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="#f5f6f8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/btnTakePhoto" android:background="@drawable/menu_btn_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/take_photo"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp">
            <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/btnSelectImage" android:background="@drawable/menu_btn_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/choose_local_image"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llSelectCloudImage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp">
            <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:gravity="center" android:background="@drawable/menu_btn_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/choose_from_cloud"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llPreview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp">
            <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/btnPreview" android:background="@drawable/menu_btn_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/view_original_image"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp">
            <TextView android:textSize="17sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/btnCancel" android:background="@drawable/menu_btn_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/view_original_cancle"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
