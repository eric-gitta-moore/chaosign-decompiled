<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#90000000" android:paddingLeft="30dp" android:paddingRight="30dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_join_group_request" android:paddingLeft="17dp" android:paddingTop="20dp" android:paddingRight="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="4" android:layout_centerInParent="true">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/joinTip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="你需要通过验证才能加入该小组" android:minEms="16"/>
        <EditText android:textSize="14sp" android:textColor="#ff999999" android:gravity="left" android:id="@+id/etContent" android:background="@drawable/bg_join_group_request_content" android:padding="10dp" android:layout_width="match_parent" android:layout_height="67dp" android:layout_marginTop="15dp" android:hint="验证信息(最多输入25个字)……" android:lines="4" android:maxLength="25"/>
        <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="40dp">
            <LinearLayout android:id="@+id/llBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <Button android:textSize="16sp" android:textColor="#ff0099ff" android:id="@+id/btnNegative" android:background="@android:color/transparent" android:padding="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="取消" android:layout_weight="1"/>
                <RelativeLayout android:id="@+id/rlPositive" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <RelativeLayout android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                        <ProgressBar android:id="@+id/pbLoading" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" style="@android:style/Widget.ProgressBar.Small"/>
                        <Button android:textSize="16sp" android:textColor="#ff0099ff" android:id="@+id/btnPositive" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="6dp" android:paddingRight="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="申请加入" android:layout_weight="1" android:layout_toRightOf="@+id/pbLoading" android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <View android:background="#ffd9d9d9" android:layout_width="1px" android:layout_height="20dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
