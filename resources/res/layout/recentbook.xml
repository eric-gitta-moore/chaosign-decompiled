<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.bookshelf.BookView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/bookViewLayout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerHorizontal="true">
        <RelativeLayout android:gravity="center_horizontal" android:background="@drawable/recent_book_bg_xml" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/booK_add" android:background="@drawable/bookshelf_add_bg_xml" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp" android:src="@drawable/bookshelf_add" android:scaleType="centerInside" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/book_cover" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
            <TextView android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/book_name_on_cover" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="" android:maxLines="2" style="@style/text_white.14"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/loading_info_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/load_state" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center_horizontal" android:id="@+id/load_size" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
            </LinearLayout>
            <ProgressBar android:id="@+id/book_progressbar" android:layout_width="80dp" android:layout_height="2dp" android:layout_marginBottom="12dp" android:max="100" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyleHorizontal"/>
            <ImageView android:id="@+id/edit_selected" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bookshelf_selector" android:scaleType="centerInside" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:ellipsize="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:lines="3" style="@style/Text_Title_14"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:ellipsize="end" android:id="@+id/book_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLines="2" style="@style/Text_Title_14"/>
                <TextView android:textSize="12sp" android:textColor="@color/blue_0e6fe7" android:ellipsize="end" android:id="@+id/book_read_progress" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.chaoxing.bookshelf.BookView>
