<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingLeft="30dp" android:paddingTop="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18sp" android:textColor="#000000" android:layout_gravity="center_horizontal" android:id="@+id/tvResult_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/seat_select_ok"/>
    <TextView android:textSize="14sp" android:textColor="#333333" android:id="@+id/tvAddress" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="#333333" android:id="@+id/tvSeatNo" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="14sp" android:textColor="#333333" android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <view android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp">
        <Button android:textSize="17sp" android:textColor="#0099ff" android:id="@+id/btnCancel" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="取消预约" android:layout_weight="1"/>
        <View android:background="#d9d9d9" android:layout_width="1px" android:layout_height="match_parent"/>
        <Button android:textSize="17sp" android:textColor="#0099ff" android:id="@+id/btnOk" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="确认" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
