<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="54dp">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/all_channel" android:layout_centerVertical="true" style="@style/Text_Title"/>
    <CheckBox android:id="@+id/cbSelecteAll" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginRight="10dp" android:button="@drawable/rss_checkbox" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <TextView android:id="@+id/tvSelectedCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/selected_count" android:layout_toLeftOf="@+id/cbSelecteAll" android:layout_centerVertical="true" style="@style/text_content"/>
    <View android:background="@color/normal_blue" android:layout_width="match_parent" android:layout_height="2px" android:layout_alignParentBottom="true"/>
</RelativeLayout>
