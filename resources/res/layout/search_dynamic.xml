<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="@color/app_line_bg" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp">
        <TextView android:textSize="16sp" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/recent_search" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_delete" android:paddingRight="4dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/search_history_delete" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View android:background="@color/app_line_bg" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
    <LinearLayout android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
        <com.chaoxing.mobile.widget.WordWrapView android:id="@+id/view_wordwrap" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:background="#cccccc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp" android:layout_marginTop="24dp" android:layout_marginRight="12dp"/>
    <TextView android:textSize="16sp" android:textColor="#999999" android:id="@+id/tvHotDynamic" android:background="#00000000" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="笔记圈热文" android:drawableRight="@drawable/ic_right_arrow"/>
    <View android:background="#999999" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
    <TextView android:textSize="14sp" android:textColor="#999999" android:gravity="center_horizontal" android:id="@+id/tv_nosearch" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text=""/>
</LinearLayout>
