<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/llFilterView" android:background="@drawable/filter_bg" android:paddingLeft="30dp" android:paddingRight="30dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:background="#f0000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/filter"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:id="@+id/loAllField" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/search_filter_spinner"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/vSort" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:src="@drawable/list_cut_off_line"/>
            <include android:id="@+id/loRelation" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/search_filter_spinner"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/vLanguage" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:src="@drawable/list_cut_off_line"/>
            <include android:id="@+id/loLanguage" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/search_filter_spinner"/>
        </LinearLayout>
        <ImageView android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:src="@drawable/list_cut_off_line"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp">
            <EditText android:textSize="14sp" android:id="@+id/etSecondSearch" android:background="@drawable/round_corner_rectangle" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:layout_toLeftOf="@+id/llSecondSearch" android:inputType="none"/>
            <LinearLayout android:gravity="center" android:id="@+id/llSecondSearch" android:background="@drawable/light_blue_btn_bg" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tvSecondSearch" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/second_search"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
