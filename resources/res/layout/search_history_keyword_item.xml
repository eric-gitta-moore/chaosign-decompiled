    <TextView android:textSize="16sp" android:textColor="#333333" android:gravity="center_vertical" android:id="@+id/text" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:singleLine="true" android:layout_toLeftOf="@+id/img_delete" android:layout_toRightOf="@+id/image" android:layout_alignParentTop="true" android:layout_alignParentBottom="true"/>
