<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/sec_verify_common_bg" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/title_bar_layout" android:layout_width="match_parent" android:layout_height="45dp">
        <ImageView android:id="@+id/ct_account_nav_goback" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:src="@drawable/sec_verify_page_one_key_login_close" android:scaleType="center"/>
        <TextView android:textSize="20sp" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerInParent="true"/>
        <View android:background="#33000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center_horizontal" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="60dp">
        <ImageView android:id="@+id/ct_account_app_logo" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/sec_verify_page_one_key_login_logo" android:scaleType="fitXY"/>
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
    <TextView android:textSize="20sp" android:textColor="#ff000000" android:layout_gravity="center_horizontal" android:id="@+id/ct_account_desensphone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    <TextView android:textSize="14sp" android:textColor="@color/sec_verify_text_color_blue" android:layout_gravity="center_horizontal" android:id="@+id/ct_account_other_login_way" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="切换账号"/>
    <LinearLayout android:gravity="center" android:id="@+id/ct_account_login_btn" android:background="@drawable/sec_verify_shape_rectangle" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp">
        <ImageView android:id="@+id/ct_account_login_loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center"/>
        <TextView android:textSize="16sp" android:textColor="#ffffffff" android:id="@+id/ct_account_login_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="本机号码一键登录"/>
    </LinearLayout>
    <RelativeLayout android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
        <CheckBox android:id="@+id/ct_auth_privacy_checkbox" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@drawable/customized_checkbox_selector"/>
        <TextView android:textSize="12sp" android:textColor="#ff000000" android:id="@+id/ct_auth_privacy_text" android:tag="#FF0090FF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="登录即同意《天翼账号服务与隐私协议》并授权获取本机号码" android:layout_toRightOf="@+id/ct_auth_privacy_checkbox"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <TextView android:textSize="11sp" android:textColor="#66000000" android:layout_gravity="center_horizontal" android:id="@+id/ct_account_brand_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:text="天翼账号提供认证服务"/>
</LinearLayout>
