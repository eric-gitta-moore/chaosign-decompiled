<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/vg_add_members" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <View android:background="#d9d9d9" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="12dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_add_phone_email" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="74dp">
            <EditText android:textSize="16sp" android:textColor="@color/color_333333" android:textColorHint="#cccccc" android:id="@+id/add_name" android:background="@drawable/add_groupmember_bg" android:paddingLeft="6dp" android:layout_width="96dp" android:layout_height="48dp" android:layout_marginLeft="12dp" android:hint="输入姓名" android:singleLine="true"/>
            <EditText android:textSize="16sp" android:textColor="@color/color_333333" android:textColorHint="#cccccc" android:id="@+id/phone_or_email" android:background="@drawable/add_groupmember_bg" android:paddingLeft="6dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="6dp" android:hint="@string/pcenter_message_SendWeChat_emailandphone" android:singleLine="true" android:layout_weight="1"/>
            <ImageView android:id="@+id/img_add" android:padding="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:src="@drawable/ic_group_invite" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="#0099ff" android:gravity="center" android:id="@+id/tv_invite" android:background="@drawable/blue_btn_border_5" android:visibility="gone" android:layout_width="62dp" android:layout_height="30dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:text="@string/comment_done"/>
        </LinearLayout>
        <View android:background="@color/app_line_bg" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/hasMember" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#d9d9d9" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center_vertical" android:background="@color/transparent" android:paddingLeft="12dp" android:layout_width="match_parent" android:layout_height="45dp" android:text="已添加成员"/>
            <View android:background="#d9d9d9" android:layout_width="match_parent" android:layout_height="1px"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
