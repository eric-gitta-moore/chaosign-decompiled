<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:paddingBottom="50dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="#545454" android:layout_gravity="center_horizontal" android:id="@+id/tv_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  签到失败了！" android:drawableTop="@drawable/sign_error" android:drawablePadding="14dp"/>
        <TextView android:textSize="18sp" android:textColor="@color/sign_fail" android:layout_gravity="center_horizontal" android:id="@+id/sign_fail_msg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/sign_account_repeat"/>
        <Button android:textSize="15sp" android:textColor="@color/white" android:id="@+id/bt_again" android:background="@drawable/blue_bg" android:paddingLeft="22dp" android:paddingTop="6dp" android:paddingRight="22dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="重新签"/>
    </LinearLayout>
</LinearLayout>
