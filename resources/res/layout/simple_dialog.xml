<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/dialog_bg" android:padding="20dp" android:layout_width="300dp" android:layout_height="180dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/dialog_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_weight="1"/>
        <TextView android:textSize="18sp" android:textColor="@color/dialog_title" android:layout_gravity="center" android:id="@+id/dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <ImageView android:id="@+id/line_divider" android:background="@color/dialog_line_divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/subview" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="10dp">
        <TextView android:textSize="18sp" android:textColor="@color/dialog_msg" android:id="@+id/dialog_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="18sp" android:textColor="@color/dialog_btn_txt" android:id="@+id/btn_cancel" android:background="@drawable/dialog_btn_selector" android:padding="8dp" android:focusable="true" android:focusableInTouchMode="false" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/cancel" android:layout_weight="1"/>
        <Button android:textSize="18sp" android:textColor="@color/dialog_btn_txt" android:id="@+id/btn_neutral" android:background="@drawable/dialog_btn_selector" android:padding="8dp" android:focusable="true" android:focusableInTouchMode="false" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_weight="1"/>
        <Button android:textSize="18sp" android:textColor="@color/dialog_btn_txt" android:id="@+id/btn_ok" android:background="@drawable/dialog_btn_selector" android:padding="8dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:text="@string/confirm" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
