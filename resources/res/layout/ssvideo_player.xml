<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/black" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/video_frame" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
            <RelativeLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <SurfaceView android:id="@+id/video_sv_show_video" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/video_tv_subtitle" android:background="@drawable/subtitle_back_ground" android:paddingLeft="10dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:id="@+id/video_iv_wait" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" android:layout_centerInParent="true" android:contentDescription="@null"/>
                <include android:id="@+id/video_pb_wait" layout="@layout/wait_circle_bar"/>
            </RelativeLayout>
            <RelativeLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/video_screen_paly" android:background="#90000000" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageButton android:id="@+id/iv_screen_paly" android:background="@drawable/media_screen_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:contentDescription="@null"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/view_video_ctrl" android:background="@drawable/media_bottom_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/ll_option_right">
            <ImageButton android:layout_gravity="center_vertical" android:id="@+id/video_ib_play_pause" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:scaleType="centerInside" android:layout_centerVertical="true" android:contentDescription="@null"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/video_tv_current_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_toRightOf="@+id/video_ib_play_pause" android:layout_centerVertical="true"/>
            <SeekBar android:gravity="center_vertical" android:id="@+id/video_sb_process_play" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="4dp" android:progressDrawable="@drawable/seekbar_process_img" android:minHeight="4dp" android:thumb="@drawable/video_view_process_thumb" android:thumbOffset="10dp" android:layout_toLeftOf="@+id/video_tv_total_time" android:layout_toRightOf="@+id/video_tv_current_time" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/video_tv_total_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:id="@+id/ll_option_right" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_speed" android:paddingTop="5dp" android:paddingRight="20dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_adjustment_speed"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_quality" android:paddingTop="5dp" android:paddingRight="20dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_definit"/>
        </LinearLayout>
    </RelativeLayout>
    <SeekBar android:id="@+id/video_sb_volume" android:visibility="gone" android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:maxHeight="6dp" android:max="100" android:progressDrawable="@drawable/seekbar_volume_img" android:minHeight="6dp" android:thumb="@drawable/seekbar_volume_thumb" android:thumbOffset="0dp"/>
    <ImageButton android:id="@+id/video_ib_volume_switch" android:background="#00000000" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:contentDescription="@null"/>
    <RelativeLayout android:id="@+id/video_relativeLayout_toolbar" android:background="@drawable/media_top_bg" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentTop="true">
        <Button android:id="@+id/btnBack" android:background="@android:color/transparent" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/media_img_back" android:layout_centerVertical="true"/>
        <TextView android:ellipsize="middle" android:gravity="center" android:id="@+id/video_tv_video_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:singleLine="true" android:layout_toLeftOf="@+id/btn_video_line" android:layout_toRightOf="@+id/btnBack" android:layout_centerVertical="true" style="@style/text_white.16"/>
        <TextView android:textSize="14sp" android:textColor="@color/white" android:ellipsize="middle" android:id="@+id/btn_video_line" android:background="@drawable/video_quality_white_border" android:paddingLeft="10dp" android:paddingTop="2dp" android:paddingRight="10dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageButton android:id="@+id/video_list_btn" android:background="@drawable/media_list_btn_disabled" android:padding="10dp" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="20dp" android:scaleType="centerInside" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
        <Button android:textSize="15sp" android:textColor="#999999" android:id="@+id/video_btn_complain" android:background="@drawable/border_white_corner" android:visibility="gone" android:layout_width="75dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:text="投诉卡顿" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <Button android:textSize="15sp" android:textColor="#ffffff" android:id="@+id/video_ib_video_detail_info" android:background="@drawable/all_black_button_xml" android:visibility="gone" android:layout_width="75dp" android:layout_height="30dp" android:text="详细介绍" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <Button android:textSize="15sp" android:textColor="#ffffff" android:id="@+id/video_ib_download" android:background="@drawable/all_black_button_xml" android:visibility="gone" android:layout_width="55dp" android:layout_height="30dp" android:text="下载" android:layout_toLeftOf="@+id/video_ib_video_detail_info" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
        <include layout="@layout/video_menu"/>
    </RelativeLayout>
    <include android:id="@+id/speed_view" android:visibility="gone" layout="@layout/video_speed_view"/>
    <include android:id="@+id/quality_view" android:visibility="gone" layout="@layout/video_quality_view"/>
</RelativeLayout>
