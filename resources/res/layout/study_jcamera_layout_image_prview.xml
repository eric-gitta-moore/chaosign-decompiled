<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/cl_parent" android:background="@color/cx_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/iv_image" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TextView android:textSize="17sp" android:textColor="#cccccc" android:id="@+id/tv_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="暂无图片" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <com.chaoxing.library.widget.CToolbar android:id="@+id/top_bar" android:background="#80000000" android:paddingTop="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
    <LinearLayout android:orientation="vertical" android:background="#80000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_images" android:paddingTop="10dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="88dp" android:layout_marginTop="2dp" android:layout_above="@+id/tv_confirm" android:layout_alignParentBottom="true" android:paddingStart="15dp"/>
        <TextView android:textSize="16sp" android:textColor="#333333" android:layout_gravity="right" android:id="@+id/tv_confirm" android:background="@drawable/white_solid_corner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="15dp" android:text="确定"/>
    </LinearLayout>
</RelativeLayout>
