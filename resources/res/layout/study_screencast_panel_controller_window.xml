<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/player" android:background="#4d4d4d" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
        <ImageButton android:layout_gravity="center_vertical" android:id="@+id/ib_zoom" android:background="@drawable/study_screencast_ripple_gray" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/study_screencast_player_zoom_out_white_24dp"/>
        <TextView android:textSize="14sp" android:textColor="@android:color/white" android:ellipsize="end" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:id="@+id/tv_title" android:layout_width="0dp" android:layout_height="wrap_content" android:text="投屏直播中" android:maxLines="1" android:layout_weight="1"/>
        <ImageButton android:layout_gravity="center_vertical" android:id="@+id/ib_close" android:background="@drawable/study_screencast_ripple_gray" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:src="@drawable/study_screencast_panel_close_24dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_playlist" android:visibility="gone" android:layout_width="match_parent" android:layout_height="208dp"/>
    <TextView android:textSize="14sp" android:textColor="#ff0099ff" android:ellipsize="end" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:id="@+id/tv_item_title" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingRight="15dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
    <LinearLayout android:orientation="horizontal" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="10sp" android:textColor="@android:color/white" android:layout_gravity="center_vertical" android:id="@+id/tv_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="02:13"/>
        <SeekBar android:layout_gravity="center_vertical" android:id="@+id/sb_progress" android:layout_width="0dp" android:layout_height="wrap_content" android:thumb="@drawable/study_screencast_seekbar_thumb_gray" android:thumbOffset="0dp" android:layout_weight="1" android:progressTint="#ff0198ff" android:progressBackgroundTint="#ffb6b7b8" android:secondaryProgressTint="#ffb6b7b8"/>
        <TextView android:textSize="10sp" android:textColor="@android:color/white" android:layout_gravity="center_vertical" android:id="@+id/tv_length" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="04:12"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/option_panel" android:layout_width="match_parent" android:layout_height="58dp" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:weightSum="5">
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:id="@+id/iv_repeat" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="7dp" android:src="@drawable/study_screencast_panel_repeat_list_gray_19dp" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageButton android:id="@+id/ib_previous" android:background="@drawable/study_screencast_ripple_gray" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/study_screencast_panel_skip_previous_white_24dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageButton android:id="@+id/ib_play" android:background="@drawable/study_screencast_ripple_gray" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/study_screencast_panel_play_white_24dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageButton android:id="@+id/ib_next" android:background="@drawable/study_screencast_ripple_gray" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/study_screencast_panel_skip_next_white_24dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageButton android:id="@+id/ib_playlist" android:background="@drawable/study_screencast_ripple_gray" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/study_screencast_panel_playlist_white_24dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
