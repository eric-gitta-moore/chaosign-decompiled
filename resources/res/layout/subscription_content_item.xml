<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#e5e5e5" android:paddingRight="1px" android:paddingBottom="1px" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/vContainer" android:background="@color/gray_style" android:layout_width="match_parent" android:layout_height="120dp">
        <com.chaoxing.mobile.widget.roundedimageview.RoundedImageView android:id="@+id/ivSubscriptionItemCover" android:clickable="false" android:layout_width="@dimen/home_image_size_width" android:layout_height="@dimen/home_image_size_height" android:layout_marginTop="28dp" android:scaleType="centerCrop" android:layout_centerHorizontal="true" app:riv_corner_radius="6dp"/>
        <TextView android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/tvSubscriptionItemTitle" android:paddingLeft="7dp" android:paddingRight="7dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:singleLine="true" android:layout_alignParentBottom="true" android:lineSpacingExtra="3dp" style="@style/text_user_title"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/llSubscriptionAddNotice" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:id="@+id/ivSubscriptionItemAdd" android:background="@android:color/transparent" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/grid_add_icon"/>
            <TextView android:textSize="16sp" android:textColor="#999999" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/region"/>
        </LinearLayout>
        <ImageButton android:id="@+id/ibtnSubscriptionDelete" android:background="@android:color/transparent" android:paddingLeft="15dp" android:paddingTop="2dp" android:paddingRight="2dp" android:paddingBottom="15dp" android:focusable="false" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/rss_subscription_delete" android:scaleType="centerInside" android:cropToPadding="false" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
