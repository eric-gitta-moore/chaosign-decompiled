<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/sub_scription" android:background="@color/bg_activity" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/headerBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <TextView android:ellipsize="middle" android:gravity="center" android:id="@+id/tvAppTitle" android:paddingLeft="45dp" android:paddingRight="45dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/this_app_name" android:singleLine="true" android:layout_centerInParent="true" style="@style/Text_Title_Page"/>
        <Button android:gravity="center_vertical" android:id="@+id/btnMy" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/home_my" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <Button android:textSize="10sp" android:textColor="#969696" android:gravity="center_vertical" android:id="@+id/btnScan" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/icon_group_add" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.chaoxing.mobile.widget.DragGridView android:scrollbarStyle="outsideOverlay" android:id="@+id/dgvSubscriptions" android:background="@color/gray_style" android:fadingEdge="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:numColumns="3" android:layout_weight="1" android:layout_below="@+id/headerBar"/>
    <include android:id="@+id/manualInputIsbn" android:visibility="gone" layout="@layout/fz_manual_input_isbn"/>
</RelativeLayout>
