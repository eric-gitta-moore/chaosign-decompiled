<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/sub_scription" android:background="@color/bg_activity" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/headerBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
        <TextView android:ellipsize="middle" android:gravity="center" android:id="@+id/tvAppTitle" android:paddingLeft="80dp" android:paddingRight="80dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/topiclist_item_material" android:singleLine="true" android:layout_centerInParent="true" style="@style/Text_Title_Page"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/rgContainer" android:background="@drawable/stroke_corner_radiogroup" android:layout_width="168dp" android:layout_height="34dp" android:layout_centerInParent="true">
            <RadioButton android:textColor="@color/white" android:gravity="center" android:id="@+id/rbtnMy" android:background="@drawable/selector_radiobutton_left" android:layout_width="0dp" android:layout_height="match_parent" android:checked="true" android:button="@null" android:text="我的收藏" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
            <RadioButton android:gravity="center" android:id="@+id/rbtnFriend" android:background="@drawable/selector_radiobutton_right" android:layout_width="0dp" android:layout_height="match_parent" android:button="@null" android:text="好友收藏" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
        </RadioGroup>
        <Button android:gravity="center_vertical" android:id="@+id/btnMy" android:background="@android:color/transparent" android:paddingLeft="14dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/home_menu_left" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <Button android:textColor="#969696" android:gravity="center_vertical" android:id="@+id/btnScan" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="14dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/icon_group_add" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <Button android:textColor="#0099ff" android:id="@+id/btnMyFriend" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="14dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/icon_im_group" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.fanzhou.widget.SwipeListView android:scrollbarStyle="outsideOverlay" android:id="@+id/listView" android:background="@color/gray_style" android:fadingEdge="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:divider="@null" android:dividerHeight="1px" android:layout_weight="1" android:layout_below="@+id/headerBar"/>
    <include android:id="@+id/manualInputIsbn" android:visibility="gone" layout="@layout/fz_manual_input_isbn"/>
    <include layout="@layout/wait_circle_bar_with_text"/>
    <FrameLayout android:id="@+id/flFriendContainer" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/headerBar"/>
    <ImageView android:id="@+id/to_top" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="17dp" android:layout_marginBottom="22dp" android:src="@drawable/img_to_top" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
