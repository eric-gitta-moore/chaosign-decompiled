<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:my="http://schemas.android.com/apk/res-auto" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="65dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <RelativeLayout android:id="@+id/rlIcon" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="5dp" android:layout_centerVertical="true">
            <com.fanzhou.widget.CircleImageView android:id="@+id/ivUser" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerInParent="true" my:is_circle="false" my:x_radius="8px" my:y_radius="8px"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/ui_10_dip" android:layout_toLeftOf="@+id/tvSubscribeCount" android:layout_toRightOf="@+id/rlIcon" android:layout_centerVertical="true">
            <TextView android:ellipsize="end" android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="70dp" android:text="不吃大米饿得慌" android:maxLines="2" android:layout_centerVertical="true" style="@style/text_title_16"/>
            <TextView android:textSize="14sp" android:textColor="#0099ff" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/btnPraise" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-56dp" android:layout_marginTop="1dp" android:text="1555" android:drawableLeft="@drawable/ic_do_praise" android:drawablePadding="7dp" android:layout_toRightOf="@+id/tvName" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="@color/gray_999999" android:id="@+id/tvPraised" android:paddingTop="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="被点赞数:300" android:singleLine="true" android:layout_below="@+id/tvName"/>
        </RelativeLayout>
        <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/tvSubscribeCount" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1000" android:drawableRight="@drawable/ic_right_arrow" android:drawablePadding="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="@color/DividerColor" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="68dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
