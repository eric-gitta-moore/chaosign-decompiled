<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/item_view" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:paddingLeft="16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:orientation="vertical" android:id="@+id/clazz" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/invite_code" android:layout_centerVertical="true">
                <TextView android:textSize="16sp" android:textColor="@color/color_34455e" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:lineSpacingMultiplier="1.3"/>
                <TextView android:textSize="13sp" android:textColor="@color/color_a6abb3" android:id="@+id/tv_member_count" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="#999999" android:gravity="center" android:id="@+id/invite_code" android:paddingLeft="8dp" android:paddingRight="16dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableRight="@drawable/ic_teacher_clazz_list_qr_code" android:drawablePadding="8dp" android:layout_alignTop="@+id/clazz" android:layout_alignBottom="@+id/clazz" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:background="@color/color_ebeded" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="16dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
