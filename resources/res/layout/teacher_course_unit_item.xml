<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/divider" android:background="@color/color_f5f6f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="10dp"/>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_label" android:background="@color/white" android:paddingLeft="15dp" android:paddingTop="14dp" android:paddingRight="8dp" android:paddingBottom="14dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="29dp">
        <TextView android:textSize="13sp" android:textColor="@color/color_ff8a9099" android:gravity="center" android:id="@+id/tv_part_index" android:background="@drawable/ic_course_unit_label_gray" android:paddingLeft="11dp" android:paddingBottom="1dp" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:singleLine="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_ff8a9099" android:ellipsize="end" android:id="@+id/tv_label" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_toLeftOf="@+id/tv_add" android:layout_toRightOf="@+id/tv_part_index" android:layout_centerVertical="true" android:lineSpacingExtra="3dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_999999" android:id="@+id/tv_add" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_teacher_clazz_list_add" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/divider2" android:background="@color/color_e8e9eb" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1px"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_features" android:background="@color/color_e8e9eb" android:paddingLeft="5dp" android:paddingTop="10dp" android:paddingRight="5dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
