<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ffecedef" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlGroupInfo" android:background="#fffcfcfd" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp">
        <RelativeLayout android:id="@+id/rlGroupInfoTop" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.chaoxing.mobile.group.widget.GroupHead android:id="@+id/ivGroup" android:background="@drawable/bg_group_head" android:layout_width="56dp" android:layout_height="56dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_toRightOf="@+id/ivGroup">
                <TextView android:textSize="18sp" android:textColor="#ff333333" android:id="@+id/tvGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="同校" android:singleLine="true"/>
                <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/tvLabGroupMembers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="成员：" android:singleLine="true" android:layout_below="@+id/tvGroup"/>
                <TextView android:textSize="14sp" android:textColor="#ff0099ff" android:id="@+id/tvGroupMembers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="30000" android:singleLine="true" android:layout_toRightOf="@+id/tvLabGroupMembers" android:layout_below="@+id/tvGroup"/>
                <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/tvLabTopicNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="6dp" android:text="话题：" android:singleLine="true" android:layout_toRightOf="@+id/tvGroupMembers" android:layout_below="@+id/tvGroup"/>
                <TextView android:textSize="14sp" android:textColor="#ff0099ff" android:id="@+id/tvTopicNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="100000" android:singleLine="true" android:layout_toRightOf="@+id/tvLabTopicNumber" android:layout_below="@+id/tvGroup"/>
                <Button android:textSize="18sp" android:textColor="@android:color/white" android:id="@+id/btnJoin" android:background="@drawable/bg_circular_bead_ff0099ff" android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingRight="12dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/grouplist_join" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:id="@+id/tvProfile" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="简介" android:layout_toLeftOf="@+id/btnMore" android:layout_below="@+id/rlGroupInfoTop" android:lineSpacingMultiplier="1.2"/>
        <Button android:id="@+id/btnMore" android:background="@android:color/transparent" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_more_down" android:layout_below="@+id/rlGroupInfoTop" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
