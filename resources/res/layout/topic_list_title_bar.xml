<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/viewTitleBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlLeft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <Button android:textSize="14sp" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="12dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="48dp" android:drawableLeft="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
        <Button android:textSize="14sp" android:id="@+id/btnLeft2" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingRight="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginRight="6dp" android:layout_toRightOf="@+id/btnLeft" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="20sp" android:textColor="#ff333333" android:ellipsize="middle" android:gravity="center" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="80dp" android:layout_marginRight="80dp" android:singleLine="true" android:layout_centerInParent="true"/>
    <RelativeLayout android:id="@+id/rlRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <Button android:textSize="14sp" android:id="@+id/btnRight" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <Button android:textSize="14sp" android:id="@+id/btnRight2" android:background="@android:color/transparent" android:paddingLeft="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="6dp" android:layout_toLeftOf="@+id/btnRight" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
