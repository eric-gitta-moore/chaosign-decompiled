<?xml version="1.0" encoding="utf-8"?>
<com.chaoxing.booktransfer.ProgressItemView xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="210dp" android:layout_height="50dp">
    <TextView android:id="@+id/tv_booktitle" android:layout_width="90dp" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_transfer_direction" android:layout_width="30dp" android:layout_height="wrap_content" android:layout_marginLeft="4dp"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="95dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <ProgressBar android:id="@+id/pb_progress" android:layout_width="match_parent" android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:id="@+id/tv_progress" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button android:id="@+id/btn_cancel" android:layout_width="60dp" android:layout_height="wrap_content" android:text="@string/cancel"/>
</com.chaoxing.booktransfer.ProgressItemView>
