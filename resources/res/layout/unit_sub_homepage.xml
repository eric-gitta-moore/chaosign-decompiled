<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/sub_scription" android:background="@color/bg_activity" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/headerBar" android:background="#86b8ec" android:layout_width="match_parent" android:layout_height="48dp">
        <RelativeLayout android:id="@+id/rlTop" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <RelativeLayout android:id="@+id/rlLeft" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                <Button android:textSize="16sp" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@mipmap/cx_ic_navigation_arrow_back_24dp_white"/>
                <RelativeLayout android:id="@+id/rl_photo" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <Button android:id="@+id/btnPersonal" android:background="@android:color/transparent" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/home_my" android:layout_centerVertical="true"/>
                    <com.fanzhou.widget.CircleImageView android:id="@+id/ivPhoto" android:background="#86b8ec" android:layout_width="34dp" android:layout_height="34dp" android:src="@drawable/icon_user_head_portrait" android:layout_centerVertical="true" ss:border_color="@color/user_line" ss:border_width="1px" ss:is_circle="true"/>
                    <com.chaoxing.mobile.resource.flower.StatisUserDataView android:id="@+id/userFlower" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/ivPhoto" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/rlRight" android:layout_toRightOf="@+id/rlLeft" android:layout_centerVertical="true">
                <RelativeLayout android:id="@+id/rlTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                    <TextView android:textSize="15sp" android:textColor="@android:color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/tvAppTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/this_app_name" android:maxLines="2" android:drawableRight="@drawable/white_ic_down" android:drawablePadding="2dp" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rlRight" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <Button android:textSize="8sp" android:textColor="@color/white" android:id="@+id/btnAdd" android:background="@android:color/transparent" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="10dp" android:paddingBottom="4dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_invite_code" android:drawableTop="@drawable/icon_invite_scan" android:drawablePadding="2dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/searchView" android:background="@drawable/home_search_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="12dp" android:layout_marginTop="8dp" android:layout_marginRight="12dp" android:layout_marginBottom="8dp" android:layout_below="@+id/rlTop">
            <TextView android:textSize="16sp" android:textColor="#cccccc" android:id="@+id/tvSearchText" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="发现" android:layout_centerInParent="true"/>
            <ImageView android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:src="@drawable/icon_group_search" android:layout_toLeftOf="@+id/tvSearchText" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.chaoxing.mobile.widget.DragGridView android:scrollbarStyle="outsideOverlay" android:id="@+id/dgvSubscriptions" android:background="@color/gray_style" android:fadingEdge="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:numColumns="3" android:layout_weight="1" android:layout_below="@+id/headerBar"/>
    <include android:id="@+id/viewReload" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/headerBar" layout="@layout/loading_failed_match_parent_img"/>
    <FrameLayout android:id="@+id/flContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/headerBar"/>
    <include android:id="@+id/manualInputIsbn" android:visibility="gone" layout="@layout/fz_manual_input_isbn"/>
    <RelativeLayout android:id="@+id/rlNewUserGuidePage" android:background="@color/mainpage_backgroud_color" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/imgTitleBarCenter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@drawable/img_mainpage_titlebar_cover" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/imgTitleFlag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="100dp" android:src="@drawable/img_mainpage_flag" android:layout_below="@+id/imgTitleBarCenter" android:layout_alignParentRight="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_showflag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="可下拉切换首页模式" android:layout_below="@+id/imgTitleFlag" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tvKnowable" android:background="@drawable/shape_mainpage_background" android:paddingLeft="40dp" android:paddingTop="10dp" android:paddingRight="40dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="150dp" android:text="知道了" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
