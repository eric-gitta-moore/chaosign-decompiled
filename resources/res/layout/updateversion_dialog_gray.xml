<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
    <RelativeLayout android:gravity="center" android:background="@drawable/updateversion_dialog_bg" android:layout_width="290dp" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/updateversion_parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <com.google.android.material.imageview.ShapeableImageView android:id="@+id/iv_logo" android:background="@drawable/gray_verion_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="fitCenter" app:shapeAppearance="@style/ShapeAppearance.Rounded10dp"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="20sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp"/>
            <com.chaoxing.mobile.widget.AutoFitScrollView android:id="@+id/contentSV" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:fillViewport="true" android:layout_above="@+id/ll_bottom" android:layout_below="@+id/iv_logo">
                <TextView android:textSize="15sp" android:gravity="left" android:id="@+id/tvMessage" android:paddingLeft="27dp" android:paddingRight="27dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1、要有明确的学习目的，有刻苦钻研、知难而进的学习精神。\102、要有广泛的学习兴趣，不断扩充知识面，注意发展自己的特长爱好。\103、学习认真，一丝不苟，实事求是。能虚心求教于别人，又热心帮助别人，有良好的学习品质。\104、预习功课，并能掌握教师的教学方法，能够预习笔记。" android:lineSpacingExtra="5dp" style="@style/Text_secTitle_updateVersion"/>
            </com.chaoxing.mobile.widget.AutoFitScrollView>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_bottom" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_weight="2">
                <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/btnCancel" android:background="@drawable/bg_f5f6f8" android:layout_width="0dp" android:layout_height="45dp" android:text="暂不体验" android:layout_weight="1"/>
                <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btnOk" android:background="@drawable/btn_solide_0099ff" android:layout_width="0dp" android:layout_height="45dp" android:layout_marginLeft="15dp" android:text="安装内测版" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/ivClose" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/gray_close" android:scaleType="fitCenter" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
