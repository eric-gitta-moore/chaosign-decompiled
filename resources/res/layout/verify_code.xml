<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/header_height">
            <com.chaoxing.fanya.aphone.view.BackButtonBlack android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="18sp" android:textColor="#333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/verify_code_title" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View android:background="@color/bg_gray" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/ivVerifyCode" android:background="@android:color/transparent" android:layout_width="140dp" android:layout_height="50dp" android:scaleType="fitCenter"/>
            <TextView android:textSize="14sp" android:textColor="#7b9e31" android:id="@+id/tvRefresh" android:paddingLeft="10dp" android:paddingTop="20dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/verify_code_refresh"/>
        </LinearLayout>
        <EditText android:textColorHint="@color/text_hint" android:id="@+id/etVerifyCode" android:background="@drawable/bg_input" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:hint="@string/verify_code" android:singleLine="true" android:selectAllOnFocus="true" android:inputType="text" android:imeOptions="actionDone" style="@style/Text_Title"/>
        <Button android:textSize="16sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/btnVerifyCode" android:background="@drawable/green_button_selector" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:text="@string/check_answer"/>
    </LinearLayout>
    <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/wait_circle_bar"/>
</RelativeLayout>
