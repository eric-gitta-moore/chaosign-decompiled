<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/vCompain" android:layout_width="wrap_content" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/llBtnCompain" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginRight="-5dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
        <ImageButton android:id="@+id/ibtnComplain" android:background="@drawable/video_menu" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:src="@drawable/video_complain" android:scaleType="centerInside" android:contentDescription="@null"/>
        <View android:layout_width="match_parent" android:layout_height="50dp"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/complainContent" android:background="@drawable/video_menu_bg" android:visibility="gone" android:layout_width="300dp" android:layout_height="match_parent" android:layout_alignParentRight="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/llComplain" android:background="#90000000" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentTop="true">
                <Button android:textSize="15sp" android:textColor="#999999" android:id="@+id/frame_btn_complain" android:background="@drawable/border_white_corner" android:layout_width="75dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:text="投诉卡顿" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView android:textSize="20sp" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/tComplain"/>
            <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="12dp" android:text="@string/tPhone"/>
            <EditText android:id="@+id/etComplainPhone" android:background="#eaeaee" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:inputType="phone" android:imeOptions="flagNoExtractUi"/>
            <Button android:textColor="@color/white" android:layout_gravity="right" android:id="@+id/btnComplain" android:background="@drawable/blue_botton" android:paddingLeft="10dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="14dp" android:text="@string/btn_confirm"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
