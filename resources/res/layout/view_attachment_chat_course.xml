<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/rlcontainer" android:background="@drawable/bg_circle_border_f4f5f6" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="74dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/vMainContent" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:id="@+id/llImage" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.fanzhou.widget.CircleImageView android:id="@+id/ivImage" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="8dp" android:src="@drawable/ic_default_image" android:scaleType="fitXY" ss:is_circle="false" ss:x_radius="4dp" ss:y_radius="4dp"/>
            <View android:background="#cccccc" android:visibility="gone" android:layout_width="1dp" android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="几米在作品中吐露着现代人" android:maxLines="1"/>
            <TextView android:textSize="16sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llSeeDetails" android:background="#f6f6f6" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp">
        <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvTip" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="查看详情" android:drawableRight="@drawable/ic_right_arrow"/>
    </LinearLayout>
</LinearLayout>
