<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rlcontainer" android:background="@drawable/bg_circle_border_f4f5f6" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="74dp">
    <RelativeLayout android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.chaoxing.mobile.group.ui.GroupAvatar android:id="@+id/ivImage" android:background="@drawable/bg_group_head_circle" android:layout_width="50dp" android:layout_height="50dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toRightOf="@+id/ivImage" android:layout_centerVertical="true">
            <TextView android:textSize="11sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/tvGroup" android:background="@drawable/bg_attachment_group" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="小组" android:singleLine="true" android:layout_toRightOf="@+id/tvTitle"/>
            <ImageView android:id="@+id/ivGroupTag" android:background="@drawable/icon_att_group_tag" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/tvTitle" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="研发部经典语录" android:singleLine="true" android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/iv_remove" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_att_delete" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@null"/>
</RelativeLayout>
