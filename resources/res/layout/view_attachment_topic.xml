<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:my="http://schemas.android.com/apk/res-auto" android:id="@+id/rlcontainer" android:background="@drawable/bg_circle_border_f4f5f6" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="74dp">
    <RelativeLayout android:id="@+id/rlContentContainer" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_centerVertical="true">
        <TextView android:textColor="@color/white" android:id="@+id/tv_tag" android:background="@drawable/bg_circular_bead_ff0099ff" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="5dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:text="话题" android:maxLines="1"/>
        <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_tag">
            <com.fanzhou.widget.CircleImageView android:id="@+id/ivImage" android:visibility="gone" android:layout_width="@dimen/attachment_icon_size" android:layout_height="@dimen/attachment_icon_size" android:layout_marginRight="6dp" android:src="@drawable/bg_img_default_att_header" android:scaleType="centerCrop" android:layout_centerVertical="true" my:is_circle="false" my:x_radius="3dp" my:y_radius="3dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/ivImage" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/attachment_title" android:textColor="@color/color_attachemt_title" android:ellipsize="end" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="几米在作品中吐露着现代人" android:maxLines="2"/>
                <TextView android:textSize="12sp" android:textColor="@color/color_attachemt_content" android:ellipsize="end" android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="几米在作品中吐露着现代人内心深处不为人知的的隐痛与困顿，揭示出" android:maxLines="2" android:layout_below="@+id/tvTitle"/>
                <TextView android:textSize="@dimen/attachment_content" android:textColor="#ff0066cc" android:ellipsize="end" android:id="@+id/tvGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="《几米漫画》" android:singleLine="true" android:layout_below="@+id/tvContent"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/iv_remove" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_att_delete" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@null"/>
</RelativeLayout>
