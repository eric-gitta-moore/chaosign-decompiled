<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#f5f6f8" android:paddingBottom="1px" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/search_bar_normal"/>
    <RelativeLayout android:id="@+id/rlGroupName" android:background="@android:color/white" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabGroupName" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_wechat_groupchatname" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="#ff999999" android:gravity="right" android:id="@+id/tvGroupName" android:paddingLeft="10dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="未命名" android:drawablePadding="2dp" android:layout_toRightOf="@+id/tvLabGroupName" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/llGroupPublic" android:background="@android:color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/conversation_info_height">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvGroupPublic" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pcenter_wechat_group_public" android:drawableRight="@drawable/ic_right_arrow" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/sp_14" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tvGroupPublicContent" android:paddingTop="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_below="@+id/tvGroupPublic" android:layout_centerVertical="true"/>
    </LinearLayout>
    <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/rlGroupQRCode" android:background="@android:color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabGroupQRCode" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/something_xuexitong_ChatQRCode" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="15dp" android:layout_alignParentRight="true">
            <TextView android:textSize="16sp" android:textColor="#999" android:id="@+id/tvQRCodeText" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="0099ff" android:drawableRight="@drawable/ic_group_qrcode" android:drawablePadding="8dp"/>
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbGroupQRCode" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginStart="5dp" style="@style/SwitchButtonStyle"/>
            <TextView android:id="@+id/tv_qrcode_arrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_right_arrow"/>
        </LinearLayout>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="8dp"/>
    <RelativeLayout android:id="@+id/rlSilent" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabSilent" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/something_xuexitong_MuteAllMembers" android:layout_centerVertical="true"/>
        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbSilent" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlNoDisturbing" android:background="@android:color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLabNoDisturbing" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_wechat_MuteNotifications" android:layout_centerVertical="true"/>
        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/cbNoDisturbing" android:clickable="true" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SwitchButtonStyle"/>
    </RelativeLayout>
    <View android:id="@+id/view1" android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    <View android:id="@+id/view2" android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="8dp"/>
    <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvHistoryFile" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/history_file" android:drawableRight="@drawable/ic_right_arrow"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/vgSearchChatRecord" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvSearchChatRecord" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/pcenter_wechat_search_chat_history" android:drawableRight="@drawable/ic_right_arrow"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/vgClearChatRecord" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvClearChatRecord" android:background="#ffffff" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/pcenter_wechat_ClearChatHistory"/>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/vgReport" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="8dp"/>
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvReport" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/topic_Report" android:drawableRight="@drawable/ic_right_arrow"/>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/vgActionHistory" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="8dp"/>
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvActionHistory" android:background="#ffffff" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/pcenter_wechat_ActivitiesHistory"/>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/vgGroupManage" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="8dp"/>
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvGroupManage" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/group_chat_manage" android:drawableRight="@drawable/ic_right_arrow"/>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/vgOneKeyGroup" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvOneKeyGroup" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="一键小组" android:drawableRight="@drawable/ic_right_arrow"/>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/vgAssociateCourse" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:gravity="center_vertical" android:id="@+id/tvAssociateCourse" android:background="#ffffff" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:text="@string/message_tip_related_course" android:drawableRight="@drawable/ic_right_arrow"/>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rlAddMember" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/conversation_info_height" android:layout_marginTop="8dp">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvAddMember" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_wechat_addmember" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/cbAddMember" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/add_contact" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <View android:background="#e1e1e1" android:layout_width="match_parent" android:layout_height="1px"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlGroupMember" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp">
        <TextView android:textSize="13sp" android:textColor="#ff999999" android:id="@+id/tvMemberLable" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pcenter_contents_member" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="#ff999999" android:gravity="right" android:id="@+id/tvGroupMemberCount" android:paddingLeft="10dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_recovery_topic" android:drawablePadding="15dp" android:layout_toRightOf="@+id/tvMemberLable" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
