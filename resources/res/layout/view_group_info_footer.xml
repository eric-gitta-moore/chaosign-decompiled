<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlLoad" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlLoadMore" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="45dp">
            <TextView android:textSize="16sp" android:textColor="#ff666666" android:id="@+id/tvLoadMore" android:background="@android:color/transparent" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_group_user_load" android:layout_centerInParent="true"/>
            <RelativeLayout android:id="@+id/rlLoading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ProgressBar android:id="@+id/pbLoading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" style="@android:style/Widget.ProgressBar.Small"/>
                <TextView android:textSize="16sp" android:textColor="#ff666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="正在努力加载" android:layout_toRightOf="@+id/pbLoading" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlNoUserHint" android:background="@drawable/common_white_stroke_bg_1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="66dp">
            <TextView android:textSize="16sp" android:textColor="#ff999999" android:id="@+id/tvNoUser" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="暂无成员" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlGroupMember" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="68dp" android:layout_below="@+id/rlLoad">
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvMemberLable" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全部成员" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="#ff999999" android:gravity="right" android:id="@+id/tvGroupMemberCount" android:paddingLeft="10dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/ic_recovery_topic" android:drawablePadding="12dp" android:layout_toRightOf="@+id/tvMemberLable" android:layout_centerVertical="true"/>
        <View android:background="#ffefeff4" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <View android:id="@+id/bottomLine" android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/rlGroupMember"/>
    <RelativeLayout android:id="@+id/rlQuitGroup" android:background="#ffefeff4" android:paddingLeft="50dp" android:paddingTop="22dp" android:paddingRight="50dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/bottomLine">
        <Button android:textSize="16sp" android:textColor="@android:color/white" android:id="@+id/btnQuitGroup" android:background="@drawable/bg_btn_quit_group" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/something_xuexitong_quitgroups"/>
    </RelativeLayout>
</RelativeLayout>
