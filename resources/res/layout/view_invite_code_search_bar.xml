<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp">
    <ImageView android:id="@+id/iv_back" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="48dp" android:src="@drawable/cl_ic_toolbar_arrow_left_24dp" android:layout_centerVertical="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="30dp" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_marginEnd="15dp" android:layout_toEndOf="@+id/iv_back">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_home_search" android:layout_marginStart="10dp" android:layout_marginEnd="5dp"/>
        <EditText android:textSize="14sp" android:textColor="#ff333333" android:textColorHint="#ffb3b3b3" android:id="@+id/et_keyword" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="30dp" android:hint="搜索" android:singleLine="true" android:layout_weight="1" android:inputType="text" android:imeOptions="actionSearch"/>
        <ImageView android:id="@+id/iv_clear" android:paddingLeft="12dp" android:paddingTop="5dp" android:paddingRight="12dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear"/>
    </LinearLayout>
</RelativeLayout>
