<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.chaoxing.mobile.live.SmallEmojiPanel android:id="@+id/smile_panel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <com.chaoxing.mobile.live.BigEmojiPanel android:id="@+id/big_smile_panel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="36dp">
        <RelativeLayout android:id="@+id/rlSmile" android:background="#ffffff" android:paddingLeft="7dp" android:paddingTop="6dp" android:paddingRight="7dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/chat_expression_001" android:scaleType="centerInside" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlBigSmile" android:background="#ffffff" android:paddingLeft="7dp" android:paddingTop="6dp" android:paddingRight="7dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/chat_expression_chaoxing_1_png" android:scaleType="centerInside" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
