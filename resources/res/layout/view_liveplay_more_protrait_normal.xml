<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/content_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="17sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/report" android:background="@color/live_more_bg_color" android:layout_width="match_parent" android:layout_height="56dp" android:text="@string/topic_Report" android:layout_centerHorizontal="true"/>
        <View android:id="@+id/divider" android:background="@color/live_more_bg_color2" android:layout_width="match_parent" android:layout_height="6dp" android:layout_below="@+id/report"/>
        <TextView android:textSize="17sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/cancel" android:background="@color/live_more_bg_color" android:layout_width="match_parent" android:layout_height="56dp" android:text="@string/cancel" android:layout_below="@+id/divider" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <View android:id="@+id/close_view" android:background="@android:color/transparent" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/content_container"/>
</merge>
