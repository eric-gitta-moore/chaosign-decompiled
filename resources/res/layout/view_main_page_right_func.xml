<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/view_record_mode" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="15dp">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_record_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0.5dp"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_record_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginStart="3dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/view_refresh" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="15dp">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_refresh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_main_recommend_refresh" android:scaleType="centerInside"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="13sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tv_refresh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginStart="5dp"/>
    </LinearLayout>
</merge>
