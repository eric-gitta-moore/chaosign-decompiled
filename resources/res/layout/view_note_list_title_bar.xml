<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp">
    <TextView android:textSize="18sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center" android:id="@+id/tvTitle" android:paddingLeft="100dp" android:paddingRight="100dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/topiclist_item_material" android:singleLine="true" android:layout_centerInParent="true" style="@style/Text_Title_Page"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/rgContainer" android:background="@drawable/stroke_corner_radiogroup" android:layout_width="162dp" android:layout_height="34dp" android:layout_centerInParent="true">
        <RadioButton android:textColor="@color/note_tab_text" android:ellipsize="end" android:gravity="center" android:id="@+id/rbtnFriend" android:background="@drawable/selector_radiobutton_left" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/pcenter_notes_all_all" android:singleLine="true" android:drawablePadding="0dp" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
        <View android:background="#0099ff" android:visibility="gone" android:layout_width="1px" android:layout_height="match_parent"/>
        <RadioButton android:textColor="@color/note_tab_text" android:ellipsize="end" android:gravity="center" android:id="@+id/rbtnGroups" android:background="@drawable/selector_radiobutton_middle" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/tab_group" android:singleLine="true" android:drawablePadding="2dp" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
        <View android:background="#0099ff" android:visibility="visible" android:layout_width="1px" android:layout_height="match_parent"/>
        <RadioButton android:textColor="@color/note_tab_text" android:gravity="center" android:id="@+id/rbtnMy" android:background="@drawable/selector_radiobutton_right" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="visible" android:clickable="false" android:layout_width="0dp" android:layout_height="match_parent" android:checked="true" android:text="@string/tag_my" android:layout_weight="1" style="@style/Radio_Button_Resource_Text"/>
    </RadioGroup>
    <Button android:textSize="14sp" android:ellipsize="end" android:id="@+id/btnLeft" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingTop="4dp" android:paddingRight="6dp" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:drawableLeft="@drawable/navigation_img_back" android:layout_centerVertical="true"/>
    <CheckBox android:textSize="14sp" android:textColor="#0099ff" android:id="@+id/btnAllSel" android:background="@android:color/transparent" android:paddingLeft="2dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:button="@null" android:text="@string/downloadres_selectAll" android:layout_toRightOf="@+id/btnLeft" android:layout_centerVertical="true"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <Button android:textSize="14sp" android:textColor="#0099ff" android:gravity="center_vertical" android:id="@+id/btnRight2" android:background="@android:color/transparent" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:textSize="14sp" android:textColor="#0099ff" android:gravity="center_vertical" android:id="@+id/btnRight" android:background="@android:color/transparent" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="5dp"/>
    </LinearLayout>
</RelativeLayout>
