<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/top_bar" android:background="@drawable/live_bg_topbar" android:layout_width="match_parent" android:layout_height="34dp">
        <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ibtn_left" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_back" android:layout_centerVertical="true" android:layout_marginStart="15dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llo_anchor" android:background="@drawable/bg_live_name" android:paddingLeft="4dp" android:paddingTop="3dp" android:paddingRight="20dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toRightOf="@+id/ibtn_left" android:layout_centerVertical="true">
            <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/iv_anchor" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/icon_user_head_portrait" app:riv_corner_radius="4dp" app:riv_oval="true"/>
            <TextView android:textSize="14sp" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/tv_anchor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="主播名字" android:maxLines="1" android:maxLength="4"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/btnRotateSurface" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_rotate_surface" android:layout_centerVertical="true" android:layout_marginStart="12dp" android:layout_marginEnd="12dp" android:layout_toStartOf="@+id/ibtn_forward"/>
        <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ibtn_forward" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_share" android:layout_centerVertical="true" android:layout_marginStart="12dp" android:layout_marginEnd="12dp" android:layout_toStartOf="@+id/ibtn_right"/>
        <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ibtn_right" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_more" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="12dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/bottom_bar" android:background="@drawable/live_bg_bottom_bar" android:layout_width="match_parent" android:layout_height="34dp" android:layout_alignParentBottom="true">
        <TextView android:id="@+id/ibtn_zoom" android:background="@drawable/ic_live_zoom_large" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.chaoxing.mobile.live.LiveVideoControlView android:id="@+id/control_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="40dp" android:layout_marginBottom="40dp">
        <com.chaoxing.mobile.live.LiveDanmakuView android:id="@+id/danmaku_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </com.chaoxing.mobile.live.LiveVideoControlView>
    <com.chaoxing.mobile.live.LiveChatView android:id="@+id/live_chat_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerVertical="true"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/note_layout" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <Button android:id="@+id/screen_shot" android:background="@drawable/live_screenshot" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/write_note" android:background="@drawable/live_writenote" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/reward_count" android:background="@drawable/bg_live_name" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="5dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginBottom="5dp" android:minWidth="38dp" android:text="0人" android:layout_above="@+id/live_chat_view" android:layout_alignParentLeft="true"/>
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/praise_count" android:background="@drawable/bg_live_name" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="5dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_marginBottom="5dp" android:minWidth="38dp" android:text="0" android:layout_above="@+id/live_chat_view" android:layout_alignParentRight="true"/>
</merge>
