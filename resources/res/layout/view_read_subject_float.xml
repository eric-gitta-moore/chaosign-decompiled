<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ivLogo" android:layout_width="40dp" android:layout_height="40dp" app:riv_border_color="#999" app:riv_border_width="1.5dp" app:riv_corner_radius="4dp" app:riv_oval="true"/>
    <RelativeLayout android:id="@+id/rlLongClickView" android:background="@drawable/bg_read_subject_float" android:layout_width="wrap_content" android:layout_height="40dp">
        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/ivLogo2" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="8dp" android:layout_centerVertical="true" app:riv_corner_radius="4dp" app:riv_oval="true"/>
        <View android:id="@+id/diver" android:background="#e5e5e5" android:layout_width="1dp" android:layout_height="18dp" android:layout_marginLeft="12dp" android:layout_toRightOf="@+id/ivLogo2" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ivClose" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:src="@drawable/icon_subject_float_close" android:layout_toRightOf="@+id/diver" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
