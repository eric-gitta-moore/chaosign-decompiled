<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/top_bar" android:background="@drawable/rk_bg_toolbar" android:layout_width="match_parent" android:layout_height="46dp" android:layout_alignParentTop="true">
        <TextView android:id="@+id/back" android:paddingTop="8dp" android:paddingRight="10dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:text="" android:drawableLeft="@drawable/rk_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/course_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="测试" android:layout_toRightOf="@+id/back" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/share" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:drawableLeft="@drawable/rk_share" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/switch_video_visible" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="14dp" android:drawableLeft="@drawable/rk_show_video" android:layout_toLeftOf="@+id/share" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/switch_video_doc" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="14dp" android:drawableLeft="@drawable/rk_switch_video_doc" android:layout_toLeftOf="@+id/switch_video_visible" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/bottom_bar" android:background="#33000000" android:layout_width="match_parent" android:layout_height="46dp" android:layout_alignParentBottom="true">
        <TextView android:id="@+id/play" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:drawableLeft="@drawable/rk_play" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/zoom" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:drawableLeft="@drawable/rk_zoom" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/switch_danmaku" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="19dp" android:drawableLeft="@drawable/rk_switch_danmaku_on" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <Button android:textSize="14sp" android:textColor="@color/white" android:id="@+id/send" android:background="@drawable/bg_cc_send" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingRight="15dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="33dp" android:text="发送" android:layout_toLeftOf="@+id/switch_danmaku" android:layout_centerVertical="true"/>
        <EditText android:textSize="12sp" android:id="@+id/edit_chat" android:background="@drawable/bg_cc_input" android:padding="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginRight="14dp" android:hint="说点什么......" android:layout_toLeftOf="@+id/send" android:layout_toRightOf="@+id/play" android:layout_centerVertical="true" android:imeOptions="flagNoExtractUi"/>
    </RelativeLayout>
</merge>
