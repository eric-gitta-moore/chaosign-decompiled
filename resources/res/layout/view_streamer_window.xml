<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/streamer_content" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <com.chaoxing.mobile.live.KeyboardLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <android.opengl.GLSurfaceView android:id="@+id/sv_previewer" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
    </com.chaoxing.mobile.live.KeyboardLayout>
    <com.chaoxing.mobile.live.LiveDanmakuView android:id="@+id/danmaku_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="40dp" android:layout_marginBottom="40dp"/>
    <View android:id="@+id/focus_panel" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.chaoxing.mobile.live.LiveReportView android:id="@+id/view_report" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ProgressBar android:id="@+id/pb_push_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@android:style/Widget.ProgressBar.Small"/>
    <RelativeLayout android:id="@+id/status_panel" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:id="@+id/pb_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_centerInParent="true" style="@android:style/Widget.ProgressBar.Small"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/pb_loading" android:layout_centerInParent="true">
            <TextView android:textSize="14sp" android:textColor="@android:color/white" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
            <Button android:textSize="14sp" android:textColor="@android:color/white" android:id="@+id/btn_status_operate" android:background="@drawable/bg_border_white" android:paddingLeft="24dp" android:paddingTop="6dp" android:paddingRight="24dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/live_close" android:layout_below="@+id/tv_status" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <EditText android:textSize="18sp" android:textColor="#ffffff" android:textColorHint="#32ffffff" android:gravity="left" android:id="@+id/live_title" android:background="@drawable/bg_live_preview" android:paddingLeft="6dp" android:paddingTop="18dp" android:paddingRight="6dp" android:paddingBottom="18dp" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginTop="120dp" android:hint="请在这里输入直播标题" android:singleLine="true" android:layout_centerHorizontal="true" android:imeOptions="actionDone"/>
    <TextView android:textSize="180sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/count_down" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
    <Button android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/start_live" android:background="@drawable/bg_preview_start" android:padding="10dp" android:layout_width="180dp" android:layout_height="44dp" android:layout_marginBottom="120dp" android:text="@string/live_start" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/beauty_preview" android:background="@drawable/live_beautifulface" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="120dp" android:layout_toRightOf="@+id/start_live" android:layout_alignParentBottom="true"/>
    <RelativeLayout android:id="@+id/top_bar" android:background="@drawable/live_bg_topbar" android:layout_width="match_parent" android:layout_height="34dp">
        <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ibtn_left" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_back" android:layout_centerVertical="true" android:layout_marginStart="15dp"/>
        <com.chaoxing.mobile.redpaper.ViewReward android:id="@+id/vr_reward" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/ibtn_left" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <com.kyleduo.switchbutton.SwitchButton android:id="@+id/danmu_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:layout_marginStart="12dp" android:layout_marginEnd="12dp" style="@style/LiveSwitchButtonStyle"/>
            <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/btnRotateScreen" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_screen_orientation_portrait" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
            <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ibtn_switch_camera" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_toggle_camera" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
            <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ibtn_forward" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_share" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
            <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/ibtn_right" android:background="@android:color/transparent" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_live_toolbar_close" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/bottom_bar" android:background="@drawable/live_bg_bottom_bar" android:layout_width="match_parent" android:layout_height="34dp" android:layout_alignParentBottom="true">
        <TextView android:id="@+id/ibtn_zoom" android:background="@drawable/ic_live_zoom_large" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.chaoxing.mobile.live.LiveChatView android:id="@+id/live_chat_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lyt_online_count" android:background="@drawable/bg_live_praise" android:paddingLeft="20dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginBottom="20dp" android:layout_above="@+id/live_chat_view" android:layout_alignParentRight="true">
        <ImageView android:background="@drawable/live_online_count" android:layout_width="15dp" android:layout_height="15dp"/>
        <TextView android:textSize="13sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/online_count" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginLeft="5dp" android:text="在线: 0" android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llo_streamer_praise_count" android:background="@drawable/bg_live_praise" android:paddingLeft="20dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginBottom="10dp" android:layout_above="@+id/lyt_online_count" android:layout_alignParentRight="true">
        <ImageView android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/live_praise_count"/>
        <TextView android:textSize="13sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/streamer_praise_count" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:text="点赞: 0"/>
    </LinearLayout>
    <Button android:id="@+id/beauty" android:background="@drawable/live_beautifulface" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_marginBottom="20dp" android:layout_above="@+id/llo_streamer_praise_count" android:layout_alignParentRight="true"/>
    <Button android:id="@+id/beauty_normal" android:background="@drawable/live_beautifulface" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
