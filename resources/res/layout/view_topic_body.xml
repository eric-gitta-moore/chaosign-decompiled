<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ss="http://schemas.android.com/apk/res-auto" android:background="@android:color/white" android:paddingBottom="1px" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlContent" android:paddingTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlTop" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="13dp" android:importantForAccessibility="no">
            <com.fanzhou.widget.CircleImageView android:id="@+id/ivAvatar" android:layout_width="38dp" android:layout_height="38dp" android:src="@drawable/icon_user_head_portrait" android:scaleType="fitCenter" ss:border_color="@color/avatar_border" ss:border_width="1px" ss:is_circle="false" ss:x_radius="5dp" ss:y_radius="5dp"/>
            <RelativeLayout android:id="@+id/rlRoom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/ivAvatar" android:importantForAccessibility="no">
                <RelativeLayout android:id="@+id/rlTopRoom" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="14sp" android:textColor="#ff666666" android:ellipsize="end" android:id="@+id/tvAuthor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="小清新" android:singleLine="true"/>
                    <RelativeLayout android:id="@+id/rlTitleRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tvAuthor">
                        <TextView android:textSize="12sp" android:textColor="#cccccc" android:ellipsize="end" android:id="@+id/tvOrganization" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginTop="2dp" android:text="南京航空航天大学" android:singleLine="true"/>
                        <Button android:textSize="11sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/btnFriends" android:background="@drawable/bg_circle_border_ff0099ff_transparent" android:visibility="gone" android:layout_width="30dp" android:layout_height="16dp" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:text="@string/pcenter_message_addfirend_addFriend" android:layout_toRightOf="@+id/tvOrganization"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rlBottomRoom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/rlTopRoom">
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvPublishTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1分钟前" android:importantForAccessibility="no"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvReplyCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:text="回复:0" android:layout_toRightOf="@+id/tvPublishTime" android:importantForAccessibility="no"/>
                    <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/tvReadCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:text="阅读:0" android:layout_toRightOf="@+id/tvReplyCount" android:importantForAccessibility="no"/>
                    <TextView android:textSize="12sp" android:textColor="#ffcccccc" android:ellipsize="end" android:id="@+id/tvFrom" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:text="来自xxx" android:singleLine="true" android:layout_toRightOf="@+id/tvReplyCount"/>
                    <TextView android:textSize="12sp" android:textColor="#ff0099ff" android:id="@+id/btnDel" android:background="@android:color/white" android:paddingLeft="13dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/something_xuexitong_delete" android:layout_toRightOf="@+id/tvReadCount"/>
                    <TextView android:textSize="12sp" android:textColor="#ff0099ff" android:id="@+id/btnEdit" android:background="@android:color/white" android:paddingLeft="13dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/something_xuexitong_edit" android:lines="1" android:layout_toRightOf="@+id/btnDel"/>
                    <RelativeLayout android:id="@+id/rlButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tvReadCount">
                        <RelativeLayout android:id="@+id/rlPraise" android:paddingLeft="4dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                            <TextView android:id="@+id/btnPraise" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:drawableLeft="@drawable/ic_do_praise" android:layout_centerVertical="true"/>
                            <TextView android:textSize="11sp" android:textColor="#0099ff" android:ellipsize="end" android:gravity="left" android:id="@+id/tv_praise_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="1" android:singleLine="true" android:layout_toRightOf="@+id/btnPraise" android:layout_alignBottom="@+id/btnPraise"/>
                        </RelativeLayout>
                        <Button android:id="@+id/btnShare" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:drawableLeft="@drawable/ic_group_share" android:layout_toRightOf="@+id/rlPraise" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textColor="#ffcccccc" android:ellipsize="end" android:id="@+id/tvForwardTip" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingRight="15dp" android:paddingBottom="4dp" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/rlTop"/>
        <RelativeLayout android:id="@+id/rlMiddle" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tvForwardTip">
            <TextView android:textSize="18sp" android:textColor="#000000" android:id="@+id/tvTitle" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="标题" android:lineSpacingMultiplier="1.2"/>
            <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/tvContent" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tvTitle" android:lineSpacingMultiplier="1.4"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/llImage" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tvContent"/>
            <com.chaoxing.mobile.attachment.view.AttachmentViewLayout android:id="@+id/attachmentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/llImage"/>
            <View android:id="@+id/attachmentCover" android:background="#33000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/attachmentLayout" android:layout_alignBottom="@+id/attachmentLayout"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlMiddle">
            <LinearLayout android:orientation="vertical" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/TvTopicEditTip" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/topic_edit_tip_12"/>
                <View android:id="@+id/TvTopicClazzLine1" android:background="#e5e5e5" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="10dp"/>
                <TextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/TvTopicClazzInfo1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/tvReward" android:background="@drawable/shape_givemoney_background" android:visibility="gone" android:layout_width="54dp" android:layout_height="24dp" android:layout_marginTop="15dp" android:text="@string/topiclist_code_Reward"/>
                <TextView android:layout_gravity="center" android:id="@+id/tvRewardList" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/reward_list"/>
                <TextView android:textSize="14sp" android:textColor="#0099ff" android:layout_gravity="center_horizontal" android:id="@+id/ivMark" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="10dp" android:text="@string/topic_rate" android:drawableLeft="@drawable/icon_res_unmark" android:drawablePadding="5dp"/>
            </LinearLayout>
            <com.chaoxing.fanya.aphone.ui.chapter.detail.ui.TopicKeyWordView android:id="@+id/keyWordView" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/ivPraiseTopLine" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/rlContent"/>
    <RelativeLayout android:id="@+id/rlPraiseUser" android:background="#fafafa" android:layout_width="match_parent" android:layout_height="35dp" android:layout_below="@+id/ivPraiseTopLine">
        <TextView android:textSize="16sp" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvPraiseUser" android:paddingLeft="12dp" android:paddingRight="110dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:singleLine="true" android:layout_above="@+id/ivPraiseBottomLine"/>
        <TextView android:textSize="16sp" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tvPraiseUserTag" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="-110dp" android:singleLine="true" android:layout_toLeftOf="@+id/btnReplyOrder" android:layout_toRightOf="@+id/tvPraiseUser"/>
        <Button android:textSize="14sp" android:textColor="#666666" android:id="@+id/btnReplyOrder" android:background="@android:color/transparent" android:paddingLeft="20dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/ic_topic_reply_order_asc" android:drawablePadding="5dp" android:layout_above="@+id/ivPraiseBottomLine" android:layout_alignParentRight="true"/>
        <Button android:id="@+id/btnBatchSorce" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:drawableLeft="@drawable/ic_batch_sorce" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <View android:id="@+id/ivPraiseBottomLine" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/viewLoadAll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlPraiseUser">
        <TextView android:textSize="16sp" android:textColor="#0099ff" android:id="@+id/tvLoadAll" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="之前的评论..."/>
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignTop="@+id/tvLoadAll"/>
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignBottom="@+id/tvLoadAll"/>
        <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/tvShowReplyCount" android:paddingRight="23dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="回复:80" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/viewCover" android:background="#33000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignTop="@+id/rlContent" android:layout_alignBottom="@+id/rlContent"/>
</RelativeLayout>
