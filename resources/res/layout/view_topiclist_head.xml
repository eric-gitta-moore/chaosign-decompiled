<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <HorizontalScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/llBtns" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="#666666" android:gravity="center" android:id="@+id/tvAnnouncement" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/head_announcement" android:drawableTop="@drawable/head_notice" android:drawablePadding="7dp"/>
            <TextView android:textSize="12sp" android:textColor="#666666" android:gravity="center" android:id="@+id/tvNotice" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/head_notice" android:drawableTop="@drawable/head_notice" android:drawablePadding="7dp"/>
            <TextView android:textSize="12sp" android:textColor="#666666" android:gravity="center" android:id="@+id/tvResource" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/head_resource" android:drawableTop="@drawable/head_resource" android:drawablePadding="7dp"/>
            <TextView android:textSize="12sp" android:textColor="#666666" android:gravity="center" android:id="@+id/tvMember" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/head_member" android:drawableTop="@drawable/head_member" android:drawablePadding="7dp"/>
            <TextView android:textSize="12sp" android:textColor="#666666" android:gravity="center" android:id="@+id/tvChat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/head_chat" android:drawableTop="@drawable/head_chat" android:drawablePadding="7dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout android:id="@+id/rlHeadImg" android:layout_width="match_parent" android:layout_height="146dp">
        <RelativeLayout android:id="@+id/rldefault" android:background="#efeff4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="20sp" android:textColor="#d9d9d9" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/this_app_name" android:drawableLeft="@drawable/ic_default_group_avatar" android:drawablePadding="12dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ImageView android:id="@+id/ivGroupHead" android:layout_width="match_parent" android:layout_height="146dp" android:scaleType="centerCrop"/>
    </RelativeLayout>
    <View android:background="@drawable/common_gray_stroke_bg" android:layout_width="match_parent" android:layout_height="12dp"/>
</LinearLayout>
