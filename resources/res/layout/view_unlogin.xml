<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:paddingBottom="120dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/ivAvatar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_avatar_message_center" android:scaleType="centerCrop" android:layout_centerHorizontal="true" android:contentDescription="@null"/>
        <TextView android:textSize="18sp" android:textColor="#ff333333" android:id="@+id/tvUnlogin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/unlogin" android:layout_below="@+id/ivAvatar" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tvLoggedInViewThisMessage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/msg_logged_in_view_this_message" android:layout_below="@+id/tvUnlogin" android:layout_centerHorizontal="true"/>
        <Button android:textSize="18sp" android:textColor="@color/normal_blue" android:id="@+id/btnLogin" android:paddingLeft="60dp" android:paddingRight="60dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/login" android:layout_below="@+id/tvLoggedInViewThisMessage" android:layout_centerHorizontal="true" style="@style/btn_stroke_blue_default"/>
    </RelativeLayout>
</RelativeLayout>
