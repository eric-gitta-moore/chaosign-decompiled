<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/bottom_port" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rlButtons" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/bottom_start" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/current" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/bottom_start"/>
        <SeekBar android:id="@+id/progress" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="2dp" android:progressDrawable="@drawable/video_seek_progress" android:minHeight="2dp" android:thumb="@drawable/video_seek_thumb_normal" android:thumbOffset="8dp" android:layout_toLeftOf="@+id/total" android:layout_toRightOf="@+id/current" android:layout_centerVertical="true" android:splitTrack="false"/>
        <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:layout_toLeftOf="@+id/ll_right" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/fullScreen" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_enlarge" android:scaleType="center"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
