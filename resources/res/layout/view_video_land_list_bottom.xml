<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/bottom_land" android:layout_width="match_parent" android:layout_height="100dp">
    <SeekBar android:id="@+id/land_progress" android:background="@null" android:layout_width="match_parent" android:layout_height="24dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:maxHeight="2dp" android:progressDrawable="@drawable/video_seek_progress" android:minHeight="2dp" android:thumb="@drawable/video_seek_thumb_normal" android:thumbOffset="8dp" android:layout_above="@+id/rlButtons" android:splitTrack="false"/>
    <RelativeLayout android:id="@+id/rlButtons" android:paddingLeft="4dp" android:paddingRight="2dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/land_start" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/play_next" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play_next" android:layout_toRightOf="@+id/land_start" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/land_current_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="00:00" android:layout_toRightOf="@+id/play_next" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/land_time_divid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/" android:layout_toRightOf="@+id/land_current_time" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/land_total_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:layout_toRightOf="@+id/land_time_divid" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <TextView android:textSize="15sp" android:textColor="@android:color/white" android:id="@+id/collection" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/collection"/>
            <TextView android:textSize="15sp" android:textColor="@android:color/white" android:id="@+id/speed" android:paddingLeft="18dp" android:paddingRight="18dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/speed"/>
            <TextView android:textSize="15sp" android:textColor="@android:color/white" android:id="@+id/clarity" android:paddingLeft="18dp" android:paddingRight="18dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/clarity_MD"/>
            <ImageView android:id="@+id/land_fullScreen" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:scaleType="center" android:contentDescription="@string/accessibility_zoom_content_description"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
