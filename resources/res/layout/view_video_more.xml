            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/view_subtitle" android:paddingTop="22dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="@+id/hot_view" app:layout_constraintTop_toBottomOf="@+id/hot_view">
                <TextView android:textSize="13sp" android:textColor="#b3ffffff" android:id="@+id/tv_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="字幕" app:layout_constraintBottom_toBottomOf="@+id/switch_subtitle" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
                <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_subtitle" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:thumb="@drawable/switch_button_thumb" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:track="@drawable/switch_button_track"/>
