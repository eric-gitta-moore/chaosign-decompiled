<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_cover" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <View android:background="#0d000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center" android:id="@+id/iv_play" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/video_play_start" android:scaleType="centerInside"/>
        <com.chaoxing.webkit.layer.widget.UploadProgressView android:layout_gravity="center" android:id="@+id/upload_progress" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp"/>
        <com.chaoxing.webkit.layer.widget.UploadWaitingView android:layout_gravity="center" android:id="@+id/upload_waiting" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:layout_gravity="center" android:id="@+id/upload_error" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/video_fail" android:scaleType="centerInside"/>
    </FrameLayout>
    <View android:background="@drawable/ic_video_bottom_bg" android:layout_width="match_parent" android:layout_height="40dp" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="11sp" android:textColor="@android:color/white" android:id="@+id/tv_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginBottom="12dp" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="11sp" android:textColor="@android:color/white" android:id="@+id/tv_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_marginBottom="12dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
