<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <include android:layout_width="match_parent" android:layout_height="@dimen/pickerview_topbar_height" layout="@layout/cx_include_pickerview_topbar"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/timepicker" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.chaoxing.pickerview.lib.WheelView android:id="@+id/year" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <com.chaoxing.pickerview.lib.WheelView android:id="@+id/month" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <com.chaoxing.pickerview.lib.WheelView android:id="@+id/day" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
